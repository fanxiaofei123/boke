<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="InventoryListView" Caption="库存余额表序时簿" FormType="View">
    <DataSource RefObjectKey="InventoryList"/>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main" Caption="根面板">
                <ToolBar Key="main_toolbar" Height="pref" Caption="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <ListView Caption="ListView1" Height="pref" Key="ListView1" PageLoadType="DB" TableKey="InventoryList">
                    <ListViewColumnCollection>
                        <ListViewColumn Key="Province" Caption="仓库所属省份" ColumnType="Dict" DataColumnKey="Province" ItemKey="ProvinceDict"/>
                        <ListViewColumn Key="City" Caption="仓库所在城市" ColumnType="Dict" DataColumnKey="City" ItemKey="CityDict"/>
                        <ListViewColumn Key="Material" Caption="物料" ColumnType="Dict" DataColumnKey="Material" ItemKey="MaterialDict"/>
                        <ListViewColumn Key="Amount" Caption="数量" ColumnType="NumberEditor" DataColumnKey="Amount"/>
                        <ListViewColumn Key="Unit" Caption="单位" ColumnType="Dict" DataColumnKey="Unit" ItemKey="UnitDict" DefaultFormulaValue="GetDictValue('MaterialDict', Material, 'MaterialDict.Unit');"/>
                    </ListViewColumnCollection>
                </ListView>
                <GridLayoutPanel Key="GridLayoutPanel1" Height="pref" Caption="GridLayoutPanel1">
                    <Button Key="Button1" Caption="刷新" X="0" Y="0">
                        <OnClick>
                            <![CDATA[LoadData()]]>
                        </OnClick>
                    </Button>
                    <RowDefCollection RowGap="5">
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                    </RowDefCollection>
                    <ColumnDefCollection ColumnGap="5">
                        <ColumnDef Width="100px"/>
                        <ColumnDef Width="50%"/>
                        <ColumnDef Width="100px"/>
                        <ColumnDef Width="50%"/>
                    </ColumnDefCollection>
                </GridLayoutPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData()]]>
    </OnLoad>
</Form>
