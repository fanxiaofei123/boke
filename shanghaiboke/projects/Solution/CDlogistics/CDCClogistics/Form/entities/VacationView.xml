<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="VacationView" Caption="请假单视图" FormType="View">
    <DataSource>
        <DataObject Key="VacationView" Caption="请假单视图" PrimaryTableKey="VacationView">
            <TableCollection>
                <Table Key="VacationView" Caption="请假单视图" TableMode="Detail" SourceType="Query" Persist="false" DBTableName="VacationRequest">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Key="EmpNO" Caption="员工工号" DataType="Long"/>
                    <Column Key="Name" Caption="姓名" DataType="Varchar"/>
                    <Column Key="StartTime" Caption="起始日期" DataType="DateTime"/>
                    <Column Key="EndTime" Caption="结束日期" DataType="DateTime"/>
                    <Column Key="VacationNum" Caption="请假天数" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="Cause" Caption="事由" DataType="Integer"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="optKey1" Caption="新增">
            <Action>
                <![CDATA[New('VacationRequest');]]>
            </Action>
        </Operation>
        <Operation Key="optKey2" Caption="刷新">
            <Action>
                <![CDATA[LoadData();]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main" Caption="根面板">
                <ToolBar Key="main_toolbar" Height="pref" Caption="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <GridLayoutPanel Key="GridLayoutPanel1" Height="pref" Caption="GridLayoutPanel1">
                    <TextEditor Key="TextEditor1" Caption="工号" BuddyKey="Lab_TextEditor1" X="1" Y="0">
                        <Condition ColumnKey="EmpNO" TableKey="VacationView" CondSign="like"/>
                    </TextEditor>
                    <Label Key="Lab_TextEditor1" Caption="工号" X="0" Y="0"/>
                    <Button Key="QueryBtn" Caption="查询" X="2" Y="0">
                        <OnClick>
                            <![CDATA[DealCondition();
LoadData();
ShowData();]]>
                        </OnClick>
                    </Button>
                    <Button Key="ResetBtn" Caption="重置" X="3" Y="0">
                        <OnClick>
                            <![CDATA[ResetCondition();]]>
                        </OnClick>
                    </Button>
                    <RowDefCollection RowGap="5">
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                    </RowDefCollection>
                    <ColumnDefCollection ColumnGap="5">
                        <ColumnDef Width="50px"/>
                        <ColumnDef Width="100px"/>
                        <ColumnDef Width="50px"/>
                        <ColumnDef Width="50px"/>
                    </ColumnDefCollection>
                </GridLayoutPanel>
                <ListView Caption="ListView1" Height="pref" Key="ListView1" PageLoadType="DB" TableKey="VacationView" PageRowCount="10">
                    <ListViewColumnCollection>
                        <ListViewColumn Key="OID" Caption="对象标识" DataColumnKey="OID" Visible="false"/>
                        <ListViewColumn Key="EmpNO" Caption="员工工号" DataColumnKey="EmpNO" Width="150px"/>
                        <ListViewColumn Key="Name" Caption="姓名" DataColumnKey="Name"/>
                        <ListViewColumn Key="StartTime" Caption="起始日期" ColumnType="DatePicker" DataColumnKey="StartTime" Width="150px"/>
                        <ListViewColumn Key="EndTime" Caption="结束日期" ColumnType="DatePicker" DataColumnKey="EndTime" Width="150px"/>
                        <ListViewColumn Key="VacationNum" Caption="请假天数" DataColumnKey="VacationNum"/>
                        <ListViewColumn Key="Cause" Caption="事由" ColumnType="ComboBox" DataColumnKey="Cause">
                            <Item Caption="病假" Key="1" Value="0"/>
                            <Item Caption="事假" Key="2" Value="1"/>
                            <Item Caption="年假" Key="3" Value="2"/>
                        </ListViewColumn>
                    </ListViewColumnCollection>
                    <RowDblClick>
                        <![CDATA[Open('VacationRequest', OID);]]>
                    </RowDblClick>
                </ListView>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData();]]>
    </OnLoad>
</Form>
