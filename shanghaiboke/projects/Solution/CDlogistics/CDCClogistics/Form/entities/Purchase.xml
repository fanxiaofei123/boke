<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="Purchase" Caption="采购单" FormType="Entity" ViewKey="PurchaseView">
    <DataSource>
        <DataObject Key="Purchase" Caption="Purchase" PrimaryTableKey="PurchaseHead" PrimaryType="Entity">
            <TableCollection>
                <Table Key="PurchaseHead" Caption="头表1">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Key="NO" Caption="单据编号" DataType="Varchar"/>
                    <Column Key="Status" Caption="单据状态" DataType="Integer"/>
                    <Column Key="BillDate" Caption="单据日期" DataType="DateTime"/>
                    <Column Key="Creator" Caption="制单人" DataType="Long" Description="保存人员" ItemKey="Operator"/>
                    <Column Key="CreateTime" Caption="制单日期" DataType="DateTime"/>
                    <Column Key="Modifier" Caption="修改人" DataType="Long"/>
                    <Column Key="ModifyTime" Caption="修改时间" DataType="DateTime"/>
                    <Column Key="InstanceID" Caption="流程实例" DataType="Long"/>
                    <Column Key="Dict1" Caption="Dict1" DataType="Long"/>
                    <Column Key="Dict2" Caption="Dict2" DataType="Long"/>
                    <Column Key="DynamicDict1" Caption="DynamicDict1" DataType="Long"/>
                    <Column Key="DynamicDict1ItemKey" Caption="DynamicDict1ItemKey" DataType="Varchar"/>
                    <Column Key="SumPrice" Caption="采购单总价" DataType="Numeric" Precision="16" Scale="2"/>
                </Table>
                <Table Key="PurchaseDetail" Caption="明细表" DBTableName="PurchaseDetail" TableMode="Detail">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="Sequence" Caption="序号" DataType="Integer" DBColumnName="SEQUENCE"/>
                    <Column Key="Warehouse" Caption="仓库" DataType="Long" IsPrimary="true"/>
                    <Column Key="Materiel" Caption="物料" DataType="Long" IsPrimary="true"/>
                    <Column Key="Amount" Caption="数量" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="InAmount" Caption="已入库数量" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="UseType" Caption="用途" DataType="Integer"/>
                    <Column Key="Price" Caption="单价" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="Unit" Caption="单位" DataType="Long"/>
                    <Column Key="TotalPrice" Caption="价格" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="MapCount" Caption="映射数量标记" DataType="Integer"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="WORKITEM" Caption="WORKITEM" Tag="WORKITEM"/>
        <Operation Key="BPM" Caption="BPM" Tag="BPM"/>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[SaveData(); UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="New" Caption="新增" Visible="ReadOnly()">
            <Action>
                <![CDATA[New('Purchase', 'self');]]>
            </Action>
        </Operation>
        <Operation Key="Delete" Caption="删除" Visible="ReadOnly()">
            <Action>
                <![CDATA[DeleteData();UpdateView();Close();]]>
            </Action>
        </Operation>
        <Operation Key="Edit" Caption="编辑" Visible="ReadOnly()">
            <Action>
                <![CDATA[Edit();]]>
            </Action>
        </Operation>
        <Operation Key="Cancel" Caption="取消" Visible="!ReadOnly()">
            <Action>
                <![CDATA[Cancel();]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭" Visible="ReadOnly()">
            <Action>
                <![CDATA[Close()]]>
            </Action>
        </Operation>
        <Operation Key="optKey1" Caption="下推入库单">
            <Action>
                <![CDATA[Map('Purchase2StockIn', 'StockIn');]]>
            </Action>
        </Operation>
        <Operation Key="optKey2" Caption="审批记录">
            <Action>
                <![CDATA[ShowModal('WFLog', {
            pOID:{GetOID()},
            processKey:{GetProcessKey()},
            processVer:{GetProcessVer()}
                    })]]>
            </Action>
        </Operation>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="ToolBar1" Height="pref" Caption="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <GridLayoutPanel Key="first_head" Height="pref" Padding="5px" Caption="基本信息">
                        <Label Key="Lab_NO" Caption="单据编号" X="0" Y="0"/>
                        <TextEditor Key="NO" Caption="单据编号" BuddyKey="Lab_NO" X="1" Y="0" Enable="false" AsQuery="true">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="NO"/>
                        </TextEditor>
                        <Label Key="Lab_BillDate" Caption="单据日期" X="2" Y="0"/>
                        <DatePicker Key="BillDate" Caption="单据日期" BuddyKey="Lab_BillDate" X="3" Y="0" Enable="false">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="BillDate"/>
                        </DatePicker>
                        <Label Key="Lab_Status" Caption="单据状态" X="4" Y="0"/>
                        <ComboBox Key="Status" Caption="单据状态" BuddyKey="Lab_Status" X="5" Y="0" SourceType="Status" Enable="false">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="Status"/>
                        </ComboBox>
                        <Dict Key="Dict1" Caption="父仓库" BuddyKey="Lab_Dict1" X="1" Y="1" ItemKey="Warehouse">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="Dict1"/>
                            <ItemFilter>
                                <Filter Type="FieldValue">
                                    <FilterValue DataType="Integer" FieldKey="NodeType" RefValue="1" Type="Const"/>
                                </Filter>
                            </ItemFilter>
                        </Dict>
                        <Label Key="Lab_Dict1" Caption="父仓库" X="0" Y="1"/>
                        <Dict Key="Dict2" Caption="子仓库" BuddyKey="Lab_Dict2" X="3" Y="1" ItemKey="Warehouse" Root="Dict1">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="Dict2"/>
                            <ItemFilter>
                                <Filter Type="FieldValue">
                                    <FilterValue DataType="Integer" FieldKey="NodeType" RefValue="0"/>
                                </Filter>
                            </ItemFilter>
                        </Dict>
                        <Label Key="Lab_Dict2" Caption="子仓库" X="2" Y="1"/>
                        <RadioButton Caption="物料" GroupKey="dirct" IsGroupHead="true" Key="RadioButton1" Value="Materiel" X="0" Y="2">
                            <DataBinding DefaultValue="Warehouse"/>
                        </RadioButton>
                        <RadioButton Caption="仓库" Key="RadioButton2" X="1" Y="2" GroupKey="dirct" Value="Warehouse"/>
                        <DynamicDict Caption="动态字典" IsDynamic="true" Key="DynamicDict1" RefKey="RadioButton1" X="3" Y="2">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="DynamicDict1"/>
                        </DynamicDict>
                        <NumberEditor Key="SumPrice" Caption="采购单总价" BuddyKey="Lab_SumPrice" X="5" Y="2" Enable="false">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="SumPrice" DefaultFormulaValue="Sum('TotalPrice');" ValueDependency="TotalPrice"/>
                        </NumberEditor>
                        <Label Key="Lab_SumPrice" Caption="采购单总价" X="4" Y="2"/>
                        <RowDefCollection RowHeight="30" RowGap="6">
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="20">
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="34%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <Grid Key="detail" Caption="明细" Height="100%">
                        <GridColumnCollection>
                            <GridColumn Key="C0" Caption="选择" ColumnType="Detail" Visible="true" Width="100px"/>
                            <GridColumn Key="Warehouse" Caption="仓库" Width="80px"/>
                            <GridColumn Key="Materiel" Caption="物料" Width="80px"/>
                            <GridColumn Key="Amount" Caption="数量" Width="80px" ColumnType="Detail">
                                <ColumnExpand ExpandType="Title">
                                    <![CDATA[]]>
                                </ColumnExpand>
                                <GridColumnCollection>
                                    <GridColumn Key="UseType" Caption="用途" Width="80px">
                                        <ColumnExpand ColumnKey="UseType">
                                            <![CDATA["1,自用;2,租赁;3,储备;"]]>
                                        </ColumnExpand>
                                    </GridColumn>
                                </GridColumnCollection>
                            </GridColumn>
                            <GridColumn Key="column1" Caption="汇总" Width="80px"/>
                            <GridColumn Key="Price" Caption="单价" Width="80px"/>
                            <GridColumn Key="Unit" Caption="单位" Width="80px"/>
                            <GridColumn Key="TotalPrice" Caption="价格" Width="80px"/>
                            <GridColumn Key="InAmount" Caption="已入库数量" Width="80px"/>
                        </GridColumnCollection>
                        <GridRowCollection>
                            <GridRow Key="R_0" TableKey="PurchaseDetail">
                                <GridCell Key="Select" Caption="选择" CellType="CheckBox" Enable="true" IsSelect="true"/>
                                <GridCell Key="Warehouse" Caption="仓库" CellType="Dict" ItemKey="Warehouse">
                                    <DataBinding ColumnKey="Warehouse"/>
                                </GridCell>
                                <GridCell Key="Materiel" Caption="物料" CellType="Dict" ItemKey="Materiel" CellGroupType="RowGroup">
                                    <DataBinding ColumnKey="Materiel"/>
                                </GridCell>
                                <GridCell Key="Amount" Caption="数量" CellType="NumberEditor">
                                    <DataBinding ColumnKey="Amount"/>
                                </GridCell>
                                <GridCell Key="cell11">
                                    <DataBinding DefaultFormulaValue="SumExpand('Amount');" ValueDependency="Amount"/>
                                </GridCell>
                                <GridCell Key="Price" Caption="单价" CellType="NumberEditor" Enable="false">
                                    <DataBinding ColumnKey="Price" DefaultFormulaValue="GetDictValue('Materiel', Materiel, 'Materiel.Price')"/>
                                </GridCell>
                                <GridCell Key="Unit" Caption="单位" CellType="Dict" Enable="false" ItemKey="Unit">
                                    <DataBinding ColumnKey="Unit" DefaultFormulaValue="GetDictValue('Materiel', Materiel, 'Materiel.Unit')"/>
                                </GridCell>
                                <GridCell Key="TotalPrice" Caption="价格" CellType="NumberEditor" Enable="false">
                                    <DataBinding ColumnKey="TotalPrice" DefaultFormulaValue="Price*SumExpand('Amount');" ValueDependency="Amount"/>
                                </GridCell>
                                <GridCell Key="InAmount" Caption="已入库数量" CellType="NumberEditor" Enable="false">
                                    <DataBinding ColumnKey="InAmount"/>
                                </GridCell>
                            </GridRow>
                            <GridRow GroupKey="Materiel" Key="row2" RowType="Group">
                                <GridCell Key="cell1"/>
                                <GridCell Key="cell2"/>
                                <GridCell Key="cell3" Caption="物料小计"/>
                                <GridCell Key="cell4">
                                    <DataBinding DefaultFormulaValue="Sum('Amount');"/>
                                </GridCell>
                                <GridCell Key="cell12"/>
                                <GridCell Key="cell15">
                                    <DataBinding/>
                                </GridCell>
                                <GridCell Key="cell21"/>
                                <GridCell Key="cell18"/>
                                <GridCell Key="cell5"/>
                            </GridRow>
                        </GridRowCollection>
                    </Grid>
                    <GridLayoutPanel Key="second_head" Height="pref" Padding="5px" Caption="审批信息">
                        <Dict Key="Creator" Caption="制单人" BuddyKey="Lab_Creator" X="1" Y="0" Enable="false" ItemKey="Operator">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="Creator"/>
                        </Dict>
                        <Label Key="Lab_Creator" Caption="制单人" X="0" Y="0"/>
                        <DatePicker Key="CreateTime" Caption="制单时间" BuddyKey="Lab_CreateTime" X="3" Y="0" Enable="false">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="CreateTime"/>
                        </DatePicker>
                        <Label Key="Lab_CreateTime" Caption="制单时间" X="2" Y="0"/>
                        <Dict Key="Modifier" Caption="修改人" BuddyKey="Lab_Modifier" X="1" Y="1" Enable="false" ItemKey="Operator">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="Modifier"/>
                        </Dict>
                        <Label Key="Lab_Modifier" Caption="修改人" X="0" Y="1"/>
                        <DatePicker Key="ModifyTime" Caption="修改时间" BuddyKey="Lab_ModifyTime" X="3" Y="1" Enable="false">
                            <DataBinding TableKey="PurchaseHead" ColumnKey="ModifyTime"/>
                        </DatePicker>
                        <Label Key="Lab_ModifyTime" Caption="修改时间" X="2" Y="1"/>
                        <RowDefCollection RowHeight="30" RowGap="6">
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="20">
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="50%"/>
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="50%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <SplitSize Size="100px"/>
                    <SplitSize Size="100%"/>
                    <SplitSize Size="100px"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
