<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="PurchaseData" Caption="上引采购单数据" FormType="Entity">
    <DataSource>
        <DataObject Key="PurchaseData" Caption="PurchaseData" PrimaryTableKey="PurchaseData" PrimaryType="Entity">
            <TableCollection>
                <Table Key="PurchaseData" Caption="采购单数据" SourceType="Query" TableMode="Detail">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Key="Warehouse" Caption="仓库" DataType="Long"/>
                    <Column Key="Materiel" Caption="物料" DataType="Long"/>
                    <Column Key="Amount" Caption="数量" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="NotInAmount" Caption="未入库数量" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="Unit" Caption="单位" DataType="Long"/>
                    <Column Key="Price" Caption="单价" DataType="Numeric" Precision="16" Scale="2"/>
                    <TableFilter>
                        <![CDATA[dtl.Amount-dtl.InAmount>0]]>
                    </TableFilter>
                    <Statement>
                        <![CDATA[select dtl.OID as OID,dtl.SOID as SOID,Warehouse,Materiel,Amount,(Amount-InAmount) as NotInAmount,Unit,Price from PurchaseDetail dtl join PurchaseHead head on dtl.SOID=head.OID]]>
                    </Statement>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="optKey1" Caption="下推至入库单">
            <Action>
                <![CDATA[MapToForm('QuotePurchase');
Close();]]>
            </Action>
        </Operation>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <Body PopHeight="500px" PopWidth="1000px">
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="ToolBar1" Height="pref" Caption="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <Grid Key="Grid1" Caption="Grid1" Height="200px">
                        <GridColumnCollection>
                            <GridColumn Key="column1" Caption="选择" Width="80px"/>
                            <GridColumn Key="Warehouse" Caption="仓库" Width="80px"/>
                            <GridColumn Key="Materiel" Caption="物料" Width="80px"/>
                            <GridColumn Key="Amount" Caption="数量" Width="80px"/>
                            <GridColumn Key="NotInAmount" Caption="未入库数量" Width="80px"/>
                            <GridColumn Key="Unit" Caption="单位" Width="80px"/>
                            <GridColumn Key="Price" Caption="单价" Width="80px"/>
                        </GridColumnCollection>
                        <GridRowCollection>
                            <GridRow Key="row1" TableKey="PurchaseData">
                                <GridCell Key="select" Caption="选择" CellType="CheckBox" IsSelect="true"/>
                                <GridCell Key="Warehouse" Caption="仓库" CellType="Dict" ItemKey="Warehouse">
                                    <DataBinding ColumnKey="Warehouse"/>
                                </GridCell>
                                <GridCell Key="Materiel" Caption="物料" CellType="Dict" ItemKey="Materiel">
                                    <DataBinding ColumnKey="Materiel"/>
                                </GridCell>
                                <GridCell Key="Amount" Caption="数量" CellType="NumberEditor">
                                    <DataBinding ColumnKey="Amount"/>
                                </GridCell>
                                <GridCell Key="NotInAmount" Caption="未入库数量" CellType="NumberEditor">
                                    <DataBinding ColumnKey="NotInAmount"/>
                                </GridCell>
                                <GridCell Key="Unit" Caption="单位" CellType="Dict" ItemKey="Unit">
                                    <DataBinding ColumnKey="Unit"/>
                                </GridCell>
                                <GridCell Key="Price" Caption="单价" CellType="NumberEditor">
                                    <DataBinding ColumnKey="Price"/>
                                </GridCell>
                            </GridRow>
                        </GridRowCollection>
                    </Grid>
                    <GridLayoutPanel Key="GridLayoutPanel1" Height="pref" Caption="GridLayoutPanel1">
                        <Button Key="QueryBtn" Caption="查询" X="0" Y="0">
                            <OnClick>
                                <![CDATA[LoadData();]]>
                            </OnClick>
                        </Button>
                        <RowDefCollection RowGap="5">
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="5">
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%"/>
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <SplitSize Size="100px"/>
                    <SplitSize Size="100px"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData();]]>
    </OnLoad>
</Form>
