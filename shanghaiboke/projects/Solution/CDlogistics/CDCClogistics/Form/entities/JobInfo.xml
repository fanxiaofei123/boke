<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="JobInfo" Caption="求职信息表" FormType="Entity" ViewKey="JobInfoView">
    <DataSource>
        <DataObject Key="JobInfo" Caption="求职信息表" PrimaryTableKey="JobInfo" PrimaryType="Entity">
            <TableCollection>
                <Table Key="JobInfo" Caption="求职信息表">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Key="Name" Caption="姓名" DataType="Varchar"/>
                    <Column Key="Gender" Caption="性别" DataType="Integer"/>
                    <Column Key="Province" Caption="省份" DataType="Long"/>
                    <Column Key="City" Caption="城市" DataType="Long"/>
                    <Column Key="Address" Caption="详细住址" DataType="Varchar"/>
                    <Column Key="Phone" Caption="电话" DataType="Varchar"/>
                    <Column Key="Education" Caption="学历" DataType="Integer"/>
                    <Column Key="Major" Caption="专业" DataType="Varchar"/>
                    <Column Key="EducationalExperience" Caption="教育经历" DataType="Varchar"/>
                    <Column Key="WorkExperience" Caption="工作经历" DataType="Varchar"/>
                    <Column Key="Skill_JAVA" Caption="JAVA" DataType="Integer"/>
                    <Column Key="Skill_CPlus" Caption="C++" DataType="Integer"/>
                    <Column Key="Skill_SQL" Caption="SQL" DataType="Integer"/>
                    <Column Key="Skill_Net" Caption=".Net" DataType="Integer"/>
                    <Column Key="Remarks" Caption="备注" DataType="Varchar"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="optKey1" Caption="保存">
            <Action>
                <![CDATA[Save();
UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="optKey2" Caption="删除" Enable="ReadOnly();">
            <Action>
                <![CDATA[DeleteData();
UpdateView();
Close();]]>
            </Action>
        </Operation>
        <Operation Key="optKey3" Caption="编辑" Enable="!IsNewOrEdit();">
            <Action>
                <![CDATA[Edit();
UpdateView();]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main" Caption="根面板">
                <ToolBar Key="main_toolbar" Height="pref" Caption="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <GridLayoutPanel Key="first_head" Padding="5px" Height="pref" Caption="基本信息">
                    <TextEditor Key="Name" Caption="姓名" BuddyKey="Lab_Name" X="1" Y="0" XSpan="3" AsQuery="true">
                        <DataBinding TableKey="JobInfo" ColumnKey="Name"/>
                    </TextEditor>
                    <Label Key="Lab_Name" Caption="姓名" X="0" Y="0"/>
                    <Label Key="Lab_Gender" Caption="性别" X="0" Y="1"/>
                    <RadioButton Caption="男" GroupKey="Gender" IsGroupHead="true" Key="Male" Value="1" X="1" Y="1">
                        <DataBinding TableKey="JobInfo" ColumnKey="Gender" DefaultValue="1"/>
                    </RadioButton>
                    <RadioButton Caption="女" GroupKey="Gender" Key="Female" Value="0" X="3" Y="1"/>
                    <TextEditor Key="Address" Caption="详细住址" BuddyKey="Lab_Address" X="1" Y="3" XSpan="3">
                        <DataBinding TableKey="JobInfo" ColumnKey="Address"/>
                    </TextEditor>
                    <Label Key="Lab_Address" Caption="详细住址" X="0" Y="3"/>
                    <TextEditor Key="Phone" Caption="电话" BuddyKey="Lab_Phone" X="1" Y="4" XSpan="3" MaxLength="11">
                        <DataBinding TableKey="JobInfo" ColumnKey="Phone"/>
                    </TextEditor>
                    <Label Key="Lab_Phone" Caption="电话" X="0" Y="4"/>
                    <ComboBox Key="Education" Caption="学历" BuddyKey="Lab_Education" X="1" Y="5" XSpan="3">
                        <DataBinding TableKey="JobInfo" ColumnKey="Education" DefaultValue="0"/>
                        <Item Caption="本科" Key="university" Value="0"/>
                        <Item Caption="硕士" Key="master" Value="1"/>
                        <Item Caption="博士" Key="doctor" Value="2"/>
                    </ComboBox>
                    <Label Key="Lab_Education" Caption="学历" X="0" Y="5"/>
                    <TextArea Key="Major" Caption="专业" BuddyKey="Lab_Major" X="1" Y="6" XSpan="3">
                        <DataBinding TableKey="JobInfo" ColumnKey="Major"/>
                    </TextArea>
                    <Label Key="Lab_Major" Caption="专业" X="0" Y="6"/>
                    <TextArea Key="Remarks" Caption="备注" BuddyKey="Lab_Remarks" X="1" Y="7" XSpan="6">
                        <DataBinding TableKey="JobInfo" ColumnKey="Remarks"/>
                    </TextArea>
                    <Label Key="Lab_Remarks" Caption="备注" X="0" Y="7"/>
                    <TextArea Key="EducationalExperience" Caption="教育经历" BuddyKey="Lab_EducationalExperience" X="4" Y="1" XSpan="3" YSpan="2">
                        <DataBinding TableKey="JobInfo" ColumnKey="EducationalExperience"/>
                    </TextArea>
                    <Label Key="Lab_EducationalExperience" Caption="教育经历" X="4" Y="0"/>
                    <TextArea Key="WorkExperience" Caption="工作经历" BuddyKey="Lab_WorkExperience" X="4" Y="4" XSpan="3" YSpan="3">
                        <DataBinding TableKey="JobInfo" ColumnKey="WorkExperience"/>
                    </TextArea>
                    <Label Key="Lab_WorkExperience" Caption="工作经历" X="4" Y="3"/>
                    <Label Key="Lab_Skill" Caption="技能" X="7" Y="0"/>
                    <CheckBox Caption="JAVA" Key="Skill_JAVA" X="7" Y="1">
                        <DataBinding TableKey="JobInfo" ColumnKey="Skill_JAVA"/>
                    </CheckBox>
                    <CheckBox Caption="C++" Key="Skill_CPlus" X="7" Y="2">
                        <DataBinding TableKey="JobInfo" ColumnKey="Skill_CPlus"/>
                    </CheckBox>
                    <CheckBox Caption="SQL" Key="Skill_SQL" X="7" Y="3">
                        <DataBinding TableKey="JobInfo" ColumnKey="Skill_SQL"/>
                    </CheckBox>
                    <CheckBox Caption=".Net" Key="Skill_Net" X="7" Y="4">
                        <DataBinding TableKey="JobInfo" ColumnKey="Skill_Net"/>
                    </CheckBox>
                    <Dict Key="Province" Caption="省份" BuddyKey="Lab_Province" X="1" Y="2" ItemKey="Province">
                        <DataBinding TableKey="JobInfo" ColumnKey="Province"/>
                    </Dict>
                    <Label Key="Lab_Province" Caption="省份" X="0" Y="2"/>
                    <Dict Key="City" Caption="城市" BuddyKey="Lab_City" X="3" Y="2" ItemKey="City">
                        <DataBinding TableKey="JobInfo" ColumnKey="City"/>
                        <ItemFilter>
                            <Filter Type="FieldValue">
                                <FilterValue DataType="Long" FieldKey="ProvinceID" RefValue="Province" Type="Field"/>
                            </Filter>
                        </ItemFilter>
                    </Dict>
                    <Label Key="Lab_City" Caption="城市" X="2" Y="2"/>
                    <RowDefCollection RowHeight="30" RowGap="6">
                        <RowDef/>
                        <RowDef/>
                        <RowDef/>
                        <RowDef/>
                        <RowDef/>
                        <RowDef/>
                        <RowDef Height="100px"/>
                        <RowDef Height="50px"/>
                    </RowDefCollection>
                    <ColumnDefCollection ColumnGap="20">
                        <ColumnDef Width="50px"/>
                        <ColumnDef Width="150px"/>
                        <ColumnDef Width="50px"/>
                        <ColumnDef Width="150px"/>
                        <ColumnDef Width="100px"/>
                        <ColumnDef Width="100px"/>
                        <ColumnDef Width="100px"/>
                        <ColumnDef Width="100px"/>
                    </ColumnDefCollection>
                </GridLayoutPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
