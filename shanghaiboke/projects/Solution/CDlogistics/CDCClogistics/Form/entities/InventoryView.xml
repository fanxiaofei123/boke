<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="InventoryView" Caption="库存余额视图" FormType="View">
    <DataSource RefObjectKey="Inventory"/>
    <OperationCollection>
        <Operation Key="optKey1" Caption="刷新">
            <Action>
                <![CDATA[LoadData();]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main" Caption="根面板">
                <ToolBar Key="main_toolbar" Height="pref" Caption="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <ListView Caption="ListView1" Height="pref" Key="ListView1" PageLoadType="DB" TableKey="Inventory">
                    <ListViewColumnCollection>
                        <ListViewColumn Key="Warehouse" Caption="仓库" ColumnType="Dict" DataColumnKey="Warehouse" Width="150px" ItemKey="Warehouse"/>
                        <ListViewColumn Key="Materiel" Caption="物料" ColumnType="Dict" DataColumnKey="Materiel" ItemKey="Materiel"/>
                        <ListViewColumn Key="Amount" Caption="数量" ColumnType="NumberEditor" DataColumnKey="Amount"/>
                        <ListViewColumn Key="Unit" Caption="单位" ColumnType="Dict" DataColumnKey="Unit" ItemKey="Unit"/>
                    </ListViewColumnCollection>
                </ListView>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData();]]>
    </OnLoad>
</Form>
