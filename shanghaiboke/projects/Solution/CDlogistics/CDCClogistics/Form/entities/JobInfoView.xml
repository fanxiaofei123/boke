<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="JobInfoView" Caption="求职信息表视图" FormType="View" AbbrCaption="求职信息表视图">
    <DataSource>
        <DataObject Key="JobInfo" Caption="求职信息表视图" PrimaryTableKey="JobInfo" RelateObjectKey="JobInfo">
            <TableCollection>
                <Table Key="JobInfo" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="Name" Caption="姓名" DataType="Varchar"/>
                    <Column Key="Gender" Caption="性别" DataType="Integer"/>
                    <Column Key="Education" Caption="学历" DataType="Varchar"/>
                    <Column Key="Major" Caption="专业" DataType="Varchar"/>
                    <Column Key="Skill" Caption="技能" DataType="Varchar"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('JobInfo')]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="L_Name" Caption="姓名" X="0" Y="0"/>
                            <TextEditor Key="Name" Caption="姓名" BuddyKey="L_Name" X="1" Y="0">
                                <Condition ColumnKey="Name" TableKey="JobInfo" CondSign="like"/>
                            </TextEditor>
                            <RowDefCollection RowHeight="30" RowGap="6">
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="20">
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="100px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Key="ButtonPanel" Padding="5px" Height="pref" Caption="按钮面板">
                            <Button Key="Query" Caption="查询" X="1" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="2" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <RowDefCollection RowHeight="20" RowGap="6">
                                <RowDef Height="23px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="20">
                                <ColumnDef Width="100%"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="100px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="list" PageLoadType="DB" TableKey="JobInfo">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="JobInfo" Visible="false" Width="30px"/>
                            <ListViewColumn Key="Name_LV" Caption="姓名" ColumnType="TextEditor" DataColumnKey="Name"/>
                            <ListViewColumn Key="Gender" Caption="性别" DataColumnKey="Gender" ColumnType="ComboBox">
                                <Item Caption="男" Key="Male" Value="1"/>
                                <Item Caption="女" Key="Femal" Value="0"/>
                            </ListViewColumn>
                            <ListViewColumn Key="Education" Caption="学历" DataColumnKey="Education" ColumnType="ComboBox">
                                <Item Caption="本科" Key="university" Value="0"/>
                                <Item Caption="硕士" Key="master" Value="1"/>
                                <Item Caption="博士" Key="doctor" Value="2"/>
                            </ListViewColumn>
                            <ListViewColumn Key="Major" Caption="专业" DataColumnKey="Major"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('JobInfo', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="35%"/>
                    <SplitSize Size="65%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData();]]>
    </OnLoad>
</Form>
