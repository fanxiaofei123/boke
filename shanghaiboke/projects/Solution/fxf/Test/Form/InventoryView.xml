<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="InventoryView" Caption="期间分组库存余额表" FormType="View">
    <DataSource>
        <DataObject Key="InventoryView" Caption="期间分组库存余额表" PrimaryTableKey="InventoryView">
            <TableCollection>
                <Table Key="InventoryView" Caption="期间分组库存余额表" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Key="Warehouse" DataType="Long"/>
                    <Column Key="Material" DataType="Long"/>
                    <Column Key="Amount" Caption="期间数量变化值" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="Amount_begin" Caption="期初数量" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="Amount_end" Caption="期末数量" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="Months" Caption="月份" DataType="Integer"/>
                    <ParameterCollection>
                        <Parameter SourceType="Const" DataType="Long" Value="-1"/>
                    </ParameterCollection>
                    <Statement>
                        <![CDATA[select * from Inventory where OID>?]]>
                    </Statement>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main" Caption="根面板">
                <ToolBar Key="main_toolbar" Height="pref" Caption="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <GridLayoutPanel Key="first_head" Padding="5px" Height="pref" Caption="基本信息">
                    <RowDefCollection RowHeight="30" RowGap="6">
                        <RowDef/>
                        <RowDef/>
                        <RowDef/>
                        <RowDef/>
                    </RowDefCollection>
                    <ColumnDefCollection ColumnGap="20">
                        <ColumnDef Width="60px"/>
                        <ColumnDef Width="33%"/>
                        <ColumnDef Width="60px"/>
                        <ColumnDef Width="33%"/>
                        <ColumnDef Width="60px"/>
                        <ColumnDef Width="34%"/>
                    </ColumnDefCollection>
                </GridLayoutPanel>
                <ListView Caption="ListView1" Height="pref" Key="ListView1" PageLoadType="DB" TableKey="InventoryView">
                    <ListViewColumnCollection>
                        <ListViewColumn Key="Months" Caption="月份" DataColumnKey="Months"/>
                        <ListViewColumn Key="Warehouse" Caption="仓库" ColumnType="Dict" DataColumnKey="Warehouse" ItemKey="WarehouseDict"/>
                        <ListViewColumn Key="Material" Caption="物料" ColumnType="Dict" DataColumnKey="Material" ItemKey="MaterialDict"/>
                        <ListViewColumn Key="Amount_begin" Caption="期初数量" ColumnType="NumberEditor" DataColumnKey="Amount_begin"/>
                        <ListViewColumn Key="Amount" Caption="期间数量变化值" ColumnType="NumberEditor" DataColumnKey="Amount"/>
                        <ListViewColumn Key="Amount_end" Caption="期末数量" ColumnType="NumberEditor" DataColumnKey="Amount_end"/>
                    </ListViewColumnCollection>
                </ListView>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
