                    <TextEditor Key="Text1" Caption="文本1" BuddyKey="Lab_Text1" X="1" Y="1">
                        <DataBinding TableKey="Form2" ColumnKey="Text1"/>
                    </TextEditor>
                    <Label Key="Lab_Text1" Caption="文本1" X="0" Y="1"/>
                    <TextEditor Key="Text2" Caption="文本2" BuddyKey="Lab_Text2" X="3" Y="1">
