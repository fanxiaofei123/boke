<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="CHCS_Product" Caption="产品" FormType="ChainDict">
    <DataSource RefObjectKey="CHCS_Product"/>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Description="载入事件" Range="Action" Verb="Load">
            <![CDATA[LoadData()]]>
        </Script>
    </ScriptCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main" Height="100%">
                <TabPanel Caption="TabPanel0" Key="TabPanel0" Height="pref">
                    <GridLayoutPanel Caption="基本信息" Key="BasicTab" Padding="10px">
                        <TextEditor BuddyKey="L_Code" Caption="代码" Enable="!ReadOnly()" Key="Code" Tip="「代码」不可为空" X="1" XSpan="3" Y="0">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="Code" Required="true"/>
                        </TextEditor>
                        <TextEditor BuddyKey="L_Name" Caption="名称" Enable="!ReadOnly()" Key="Name" Tip="「名称」不可为空" X="6" XSpan="3" Y="0">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="Name" Required="true"/>
                        </TextEditor>
                        <Label Caption="代码" Key="L_Code" X="0" Y="0"/>
                        <Label Caption="名称" Key="L_Name" X="5" Y="0"/>
                        <TextEditor Key="Abbreviation" Caption="简称" BuddyKey="Lab_Abbreviation" X="1" Y="1" XSpan="3">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="Abbreviation"/>
                        </TextEditor>
                        <Label Key="Lab_Abbreviation" Caption="简称" X="0" Y="1"/>
                        <TextEditor Key="Spec" Caption="规格" BuddyKey="Lab_Spec" X="6" Y="1" XSpan="3">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="Spec"/>
                        </TextEditor>
                        <Label Key="Lab_Spec" Caption="规格" X="5" Y="1"/>
                        <Dict Key="Unit" Caption="单位" BuddyKey="Lab_Unit" X="6" Y="2" ItemKey="LRP_Lookup_L" XSpan="3">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="Unit" Required="true"/>
                            <ItemFilter>
                                <Filter Query="select oid  from LRP_Lookup_L where HeadCode='DW'" Type="DataSet"/>
                            </ItemFilter>
                        </Dict>
                        <Label Key="Lab_Unit" Caption="单位" X="5" Y="2"/>
                        <TextEditor Key="Remark" Caption="备注" BuddyKey="Lab_Remark" X="1" Y="4" XSpan="8">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="Remark"/>
                        </TextEditor>
                        <Label Key="Lab_Remark" Caption="备注" X="0" Y="4"/>
                        <TextEditor Key="NC_Name" Caption="NC名称" BuddyKey="Lab_NC_Name" X="1" Y="3" XSpan="3">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="NC_Name"/>
                        </TextEditor>
                        <Label Key="Lab_NC_Name" Caption="NC名称" X="0" Y="3"/>
                        <Dict Key="Classify" Caption="分类" BuddyKey="Lab_Classify" X="1" Y="5" Visible="false" XSpan="3" ItemKey="LRP_Lookup_L">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="Classify"/>
                            <ItemFilter>
                                <Filter Query="select oid  from LRP_Lookup_L where HeadCode='CPFL'" Type="DataSet"/>
                            </ItemFilter>
                        </Dict>
                        <Label Key="Lab_Classify" Caption="分类" X="0" Y="5"/>
                        <Dict Key="Type" Caption="类型" BuddyKey="Lab_Type" X="1" Y="2" ItemKey="LRP_Lookup_L" XSpan="3">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="Type" Required="true"/>
                            <ItemFilter>
                                <Filter Query="select oid  from LRP_Lookup_L where HeadCode='CPLX'" Type="DataSet"/>
                            </ItemFilter>
                        </Dict>
                        <Label Key="Lab_Type" Caption="类型" X="0" Y="2"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="78px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="94px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <GridLayoutPanel Key="SysInfo" Padding="10px" Caption="系统信息">
                        <Dict Key="CREATOR" Caption="创建人" BuddyKey="Lab_CREATOR" X="1" Y="0" Enable="false" ItemKey="Operator">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="CREATOR"/>
                        </Dict>
                        <Label Key="Lab_CREATOR" Caption="创建人" X="0" Y="0"/>
                        <DatePicker Key="CREATETIME" Caption="创建时间" BuddyKey="Lab_CREATETIME" X="3" Y="0" Enable="false">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="CREATETIME"/>
                        </DatePicker>
                        <Label Key="Lab_CREATETIME" Caption="创建时间" X="2" Y="0"/>
                        <Dict Key="MODIFIER" Caption="修改人" BuddyKey="Lab_MODIFIER" X="1" Y="1" Enable="false" ItemKey="Operator">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="MODIFIER"/>
                        </Dict>
                        <Label Key="Lab_MODIFIER" Caption="修改人" X="0" Y="1"/>
                        <DatePicker Key="MODIFYTIME" Caption="修改时间" BuddyKey="Lab_MODIFYTIME" X="3" Y="1" Enable="false">
                            <DataBinding TableKey="CHCS_Product" ColumnKey="MODIFYTIME"/>
                        </DatePicker>
                        <Label Key="Lab_MODIFYTIME" Caption="修改时间" X="2" Y="1"/>
                        <RowDefCollection RowGap="5">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="5">
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%"/>
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                </TabPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
