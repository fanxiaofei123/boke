<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_OwnerAccountRecordsView" Caption="货主账户流水记录序时簿" FormType="View" AbbrCaption="货主账户流水记录序时簿">
    <DataSource>
        <DataObject Key="V_OwnerAccountRecordsView" Caption="货主账户流水记录序时簿" PrimaryTableKey="LRP_OwnerAccountRecords">
            <TableCollection>
                <Table Key="LRP_OwnerAccountRecords" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="No" Caption="流水号" DataType="Varchar" Length="100"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="Action" Caption="操作" DataType="Varchar" Length="40"/>
                    <Column Key="CREATETIME" Caption="创建时间" DataType="DateTime"/>
                    <Column Key="OwnerId" Caption="货主id" DataType="Long"/>
                    <Column Key="OwnerUserId" Caption="货主用户" DataType="Long"/>
                    <Column Key="TxType" Caption="收支类型" DataType="Integer"/>
                    <Column Key="ExtraMessage" Caption="附加信息" DataType="Varchar" Length="100"/>
                    <Column Key="Currency" Caption="币种" DataType="Varchar" Length="10" DefaultValue="CNY"/>
                    <Column Key="BeforeMoney" Caption="之前金额" DataType="Numeric" Precision="18" Scale="6"/>
                    <Column Key="AfterMoney" Caption="之后金额" DataType="Numeric" Precision="18" Scale="6"/>
                    <Column Key="FreezeMoney" Caption="冻结金额" DataType="Numeric" Precision="18" Scale="6"/>
                    <Column Key="TxMoney" Caption="本次调整金额" DataType="Numeric" Precision="18" Scale="6"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_OwnerAccountRecords')]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirm" Caption="确认">
            <Action>
                <![CDATA[                                if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再确认。','OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',100,')){
					Confirm('只有状态是已输入的单据才能进行确认。','OK','OK:{}');
					return true;
				}
				Confirm('确定要将选中的记录进行确认吗？','YES_NO',{YES:{
	                           loop "ListView0" (true){			
		                  if(Select == true){
									var dataObjectKey = "LRP_OwnerAccountRecords";
									var tableKey = "LRP_OwnerAccountRecords";
									var fieldKey = "Status";
									InvokeService("LRP_BatchUpdateField",false,false,dataObjectKey,OID,
									tableKey,fieldKey,200);
			             LoadData();ShowData();
		}					
	}
},NO:{}});
				]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirmR" Caption="撤销确认">
            <Action>
                <![CDATA[if(CheckListNoSelect()){
	Confirm('没有选中任何记录，请选择后再撤销完成。','OK','OK:{}');
	return true;
}
if(!CheckListSelectStatus(',200,')){	
	Confirm('只有状态为已完成的运输作业单才能进行撤销完成操作。','OK','OK:{}');
	return true;
}
Confirm('确定要将选中的记录进行撤销完成吗？','YES_NO',{YES:{
	loop "ListView0" (true){			
		if(Select == true){ 
			InvokeService("LRP_BatchUpdateField",false,false,"LRP_OwnerAccountRecords",OID,"LRP_OwnerAccountRecords","Status;AfterMoney;BeforeMoney","100;0;0");
                     LoadData();ShowData();
        }		
    }			
},NO:{}});]]>
            </Action>
        </Operation>
        <Operation Key="BtchDelete" Caption="删除">
            <Action>
                <![CDATA[if(CheckListNoSelect()){
	Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
	return true;
}
if(!CheckListSelectStatus(',100,')){
	Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
	return true;
}	
Confirm('确定要将选中的记录进行删除吗？','YES_NO',{YES:{
BatchDeleteData('LRP_OwnerAccountRecords', 'LRP_OwnerAccountRecords');
LoadData();ShowData();
},NO:{}});]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="L_No" Caption="流水号" X="0" Y="0"/>
                            <TextEditor Key="No" Caption="流水号" BuddyKey="L_No" X="1" Y="0" XSpan="2">
                                <Condition ColumnKey="No" TableKey="LRP_OwnerAccountRecords" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_Status1" Caption="状态" X="4" Y="2"/>
                            <ComboBox Key="Status1" Caption="状态" BuddyKey="Lab_Status1" X="5" Y="2" XSpan="2">
                                <Condition ColumnKey="Status" TableKey="LRP_OwnerAccountRecords" CondSign="="/>
                                <Item Caption="已输入" Key="prepared" Value="100"/>
                                <Item Caption="已确认" Key="confirmed" Value="200"/>
                            </ComboBox>
                            <Label Key="L_Action" Caption="操作" X="0" Y="2"/>
                            <TextEditor Key="Action" Caption="操作" BuddyKey="L_Action" X="1" Y="2" XSpan="2">
                                <Condition ColumnKey="Action" TableKey="LRP_OwnerAccountRecords" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_CREATETIME" Caption="创建时间" X="0" Y="3"/>
                            <DatePicker Key="CREATETIME" Caption="创建时间" BuddyKey="L_CREATETIME" X="1" Y="3" XSpan="2">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                                <Format/>
                                <Condition ColumnKey="CREATETIME" TableKey="LRP_OwnerAccountRecords" CondSign="between" Group="CREATETIME" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="L_CREATETIME_Comp2" Caption="到" X="4" Y="3"/>
                            <DatePicker Key="CREATETIME_Comp2" Caption="到" BuddyKey="L_CREATETIME_Comp2" X="5" Y="3" XSpan="2">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                                <Format/>
                                <Condition ColumnKey="CREATETIME" TableKey="LRP_OwnerAccountRecords" CondSign="between" Group="CREATETIME" GroupTail="true"/>
                            </DatePicker>
                            <Label Key="L_OwnerId" Caption="货主" X="4" Y="0"/>
                            <Dict Key="OwnerId" Caption="货主" BuddyKey="L_OwnerId" X="5" Y="0" AllowMultiSelection="true" ItemKey="LRP_Owner" XSpan="2">
                                <Condition ColumnKey="OwnerId" TableKey="LRP_OwnerAccountRecords" CondSign="in"/>
                            </Dict>
                            <Label Key="L_OwnerUserId" Caption="货主用户" X="0" Y="1"/>
                            <Dict Key="OwnerUserId" Caption="货主用户" BuddyKey="L_OwnerUserId" X="1" Y="1" AllowMultiSelection="true" ItemKey="LRP_OwnerUser" XSpan="2">
                                <Condition ColumnKey="OwnerUserId" TableKey="LRP_OwnerAccountRecords" CondSign="in"/>
                            </Dict>
                            <Label Key="L_TxType" Caption="收支类型" X="4" Y="1"/>
                            <ComboBox Key="TxType" Caption="收支类型" BuddyKey="L_TxType" X="5" Y="1" XSpan="2">
                                <Condition ColumnKey="TxType" TableKey="LRP_OwnerAccountRecords" CondSign="="/>
                                <Item Caption="收入" Key="0" Value="0"/>
                                <Item Caption="支出" Key="1" Value="1"/>
                            </ComboBox>
                            <Button Key="Query" Caption="查询" X="8" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="8" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <RowDefCollection RowHeight="30" RowGap="6">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="20">
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="80px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" TableKey="LRP_OwnerAccountRecords">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" TableKey="LRP_OwnerAccountRecords" Visible="false" Width="79px" DataColumnKey="OID"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="流水号" ColumnType="HyperLink" DataColumnKey="No">
                                <OnClick>
                                    <![CDATA[Open('V_OwnerAccountRecords', OID)]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="OwnerId_LV" Caption="货主" ColumnType="Dict" DataColumnKey="OwnerId" ItemKey="LRP_Owner"/>
                            <ListViewColumn Key="OwnerUserId_LV" Caption="货主用户" ColumnType="Dict" DataColumnKey="OwnerUserId" ItemKey="LRP_OwnerUser"/>
                            <ListViewColumn Key="Currency_LV" Caption="币种" ColumnType="TextEditor" DataColumnKey="Currency"/>
                            <ListViewColumn Key="BeforeMoney_LV" Caption="之前金额" ColumnType="NumberEditor" DataColumnKey="BeforeMoney" Precision="18" Scale="6"/>
                            <ListViewColumn Key="AfterMoney_LV" Caption="之后金额" ColumnType="NumberEditor" DataColumnKey="AfterMoney" Precision="18" Scale="6"/>
                            <ListViewColumn Key="TxMoney_LV" Caption="本次调整金额" ColumnType="NumberEditor" DataColumnKey="TxMoney" Precision="18" Scale="6"/>
                            <ListViewColumn Key="TxType_LV" Caption="收支类型" ColumnType="ComboBox">
                                <Item Caption="收入" Key="0" Value="0"/>
                                <Item Caption="支出" Key="1" Value="1"/>
                            </ListViewColumn>
                            <ListViewColumn Key="FreezeMoney_LV" Caption="冻结金额" ColumnType="NumberEditor" DataColumnKey="FreezeMoney" Precision="18" Scale="6"/>
                            <ListViewColumn Key="Action_LV" Caption="操作" ColumnType="TextEditor" DataColumnKey="Action"/>
                            <ListViewColumn Key="ExtraMessage_LV" Caption="附加信息" ColumnType="TextEditor" DataColumnKey="ExtraMessage"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_OwnerAccountRecords', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="160px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
