<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Caption="成本中心" FormType="Dict" Key="V_CostCenter">
    <DataSource RefObjectKey="CostCenter"/>
    <Body>
        <Block>
            <SplitPanel Height="100%" Key="main_split" Orientation="Vertical">
                <GridLayoutPanel Caption="Tab页选择" Key="TabSelect" Padding="10px">
                    <CheckBox Caption="大猫" Key="DaMaoCheck" X="0" Y="0"/>
                    <CheckBox Caption="物流" Key="WuliuCheck" X="1" Y="0"/>
                    <CheckBox Caption="集团财务" Key="CaiWuCheck" X="2" Y="0"/>
                    <CheckBox Caption="电商" Key="DianShangCheck" X="3" Y="0"/>
                    <CheckBox Caption="HRP" Key="HRPCheck" X="4" Y="0"/>
                    <CheckBox Caption="OA" Key="OACheck" X="5" Y="0"/>
                    <RowDefCollection RowGap="8">
                        <RowDef Height="30px"/>
                    </RowDefCollection>
                    <ColumnDefCollection ColumnGap="8">
                        <ColumnDef Width="16%" MinWidth="55px"/>
                        <ColumnDef Width="16%" MinWidth="55px"/>
                        <ColumnDef Width="17%" MinWidth="55px"/>
                        <ColumnDef Width="17%" MinWidth="55px"/>
                        <ColumnDef Width="17%" MinWidth="55px"/>
                        <ColumnDef Width="17%" MinWidth="55px"/>
                    </ColumnDefCollection>
                </GridLayoutPanel>
                <TabPanel Caption="TabPanel0" Key="TabPanel0">
                    <GridLayoutPanel Caption="基本信息" Key="BasicTab" Padding="10px">
                        <Label Caption="代码" Key="L_Code" X="0" Y="0"/>
                        <TextEditor Caption="代码" Key="Code" Tip="「代码」不能为空" X="1" XSpan="3" Y="0">
                            <DataBinding ColumnKey="Code" TableKey="BK_CostCenter" Required="true"/>
                        </TextEditor>
                        <Label Caption="名称" Key="L_Name" X="5" Y="0"/>
                        <TextEditor Caption="名称" Key="Name" Tip="「名称」不能为空" X="6" XSpan="3" Y="0">
                            <DataBinding ColumnKey="Name" TableKey="BK_CostCenter" Required="true"/>
                        </TextEditor>
                        <Label Caption="币种" Key="L_CurrencyID" X="0" Y="1"/>
                        <Dict Caption="币种" ItemKey="Currency" Key="CurrencyID" Tip="「币种」不能为空" X="1" XSpan="3" Y="1">
                            <DataBinding ColumnKey="CurrencyID" TableKey="BK_CostCenter" Required="true"/>
                        </Dict>
                        <Label Caption="成本控制范围" Key="L_ControllingAreaID" X="5" Y="1"/>
                        <Dict Caption="成本控制范围" ItemKey="ControllingArea" Key="ControllingAreaID" X="6" XSpan="3" Y="1">
                            <DataBinding ColumnKey="ControllingAreaID" TableKey="BK_CostCenter"/>
                        </Dict>
                        <Label Caption="生效日期" Key="L_ValidDateFrom" X="0" Y="2"/>
                        <DatePicker Caption="生效日期" Key="ValidDateFrom" X="1" XSpan="3" Y="2">
                            <DataBinding ColumnKey="ValidDateFrom" TableKey="BK_CostCenter"/>
                        </DatePicker>
                        <Label Caption="结束日期" Key="L_ValidDateTo" X="5" Y="2"/>
                        <DatePicker Caption="结束日期" Key="ValidDateTo" X="6" XSpan="3" Y="2">
                            <DataBinding ColumnKey="ValidDateTo" TableKey="BK_CostCenter"/>
                        </DatePicker>
                        <Label Caption="功能范围" Key="L_FunctionalAreaID" X="0" Y="3"/>
                        <Dict Caption="功能范围" ItemKey="FunctionalArea" Key="FunctionalAreaID" X="1" XSpan="3" Y="3">
                            <DataBinding ColumnKey="FunctionalAreaID" TableKey="BK_CostCenter"/>
                        </Dict>
                        <Label Caption="标准成本中心层次" Key="L_CostCenterGroupID" X="5" Y="3"/>
                        <Dict Caption="标准成本中心层次" Itemkey="CostCenterGroup" Key="CostCenterGroupID" X="6" XSpan="3" Y="3">
                            <DataBinding ColumnKey="CostCenterGroupID" TableKey="BK_CostCenter"/>
                        </Dict>
                        <Label Caption="所属公司" Key="L_CompanyCodeID" Tip="「所属公司」不能为空" X="0" Y="4"/>
                        <Dict Caption="所属公司" Itemkey="CompanyCode" Key="CompanyCodeID" X="1" XSpan="3" Y="4" ItemKey="CompanyCode">
                            <DataBinding ColumnKey="CompanyCodeID" TableKey="BK_CostCenter" Required="true"/>
                        </Dict>
                        <Label Caption="负责人" Key="L_ResponsiblePersonID" X="5" Y="4"/>
                        <Dict Caption="负责人" Itemkey="Operator" Key="ResponsiblePersonID" X="6" XSpan="3" Y="4" ItemKey="Operator">
                            <DataBinding ColumnKey="ResponsiblePersonID" TableKey="BK_CostCenter"/>
                        </Dict>
                        <Label Caption="业务范围" Key="L_BusinessAreaID" X="5" Y="5"/>
                        <Dict Caption="业务范围" Itemkey="BusinessArea" Key="BusinessAreaID" X="6" XSpan="3" Y="5" ItemKey="BusinessArea">
                            <DataBinding ColumnKey="BusinessAreaID" TableKey="BK_CostCenter"/>
                        </Dict>
                        <Label Caption="利润中心" Key="L_ProfitCenterID" X="0" Y="5"/>
                        <Dict Caption="利润中心" Itemkey="ProfitCenter" Key="ProfitCenterID" X="1" XSpan="3" Y="5" ItemKey="ProfitCenter">
                            <DataBinding ColumnKey="ProfitCenterID" TableKey="BK_CostCenter"/>
                        </Dict>
                        <Label Caption="外部代码" Key="L_UseCode" X="0" Y="6"/>
                        <TextEditor Caption="外部代码" Key="UseCode" Tip="「外部代码」不能为空" X="1" XSpan="3" Y="6">
                            <DataBinding ColumnKey="UseCode" TableKey="BK_CostCenter" Required="true"/>
                        </TextEditor>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="110px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <GridLayoutPanel Caption="大猫" Key="DaMaoTab" Visible="DaMaoCheck">
                        <RowDefCollection RowGap="8">
