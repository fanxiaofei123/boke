<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_FuelView" Caption="加油记录单序事簿" FormType="View" AbbrCaption="加油记录单序事簿">
    <DataSource>
        <DataObject Key="V_FuelView" Caption="加油" PrimaryTableKey="LRP_FuelManager">
            <TableCollection>
                <Table Key="LRP_FuelManager" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Caption="对象标识" DataType="Long" Key="OID"/>
                    <Column Caption="主对象标识" DataType="Long" Key="SOID"/>
                    <Column Caption="父对象标识" DataType="Long" Key="POID"/>
                    <Column Caption="对象版本" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DataType="Integer" Key="DVERID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建人" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改人" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Key="No" Caption="加油单号" DataType="Varchar" Length="100" SortType="Desc"/>
                    <Column Key="FleetId" Caption="车队" DataType="Long"/>
                    <Column Key="TruckId" Caption="车辆" DataType="Long"/>
                    <Column Key="LicenseNo" Caption="牌照号" DataType="Varchar" Length="100"/>
                    <Column Key="Driver" Caption="驾驶员" DataType="Varchar" Length="100"/>
                    <Column Key="ManageDate" Caption="加油日期" DataType="Date"/>
                    <Column Key="GasStation" Caption="加油站" DataType="Varchar" Length="10"/>
                    <Column Key="OilNo" Caption="燃油标号" DataType="Varchar"/>
                    <Column Key="Qty" Caption="加油数量" DataType="Numeric" Precision="16" Scale="3"/>
                    <Column Key="Price" Caption="单价" DataType="Numeric" Precision="18" Scale="2"/>
                    <Column Key="Amount" Caption="金额" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="GasCardNo" Caption="加油卡号" DataType="Varchar" Precision="18" Scale="2"/>
                    <Column Key="GasCardBalance" Caption="加油卡余额" DataType="Numeric" Precision="16" Scale="2"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_Fuel');			
				]]>
            </Action>
        </Operation>
        <Operation Caption="确认" Key="BatchConfirm" RefKey="BatchConfirm"/>
        <Operation Caption="撤销确认" Key="BatchConfirm-R" RefKey="BatchConfirm-R"/>
        <Operation Caption="作废" Key="BatchCancel" RefKey="BatchCancel"/>
        <Operation Caption="撤销作废" Key="BatchCancel-R" RefKey="BatchCancel-R"/>
        <Operation Caption="删除" Key="BatchDelete">
            <Action>
                <![CDATA[
			 if(CheckListNoSelect()){
	Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
	return true;
}
if(!CheckListSelectStatus(',100,')){
       Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
	return true;	
}						
Confirm('确定要将选中的记录进行删除吗？','YES_NO',{
	YES:{BatchDeleteData('LRP_FuelManager', 'LRP_FuelManager');LoadData();ShowData();},
	NO:{}});]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <TextEditor Caption="DataObjectKey" Enable="false" Key="DataObjectKey" Visible="false" X="10" Y="3">
                                <DataBinding DefaultValue="LRP_FuelManager"/>
                            </TextEditor>
                            <Label Key="L_No" Caption="记录单号" X="0" Y="0"/>
                            <TextEditor Key="No" Caption="记录单号" BuddyKey="L_No" X="1" Y="0" XSpan="3">
                                <Condition ColumnKey="No" TableKey="LRP_FuelManager" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_FleetId_l" Caption="车队" X="5" Y="0"/>
                            <Dict Key="FleetId_l" Caption="车队" BuddyKey="Lab_FleetId_l" X="6" Y="0" AllowMultiSelection="true" ItemKey="LRP_Fleet" XSpan="3">
                                <Condition ColumnKey="FleetId" TableKey="LRP_FuelManager" CondSign="in"/>
                            </Dict>
                            <Label Key="Lab_LicenseNo_l" Caption="车牌号" X="0" Y="1"/>
                            <TextEditor Key="LicenseNo_l" Caption="车牌号" BuddyKey="Lab_LicenseNo_l" X="1" Y="1" XSpan="3">
                                <Condition ColumnKey="LicenseNo" TableKey="LRP_FuelManager" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_Status" Caption="状态" X="5" Y="2"/>
                            <CheckListBox Key="Status_1" Caption="状态" BuddyKey="L_Status" X="6" Y="2" XSpan="3">
                                <Condition ColumnKey="Status" TableKey="LRP_FuelManager" CondSign="in"/>
                                <Item Caption="已输入" Key="prepared" Value="100"/>
                                <Item Caption="已确认" Key="confirmed" Value="200"/>
                            </CheckListBox>
                            <Label Key="Lab_Driver_l" Caption="驾驶员" X="5" Y="1"/>
                            <TextEditor Key="Driver_l" Caption="驾驶员" BuddyKey="Lab_Driver_l" X="6" Y="1" XSpan="3">
                                <Condition ColumnKey="Driver" TableKey="LRP_FuelManager" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_ManageDate_l" Caption="加油日期" X="0" Y="3"/>
                            <DatePicker Key="ManageDate_l" Caption="加油日期" BuddyKey="Lab_ManageDate_l" X="1" Y="3" XSpan="3">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                                <Condition ColumnKey="ManageDate" TableKey="LRP_FuelManager" CondSign="between" Group="ManageDate" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="Lab_ManageDate_l@2" Caption="至" X="5" Y="3"/>
                            <DatePicker Key="ManageDate_l@2" Caption="至" BuddyKey="Lab_ManageDate_l@2" X="6" Y="3" XSpan="3">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                                <Condition ColumnKey="ManageDate" TableKey="LRP_FuelManager" CondSign="in" Group="ManageDate" GroupTail="true"/>
                            </DatePicker>
                            <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[							
                                       DealCondition();LoadData();ShowData();      								   
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[ResetCondition();							 
								]]>
                                </OnClick>
                            </Button>
                            <TextEditor Key="GasCardNo_l" Caption="加油卡号" BuddyKey="Lab_GasCardNo_l" X="1" Y="2" XSpan="3">
                                <Condition ColumnKey="GasCardNo" TableKey="LRP_FuelManager" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_GasCardNo_l" Caption="加油卡号" X="0" Y="2"/>
                            <RowDefCollection RowHeight="25" RowGap="5">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="5">
                                <ColumnDef Width="99px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="61px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="80px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="ListView0" TableKey="LRP_FuelManager" PageLoadType="DB" RowAlterable="false" Height="pref">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" Visible="false" Width="91px"/>
                            <ListViewColumn Caption="选择" ColumnType="CheckBox" Enable="true" IsSelect="true" Key="Select"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="加油单号" ColumnType="HyperLink" DataColumnKey="No" Width="175px">
                                <OnClick>
                                    <![CDATA[Open('V_Fuel', OID)]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="FleetId" Caption="车队" ColumnType="Dict" DataColumnKey="FleetId" Width="125px" ItemKey="LRP_Fleet"/>
                            <ListViewColumn Key="TruckId" Caption="车辆" ColumnType="Dict" DataColumnKey="TruckId" Width="125px" ItemKey="LRP_Truck"/>
                            <ListViewColumn Key="LicenseNo" Caption="牌照号" ColumnType="TextEditor" DataColumnKey="LicenseNo" Width="100px"/>
                            <ListViewColumn Key="Driver" Caption="驾驶员" ColumnType="TextEditor" DataColumnKey="Driver"/>
                            <ListViewColumn Key="ManageDate" Caption="加油日期" ColumnType="DatePicker" DataColumnKey="ManageDate" Width="150px"/>
                            <ListViewColumn Key="GasStation" Caption="加油站" ColumnType="TextEditor" DataColumnKey="GasStation" Width="100px"/>
                            <ListViewColumn Key="OilNo" Caption="燃油标号" ColumnType="TextEditor" DataColumnKey="OilNo"/>
                            <ListViewColumn Key="Qty" Caption="加油数量" ColumnType="NumberEditor" DataColumnKey="Qty"/>
                            <ListViewColumn Key="Price" Caption="单价" ColumnType="NumberEditor" DataColumnKey="Price" IntegerValue="true"/>
                            <ListViewColumn Key="Amount" Caption="金额" ColumnType="NumberEditor" DataColumnKey="Amount"/>
                            <ListViewColumn Key="GasCardNo" Caption="加油卡号" ColumnType="TextEditor" DataColumnKey="GasCardNo" Width="100px"/>
                            <ListViewColumn Key="GasCardBalance" Caption="加油卡余额" ColumnType="NumberEditor" DataColumnKey="GasCardBalance"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_TOH_FTL', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="150px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[
        
    ]]>
    </OnLoad>
</Form>
