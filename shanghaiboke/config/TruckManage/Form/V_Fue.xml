<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_Fuel" Caption="加油记录单" FormType="Entity">
    <DataSource RefObjectKey="LRP_FuelManager"/>
    <OperationCollection>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[SaveData(); UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="New" Caption="新增" Visible="ReadOnly()">
            <Action>
                <![CDATA[
				       New('V_Fuel');
				]]>
            </Action>
        </Operation>
        <Operation Caption="编辑" Key="Edit" Enable="ReadOnly()&amp;&amp;Status==StatusValue('prepared')" RefKey="Edit" ShortCuts="Ctrl+E">
            <Action>
                <![CDATA[Edit()]]>
            </Action>
        </Operation>
        <Operation Key="Confirm" Caption="确认" RefKey="Confirm"/>
        <Operation Key="confirmed-R" Caption="撤销确认" RefKey="Confirm-R"/>
        <Operation Key="ToCancel" Caption="作废" RefKey="ToCancel"/>
        <Operation Key="ToCancelR" Caption="撤销作废" RefKey="ToCancel-R"/>
        <Operation Caption="删除" Key="Delete" Visible="ReadOnly()&amp;&amp;Status==StatusValue('prepared')">
            <Action>
                <![CDATA[Confirm('是否确定删除当前单据？','YES_NO',{YES:{DeleteData();UpdateView();Close();},NO:{}});
				]]>
            </Action>
        </Operation>
        <Operation Caption="取消" Key="Cancel" RefKey="Cancel"/>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="ToolBar1" Height="pref" Caption="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <TabPanel Caption="TabPanel1" Height="pref" Key="TabPanel1">
                        <GridLayoutPanel Key="first_head" Height="pref" Padding="5px" Caption="基本信息">
                            <TextEditor Key="FuelNo" Caption="加油单号" BuddyKey="Lab_FuelNo" X="1" Y="0" Enable="false" AsQuery="true">
                                <DataBinding ColumnKey="No" TableKey="LRP_FuelManager"/>
                            </TextEditor>
                            <Label Key="Lab_FuelNo" Caption="加油单号" X="0" Y="0"/>
                            <ComboBox Key="Status" BuddyKey="Lab_Status" X="7" Y="1" Enable="false" SourceType="Status" AsQuery="true" IntegerValue="true">
                                <DataBinding ColumnKey="Status" TableKey="LRP_FuelManager" DefaultValue="100"/>
                            </ComboBox>
                            <Label Key="Lab_Status" Caption="状态" X="6" Y="1"/>
                            <TextEditor Key="LicenseNo" Caption="牌照号" X="1" Y="1" Enable="false" AsQuery="true" MaxLength="40">
                                <DataBinding ColumnKey="LicenseNo" DefaultFormulaValue="GetDictValue(&quot;LRP_Truck&quot;, TruckId, &quot;LicenseNo&quot;);" TableKey="LRP_FuelManager"/>
                            </TextEditor>
                            <Label Key="Lab_LicenseNo" Caption="牌照号" X="0" Y="1"/>
                            <TextEditor Key="OilNo" Caption="燃油标号" BuddyKey="Lab_OilNo" X="4" Y="2" MaxLength="10">
                                <DataBinding ColumnKey="OilNo" TableKey="LRP_FuelManager" ErrorInfo="燃油标号不能为空！" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_OilNo" Caption="燃油标号" X="3" Y="2"/>
                            <TextEditor Key="GasCardNo" Caption="加油卡号" BuddyKey="Lab_GasCardNo" X="1" Y="4" MaxLength="40">
                                <DataBinding ColumnKey="GasCardNo" TableKey="LRP_FuelManager"/>
                            </TextEditor>
                            <Label Key="Lab_GasCardNo" Caption="加油卡号" X="0" Y="4"/>
                            <DatePicker Key="ManageDate" Caption="加油日期" BuddyKey="Lab_ManageDate" X="7" Y="2">
                                <DataBinding ColumnKey="ManageDate" TableKey="LRP_FuelManager" ErrorInfo="加油日期不能为空！" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_ManageDate" Caption="加油日期" X="6" Y="2"/>
                            <TextEditor Key="GasStation" Caption="加油站" BuddyKey="Lab_GasStation" X="1" Y="2" MaxLength="80">
                                <DataBinding ColumnKey="GasStation" TableKey="LRP_FuelManager" ErrorInfo="加油站不能为空！" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_GasStation" Caption="加油站" X="0" Y="2" Visible="false"/>
                            <Dict Key="FleetId" Caption="车队" BuddyKey="Lab_FleetId" X="4" Y="0" ItemKey="LRP_Fleet">
                                <DataBinding ColumnKey="FleetId" TableKey="LRP_FuelManager" ErrorInfo="车队不能为空！" Required="true"/>
                            </Dict>
                            <Label Key="Lab_FleetId" Caption="车队" X="3" Y="0"/>
                            <Dict Key="TruckId" Caption="车辆" BuddyKey="Lab_TruckId" X="7" Y="0" ItemKey="LRP_Truck">
                                <DataBinding ColumnKey="TruckId" TableKey="LRP_FuelManager" ErrorInfo="车辆不能为空！" Required="true"/>
                                <ItemFilter ItemKey="LRP_Truck">
                                    <Filter Query="select  t.oid from LRP_Truck t join LRP_Fleet f on t.FleetId=f.oid where f.oid=?" Type="DataSet">
                                        <FilterValue DataType="Long" ParaValue="FleetId" Type="Field"/>
                                    </Filter>
                                </ItemFilter>
                            </Dict>
                            <Label Key="Lab_TruckId" Caption="车辆" X="6" Y="0"/>
                            <NumberEditor Key="Qty" Caption="加油数量" BuddyKey="Lab_Qty" X="1" Y="3" Precision="14" Scale="3">
                                <DataBinding ColumnKey="Qty" TableKey="LRP_FuelManager" ErrorInfo="加油数量不能为空！" Required="true"/>
                            </NumberEditor>
                            <Label Key="Lab_Qty" Caption="加油数量" X="0" Y="3"/>
                            <NumberEditor Key="Price" Caption="单价" BuddyKey="Lab_Price" X="4" Y="3">
                                <DataBinding ColumnKey="Price" TableKey="LRP_FuelManager" ErrorInfo="单价不能为空！" Required="true"/>
                            </NumberEditor>
                            <Label Key="Lab_Price" Caption="单价" X="3" Y="3"/>
                            <NumberEditor Key="Amount" Caption="金额" BuddyKey="Lab_Amount" X="7" Y="3">
                                <DataBinding ColumnKey="Amount" DefaultFormulaValue="Qty*Price" TableKey="LRP_FuelManager" ErrorInfo="金额不能为空！" Required="true"/>
                            </NumberEditor>
                            <Label Key="Lab_Amount" Caption="金额" X="6" Y="3"/>
                            <NumberEditor Key="GasCardBalance" Caption="加油卡余额" BuddyKey="Lab_GasCardBalance" X="4" Y="4">
                                <DataBinding ColumnKey="GasCardBalance" TableKey="LRP_FuelManager"/>
                            </NumberEditor>
                            <Label Key="Lab_GasCardBalance" Caption="加油卡余额" X="3" Y="4"/>
                            <TextEditor Key="Driver" Caption="驾驶员" BuddyKey="Lab_Driver" X="4" Y="1" MaxLength="40">
                                <DataBinding ColumnKey="Driver" TableKey="LRP_FuelManager"/>
                            </TextEditor>
                            <Label Key="Lab_Driver" Caption="驾驶员" X="3" Y="1"/>
                            <TextEditor Key="remark" Caption="备注" BuddyKey="Lab_remark" X="1" Y="5" MaxLength="2000" XSpan="7">
                                <DataBinding ColumnKey="Remark" TableKey="LRP_FuelManager"/>
                            </TextEditor>
                            <Label Key="Lab_remark" Caption="备注" X="0" Y="5"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="99px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Caption="系统信息" Height="pref" Key="SystemInfo" Padding="10px">
                            <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                            <Dict BuddyKey="L_CREATOR" Caption="创建人" Enable="false" ItemKey="Operator" Key="CREATOR" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_FuelManager"/>
                            </Dict>
                            <DatePicker Caption="修改时间" Enable="false" Key="MODIFYTIME" X="5" XSpan="2" Y="1">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_FuelManager"/>
                            </DatePicker>
                            <Label Caption="修改时间" Key="L_MODIFYTIME" X="4" Y="1"/>
                            <DatePicker Caption="创建时间" Enable="false" Key="CREATETIME" X="1" XSpan="2" Y="1">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_FuelManager"/>
                            </DatePicker>
                            <Label Caption="创建时间" Key="L_CREATETIME" X="0" Y="1"/>
                            <Dict Caption="修改人" Enable="false" ItemKey="Operator" Key="MODIFIER" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_FuelManager"/>
                            </Dict>
                            <Label Caption="修改人" Key="L_MODIFIER" X="4" Y="0"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef MinWidth="50px" Width="50%"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef MinWidth="50px" Width="50%"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <SplitSize Size="385px"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
