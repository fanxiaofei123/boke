<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_TruckInsuranceView" Caption="车辆保险单序事簿" FormType="View" AbbrCaption="车辆保险单序事簿">
    <DataSource>
        <DataObject Key="V_TruckInsurance" Caption="车辆保险单序事簿" PrimaryTableKey="LRP_TruckInsurance">
            <TableCollection>
                <Table Key="LRP_TruckInsurance" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="No" Caption="保险单号" DataType="Varchar"/>
                    <Column Key="FleetId" Caption="车队" DataType="Long" GroupType="Discrete"/>
                    <Column Key="TruckId" Caption="车辆" DataType="Long"/>
                    <Column Key="InsuranceTypeId" Caption="险种" DataType="Long"/>
                    <Column Key="PoliceNo" Caption="保单号" DataType="Varchar" Length="40"/>
                    <Column Key="EffectiveDate" Caption="生效日期" DataType="Date" DefaultValue=""/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="LicenseNo" Caption="牌照号" DataType="Varchar" Length="40"/>
                    <Column Key="ExpireDate" Caption="截至日期" DataType="Date"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_TruckInsurance')]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirm" Caption="确认" RefKey="BatchConfirm"/>
        <Operation Key="BatchConfirm-R" Caption="撤销确认" RefKey="BatchConfirm-R"/>
        <Operation Key="BatchCancel" Caption="作废" RefKey="BatchCancel"/>
        <Operation Key="BatchCancel-R" Caption="撤销作废" RefKey="BatchCancel-R"/>
        <Operation Key="BatchDelete" Caption="删除">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
					return true;
				}
			   if(!CheckListSelectStatus(',100,')){	
			        Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
					return true;
			   }
			  Confirm('确定要将选中的记录进行删除吗？','YES_NO',{YES:{BatchDeleteData('LRP_TruckInsurance', 'LRP_TruckInsurance');
			            LoadData();ShowData();
					  },NO:{}});]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭">
            <Action>
                <![CDATA[Close();]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <GridLayoutPanel Key="query" Height="120%" Padding="5px" Caption="查询字段" Width="pref">
                        <Label Key="L_No" Caption="保险单号" X="0" Y="0"/>
                        <TextEditor Key="No" Caption="保险单号" BuddyKey="L_No" X="1" Y="0" XSpan="3">
                            <Condition ColumnKey="No" TableKey="LRP_TruckInsurance" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_FleetId" Caption="车队" X="5" Y="0"/>
                        <Dict Key="FleetId" Caption="车队" BuddyKey="L_FleetId" X="6" Y="0" AllowMultiSelection="true" ItemKey="LRP_Fleet" XSpan="3">
                            <Condition ColumnKey="FleetId" TableKey="LRP_TruckInsurance" CondSign="in"/>
                        </Dict>
                        <Label Key="L_InsuranceTypeId" Caption="险种" X="0" Y="2"/>
                        <Dict Key="InsuranceTypeId" Caption="险种" BuddyKey="L_InsuranceTypeId" X="1" Y="2" AllowMultiSelection="true" ItemKey="LRP_InsuranceType" XSpan="3">
                            <Condition ColumnKey="InsuranceTypeId" TableKey="LRP_TruckInsurance" CondSign="in"/>
                        </Dict>
                        <Label Key="L_PoliceNo" Caption="保单号" X="5" Y="1"/>
                        <TextEditor Key="PoliceNo" Caption="保单号" BuddyKey="L_PoliceNo" X="6" Y="1" XSpan="3">
                            <Condition ColumnKey="PoliceNo" TableKey="LRP_TruckInsurance" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_EffectiveDate" Caption="生效日期" X="0" Y="3"/>
                        <DatePicker Key="EffectiveDate" Caption="生效日期" BuddyKey="L_EffectiveDate" X="1" Y="3" XSpan="3">
                            <Format/>
                            <Condition ColumnKey="EffectiveDate" TableKey="LRP_TruckInsurance" CondSign="between" Group="EffectiveDate" GroupHead="true"/>
                        </DatePicker>
                        <Label Key="L_EffectiveDate_Comp2" Caption="到" X="5" Y="3"/>
                        <DatePicker Key="EffectiveDate_Comp2" Caption="到" BuddyKey="L_EffectiveDate_Comp2" X="6" Y="3" XSpan="3">
                            <Format/>
                            <Condition ColumnKey="EffectiveDate" TableKey="LRP_TruckInsurance" CondSign="between" Group="EffectiveDate" GroupTail="true"/>
                        </DatePicker>
                        <Label Key="L_LicenseNo" Caption="车牌号" X="0" Y="1"/>
                        <TextEditor Key="LicenseNo" Caption="车牌号" BuddyKey="L_LicenseNo" X="1" Y="1" XSpan="3">
                            <Condition ColumnKey="LicenseNo" TableKey="LRP_TruckInsurance" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_ExpireDate" Caption="截至日期" X="0" Y="4"/>
                        <DatePicker Key="ExpireDate" Caption="截至日期" BuddyKey="L_ExpireDate" X="1" Y="4" XSpan="3">
                            <Format/>
                            <Condition ColumnKey="ExpireDate" TableKey="LRP_TruckInsurance" CondSign="between" Group="ExpireDate" GroupHead="true"/>
                        </DatePicker>
                        <TextEditor Caption="DataObjectKey" Enable="false" Key="DataObjectKey" Visible="false" X="10" Y="3">
                            <DataBinding DefaultValue="LRP_TruckInsurance"/>
                        </TextEditor>
                        <Label Key="L_ExpireDate_Comp2" Caption="到" X="5" Y="4"/>
                        <DatePicker Key="ExpireDate_Comp2" Caption="到" BuddyKey="L_ExpireDate_Comp2" X="6" Y="4" XSpan="3">
                            <Format/>
                            <Condition ColumnKey="ExpireDate" TableKey="LRP_TruckInsurance" CondSign="between" Group="ExpireDate" GroupTail="true"/>
                        </DatePicker>
                        <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                            <OnClick>
                                <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                            </OnClick>
                        </Button>
                        <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                            <OnClick>
                                <![CDATA[
								ResetCondition();	
								]]>
                            </OnClick>
                        </Button>
                        <CheckListBox BuddyKey="Lab_Status_L" Caption="状态" Key="Status_L" X="6" XSpan="3" Y="2">
                            <Condition ColumnKey="Status" TableKey="LRP_TruckInsurance" CondSign="in"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                            <Item Caption="已作废" Key="cancelled" Value="20"/>
                        </CheckListBox>
                        <Label Key="Lab_Status_L" Caption="状态" X="5" Y="2"/>
                        <RowDefCollection RowHeight="30" RowGap="6">
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="20">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Height="pref" Key="ListView0" PageLoadType="DB" TableKey="LRP_TruckInsurance" PageRowCount="3">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_TruckInsurance" Visible="false" Width="94px"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" IsSelect="true"/>
                            <ListViewColumn Key="No1" Caption="保险单号" ColumnType="HyperLink" DataColumnKey="No">
                                <OnClick>
                                    <![CDATA[Open("V_TruckInsurance",OID);]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status">
                                <Item Caption="已输入" Key="prepared" Value="100"/>
                                <Item Caption="已确认" Key="confirmed" Value="200"/>
                                <Item Caption="已作废" Key="cancelled" Value="20"/>
                            </ListViewColumn>
                            <ListViewColumn Key="FleetId_LV" Caption="车队" ColumnType="Dict" DataColumnKey="FleetId" ItemKey="LRP_Fleet"/>
                            <ListViewColumn Key="TruckId" Caption="车辆" DataColumnKey="TruckId" ColumnType="Dict" ItemKey="LRP_Truck"/>
                            <ListViewColumn Key="InsuranceTypeId_LV" Caption="险种" ColumnType="Dict" DataColumnKey="InsuranceTypeId" ItemKey="LRP_InsuranceType"/>
                            <ListViewColumn Key="PoliceNo_LV" Caption="保单号" ColumnType="TextEditor" DataColumnKey="PoliceNo"/>
                            <ListViewColumn Key="ExpireDate_LV" Caption="截至日期" ColumnType="DatePicker" DataColumnKey="ExpireDate"/>
                            <ListViewColumn Key="LicenseNo_LV" Caption="车牌号" ColumnType="TextEditor" DataColumnKey="LicenseNo"/>
                            <ListViewColumn Key="EffectiveDate_LV" Caption="生效日期" ColumnType="DatePicker" DataColumnKey="EffectiveDate"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_TruckInsurance', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="190px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
