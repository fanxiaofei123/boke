<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_Accident" Caption="事故登记单" FormType="Entity">
    <DataSource RefObjectKey="LRP_AccidentRegistra"/>
    <OperationCollection>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[SaveData(); UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="New" Caption="新增" Visible="ReadOnly()">
            <Action>
                <![CDATA[ New('V_Accident');
				]]>
            </Action>
        </Operation>
        <Operation Caption="编辑" Key="Edit" Visible="Status&lt;StatusValue('finished')" ShortCuts="Ctrl+E">
            <Action>
                <![CDATA[Edit();]]>
            </Action>
        </Operation>
        <Operation Key="Confirm" Caption="确认" Visible="ReadOnly()&amp;&amp;Status==StatusValue('prepared')">
            <Action>
                <![CDATA[Status=StatusValue('confirmed');SaveData();UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="confirmed-R" Caption="撤销确认" RefKey="Confirm-R"/>
        <Operation Key="Handle" Caption="处理" Visible="ReadOnly()&amp;&amp;Status==StatusValue('confirmed')">
            <Action>
                <![CDATA[Status=StatusValue('handled');SaveData();UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="Revocation" Caption="撤销处理" Visible="ReadOnly()&amp;&amp;Status==StatusValue('handled')">
            <Action>
                <![CDATA[Status=StatusValue('confirmed');SaveData();UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="Finish" Caption="完成" Visible="ReadOnly()&amp;&amp;Status==StatusValue('handled')||Status==StatusValue('prepared')">
            <Action>
                <![CDATA[
Confirm('确定要将当前记录进行完成吗？','YES_NO',{YES:
{
if(ToString(FinishDate) == ''){
    SetValue('FinishDate', ServerDate());
}
Status=StatusValue('finished');
SaveData();UpdateView();},NO:{}});
]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[Status=StatusValue('handled');]]>
            </ExceptionHandler>
        </Operation>
        <Operation Key="FinishR" Caption="撤销完成" Visible="ReadOnly()&amp;&amp;Status==StatusValue('finished')" RefKey="Finish-R">
            <Action>
                <![CDATA[Confirm('确定要将当前记录进行撤销完成吗？','YES_NO',{YES:{Status=StatusValue('handled');SaveData();UpdateView();},NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
        <Operation Key="ToCancel" Caption="作废" RefKey="ToCancel"/>
        <Operation Key="ToCancelR" Caption="撤销作废" RefKey="ToCancel-R"/>
        <Operation Caption="删除" Key="Delete" RefKey="Delete"/>
        <Operation Caption="取消" Key="Cancel">
            <Action>
                <![CDATA[Cancel()]]>
            </Action>
        </Operation>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="ToolBar1" Height="pref" Caption="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <TabPanel Caption="TabPanel1" Height="pref" Key="TabPanel1">
                        <GridLayoutPanel Key="first_head" Padding="5px" Caption="基本信息">
                            <TextEditor Key="registerNo" Caption="事故登记号" BuddyKey="Lab_registerNo" X="1" Y="0" Enable="false" AsQuery="true">
                                <DataBinding ColumnKey="No" TableKey="LRP_AccidentRegistra"/>
                            </TextEditor>
                            <Label Key="Lab_registerNo" Caption="事故登记号" X="0" Y="0"/>
                            <ComboBox BuddyKey="Lab_Status" Enable="false" Key="Status" IntegerValue="true" SourceType="Status" X="7" Y="5" AsQuery="true">
                                <DataBinding ColumnKey="Status" TableKey="LRP_AccidentRegistra" DefaultValue="100"/>
                            </ComboBox>
                            <Label Caption="状态" Key="Lab_Status" X="6" Y="5"/>
                            <TextEditor Key="LicenseNo" Caption="牌照号" X="1" Y="1" Enable="false" AsQuery="true" MaxLength="40">
                                <DataBinding ColumnKey="LicenseNo" DefaultFormulaValue="GetDictValue(&quot;LRP_Truck&quot;, TruckId, &quot;LicenseNo&quot;);" TableKey="LRP_AccidentRegistra"/>
                            </TextEditor>
                            <Label Key="Lab_LicenseNo" Caption="牌照号" X="0" Y="1"/>
                            <DatePicker Key="AccidentDatetime" Caption=" 事故日期时间" BuddyKey="Lab_AccidentDatetime" X="1" Y="2" AsQuery="true">
                                <DataBinding ColumnKey="AccidentDatetime" TableKey="LRP_AccidentRegistra" ErrorInfo=" 事故日期时间不能为空！" Required="true"/>
                                <Format/>
                            </DatePicker>
                            <Label Key="Lab_AccidentDatetime" Caption="事故日期时间" X="0" Y="2"/>
                            <TextEditor Key="Reporter" Caption="报案人" BuddyKey="Lab_Reporter" X="4" Y="2" MaxLength="40">
                                <DataBinding ColumnKey="Reporter" TableKey="LRP_AccidentRegistra"/>
                            </TextEditor>
                            <Label Key="Lab_Reporter" Caption="报案人" X="3" Y="2"/>
                            <TextEditor Key="AccidentSite" Caption="事故地点" BuddyKey="Lab_AccidentSite" X="7" Y="1" MaxLength="200">
                                <DataBinding ColumnKey="AccidentSite" TableKey="LRP_AccidentRegistra" ErrorInfo="事故地点不能为空！" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_AccidentSite" Caption="事故地点" X="6" Y="1"/>
                            <DatePicker Key="ClaimDate" Caption="赔款日期" BuddyKey="Lab_ClaimDate" X="4" Y="8">
                                <DataBinding ColumnKey="ClaimDate" TableKey="LRP_AccidentRegistra"/>
                            </DatePicker>
                            <Label Key="Lab_ClaimDate" Caption="赔款日期" X="3" Y="8"/>
                            <DatePicker Key="ReportDatetime" Caption="报案日期时间" BuddyKey="Lab_ReportDatetime" X="7" Y="2">
                                <DataBinding ColumnKey="ReportDatetime" TableKey="LRP_AccidentRegistra"/>
                            </DatePicker>
                            <Label Key="Lab_ReportDatetime" Caption="报案日期时间" X="6" Y="2"/>
                            <TextEditor Key="AccidentNote" Caption="事故描述" BuddyKey="Lab_AccidentNote" X="1" Y="4" XSpan="7" MaxLength="2000">
                                <DataBinding ColumnKey="AccidentNote" TableKey="LRP_AccidentRegistra"/>
                            </TextEditor>
                            <Label Key="Lab_AccidentNote" Caption="事故描述" X="0" Y="4"/>
                            <TextEditor Key="ResponsibleParty" Caption="责任方" BuddyKey="Lab_ResponsibleParty" X="1" Y="5" MaxLength="80">
                                <DataBinding ColumnKey="ResponsibleParty" TableKey="LRP_AccidentRegistra"/>
                            </TextEditor>
                            <Label Key="Lab_ResponsibleParty" Caption="责任方" X="0" Y="5" Visible="false"/>
                            <Dict Key="FleetId" Caption="车队" BuddyKey="Lab_FleetId" X="4" Y="0" ItemKey="LRP_Fleet">
                                <DataBinding ColumnKey="FleetId" TableKey="LRP_AccidentRegistra" ErrorInfo="车队不能为空！" Required="true"/>
                            </Dict>
                            <Label Key="Lab_FleetId" Caption="车队" X="3" Y="0"/>
                            <Dict Key="TruckId" Caption="车辆" BuddyKey="Lab_TruckId" X="7" Y="0" ItemKey="LRP_Truck">
                                <DataBinding ColumnKey="TruckId" TableKey="LRP_AccidentRegistra" ErrorInfo="车辆不能为空！" Required="true"/>
                                <ItemFilter ItemKey="LRP_Truck">
                                    <Filter Query="select  t.oid from LRP_Truck t join LRP_Fleet f on t.FleetId=f.oid where f.oid=?" Type="DataSet">
                                        <FilterValue DataType="Long" ParaValue="FleetId" Type="Field"/>
                                    </Filter>
                                </ItemFilter>
                            </Dict>
                            <Label Key="Lab_TruckId" Caption="车辆" X="6" Y="0"/>
                            <Dict Key="InsuranceCompanyId" Caption="保险公司" BuddyKey="Lab_InsuranceCompanyId" X="4" Y="1" ItemKey="LRP_InsuranceCompany">
                                <DataBinding ColumnKey="InsuranceCompanyId" TableKey="LRP_AccidentRegistra"/>
                            </Dict>
                            <Label Key="Lab_InsuranceCompanyId" Caption="保险公司" X="3" Y="1"/>
                            <NumberEditor Key="TruckLoss" Caption="本车损失" BuddyKey="Lab_TruckLoss" X="1" Y="6">
                                <DataBinding ColumnKey="TruckLoss" TableKey="LRP_AccidentRegistra"/>
                            </NumberEditor>
                            <Label Key="Lab_TruckLoss" Caption="本车损失" X="0" Y="6"/>
                            <NumberEditor Key="ThirdPartyLoss" Caption="第三者损失" BuddyKey="Lab_ThirdPartyLoss" X="4" Y="6">
                                <DataBinding ColumnKey="ThirdPartyLoss" TableKey="LRP_AccidentRegistra"/>
                            </NumberEditor>
                            <Label Key="Lab_ThirdPartyLoss" Caption="第三者损失" X="3" Y="6"/>
                            <NumberEditor Key="CargoLoss" Caption="货物损失" BuddyKey="Lab_CargoLoss" X="7" Y="6">
                                <DataBinding ColumnKey="CargoLoss" TableKey="LRP_AccidentRegistra"/>
                            </NumberEditor>
                            <Label Key="Lab_CargoLoss" Caption="货物损失" X="6" Y="6"/>
                            <NumberEditor Key="OtherLoss" Caption="其它损失" BuddyKey="Lab_OtherLoss" X="1" Y="7">
                                <DataBinding ColumnKey="OtherLoss" TableKey="LRP_AccidentRegistra"/>
                            </NumberEditor>
                            <Label Key="Lab_OtherLoss" Caption="其它损失" X="0" Y="7"/>
                            <NumberEditor Key="DirectLoss" Caption="直接损失" BuddyKey="Lab_DirectLoss" X="4" Y="7">
                                <DataBinding ColumnKey="DirectLoss" TableKey="LRP_AccidentRegistra"/>
                            </NumberEditor>
                            <Label Key="Lab_DirectLoss" Caption="直接损失" X="3" Y="7"/>
                            <NumberEditor Key="ResponsibleLoss" Caption="责任损失" BuddyKey="Lab_ResponsibleLoss" X="7" Y="7">
                                <DataBinding ColumnKey="ResponsibleLoss" TableKey="LRP_AccidentRegistra"/>
                            </NumberEditor>
                            <Label Key="Lab_ResponsibleLoss" Caption="责任损失" X="6" Y="7"/>
                            <NumberEditor Key="ClaimAmount" Caption="赔款金额" BuddyKey="Lab_ClaimAmount" X="1" Y="8">
                                <DataBinding ColumnKey="ClaimAmount" TableKey="LRP_AccidentRegistra"/>
                            </NumberEditor>
                            <Label Key="Lab_ClaimAmount" Caption="赔款金额" X="0" Y="8"/>
                            <DatePicker Key="FinishDate" Caption="完成日期" BuddyKey="Lab_FinishDate" X="7" Y="8" Enable="Status==200 ">
                                <DataBinding ColumnKey="FinishDate" TableKey="LRP_AccidentRegistra"/>
                            </DatePicker>
                            <Label Key="Lab_FinishDate" Caption="完成日期" X="6" Y="8"/>
                            <TextEditor Key="Mobile" Caption=" 联系电话" BuddyKey="Lab_Mobile" X="4" Y="3" MaxLength="40">
                                <DataBinding ColumnKey="Mobile" TableKey="LRP_AccidentRegistra"/>
                            </TextEditor>
                            <Label Key="Lab_Mobile" Caption=" 联系电话" X="3" Y="3"/>
                            <TextEditor Key="Driver" Caption="驾驶员" BuddyKey="Lab_Driver" X="1" Y="3" MaxLength="40">
                                <DataBinding ColumnKey="Driver" TableKey="LRP_AccidentRegistra"/>
                            </TextEditor>
                            <Label Key="Lab_Driver" Caption="驾驶员" X="0" Y="3"/>
                            <TextEditor Key="AccidentType" Caption="事故类型" BuddyKey="Lab_AccidentType" X="7" Y="3" MaxLength="40">
                                <DataBinding ColumnKey="AccidentType" TableKey="LRP_AccidentRegistra" ErrorInfo="事故类型不能为空！" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_AccidentType" Caption="事故类型" X="6" Y="3"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="31px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="99px"/>
                                <ColumnDef MinWidth="40px" Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="77px"/>
                                <ColumnDef MinWidth="40px" Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Caption="系统信息" Height="pref" Key="SystemInfo" Padding="10px">
                            <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                            <Dict BuddyKey="L_CREATOR" Caption="创建人" Enable="false" ItemKey="Operator" Key="CREATOR" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_AccidentRegistra"/>
                            </Dict>
                            <DatePicker Caption="修改时间" Enable="false" Key="MODIFYTIME" X="5" XSpan="2" Y="1">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_AccidentRegistra"/>
                            </DatePicker>
                            <Label Caption="修改时间" Key="L_MODIFYTIME" X="4" Y="1"/>
                            <DatePicker Caption="创建时间" Enable="false" Key="CREATETIME" X="1" XSpan="2" Y="1">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_AccidentRegistra"/>
                            </DatePicker>
                            <Label Caption="创建时间" Key="L_CREATETIME" X="0" Y="1"/>
                            <Dict Caption="修改人" Enable="false" ItemKey="Operator" Key="MODIFIER" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_AccidentRegistra"/>
                            </Dict>
                            <Label Caption="修改人" Key="L_MODIFIER" X="4" Y="0"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef MinWidth="50px" Width="50%"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef MinWidth="50px" Width="50%"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <SplitSize Size="385px"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
