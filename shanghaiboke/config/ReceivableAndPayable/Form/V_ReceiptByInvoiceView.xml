<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_ReceiptByInvoiceView" Caption="按发票收款序事簿" FormType="View" AbbrCaption="按发票收款序事簿">
    <DataSource>
        <DataObject Key="V_ReceiptView" Caption="按发票收款" PrimaryTableKey="LRP_Receipt">
            <TableCollection>
                <Table Key="LRP_Receipt" TableMode="Detail" Persist="false" SourceType="Query">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="No" Caption="收款单号" DataType="Varchar" Length="200" SortType="Desc"/>
                    <Column Key="CompanyCode" Caption="公司" DataType="Long"/>
                    <Column Key="SettlementId" Caption="结算方" DataType="Long"/>
                    <Column Key="ReceiptDate" Caption="收款日期" DataType="DateTime"/>
                    <Column Key="ReceiptType" Caption="收款类型" DataType="Varchar"/>
                    <Column Key="ReceiptMoney" Caption="收款金额" DataType="Numeric" Precision="18" Scale="6"/>
                    <Column Key="EmployeeID" Caption="业务员" DataType="Long"/>
                    <Column Key="Remarks" Caption="备注" DataType="Varchar" Length="200"/>
                    <TableFilter>
                        <![CDATA[ReceiptType = '801']]>
                    </TableFilter>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_ReceiptByInvoice')]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirm" Caption="确认" RefKey="BatchConfirm"/>
        <Operation Key="BatchConfirmR" Caption="撤销确认" RefKey="BatchConfirm-R"/>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="Lab_Status_H" Caption="状态" X="3" Y="0"/>
                            <CheckListBox Key="Status_H" Caption="状态" BuddyKey="Lab_Status_H" X="4" Y="0">
                                <Condition ColumnKey="Status" TableKey="LRP_Receipt" CondSign="in"/>
								<Item Caption="已输入" Key="prepared" Value="100"/>
								<Item Caption="已确认" Key="confirmed" Value="200"/>
                            </CheckListBox>
                            <Label Key="L_CompanyCode" Caption="公司" X="0" Y="1"/>
                            <Dict Key="CompanyCode" Caption="公司" BuddyKey="L_CompanyCode" X="1" Y="1" AllowMultiSelection="true" ItemKey="CompanyCode">
                                <Condition ColumnKey="CompanyCode" TableKey="LRP_Receipt" CondSign="in"/>
                            </Dict>
                            <Label Key="L_SettlementId" Caption="结算方" X="3" Y="1"/>
                            <Dict Key="SettlementId" Caption="结算方" BuddyKey="L_SettlementId" X="4" Y="1" AllowMultiSelection="true" ItemKey="Customer">
                                <Condition ColumnKey="SettlementId" TableKey="LRP_Receipt" CondSign="in"/>
                            </Dict>
                            <Label Key="L_ReceiptDate" Caption="收款日期" X="0" Y="2"/>
                            <DatePicker Key="ReceiptDate" Caption="收款日期" BuddyKey="L_ReceiptDate" X="1" Y="2">
                                <Format/>
                                <Condition ColumnKey="ReceiptDate" TableKey="LRP_Receipt" CondSign="between" Group="ReceiptDate" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="L_ReceiptDate_Comp2" Caption="到" X="3" Y="2"/>
                            <DatePicker Key="ReceiptDate_Comp2" Caption="到" BuddyKey="L_ReceiptDate_Comp2" X="4" Y="2">
                                <Format/>
                                <Condition ColumnKey="ReceiptDate" TableKey="LRP_Receipt" CondSign="between" Group="ReceiptDate" GroupTail="true"/>
                            </DatePicker>
                            <Label Key="L_EmployeeID" Caption="业务员" X="0" Y="3"/>
                            <Dict Key="EmployeeID" Caption="业务员" BuddyKey="L_EmployeeID" X="1" Y="3" AllowMultiSelection="true" ItemKey="Operator">
                                <Condition ColumnKey="EmployeeID" TableKey="LRP_Receipt" CondSign="in"/>
                            </Dict>
                            <TextEditor Key="No" Caption="收款单号" BuddyKey="Lab_No" X="1" Y="0">
                                <Condition ColumnKey="No" TableKey="LRP_Receipt" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_No" Caption="收款单号" X="0" Y="0"/>
                            <Button Key="Query" Caption="查询" X="5" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="5" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <TextEditor Key="DataObjectKey" Caption="DataObjectKey" BuddyKey="Lab_DataObjectKey" X="4" Y="3" Visible="false">
                                <DataBinding DefaultValue="LRP_Receipt"/>
                            </TextEditor>
                            <Label Key="Lab_DataObjectKey" Caption="DataObjectKey" X="3" Y="3"/>
                            <RowDefCollection RowHeight="30" RowGap="5">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="10">
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="20px"/>
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="100px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" TableKey="LRP_Receipt">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_Receipt" Visible="false" Width="30px"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" Width="100px" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="收款单号" ColumnType="HyperLink" DataColumnKey="No" Width="150px">
                                <OnClick>
                                    <![CDATA[Open('V_ReceiptByInvoice', OID)]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="CompanyCode_LV" Caption="公司" ColumnType="Dict" DataColumnKey="CompanyCode" Width="100px" ItemKey="CompanyCode"/>
                            <ListViewColumn Key="SettlementId_LV" Caption="结算方" ColumnType="Dict" DataColumnKey="SettlementId" Width="100px" ItemKey="Customer"/>
                            <ListViewColumn Key="ReceiptDate_LV" Caption="收款日期" ColumnType="DatePicker" DataColumnKey="ReceiptDate" Width="150px"/>
                            <ListViewColumn Key="EmployeeID_LV" Caption="业务员" ColumnType="Dict" DataColumnKey="EmployeeID" Width="100px" ItemKey="Operator"/>
                            <ListViewColumn Key="ReceiptMoney" Caption="收款金额" ColumnType="NumberEditor" DataColumnKey="ReceiptMoney" Width="100px" Precision="18" Scale="6" ShowZero="true"/>
                            <ListViewColumn Key="Remarks_LV" Caption="备注" ColumnType="TextEditor" DataColumnKey="Remarks"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_ReceiptByInvoice', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="150px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
