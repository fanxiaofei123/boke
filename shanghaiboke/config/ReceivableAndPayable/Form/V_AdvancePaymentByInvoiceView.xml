<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_AdvancePaymentByInvoiceView" Caption="预付款序事簿" FormType="View" AbbrCaption="预付款序事簿">
    <DataSource>
        <DataObject Key="V_AdvancePaymentByInvoiceView" Caption="按发票预付款" PrimaryTableKey="LRP_Payment">
            <TableCollection>
                <Table Key="LRP_Payment" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="No" Caption="付款单号" DataType="Varchar" Length="200" SortType="Desc"/>
                    <Column Key="CompanyCode" Caption="公司" DataType="Long"/>
                    <Column Key="SettlementId" Caption="结算方" DataType="Long"/>
                    <Column Key="PaymentDate" Caption="付款日期" DataType="DateTime"/>
                    <Column Key="PaymentType" Caption="付款类型" DataType="Varchar"/>
                    <Column Key="EmployeeID" Caption="业务员" DataType="Long"/>
                    <Column Key="Remarks" Caption="备注" DataType="Varchar" Length="200"/>
                    <TableFilter>
                        <![CDATA[PaymentType = '803']]>
                    </TableFilter>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_AdvancePaymentByInvoice')]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirm" Caption="确认" RefKey="BatchConfirm"/>
        <Operation Key="BatchConfirmR" Caption="撤销确认">
            <Action>
                <![CDATA[if(CheckListNoSelect()){
					Confirm(LocaleString('CommonDef','key20'),'OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',200,')){
					Confirm(LocaleString('CommonDef','key21'),'OK','OK:{}');
					return true;
				}
				Confirm(LocaleString('CommonDef','key22'),'YES_NO',{ YES:{
					loop "ListView0" (true){	
						var index = GetRowIndex('ListView0') + 1;
						if(Select == true){
							var dt = DBNamedQuery('queryAdvance', OID);
							if(dt.count > 0){
								Confirm(LocaleParaFormat("ReceivableAnd","key15",index), 'OK',{OK:{}}); 
								return 0;
							}  
							InvokeService("LRP_BillStatusChange", false, false,DataObjectKey,OID,100,-1);
						}					
					}
					LoadData();ShowData();
				},NO:{}});
				]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <QueryCollection>
        <Query Key="queryAdvance">
            <Statement>
                <![CDATA[select  count(*) as count from LRP_Payment_Show where SrcOID = ?]]>
            </Statement>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="Lab_Status_H" Caption="状态" X="3" Y="0"/>
                            <CheckListBox Key="Status_H" Caption="状态" BuddyKey="Lab_Status_H" X="4" Y="0">
                                <Condition ColumnKey="Status" TableKey="LRP_Payment" CondSign="in"/>
                                <Item Caption="已输入" Key="prepared" Value="100"/>
                                <Item Caption="已确认" Key="confirmed" Value="200"/>
                            </CheckListBox>
                            <Label Key="L_CompanyCode" Caption="公司" X="0" Y="1"/>
                            <Dict Key="CompanyCode" Caption="公司" BuddyKey="L_CompanyCode" X="1" Y="1" AllowMultiSelection="true" ItemKey="CompanyCode">
                                <Condition ColumnKey="CompanyCode" TableKey="LRP_Payment" CondSign="in"/>
                            </Dict>
                            <Label Key="L_SettlementId" Caption="结算方" X="3" Y="1"/>
                            <Dict Key="SettlementId" Caption="结算方" BuddyKey="L_SettlementId" X="4" Y="1" AllowMultiSelection="true" ItemKey="Vendor">
                                <Condition ColumnKey="SettlementId" TableKey="LRP_Payment" CondSign="in"/>
                            </Dict>
                            <Label Key="L_PaymentDate" Caption="付款日期" X="0" Y="2"/>
                            <DatePicker Key="PaymentDate" Caption="付款日期" BuddyKey="L_PaymentDate" X="1" Y="2">
                                <Format/>
                                <Condition ColumnKey="PaymentDate" TableKey="LRP_Payment" CondSign="between" Group="PaymentDate" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="L_PaymentDate_Comp2" Caption="到" X="3" Y="2"/>
                            <DatePicker Key="PaymentDate_Comp2" Caption="到" BuddyKey="L_PaymentDate_Comp2" X="4" Y="2">
                                <Format/>
                                <Condition ColumnKey="PaymentDate" TableKey="LRP_Payment" CondSign="between" Group="PaymentDate" GroupTail="true"/>
                            </DatePicker>
                            <Label Key="L_EmployeeID" Caption="业务员" X="0" Y="3"/>
                            <Dict Key="EmployeeID" Caption="业务员" BuddyKey="L_EmployeeID" X="1" Y="3" AllowMultiSelection="true" ItemKey="Operator">
                                <Condition ColumnKey="EmployeeID" TableKey="LRP_Payment" CondSign="in"/>
                            </Dict>
                            <TextEditor Key="No" Caption="付款单号" BuddyKey="Lab_No" X="1" Y="0">
                                <Condition ColumnKey="No" TableKey="LRP_Payment" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_No" Caption="付款单号" X="0" Y="0"/>
                            <Button Key="Query" Caption="查询" X="5" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="5" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <Label Key="L_Remarks" Caption="备注" X="0" Y="4"/>
                            <TextEditor Key="Remarks" Caption="备注" BuddyKey="L_Remarks" X="1" Y="4">
                                <Condition ColumnKey="Remarks" TableKey="LRP_Payment" CondSign="like"/>
                            </TextEditor>
                            <TextEditor Key="DataObjectKey" Caption="DataObjectKey" BuddyKey="Lab_DataObjectKey" X="4" Y="3" Visible="false">
                                <DataBinding DefaultValue="LRP_Payment"/>
                            </TextEditor>
                            <Label Key="Lab_DataObjectKey" Caption="DataObjectKey" X="3" Y="3"/>
                            <RowDefCollection RowHeight="30" RowGap="5">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="10">
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="20px"/>
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="100px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" TableKey="LRP_Payment">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_Payment" Visible="false" Width="29px"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" Width="100px" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="付款单号" ColumnType="HyperLink" DataColumnKey="No" Width="150px">
                                <OnClick>
                                    <![CDATA[Open('V_AdvancePaymentByInvoice', OID)]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="CompanyCode_LV" Caption="公司" ColumnType="Dict" DataColumnKey="CompanyCode" Width="100px" ItemKey="CompanyCode"/>
                            <ListViewColumn Key="SettlementId_LV" Caption="结算方" ColumnType="Dict" DataColumnKey="SettlementId" Width="100px" ItemKey="Vendor"/>
                            <ListViewColumn Key="PaymentDate_LV" Caption="付款日期" ColumnType="DatePicker" DataColumnKey="PaymentDate" Width="100px"/>
                            <ListViewColumn Key="EmployeeID_LV" Caption="业务员" ColumnType="Dict" DataColumnKey="EmployeeID" Width="100px" ItemKey="Operator"/>
                            <ListViewColumn Key="Remarks_LV" Caption="备注" ColumnType="TextEditor" DataColumnKey="Remarks"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_AdvancePaymentByInvoice', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="150px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
