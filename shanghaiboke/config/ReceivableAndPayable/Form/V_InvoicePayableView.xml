<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_InvoicePayableView" Caption="应付发票序事簿" FormType="View" AbbrCaption="应付发票序事簿">
    <DataSource>
        <DataObject Key="V_InvoicePayableView" Caption="应付发票视图" PrimaryTableKey="LRP_InvoicePayable">
            <TableCollection>
                <Table Key="LRP_InvoicePayable" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="No" Caption="单号" DataType="Varchar" Length="200" SortType="Desc"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="Remarks" Caption="备注" DataType="Varchar" Length="200"/>
                    <Column Key="CompanyCode" Caption="公司" DataType="Long"/>
                    <Column Key="SettlementId" Caption="结算方" DataType="Long"/>
                    <Column Key="OriginNo" Caption="实体票号" DataType="Varchar" Length="100"/>
                    <Column Key="BillDate" Caption="开票日期" DataType="DateTime"/>
                    <Column Key="InvoiceType" Caption="发票类型" DataType="Integer"/>
                    <Column Key="HookStatus" Caption="核销状态" DataType="Integer"/>
                    <Column Key="EmployeeID" Caption="业务员" DataType="Long"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_InvoicePayable')]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirm" Caption="确认" RefKey="BatchConfirm"/>
        <Operation Key="BatchConfirmR" Caption="撤销确认">
            <Action>
                <![CDATA[if(CheckListNoSelect()){
					Confirm(LocaleString('CommonDef','key20'),'OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',200,')){
					Confirm(LocaleString('CommonDef','key21'),'OK','OK:{}');
					return true;
				}
				Confirm(LocaleString('CommonDef','key22'),'YES_NO',{ YES:{
					loop "ListView0" (true){	
						var index = GetRowIndex('ListView0') + 1;
						if(Select == true){
                            if(HookStatus_LV == 1 || HookStatus_LV == 2){
								Confirm(LocaleParaFormat("ReceivableAnd","key1",index), 'OK',{OK:{}}); 
								return 0;
							}
							var dt = DBNamedQuery('queryInvoice', OID);
							if(dt.count > 0){
								Confirm(LocaleParaFormat("ReceivableAnd","key2",index), 'OK',{OK:{}}); 
								return 0;
							}  
							InvokeService("LRP_BillStatusChange", false, false,DataObjectKey,OID,100,-1);
						}					
					}
					LoadData();ShowData();
				},NO:{}});
				]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <QueryCollection>
        <Query Key="queryInvoice">
            <Statement>
                <![CDATA[select  count(*) as count from LRP_InvoicePayable_Show where SrcOID = ?]]>
            </Statement>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="L_No" Caption="单号" X="0" Y="0"/>
                            <TextEditor Key="No" Caption="单号" BuddyKey="L_No" X="1" Y="0">
                                <Condition ColumnKey="No" TableKey="LRP_InvoicePayable" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_Status_H" Caption="状态" X="3" Y="0"/>
                            <CheckListBox Key="Status_H" Caption="状态" BuddyKey="Lab_Status_H" X="4" Y="0">
                                <Condition ColumnKey="Status" TableKey="LRP_InvoicePayable" CondSign="in"/>
                                <Item Caption="已输入" Key="prepared" Value="100"/>
                                <Item Caption="已确认" Key="confirmed" Value="200"/>
                            </CheckListBox>
                            <Label Key="L_CompanyCode" Caption="公司" X="0" Y="1"/>
                            <Dict Key="CompanyCode" Caption="公司" BuddyKey="L_CompanyCode" X="1" Y="1" AllowMultiSelection="true" ItemKey="CompanyCode">
                                <Condition ColumnKey="CompanyCode" TableKey="LRP_InvoicePayable" CondSign="in"/>
                            </Dict>
                            <Label Key="L_SettlementId" Caption="结算方" X="3" Y="1"/>
                            <Dict Key="SettlementId" Caption="结算方" BuddyKey="L_SettlementId" X="4" Y="1" AllowMultiSelection="true" ItemKey="Vendor">
                                <Condition ColumnKey="SettlementId" TableKey="LRP_InvoicePayable" CondSign="in"/>
                            </Dict>
                            <Label Key="L_OriginNo" Caption="实体票号" X="3" Y="3"/>
                            <TextEditor Key="OriginNo" Caption="实体票号" BuddyKey="L_OriginNo" X="4" Y="3">
                                <Condition ColumnKey="OriginNo" TableKey="LRP_InvoicePayable" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_BillDate" Caption="开票日期" X="0" Y="2"/>
                            <DatePicker Key="BillDate" Caption="开票日期" BuddyKey="L_BillDate" X="1" Y="2">
                                <Format/>
                                <Condition ColumnKey="BillDate" TableKey="LRP_InvoicePayable" CondSign="between" Group="BillDate" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="L_BillDate_Comp2" Caption="到" X="3" Y="2"/>
                            <DatePicker Key="BillDate_Comp2" Caption="到" BuddyKey="L_BillDate_Comp2" X="4" Y="2">
                                <Format/>
                                <Condition ColumnKey="BillDate" TableKey="LRP_InvoicePayable" CondSign="between" Group="BillDate" GroupTail="true"/>
                            </DatePicker>
                            <Label Key="L_InvoiceType" Caption="发票类型" X="0" Y="3"/>
                            <ComboBox Key="InvoiceType" Caption="发票类型" BuddyKey="L_InvoiceType" X="1" Y="3">
                                <Condition ColumnKey="InvoiceType" TableKey="LRP_InvoicePayable" CondSign="="/>
                                <Item Caption="蓝字发票" Key="0" Value="0"/>
                                <Item Caption="红字发票" Key="1" Value="1"/>
                            </ComboBox>
                            <Label Key="L_HookStatus" Caption="核销状态" X="3" Y="4"/>
                            <ComboBox Key="HookStatus" Caption="核销状态" BuddyKey="L_HookStatus" X="4" Y="4">
                                <Condition ColumnKey="HookStatus" TableKey="LRP_InvoicePayable" CondSign="="/>
                                <Item Caption="未核销" Key="0" Value="0"/>
                                <Item Caption="部分核销" Key="1" Value="1"/>
                                <Item Caption="全部核销" Key="2" Value="2"/>
                            </ComboBox>
                            <Label Key="L_EmployeeID" Caption="业务员" X="0" Y="4"/>
                            <Dict Key="EmployeeID" Caption="业务员" BuddyKey="L_EmployeeID" X="1" Y="4" AllowMultiSelection="true" ItemKey="Operator">
                                <Condition ColumnKey="EmployeeID" TableKey="LRP_InvoicePayable" CondSign="in"/>
                            </Dict>
                            <Button Key="Query" Caption="查询" X="5" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="5" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <TextEditor Key="DataObjectKey" Caption="DataObjectKey" BuddyKey="Lab_DataObjectKey" X="5" Y="4" Visible="false">
                                <DataBinding DefaultValue="LRP_InvoicePayable"/>
                            </TextEditor>
                            <Label Key="Lab_DataObjectKey" Caption="DataObjectKey" X="4" Y="4"/>
                            <RowDefCollection RowHeight="30" RowGap="5">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="10">
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="20px"/>
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="100px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" TableKey="LRP_InvoicePayable">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_InvoicePayable" Visible="false" Width="30px"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" Width="100px" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="单号" ColumnType="HyperLink" DataColumnKey="No" Width="150px">
                                <OnClick>
                                    <![CDATA[Open('V_InvoicePayable', OID);]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="CompanyCode_LV" Caption="公司" ColumnType="Dict" DataColumnKey="CompanyCode" Width="100px" ItemKey="CompanyCode"/>
                            <ListViewColumn Key="SettlementId_LV" Caption="结算方" ColumnType="Dict" DataColumnKey="SettlementId" Width="100px" ItemKey="Vendor"/>
                            <ListViewColumn Key="OriginNo_LV" Caption="实体票号" ColumnType="TextEditor" DataColumnKey="OriginNo" Width="100px"/>
                            <ListViewColumn Key="BillDate_LV" Caption="开票日期" ColumnType="DatePicker" DataColumnKey="BillDate" Width="100px"/>
                            <ListViewColumn Key="InvoiceType_LV" Caption="发票类型" ColumnType="ComboBox" DataColumnKey="InvoiceType" Width="100px">
                                <Item Caption="蓝字发票" Key="0" Value="0"/>
                                <Item Caption="红字发票" Key="1" Value="1"/>
                            </ListViewColumn>
                            <ListViewColumn Key="HookStatus_LV" Caption="核销状态" ColumnType="ComboBox" DataColumnKey="HookStatus" Width="100px">
                                <Item Caption="未核销" Key="0" Value="0"/>
                                <Item Caption="部分核销" Key="1" Value="1"/>
                                <Item Caption="全部核销" Key="2" Value="2"/>
                            </ListViewColumn>
                            <ListViewColumn Key="EmployeeID_LV" Caption="业务员" ColumnType="Dict" DataColumnKey="EmployeeID" Width="100px" ItemKey="Operator"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_InvoicePayable', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="180px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
