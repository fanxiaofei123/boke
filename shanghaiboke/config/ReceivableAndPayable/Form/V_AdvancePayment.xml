<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_AdvancePayment" Caption="预付款核销" FormType="Entity" ViewKey="V_AdvancePaymentView">
    <DataSource RefObjectKey="LRP_AdvancePayment"/>
    <OperationCollection>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[if(GetRowCount('Grid1')<=0){
    Confirm(LocaleString('ReceivableAnd','key17'), 'OK',{OK:{}});
    return 0;
    
}
var sumMoney = 0.0;
loop "Grid1" (true){
    sumMoney = sumMoney + PaymentMoney;
}
SetValue('HookMoney', sumMoney, true);


SaveData(); UpdateView();
						
                                ]]>
            </Action>
        </Operation>
        <Operation Key="Edit" Caption="编辑" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Key="QuotePayment" Caption="引入预付款" Enable="!ReadOnly()&amp;&amp;Status==StatusValue('prepared')">
            <Action>
                <![CDATA[if(CompanyCode > 0 && SettlementId > 0){
	ShowModal('V_QuotePayment',
	{CompanyCode_para:{CompanyCode},
	SettlementId_para:{SettlementId},
	pFormKey:{GetFormKey()}
	});
}else{
	Confirm(LocaleString('ReceivableAnd','key3'), 'OK',{OK:{}});
}]]>
            </Action>
        </Operation>
        <Operation Key="Confirm" Caption="确认" RefKey="Confirm"/>
        <Operation Key="Confirm-R" Caption="撤销确认" Enable="ReadOnly()&amp;&amp;Status==StatusValue('confirmed')">
            <Action>
                <![CDATA[
Status=StatusValue('prepared');SaveData();UpdateView();

]]>
            </Action>
        </Operation>
        <Operation Key="Delete" Caption="删除" RefKey="Delete" ShortCuts="Ctrl+D"/>
        <Operation Key="Cancel" Caption="取消" RefKey="Cancel"/>
        <Operation Key="ToCancel" Caption="作废" RefKey="ToCancel"/>
        <Operation Key="ToCancel-R" Caption="撤销作废" RefKey="ToCancel-R"/>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Height="pref" Key="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <TabPanel Caption="TabPanel1" Key="TabPanel1">
                        <GridLayoutPanel Key="first_head" Height="pref" Padding="10px" Caption="基本信息">
                            <TextEditor Key="No" Caption="单号" BuddyKey="Lab_No" X="1" Y="0" Enable="false" AsQuery="true">
                                <DataBinding ColumnKey="No" TableKey="LRP_AdvancePayment"/>
                            </TextEditor>
                            <Label Key="Lab_No" Caption="单号" X="0" Y="0"/>
                            <ComboBox Key="Status" Caption="状态" BuddyKey="Lab_Status" X="7" Y="0" Enable="false" SourceType="Status" IntegerValue="true" AsQuery="true">
                                <DataBinding ColumnKey="Status" TableKey="LRP_AdvancePayment" DefaultValue="100"/>
                            </ComboBox>
                            <Label Key="Lab_Status" Caption="状态" X="6" Y="0"/>
                            <TextEditor Key="Remarks" Caption="备注" BuddyKey="Lab_Remarks" X="7" Y="3" Enable="!ReadOnly()" AsQuery="true">
                                <DataBinding ColumnKey="Remarks" TableKey="LRP_AdvancePayment"/>
                            </TextEditor>
                            <Label Key="Lab_Remarks" Caption="备注" X="6" Y="3"/>
                            <Dict Key="CompanyCode" Caption="公司" BuddyKey="Lab_CompanyCode" X="4" Y="0" ItemKey="CompanyCode" AsQuery="true">
                                <DataBinding ColumnKey="CompanyCode" TableKey="LRP_AdvancePayment" Required="true"/>
                            </Dict>
                            <Label Key="Lab_CompanyCode" Caption="公司" X="3" Y="0"/>
                            <Dict Key="SettlementId" Caption="结算方" BuddyKey="Lab_SettlementId" X="1" Y="1" ItemKey="Vendor" AsQuery="true">
                                <DataBinding ColumnKey="SettlementId" TableKey="LRP_AdvancePayment" Required="true"/>
                            </Dict>
                            <Label Key="Lab_SettlementId" Caption="结算方" X="0" Y="1"/>
                            <DatePicker Key="HookDate" Caption="核销日期" BuddyKey="Lab_HookDate" X="4" Y="1" AsQuery="true">
                                <DataBinding ColumnKey="HookDate" TableKey="LRP_AdvancePayment" Required="true"/>
                                <Format/>
                            </DatePicker>
                            <Label Key="Lab_HookDate" Caption="核销日期" X="3" Y="1"/>
                            <Dict Key="CurrencyID" Caption="交易货币" BuddyKey="Lab_CurrencyID" X="1" Y="2" ItemKey="Currency">
                                <DataBinding ColumnKey="CurrencyId" TableKey="LRP_AdvancePayment"/>
                            </Dict>
                            <Label Key="Lab_CurrencyID" Caption="交易货币" X="0" Y="2"/>
                            <Dict Key="EmployeeID" Caption="业务员" BuddyKey="Lab_EmployeeID" X="4" Y="3" ItemKey="Operator" AsQuery="true">
                                <DataBinding ColumnKey="EmployeeID" TableKey="LRP_AdvancePayment"/>
                            </Dict>
                            <Label Key="Lab_EmployeeID" Caption="业务员" X="3" Y="3"/>
                            <NumberEditor Key="HookMoney" Caption="核销金额" BuddyKey="Lab_HookMoney" X="4" Y="2" Enable="false" Precision="18" Scale="6" AsQuery="true" ShowZero="true">
                                <DataBinding ColumnKey="HookMoney" TableKey="LRP_AdvancePayment" Required="true"/>
                            </NumberEditor>
                            <Label Key="Lab_HookMoney" Caption="核销金额" X="3" Y="2"/>
                            <NumberEditor Key="NativeHookMoney" Caption="本币核销金额" BuddyKey="Lab_NativeHookMoney" X="1" Y="3" Enable="false" Precision="18" Scale="6" ShowZero="true">
                                <DataBinding ColumnKey="NativeHookMoney" DefaultFormulaValue="HookMoney*Rate" TableKey="LRP_AdvancePayment" ValueDependency="HookMoney,Rate"/>
                            </NumberEditor>
                            <Label Key="Lab_NativeHookMoney" Caption="本币核销金额" X="0" Y="3"/>
                            <Dict Key="ExpenseId" Caption="费用名称" BuddyKey="Lab_ExpenseId" X="7" Y="1" ItemKey="LRP_Expense">
                                <DataBinding ColumnKey="ExpenseId" TableKey="LRP_AdvancePayment"/>
                            </Dict>
                            <Label Key="Lab_ExpenseId" Caption="费用名称" X="6" Y="1"/>
                            <NumberEditor Key="Rate" Caption="汇率" BuddyKey="Lab_Rate" X="7" Y="2" Precision="18" Scale="6" ShowZero="true">
                                <DataBinding ColumnKey="Rate" TableKey="LRP_AdvancePayment" DefaultValue="1"/>
                            </NumberEditor>
                            <Label Key="Lab_Rate" Caption="汇率" X="6" Y="2"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Key="second_head" Height="pref" Padding="10px" Caption="系统信息">
                            <Dict Key="CREATOR" Caption="创建人" BuddyKey="Lab_CREATOR" X="1" Y="0" ItemKey="Operator">
                                <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator();" TableKey="LRP_AdvancePayment"/>
                            </Dict>
                            <Label Key="Lab_CREATOR" Caption="创建人" X="0" Y="0"/>
                            <DatePicker Key="CREATETIME" Caption="创建时间" BuddyKey="Lab_CREATETIME" X="3" Y="0">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate();" TableKey="LRP_AdvancePayment"/>
                            </DatePicker>
                            <Label Key="Lab_CREATETIME" Caption="创建时间" X="2" Y="0"/>
                            <Dict Key="MODIFIER" Caption="修改人" BuddyKey="Lab_MODIFIER" X="1" Y="1" ItemKey="Operator">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator();" TableKey="LRP_AdvancePayment"/>
                            </Dict>
                            <Label Key="Lab_MODIFIER" Caption="修改人" X="0" Y="1"/>
                            <DatePicker Key="MODIFYTIME" Caption="修改时间" BuddyKey="Lab_MODIFYTIME" X="3" Y="1">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate();" TableKey="LRP_AdvancePayment"/>
                            </DatePicker>
                            <Label Key="Lab_MODIFYTIME" Caption="修改日期" X="2" Y="1"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="80px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="80px"/>
                                <ColumnDef Width="50%"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <TabPanel Height="100%" Key="DetailTab">
                        <Grid Key="Grid1" Caption="预付款信息" NewEmptyRow="false" CanInsert="false">
                            <GridColumnCollection>
                                <GridColumn Key="SrcOID1" Caption="SrcOID1" Visible="false" Width="80px"/>
                                <GridColumn Key="PaymentNo" Caption="付款单号" Width="150px"/>
                                <GridColumn Key="PaymentDate" Caption="付款日期" Width="150px"/>
                                <GridColumn Key="PaymentMoney" Caption="付款金额" Width="100px"/>
                                <GridColumn Key="QuoteInvoice" Caption="关联发票" Width="100px"/>
                            </GridColumnCollection>
                            <GridRowCollection>
                                <GridRow Key="row1" RowHeight="35" TableKey="LRP_Payment_Show">
                                    <GridCell Key="SrcOID1" Caption="SrcOID1">
                                        <DataBinding ColumnKey="SrcOID"/>
                                    </GridCell>
                                    <GridCell Key="PaymentNo" Caption="付款单号" CellType="TextEditor" Enable="false">
                                        <DataBinding ColumnKey="PaymentNo"/>
                                    </GridCell>
                                    <GridCell Key="PaymentDate" Caption="付款日期" CellType="DatePicker" Enable="false">
                                        <DataBinding ColumnKey="PaymentDate"/>
                                    </GridCell>
                                    <GridCell Key="PaymentMoney" Caption="付款金额" CellType="NumberEditor" Enable="false" Precision="18" Scale="6">
                                        <DataBinding ColumnKey="PaymentMoney"/>
                                    </GridCell>
                                    <GridCell Key="QuoteInvoice" Caption="关联发票" CellType="Button">
                                        <OnClick>
                                            <![CDATA[if(CompanyCode > 0 && SettlementId > 0){
	ShowModal('V_QuoteInvoicePay',
	{CompanyCode_para:{CompanyCode},
	SettlementId_para:{SettlementId},
	pFormKey:{GetFormKey()}
	});
}else{
	Confirm(LocaleString('ReceivableAnd','key3'), 'OK',{OK:{}});
}]]>
                                        </OnClick>
                                    </GridCell>
                                    <UICheckRuleCollection>
                                        <UICheckRule ErrorInfo="您的预付款明细存在重复引用">
                                            <![CDATA[!CheckDuplicate("SrcOID1")]]>
                                        </UICheckRule>
                                    </UICheckRuleCollection>
                                </GridRow>
                            </GridRowCollection>
                        </Grid>
                        <SubDetail BindingGridKey="Grid1" Caption="SubDetail1" Key="SubDetail1">
                            <Grid Key="Grid2" Caption="发票信息" NewEmptyRow="false" CanInsert="false">
                                <GridColumnCollection>
                                    <GridColumn Key="InvoiceOID" Caption="InvoiceOID" Visible="false" Width="80px"/>
                                    <GridColumn Key="InvoiceNo" Caption="发票编号" Width="150px"/>
                                    <GridColumn Key="InvoiceOriginNo" Caption="实体票号" Width="100px"/>
                                    <GridColumn Key="InvoiceType" Caption="发票类型" Width="100px"/>
                                    <GridColumn Key="InvoiceBillDate" Caption="发票日期" Width="150px"/>
                                    <GridColumn Key="InvoiceExpenseId" Caption="费用名称" Width="100px"/>
                                    <GridColumn Key="InvoiceSumMoney" Caption="发票金额" Width="100px"/>
                                    <GridColumn Key="InvoiceHookMoney" Caption="核销金额" Width="100px"/>
                                    <GridColumn Key="InvoiceUnSettleMoney" Caption="未核金额" Width="100px"/>
                                </GridColumnCollection>
                                <GridRowCollection>
                                    <GridRow Key="row1" RowHeight="35" TableKey="LRP_InvoicePayable_Show">
                                        <GridCell Key="InvoiceOID" Caption="InvoiceOID">
                                            <DataBinding ColumnKey="InvoiceOID"/>
                                        </GridCell>
                                        <GridCell Key="InvoiceNo" Caption="发票编号" CellType="TextEditor" Enable="false">
                                            <DataBinding ColumnKey="InvoiceNo"/>
                                        </GridCell>
                                        <GridCell Key="InvoiceOriginNo" Caption="实体票号" CellType="TextEditor" Enable="false">
                                            <DataBinding ColumnKey="InvoiceOriginNo"/>
                                        </GridCell>
                                        <GridCell Key="InvoiceType" Caption="发票类型" CellType="ComboBox" Enable="false">
                                            <DataBinding ColumnKey="InvoiceType"/>
                                            <Item Caption="蓝字发票" Key="0" Value="0"/>
                                            <Item Caption="红字发票" Key="1" Value="1"/>
                                        </GridCell>
                                        <GridCell Key="InvoiceBillDate" Caption="发票日期" CellType="DatePicker" Enable="false">
                                            <DataBinding ColumnKey="InvoiceBillDate"/>
                                        </GridCell>
                                        <GridCell Key="InvoiceExpenseId" Caption="费用名称" CellType="Dict" Enable="false" ItemKey="LRP_Expense">
                                            <DataBinding ColumnKey="InvoiceExpenseId"/>
                                        </GridCell>
                                        <GridCell Key="InvoiceSumMoney" Caption="发票金额" CellType="NumberEditor" Enable="false" Precision="18" Scale="6">
                                            <DataBinding ColumnKey="InvoiceSumMoney"/>
                                        </GridCell>
                                        <GridCell Key="InvoiceHookMoney" Caption="核销金额" CellType="NumberEditor" Enable="false" Precision="18" Scale="6" ShowZero="true">
                                            <DataBinding ColumnKey="InvoiceHookMoney"/>
                                        </GridCell>
                                        <GridCell Key="InvoiceUnSettleMoney" Caption="未核金额" CellType="NumberEditor" Enable="false" Precision="18" Scale="6" ShowZero="true">
                                            <DataBinding ColumnKey="InvoiceUnSettleMoney"/>
                                        </GridCell>
                                        <UICheckRuleCollection>
                                            <UICheckRule ErrorInfo="您的发票明细存在重复引用">
                                                <![CDATA[!CheckDuplicate("InvoiceOID")]]>
                                            </UICheckRule>
                                        </UICheckRuleCollection>
                                    </GridRow>
                                </GridRowCollection>
                            </Grid>
                        </SubDetail>
                    </TabPanel>
                    <SplitSize Size="200px"/>
                    <SplitSize Size="50%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
