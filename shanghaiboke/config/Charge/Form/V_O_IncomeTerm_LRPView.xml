<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_O_IncomeTerm_LRPView" Caption="其它收入条款序事簿" FormType="View" AbbrCaption="其它收入条款序事簿">
    <DataSource>
        <DataObject Key="V_O_IncomeTerm_LRPView" Caption="其它收入条款序事簿" PrimaryTableKey="LRP_O_IncomeTerm_H">
            <TableCollection>
                <Table Key="LRP_O_IncomeTerm_H" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="MapCount" DataType="Integer" DefaultValue="0"/>
                    <Column Key="No" Caption="条款号" DataType="Varchar" Length="100" SortType="Desc"/>
                    <Column Key="Name" Caption="条款名称" DataType="Varchar" Length="100"/>
                    <Column Key="IncomeId" Caption="收入名称id" DataType="Long"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="DataObjectKey" Caption="数据对象key" DataType="Varchar" Length="100"/>
                    <Column Key="NeedSummaryApportion" Caption="需要汇总分摊" DataType="Integer"/>
                    <Column Key="ApportionType" Caption="分摊方式" DataType="Varchar" Length="40"/>
                    <Column Key="Remark" Caption="备注" DataType="Varchar" Length="1000"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_O_IncomeTerm_LRP')]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirm" Caption="确认" RefKey="BatchConfirm"/>
        <Operation Key="BatchConfirm-R" Caption="撤销确认" RefKey="BatchConfirm-R"/>
        <Operation Key="BatchCancel" Caption="作废" RefKey="BatchCancel"/>
        <Operation Key="BatchCancel-R" Caption="撤销作废" RefKey="BatchCancel-R"/>
        <Operation Caption="删除" Key="BatchDelete">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm(LocaleString('CommonDef','key35'),'OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',100,')){
                        Confirm(LocaleString('CommonDef','key36'),'OK','OK:{}');
						return true;	
                }						
				Confirm(LocaleString('CommonDef','key37'),'YES_NO',{
				YES:{BatchDeleteData('LRP_O_IncomeTerm', 'LRP_O_IncomeTerm_H');LoadData();ShowData();
						},
				NO:{}});]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段" BottomPadding="5px">
                            <Label Key="Lab_No_C" Caption="条款号" X="0" Y="0"/>
                            <TextEditor Key="No_C" Caption="条款号" BuddyKey="Lab_No_C" X="1" Y="0" XSpan="3">
                                <Condition ColumnKey="No" TableKey="LRP_O_IncomeTerm_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_Name_C" Caption="条款名称" X="5" Y="0"/>
                            <TextEditor Key="Name_C" Caption="条款名称" BuddyKey="Lab_Name_C" X="6" Y="0" XSpan="3">
                                <Condition ColumnKey="Name" TableKey="LRP_O_IncomeTerm_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_IncomeId_C" Caption="收入名称" X="0" Y="1"/>
                            <Dict Key="IncomeId_C" Caption="收入名称" BuddyKey="Lab_IncomeId_C" X="1" Y="1" AllowMultiSelection="true" ItemKey="LRP_Income" XSpan="3">
                                <Condition ColumnKey="IncomeId" TableKey="LRP_O_IncomeTerm_H" CondSign="in"/>
                            </Dict>
                            <Label Key="Lab_Status_C" Caption="状态" X="5" Y="1"/>
                            <ComboBox Key="Status_C" Caption="状态" BuddyKey="Lab_Status_C" X="6" Y="1" XSpan="3">
                                <Condition ColumnKey="Status" TableKey="LRP_O_IncomeTerm_H" CondSign="="/>
                                <Item Caption="已输入" Key="prepared" Value="100"/>
                                <Item Caption="已确认" Key="confirmed" Value="200"/>
                                <Item Caption="已作废" Key="cancelled" Value="20"/>
                            </ComboBox>
                            <Label Key="Lab_DataObjectKey_C" Caption="数据对象" X="0" Y="2"/>
                            <ComboBox Key="DataObjectKey_C" Caption="数据对象" BuddyKey="Lab_DataObjectKey_C" SourceType="Formula" X="1" Y="2" XSpan="3">
                                <Condition ColumnKey="DataObjectKey" TableKey="LRP_O_IncomeTerm_H" CondSign="like"/>
                                <FormulaItems>
                                    <![CDATA[InvokeService("LRP_GetDataObjectKey", true, false);]]>
                                </FormulaItems>
                            </ComboBox>
                            <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <TextEditor Key="DataObjectKey" Caption="DataObjectKey" X="10" Y="2" Visible="false" Enable="false">
                                <DataBinding DefaultValue="LRP_O_IncomeTerm"/>
                            </TextEditor>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="80px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" TableKey="LRP_O_IncomeTerm_H">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_O_IncomeTerm_H" Visible="false" Width="68px"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" Enable="true" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="No" Caption="条款号" ColumnType="HyperLink" DataColumnKey="No">
                                <OnClick>
                                    <![CDATA[Open('V_O_IncomeTerm_LRP', OID);]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="Name" Caption="条款名称" ColumnType="TextEditor" DataColumnKey="Name"/>
                            <ListViewColumn Key="IncomeId" Caption="收入名称" ColumnType="Dict" DataColumnKey="IncomeId" ItemKey="LRP_Income"/>
                            <ListViewColumn Key="DataObjectKey_L" Caption="数据对象" ColumnType="ComboBox" DataColumnKey="DataObjectKey" SourceType="Formula">
                                <FormulaItems>
                                    <![CDATA[InvokeService("LRP_GetDataObjectKey", true, false);]]>
                                </FormulaItems>
                            </ListViewColumn>
                            <ListViewColumn Key="NeedSummaryApportion" Caption="汇总分摊" ColumnType="CheckBox" DataColumnKey="NeedSummaryApportion"/>
                            <ListViewColumn Key="ApportionType" Caption="分摊方式" ColumnType="ComboBox" DataColumnKey="ApportionType">
                                <Item Caption="按业务量分摊" Key="qty" Value="qty"/>
                                <Item Caption="按单据数分摊" Key="count" Value="count"/>
                            </ListViewColumn>
                            <ListViewColumn Key="Remark" Caption="备注" ColumnType="TextEditor" DataColumnKey="Remark"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_O_IncomeTerm_LRP', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="120px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
