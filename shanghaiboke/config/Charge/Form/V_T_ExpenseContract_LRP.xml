<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_T_ExpenseContract_LRP" FormType="Entity" Caption="承运商费用合约" ViewKey="V_T_ExpenseContract_LRPView">
    <DataSource RefObjectKey="LRP_T_ExpenseContract"/>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Visible="ReadOnly()">
            <Action>
                <![CDATA[New('V_T_ExpenseTerm', 'self');]]>
            </Action>
        </Operation>
        <Operation Key="CopyNew" Caption="复制新增" RefKey="CopyNew" ShortCuts="Ctrl+E"/>
        <Operation Key="Edit" Caption="编辑" Visible="ReadOnly()" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[
				var d1 = GetValue("EffectiveDate");
				var d2 = GetValue("ExpireDate");
				if (d1 > d2){
					//生效日期不能大于截止日期
					Confirm(LocaleString('CHshow','chkey13'),'OK','OK:{}');
					return true;
				}
				if(GetRowCount('Grid0', false)==0){ 
					//明细不可为空
					 Confirm(LocaleString('CommonDef','key1'), 'OK','OK:{}');
					 return true;
				}
				SaveData(); UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="Cancel" Caption="取消" Visible="!ReadOnly()" RefKey="Cancel"/>
        <Operation Key="Confirm" Caption="确认" Visible="ReadOnly()" RefKey="Confirm"/>
        <Operation Key="Confirm-R" Caption="撤销确认" Visible="ReadOnly();" RefKey="Confirm-R"/>
        <Operation Key="ToCancel" Caption="作废" Visible="ReadOnly()" RefKey="ToCancel"/>
        <Operation Key="ToCancel-R" Caption="撤销作废" Visible="ReadOnly()" RefKey="ToCancel-R"/>
        <Operation Key="Delete" Caption="删除" Visible="ReadOnly()" RefKey="Delete"/>
        <Operation Key="Close" Caption="关闭界面" Visible="ReadOnly()" RefKey="Close"/>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <QueryCollection>
        <Query Key="TermByExpenseId" Description="根据费用名称过滤条款">
            <Statement>
                <![CDATA[select OID, Name from LRP_T_ExpenseTerm_H where status = 200 and ExpenseId= ?]]>
            </Statement>
            <ParameterCollection>
                <Parameter DataType="Long"/>
            </ParameterCollection>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <SplitPanel Key="SplitPanel1" Orientation="Vertical" Caption="SplitPanel1">
                <ToolBar Key="main_toolbar" Height="pref" Caption="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <FlexFlowLayoutPanel Key="main" Caption="根面板">
                    <TabPanel Caption="TabPanel1" Height="pref" Key="TabPanel1">
                        <GridLayoutPanel Key="first_head" Padding="10px" Height="pref" Caption="基本信息">
                            <TextEditor Key="No" Caption="合约号" BuddyKey="Lab_No" X="1" Y="0" Enable="false" AsQuery="true">
                                <DataBinding ColumnKey="No" TableKey="LRP_T_ExpenseContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_No" Caption="合约号" X="0" Y="0"/>
                            <TextEditor Key="Name" Caption="合约名称" BuddyKey="Lab_Name" X="4" Y="0" Enable="Status==100" AsQuery="true">
                                <DataBinding ColumnKey="Name" TableKey="LRP_T_ExpenseContract_H" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_Name" Caption="合约名称" X="3" Y="0"/>
                            <TextEditor Key="CarrierNo" Caption="承运商合约号" BuddyKey="Lab_CarrierNo" X="7" Y="0" Enable="Status==100">
                                <DataBinding ColumnKey="CarrierNo" TableKey="LRP_T_ExpenseContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_CarrierNo" Caption="承运商合约号" X="6" Y="0"/>
                            <Dict Key="CarrierId" Caption="承运商" BuddyKey="Lab_CarrierId" X="1" Y="1" Enable="Status==100" ItemKey="LRP_Carrier" AsQuery="true">
                                <DataBinding ColumnKey="CarrierId" TableKey="LRP_T_ExpenseContract_H" Required="true">
                                    <ValueChanged>
                                        <![CDATA[//选择承运商后将结算方赋值到结算方字段中
													var CarrierId = GetValue("CarrierId");
													if (CarrierId == 0){
														SetValue("SettlementId",0);
													}else {
														var sId = GetDictValue("LRP_Carrier", CarrierId, "VendorId");
														SetValue("SettlementId", sId);
													}
													]]>
                                    </ValueChanged>
                                </DataBinding>
                            </Dict>
                            <Label Key="Lab_CarrierId" Caption="承运商" X="0" Y="1"/>
                            <Dict Key="SettlementId" Caption="结算方" BuddyKey="Lab_SettlementId" X="4" Y="1" Enable="false" ItemKey="Vendor" AsQuery="true">
                                <DataBinding ColumnKey="SettlementId" TableKey="LRP_T_ExpenseContract_H" Required="true"/>
                            </Dict>
                            <Label Key="Lab_SettlementId" Caption="结算方" X="3" Y="1"/>
                            <Dict Key="DispatchOrgId" Caption="调度组织" BuddyKey="Lab_DispatchOrgId" X="7" Y="1" Enable="Status==100" ItemKey="LRP_DispatchOrg" AsQuery="true">
                                <DataBinding ColumnKey="DispatchOrgId" TableKey="LRP_T_ExpenseContract_H" Required="true"/>
                            </Dict>
                            <Label Key="Lab_DispatchOrgId" Caption="调度组织" X="6" Y="1"/>
                            <DatePicker Key="EffectiveDate" Caption="生效日期" BuddyKey="Lab_EffectiveDate" X="1" Y="2" Enable="Status==100" OnlyDate="true">
                                <DataBinding ColumnKey="EffectiveDate" TableKey="LRP_T_ExpenseContract_H" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_EffectiveDate" Caption="生效日期" X="0" Y="2"/>
                            <DatePicker Key="ExpireDate" Caption="截止日期" BuddyKey="Lab_ExpireDate" X="4" Y="2" Enable="Status==100" OnlyDate="true">
                                <DataBinding ColumnKey="ExpireDate" TableKey="LRP_T_ExpenseContract_H" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_ExpireDate" Caption="截止日期" X="3" Y="2"/>
                            <ComboBox Key="Status" Caption="状态" BuddyKey="Lab_Status" X="7" Y="2" SourceType="Status" Enable="false" AsQuery="true">
                                <DataBinding ColumnKey="Status" TableKey="LRP_T_ExpenseContract_H" DefaultValue="100"/>
                            </ComboBox>
                            <Label Key="Lab_Status" Caption="状态" X="6" Y="2"/>
                            <TextEditor Key="Remark" Caption="备注" BuddyKey="Lab_Remark" X="1" Y="3" Enable="Status==100" XSpan="7" MaxLength="1000">
                                <DataBinding ColumnKey="Remark" TableKey="LRP_T_ExpenseContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_Remark" Caption="备注" X="0" Y="3"/>
                            <RowDefCollection RowGap="8" RowHeight="30">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Key="SystemInfo" Padding="10px" Caption="系统信息">
                            <Dict Key="CREATOR" Caption="创建人" BuddyKey="Lab_CREATOR" X="1" Y="0" Enable="false" ItemKey="Operator">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_T_ExpenseContract_H"/>
                            </Dict>
                            <Label Key="Lab_CREATOR" Caption="创建人" X="0" Y="0"/>
                            <DatePicker Key="CREATETIME" Caption="创建时间" BuddyKey="Lab_CREATETIME" X="4" Y="0" Enable="false">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_T_ExpenseContract_H"/>
                            </DatePicker>
                            <Label Key="Lab_CREATETIME" Caption="创建时间" X="3" Y="0"/>
                            <Dict Key="MODIFIER" Caption="修改人" BuddyKey="Lab_MODIFIER" X="1" Y="1" Enable="false" ItemKey="Operator">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_T_ExpenseContract_H"/>
                            </Dict>
                            <Label Key="Lab_MODIFIER" Caption="修改人" X="0" Y="1"/>
                            <DatePicker Key="MODIFYTIME" Caption="修改时间" BuddyKey="Lab_MODIFYTIME" X="4" Y="1" Enable="false">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_T_ExpenseContract_H"/>
                            </DatePicker>
                            <Label Key="Lab_MODIFYTIME" Caption="修改时间" X="3" Y="1"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                </FlexFlowLayoutPanel>
                <Grid Key="Grid0" Caption="Grid0">
                    <GridColumnCollection>
                        <GridColumn Key="column1" Caption="选择" Width="80px" Sortable="true"/>
                        <GridColumn Key="ExpenseId" Caption="费用名称" Width="80px" Sortable="true"/>
                        <GridColumn Key="TermId" Caption="条款" Width="80px" Sortable="true"/>
                    </GridColumnCollection>
                    <GridRowCollection>
                        <GridRow Key="row1" RowHeight="35" TableKey="LRP_T_ExpenseContract_L">
                            <GridCell Key="select" Caption="选择" CellType="CheckBox" IsSelect="true"/>
                            <GridCell Key="ExpenseId" Caption="费用名称" CellType="Dict" Enable="Status==100" ItemKey="LRP_Expense">
                                <DataBinding ColumnKey="ExpenseId" Required="true"/>
                            </GridCell>
                            <GridCell Key="TermId" Caption="条款" CellType="ComboBox" Enable="Status==100" SourceType="Formula" ItemsDependency="ExpenseId">
                                <DataBinding ColumnKey="TermId" Required="true"/>
                                <FormulaItems>
                                    <![CDATA[DBNamedQuery("TermByExpenseId", ExpenseId);]]>
                                </FormulaItems>
                            </GridCell>
                        </GridRow>
                    </GridRowCollection>
                </Grid>
                <SplitSize Size="40px"/>
                <SplitSize Size="200px"/>
                <SplitSize Size="100%"/>
            </SplitPanel>
        </Block>
    </Body>
</Form>
