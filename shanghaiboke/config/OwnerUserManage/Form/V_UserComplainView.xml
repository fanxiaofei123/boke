<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_UserComplainView" Caption="客户投诉视图" FormType="View" AbbrCaption="客户投诉视图">
    <DataSource>
        <DataObject Key="V_UserComplainView" Caption="客户投诉视图" PrimaryTableKey="LRP_UserComplain">
            <TableCollection>
                <Table Key="LRP_UserComplain" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="NO" Caption="单号" DataType="Varchar"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="ComplainType" Caption="投诉类型" DataType="Varchar" Length="40"/>
                    <Column Key="OwnerUserName" Caption="投诉用户名" DataType="Varchar" Length="40"/>
                    <Column Key="RefNo" Caption="关联单号" DataType="Varchar" Length="100"/>
                    <Column Key="ComplainDatetime" Caption="投诉日期时间" DataType="DateTime"/>
                    <Column Key="OwnerId" Caption="货主" DataType="Long"/>
                    <Column Key="OwnerUserId" Caption="投诉用户ID" DataType="Long"/>
                    <Column Key="Mobile" Caption="手机号" DataType="Varchar"/>
                    <Column Key="Receiver" Caption="受理人" DataType="Varchar"/>
                    <Column Key="ReceiveDatetime" Caption="受理日期时间" DataType="DateTime"/>
                    <Column Key="Complaints" Caption="投诉内容" DataType="Varchar"/>
                    <Column Key="Results" Caption="处理结果" DataType="Varchar"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_UserComplain')]]>
            </Action>
        </Operation>
        <Operation Key="Delete" Caption="删除">
            <Action>
                <![CDATA[if(CheckListNoSelect()){
	Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
	return true;
}
if(!CheckListSelectStatus(',100,')){
       Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
	return true;	
}						
Confirm('确定要将选中的记录进行删除吗？','YES_NO',{
	YES:{BatchDeleteData('LRP_UserComplain', 'LRP_UserComplain');LoadData();ShowData();},
	NO:{}});]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                        <Label Key="L_TextEditor1" Caption="投诉单号" X="0" Y="0"/>
                        <TextEditor Key="TextEditor1" Caption="投诉单号" BuddyKey="L_TextEditor1" X="1" Y="0" XSpan="3">
                            <Condition ColumnKey="NO" TableKey="LRP_UserComplain" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_Dict1" Caption="货主" X="5" Y="0"/>
                        <Dict Key="Dict1" Caption="货主" BuddyKey="L_Dict1" X="6" Y="0" AllowMultiSelection="true" ItemKey="LRP_Owner" XSpan="3">
                            <Condition ColumnKey="OwnerId" TableKey="LRP_UserComplain" CondSign="in"/>
                        </Dict>
                        <Label Key="L_TextEditor2" Caption="投诉类型" X="5" Y="1"/>
                        <TextEditor Key="TextEditor2" Caption="投诉类型" BuddyKey="L_TextEditor2" X="6" Y="1" XSpan="3">
                            <Condition ColumnKey="ComplainType" TableKey="LRP_UserComplain" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_TextEditor3" Caption="用户名称" X="0" Y="1"/>
                        <TextEditor Key="TextEditor3" Caption="用户名称" BuddyKey="L_TextEditor3" X="1" Y="1" XSpan="3">
                            <Condition ColumnKey="OwnerUserName" TableKey="LRP_UserComplain" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_TextEditor5" Caption="关联单号" X="0" Y="2"/>
                        <TextEditor Key="TextEditor5" Caption="关联单号" BuddyKey="L_TextEditor5" X="1" Y="2" XSpan="3">
                            <Condition ColumnKey="RefNo" TableKey="LRP_UserComplain" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_DatePicker1" Caption="投诉日期时间" X="0" Y="3"/>
                        <DatePicker Key="DatePicker1" Caption="投诉日期时间" BuddyKey="L_DatePicker1" X="1" Y="3" XSpan="3">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                            <Format/>
                            <Condition ColumnKey="ComplainDatetime" TableKey="LRP_UserComplain" CondSign="between" Group="DatePicker1" GroupHead="true"/>
                        </DatePicker>
                        <Label Key="L_DatePicker1_Comp2" Caption="到" X="5" Y="3"/>
                        <DatePicker Key="DatePicker1_Comp2" Caption="到" BuddyKey="L_DatePicker1_Comp2" X="6" Y="3" XSpan="3">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                            <Format/>
                            <Condition ColumnKey="ComplainDatetime" TableKey="LRP_UserComplain" CondSign="between" Group="DatePicker1" GroupTail="true"/>
                        </DatePicker>
                        <ComboBox Key="StatusV" Caption="状态" BuddyKey="Lab_StatusV" X="6" Y="2" XSpan="3">
                            <Condition ColumnKey="Status" TableKey="LRP_UserComplain" CondSign="like"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                            <Item Caption="处理中" Key="handled" Value="500"/>
                            <Item Caption="已完成" Key="finished" Value="900"/>
                        </ComboBox>
                        <Label Key="Lab_StatusV" Caption="状态" X="5" Y="2"/>
                        <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                            <OnClick>
                                <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                            </OnClick>
                        </Button>
                        <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                            <OnClick>
                                <![CDATA[
								ResetCondition();	
								]]>
                            </OnClick>
                        </Button>
                        <RowDefCollection RowHeight="30" RowGap="8">
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Height="pref" Key="ListView0" PageLoadType="DB" TableKey="LRP_UserComplain" CanDelete="false" CanInsert="false" CanShift="false">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_UserComplain" Visible="false" Width="68px"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" Width="80px" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="TextEditor1_LV" Caption="投诉单号" ColumnType="HyperLink" DataColumnKey="NO" Width="170px">
                                <OnClick>
                                    <![CDATA[Open('V_UserComplain', OID);]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="Dict1_LV" Caption="货主" ColumnType="Dict" DataColumnKey="OwnerId" ItemKey="LRP_Owner"/>
                            <ListViewColumn Key="TextEditor3_LV" Caption="用户名称" ColumnType="TextEditor" DataColumnKey="OwnerUserName"/>
                            <ListViewColumn Key="column1" Caption="手机号" ColumnType="TextEditor" DataColumnKey="Mobile"/>
                            <ListViewColumn Key="TextEditor5_LV" Caption="关联单号" ColumnType="TextEditor" DataColumnKey="RefNo"/>
                            <ListViewColumn Key="TextEditor2_LV" Caption="投诉类型" ColumnType="TextEditor" DataColumnKey="ComplainType"/>
                            <ListViewColumn Key="DatePicker1_LV" Caption="投诉日期时间" ColumnType="DatePicker" DataColumnKey="ComplainDatetime" Width="150px"/>
                            <ListViewColumn Key="column2" Caption="受理人" DataColumnKey="Receiver"/>
                            <ListViewColumn Key="column3" Caption="受理日期时间" DataColumnKey="ReceiveDatetime" Width="150px"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_UserComplain', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="155px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
    <NavigationBar Style="Custom"/>
</Form>
