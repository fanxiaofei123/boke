<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Caption="用户消息" FormType="Entity" Key="V_OwnerUserMessage">
    <DataSource RefObjectKey="LRP_OwnerUserMessage"/>
    <OperationCollection>
        <Operation Caption="新增" Key="New" Visible="ReadOnly()">
            <Action>
                <![CDATA[
				New('V_OwnerUserMessage');
			]]>
            </Action>
        </Operation>
        <Operation Caption="复制新增" Key="CopyNew" RefKey="CopyNew" ShortCuts="Ctrl+E"/>
        <Operation Caption="保存" Key="Save" ShortCuts="Ctrl+S" Visible="!ReadOnly()&amp;&amp;Status==100">
            <Action>
                <![CDATA[
				if(OwnerUserId<=0){		
					Confirm('货主用户不可为空','OK','OK:{}');
					return true;
				}			
				
				SaveData();
				UpdateView();
			]]>
            </Action>
        </Operation>
        <Operation Caption="编辑" Key="Edit" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Caption="删除" Key="Delete" RefKey="Delete" ShortCuts="Ctrl+D"/>
        <Operation Caption="取消" Key="Cancel" RefKey="Cancel"/>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <ToolBar Height="pref" Key="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="main_split" Orientation="Vertical">
                    <TabPanel Caption="TabPanel0" Key="TabPanel0">
                        <GridLayoutPanel Caption="基本信息" Key="BasicTab" Padding="10px">
                            <TextEditor Caption="消息编号" Enable="false" Key="No" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="No" TableKey="LRP_OwnerUserMessage_H"/>
                            </TextEditor>
                            <Label Caption="消息编号" Key="L_No" X="0" Y="0"/>
                            <Dict Caption="货主用户" ItemKey="LRP_OwnerUser" Key="OwnerUserId" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="OwnerUserId" TableKey="LRP_OwnerUserMessage_H" Required="true"/>
                            </Dict>
                            <Label Caption="货主用户" Key="L_OwnerUserId" X="4" Y="0"/>
                            <TextEditor Caption="相关单号" Key="RefNo" X="9" XSpan="2" Y="0">
                                <DataBinding ColumnKey="RefNo" TableKey="LRP_OwnerUserMessage_H"/>
                            </TextEditor>
                            <Label Caption="相关单号" Key="L_RefNo" X="8" Y="0"/>
                            
							<ComboBox Caption="阅读状态" Key="IsRead" Enable="!ReadOnly()" X="1" XSpan="2" Y="1">
                                <DataBinding ColumnKey="IsRead" TableKey="LRP_OwnerUserMessage_H" DefaultValue="0"/>
                                <Item Caption="未阅" Key="0" Value="0"/>
                                <Item Caption="已阅" Key="1" Value="1"/>
                            </ComboBox>
							<Label Caption="阅读状态" Key="L_IsRead" X="0" Y="1"/>
                            <ComboBox Caption="状态" Enable="false" Key="Status" SourceType="Status" X="5" XSpan="2" Y="1">
                                <DataBinding ColumnKey="Status" TableKey="LRP_OwnerUserMessage_H" DefaultValue="100"/>
                            </ComboBox>
                            <Label Caption="状态" Key="L_Status" X="4" Y="1"/>						
                            
                            <TextEditor BuddyKey="Lab_Message" Caption="内容" Enable="!ReadOnly()" Key="Message" X="1" XSpan="9" Y="2">
                                <DataBinding ColumnKey="Message" TableKey="LRP_OwnerUserMessage_H" Required="true"/>
                            </TextEditor>
                            <Label Caption="内容" Key="Lab_Message" X="0" Y="2"/>	
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="50px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="50px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>                        
                        <GridLayoutPanel Caption="系统信息" Height="pref" Key="SystemInfo" Padding="10px">
                            <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                            <Dict BuddyKey="L_CREATOR" Caption="创建人" Enable="false" ItemKey="Operator" Key="CREATOR" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_OwnerUserMessage_H"/>
                            </Dict>
                            <DatePicker Caption="修改时间" Enable="false" Key="MODIFYTIME" X="5" XSpan="2" Y="1">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_OwnerUserMessage_H"/>
                            </DatePicker>
                            <Label Caption="修改时间" Key="L_MODIFYTIME" X="4" Y="1"/>
                            <DatePicker Caption="创建时间" Enable="false" Key="CREATETIME" X="1" XSpan="2" Y="1">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_OwnerUserMessage_H"/>
                            </DatePicker>
                            <Label Caption="创建时间" Key="L_CREATETIME" X="0" Y="1"/>
                            <Dict Caption="修改人" Enable="false" ItemKey="Operator" Key="MODIFIER" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_OwnerUserMessage_H"/>
                            </Dict>
                            <Label Caption="修改人" Key="L_MODIFIER" X="4" Y="0"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <SplitSize Size="260px"/>
                    <SplitSize Size="222px"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
