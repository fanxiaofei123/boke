<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="WarehouseKeeperModifyLogo" FormType="Entity" Authenticate="false">
    <DataSource RefObjectKey="LRP_WarehouseKeeper"/>
    <OperationCollection>
        <Operation Key="Task" Caption="拍照" Visible="True">
            <Action>
                <![CDATA[TakePhoto('logo',true,'WarehouseKeeperModifyLogo',GetOperator(),true);
var uri = GetValue('logo');
if(uri!=null){
    SetValue('logo', uri);
}
				]]>
            </Action>
        </Operation>
        <Operation Key="Choose" Caption="我的相册" Visible="True">
            <Action>
                <![CDATA[SelectPhoto('logo',true,'WarehouseKeeperModifyLogo',GetOperator(),true);
var uri = GetValue('logo');
if(uri!=null){
    SetValue('logo', uri);
}				]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="root">
                <GridLayoutPanel Key="opt_panel" X="0" Y="1">
                    <Format BackColor="#f1f3f8"/>
                    <Button Key="order" Caption="确认" Enable="True" Height="auto" MaxSize="200" BorderStyle="none" X="0" Y="0" XSpan="3">
                        <Format BackColor="#f14c52" ForeColor="#ffffff">
                            <Font Size="20"/>
                        </Format>
                        <OnClick>
                            <![CDATA[
								SaveData();SendSignal('UserInfoChanged');Close();
								]]>
                        </OnClick>
                    </Button>
                    <RowDefCollection>
                        <RowDef Height="45px"/>
                    </RowDefCollection>
                    <ColumnDefCollection>
                        <ColumnDef Width="17px"/>
                        <ColumnDef Width="100%"/>
                        <ColumnDef Width="20px"/>
                    </ColumnDefCollection>
                </GridLayoutPanel>
                <GridLayoutPanel Key="GridLayoutPanel1" Caption="GridLayoutPanel1" X="0" Y="0">
                    <Format BackColor="#f1f3f8"/>
                    <!--
                    <Image Key="logo" Caption="头像" X="0" Y="0" PromptImage="logo.jpg" Height="pref" ImageScaleType="Fit_XY" Width="pref">
                        <DataBinding TableKey="LRP_WarehouseKeeper" ColumnKey="AvatarUrl"/>
                    </Image>-->
                    <Image Key="logo" Caption="我的头像" Stretch="true" ImageScaleType="Fit_XY" PromptImage="5.png" X="1" Y="1" BorderStyle="none">
                        <DataBinding TableKey="LRP_WarehouseKeeper" ColumnKey="AvatarUrl"/>
                        <Format BackColor="#f1f3f8"/>
                    </Image>
                    <RowDefCollection>
                        <RowDef Height="10%"/>
                        <RowDef Height="80%"/>
                        <RowDef Height="10%"/>
                    </RowDefCollection>
                    <ColumnDefCollection>
                        <ColumnDef Width="5%"/>
                        <ColumnDef Width="90%"/>
                        <ColumnDef Width="5%"/>
                    </ColumnDefCollection>
                </GridLayoutPanel>
                <RowDefCollection>
                    <RowDef Height="100%"/>
                    <RowDef Height="45px"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
        <ViewCollection>
            <View Key="All"/>
        </ViewCollection>
    </Body>
    <OnLoad>
        <![CDATA[LoadData()]]>
    </OnLoad>
    <NavigationBar Style="Custom">
        <RightButton>
            <![CDATA[PopMenu('', '', '')]]>
        </RightButton>
    </NavigationBar>
</Form>
