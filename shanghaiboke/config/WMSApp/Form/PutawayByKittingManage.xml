    <DataSource>
        <DataObject Key="LRP_PutawayByKittingManage" Caption="按加工区库存上架" PrimaryTableKey="LRP_Putaway_H">
            <TableCollection>
                <Table Key="LRP_Putaway_H" Caption="查找通知单" TableMode="Detail" SourceType="Query">
                    <Column Caption="对象标识" DataType="Long" Key="OID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="创建人" DataType="Long" Key="CREATOR"/>
                    <Column Caption="通知单号" DataType="Varchar" Key="No" Length="100"/>
                    <Column Caption="仓储中心id" DataType="Long" Key="WarehouseCenterId"/>
                    <Column Caption="货主id" DataType="Long" Key="OwnerId"/>
                    <Column Key="OwnerCode" Caption="货主代码" DataType="Varchar"/>
                    <Column Key="OwnerName" Caption="货主名称" DataType="Varchar" Length="200"/>
                    <Column Key="SumQty" Caption="加工区总量" DataType="Numeric" Precision="16" Scale="2"/>
                    <Column Key="IsShow" Caption="IsShow" DataType="Varchar"/>
                    <ParameterCollection>
                        <Parameter Formula="GetPara('WarehouseCenterId')" DataType="Long"/>
                    </ParameterCollection>
                    <Statement>
                        <![CDATA[SELECT * FROM(
 select 
    h.OID,
    h.Status,
    h.CREATETIME,
    h.No,
    h.WarehouseCenterId,
    h.OwnerId,
    Sum(q.ONHANDQTY) SumQty,
    o.Code as OwnerCode,
    o.Name as OwnerName
from LRP_KittingNotice_H h 
left join LRP_KittingNoticeProduct_L l
on h.OID = l.SOID
left join LRP_Quant q
on l.OID = q.REFLineOID
left join LRP_Owner o 
on o.oid = h.OwnerId
GROUP BY h.NO, h.OID, h.Status, h.CREATETIME, h.WarehouseCenterId, 
h.OwnerId, o.Name, o.Code)a
where a.WarehouseCenterId = ? and a.Status = 500 and SumQty > 0]]>
                    </Statement>
                </Table>
                <Table Key="LRP_Putaway_HHis" Caption="上架历史" TableMode="Detail" SourceType="Query">
                    <Column Caption="对象标识" DataType="Long" Key="OID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="事务单号" DataType="Varchar" Key="No" Length="100"/>
                    <Column Caption="事务类型" DataType="Long" Key="TxTypeId"/>
                    <Column Caption="事务代码" DataType="Varchar" Key="TxTypeCode" Length="10"/>
                    <Column Caption="货主单号" DataType="Varchar" Key="OwnerNo" Length="100"/>
                    <Column Caption="通知单号" DataType="Varchar" Key="NoticeNo" Length="100"/>
                    <Column Caption="关联单号" DataType="Varchar" Key="RefNo" Length="100"/>
                    <Column Caption="仓储中心id" DataType="Long" Key="WarehouseCenterId"/>
                    <Column Caption="货主id" DataType="Long" Key="OwnerId"/>
                    <Column Key="OwnerName" Caption="货主名称" DataType="Varchar" Length="200"/>
                    <Column Caption="事务日期时间" DataType="DateTime" Key="TxDateTime"/>
                    <Column Caption="仓管员id" DataType="Long" Key="WarehouseKeeperId"/>
                    <Column Caption="备注" DataType="Varchar" Expand="true" Key="Remark" Length="1000"/>
                    <ParameterCollection>
                        <Parameter Formula="GetUserOperator()" DataType="Long"/>
                        <Parameter Formula="GetPara('WarehouseCenterId')" DataType="Long"/>
                    </ParameterCollection>
                    <Statement>
                        <![CDATA[
select 
    h.OID,
	h.Status,
	h.CREATETIME,
    h.No,
    h.TxTypeId,
    h.TxTypeCode,
    h.OwnerNo,
    h.NoticeNo,
    h.RefNo,
    h.WarehouseCenterId,
	h.OwnerId,
	o.Name as OwnerName,
    h.TxDateTime,
	h.WarehouseKeeperId,
	h.Remark
from LRP_WMTx_H h join LRP_Owner o on o.oid = h.OwnerId
    where
        h.TxTypeCode ='114' and h.WarehouseKeeperId = ? and h.WarehouseCenterId = ? and h.status = 900 order by h.TxDateTime desc
	
    ]]>
                    </Statement>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
