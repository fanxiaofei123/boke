                                </TextEditor>
                                <Label Key="Qty_lbl2" Caption="数量：" LeftPadding="5px" X="1" Y="1">
                                    <Format>
                                        <Font Size="13"/>
                                    </Format>
                                </Label>
                                <NumberEditor Key="Qty2" Precision="18" Scale="3" X="2" Y="1" Caption="上架量" Enable="false" Height="pref" XSpan="2">
                                    <DataBinding ColumnKey="Qty"/>
