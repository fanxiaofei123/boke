                                        <Font Size="13"/>
                                    </Format>
                                </Label>
                                <TextEditor Key="BatchNo2" Caption="无批号" Enable="false" LeftPadding="5px" X="6" Y="0" XSpan="2">
                                    <DataBinding ColumnKey="BatchNo"/>
