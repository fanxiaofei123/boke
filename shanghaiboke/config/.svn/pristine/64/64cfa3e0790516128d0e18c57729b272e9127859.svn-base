<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_OwnerAccountRecords" Caption="货主账户流水记录" FormType="Entity" Platform="" ViewKey="V_OwnerAccountRecordsView">
    <DataSource RefObjectKey="LRP_OwnerAccountRecords"/>
    <OperationCollection>
        <Operation Caption="新增" Key="New" Visible="ReadOnly()">
            <Action>
                <![CDATA[New('V_OwnerAccountRecords')
			]]>
            </Action>
        </Operation>
        <Operation Caption="复制新增" Key="CopyNew" RefKey="CopyNew" ShortCuts="Ctrl+E"/>
        <Operation Caption="保存" Key="Save" ShortCuts="Ctrl+S" Visible="!ReadOnly()&amp;&amp;Status==100">
            <Action>
                <![CDATA[
				if(TxMoney <= 0 && FreezeMoney <= 0){		
					Confirm('本次调整金额或冻结金额都应大于等于0,且至少应有一个大于0','OK','OK:{}');
					return 0;
				}			
				
				SaveData();
				UpdateView();
			]]>
            </Action>
        </Operation>
        <Operation Caption="编辑" Key="Edit" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Caption="删除" Key="Delete" RefKey="Delete" ShortCuts="Ctrl+D"/>
        <Operation Caption="取消" Key="Cancel" RefKey="Cancel"/>
        <Operation Key="Confirm" Caption="确认" Visible="ReadOnly()&amp;&amp;Status==StatusValue('prepared')" RefKey="Confirm"/>
        <Operation Key="Confirm-R" Caption="撤销确认" Visible="ReadOnly()&amp;&amp;Status==StatusValue('confirmed')">
            <Action>
                <![CDATA[Status=StatusValue('prepared');
if(AfterMoney > 0 || BeforeMoney > 0){
    SetValue('AfterMoney', 0);
    SetValue('BeforeMoney', 0);
}
SaveData();UpdateView();]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[Status=StatusValue('confirmed');]]>
            </ExceptionHandler>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="main_toolbar" Height="pref">
                    <ToolBarItemCollection/>
                </ToolBar>
                <TabPanel Caption="TabPanel1" Key="TabPanel1" Height="pref">
                    <GridLayoutPanel Key="BasicTab" Padding="10px" Caption="基本信息" BottomPadding="5px">
                        <TextEditor Key="No" Caption="流水号" BuddyKey="Lab_No" X="1" Y="0" Enable="false" AsQuery="true">
                            <DataBinding ColumnKey="No" TableKey="LRP_OwnerAccountRecords"/>
                        </TextEditor>
                        <Label Key="Lab_No" Caption="流水号" X="0" Y="0"/>
                        <TextEditor Key="ExtraMessage" Caption="附加信息" BuddyKey="Lab_ExtraMessage" X="1" Y="4" AsQuery="true" XSpan="7">
                            <DataBinding ColumnKey="ExtraMessage" TableKey="LRP_OwnerAccountRecords"/>
                        </TextEditor>
                        <Label Key="Lab_ExtraMessage" Caption="附加信息" X="0" Y="4"/>
                        <ComboBox Key="Status" Caption="状态" BuddyKey="Lab_Status" X="7" Y="3" SourceType="Status" Enable="false" AsQuery="true">
                            <DataBinding ColumnKey="Status" TableKey="LRP_OwnerAccountRecords" DefaultValue="100" Required="true"/>
                        </ComboBox>
                        <Label Key="Lab_Status" Caption="状态" X="6" Y="3"/>
                        <Dict Key="OwnerId" Caption="货主" BuddyKey="Lab_OwnerId" X="4" Y="0" AsQuery="true" ItemKey="LRP_Owner">
                            <DataBinding ColumnKey="OwnerId" TableKey="LRP_OwnerAccountRecords" Required="true"/>
                        </Dict>
                        <Label Key="Lab_OwnerId" Caption="货主" X="3" Y="0"/>
                        <Dict Key="OwnerUserId" Caption="货主用户" BuddyKey="Lab_OwnerUserId" X="7" Y="0" AsQuery="true" ItemKey="LRP_OwnerUser">
                            <DataBinding ColumnKey="OwnerUserId" TableKey="LRP_OwnerAccountRecords"/>
                        </Dict>
                        <Label Key="Lab_OwnerUserId" Caption="货主用户" X="6" Y="0"/>
                        <ComboBox Key="TxType" Caption="收支类型" BuddyKey="Lab_TxType" X="4" Y="1" AsQuery="true">
                            <DataBinding ColumnKey="TxType" TableKey="LRP_OwnerAccountRecords" Required="true"/>
                            <Item Caption="收入" Key="0" Value="0"/>
                            <Item Caption="支出" Key="1" Value="1"/>
                        </ComboBox>
                        <Label Key="Lab_TxType" Caption="收支类型" X="3" Y="1"/>
                        <TextEditor Key="Currency" Caption="币种" BuddyKey="Lab_Currency" X="1" Y="1" Enable="false" AsQuery="true">
                            <DataBinding ColumnKey="Currency" TableKey="LRP_OwnerAccountRecords" DefaultValue="CNY"/>
                        </TextEditor>
                        <Label Key="Lab_Currency" Caption="币种" X="0" Y="1"/>
                        <TextEditor Key="Action" Caption="操作" BuddyKey="Lab_Action" X="7" Y="1" AsQuery="true">
                            <DataBinding ColumnKey="Action" TableKey="LRP_OwnerAccountRecords" Required="true"/>
                        </TextEditor>
                        <Label Key="Lab_Action" Caption="操作" X="6" Y="1"/>
                        <NumberEditor Key="BeforeMoney" Caption="之前金额" BuddyKey="Lab_BeforeMoney" X="1" Y="2" Enable="false" Precision="18" Scale="6" AsQuery="true" ShowZero="true">
                            <DataBinding ColumnKey="BeforeMoney" TableKey="LRP_OwnerAccountRecords" DefaultValue="0"/>
                        </NumberEditor>
                        <Label Key="Lab_BeforeMoney" Caption="之前金额" X="0" Y="2"/>
                        <NumberEditor Key="AfterMoney" Caption="之后金额" BuddyKey="Lab_AfterMoney" X="4" Y="2" Enable="false" Precision="18" Scale="6" AsQuery="true" ShowZero="true">
                            <DataBinding ColumnKey="AfterMoney" TableKey="LRP_OwnerAccountRecords" DefaultValue="0"/>
                        </NumberEditor>
                        <Label Key="Lab_AfterMoney" Caption="之后金额" X="3" Y="2"/>
                        <NumberEditor Key="TxMoney" Caption="本次调整金额" BuddyKey="Lab_TxMoney" X="7" Y="2" Precision="18" Scale="6" AsQuery="true">
                            <DataBinding ColumnKey="TxMoney" TableKey="LRP_OwnerAccountRecords"/>
                        </NumberEditor>
                        <Label Key="Lab_TxMoney" Caption="本次调整金额" X="6" Y="2"/>
                        <NumberEditor Key="FreezeMoney" Caption="冻结金额" BuddyKey="Lab_FreezeMoney" X="1" Y="3" Precision="18" Scale="6" AsQuery="true">
                            <DataBinding ColumnKey="FreezeMoney" TableKey="LRP_OwnerAccountRecords"/>
                        </NumberEditor>
                        <Label Key="Lab_FreezeMoney" Caption="冻结金额" X="0" Y="3"/>
                        <RowDefCollection RowGap="5">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="5">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="33%" MinWidth="55px"/>
                            <ColumnDef Width="50px"/>
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="33%" MinWidth="55px"/>
                            <ColumnDef Width="50px"/>
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="33%" MinWidth="55px"/>
                            <ColumnDef Width="55px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <GridLayoutPanel Key="SystemInfo" Padding="10px" Caption="系统信息">
                        <Dict Key="CREATOR" Caption="创建人" BuddyKey="Lab_CREATOR" X="1" Y="0" Enable="false" ItemKey="Operator">
                            <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_OwnerAccountRecords"/>
                        </Dict>
                        <Label Key="Lab_CREATOR" Caption="创建人" X="0" Y="0"/>
                        <DatePicker Key="CREATETIME" Caption="创建时间" BuddyKey="Lab_CREATETIME" X="4" Y="0" Enable="false" AsQuery="true">
                            <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_OwnerAccountRecords"/>
                            <Format/>
                        </DatePicker>
                        <Label Key="Lab_CREATETIME" Caption="创建时间" X="3" Y="0"/>
                        <Dict Key="MODIFIER" Caption="修改人" BuddyKey="Lab_MODIFIER" X="1" Y="1" Enable="false" ItemKey="Operator">
                            <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_OwnerAccountRecords"/>
                        </Dict>
                        <Label Key="Lab_MODIFIER" Caption="修改人" X="0" Y="1"/>
                        <DatePicker Key="MODIFYTIME" Caption="修改时间" BuddyKey="Lab_MODIFYTIME" X="4" Y="1" Enable="false">
                            <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_OwnerAccountRecords"/>
                        </DatePicker>
                        <Label Key="Lab_MODIFYTIME" Caption="修改时间" X="3" Y="1"/>
                        <RowDefCollection RowGap="5">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="5">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="55px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                </TabPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
