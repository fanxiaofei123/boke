<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form AbbrCaption="用户积分兑换项目序事簿" Caption="用户积分兑换项目序事簿" FormType="View" Key="V_ExchangeItemView">
    <DataSource>
        <DataObject Caption="用户积分兑换项目序事簿" Key="V_ExchangeItemView" PrimaryTableKey="LRP_UPExchangeItem_H">
            <TableCollection>
                <Table Key="LRP_UPExchangeItem_H" Persist="false" SourceType="Query" TableMode="Detail">
                    <Column Caption="对象标识" DBColumnName="OID" DataType="Long" Key="OID"/>
                    <Column Caption="父对象标识" DBColumnName="POID" DataType="Long" Key="POID"/>
                    <Column Caption="主对象标识" DBColumnName="SOID" DataType="Long" Key="SOID"/>
                    <Column Caption="对象版本" DBColumnName="VERID" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DBColumnName="DVERID" DataType="Integer" Key="DVERID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Key="No" Caption="项目号" DataType="Varchar" Length="80"/>
                    <Column Key="Name" Caption="名称" DataType="Varchar" Length="80"/>
                    <Column Key="LimitsPerUser" Caption="每用户可参加次数" DataType="Integer" DefaultValue="0"/>
                    <Column Key="SortOrder" Caption="排序" DataType="Integer" DefaultValue="0"/>
                    <Column Key="Points" Caption="积分数" DataType="Numeric" Precision="18" Scale="0"/>
                    <Column Key="EffectDateTime" Caption="生效日期时间" DataType="DateTime"/>
                    <Column Key="ExpireDateTime" Caption="失效日期时间" DataType="DateTime"/>
                    <Column Key="ImageUrl" Caption="图片路径" DataType="Varchar" Length="200"/>
                    <Column Key="InfoUrl" Caption="详细信息路径" DataType="Varchar" Length="200"/>
                    <Column Key="Remarks" Caption="备注" DataType="Varchar" Length="500"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="新增" Icon="new.png" Key="New">
            <Action>
                <![CDATA[
				New('V_ExchangeItem')	
			]]>
            </Action>
        </Operation>
        <Operation Caption="确认" Key="BatchConfirm" RefKey="BatchConfirm"/>
        <Operation Caption="撤销确认" Key="BatchConfirm-R">
            <Action>
                <![CDATA[				if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再撤销确认。','OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',200,')){
					Confirm('只有状态是已确认的单据才能进行撤销确认。','OK','OK:{}');
					return true;
				}
				loop "ListView0" (true)
					{			
						if(Select == true)
						{ 
							var usednum=DBNamedQueryValue("exchangeitem", OID);
							if(usednum>0){
							         	Confirm('用户积分兑换记录中存在已选规则，不能撤销确认!','OK','OK:{}');
							         	return true;
							}
						}					
					}
				Confirm('确定要将选中的记录进行撤销确认吗？','YES_NO',{YES:{
					loop "ListView0" (true)
					{			
						if(Select == true)
						{ 
							InvokeService("LRP_BillStatusChange", false, false,DataObjectKey,OID,100,-1);	
						}					
					}
					LoadData();ShowData();
				},NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="作废" Key="BatchCancel" RefKey="BatchCancel"/>
        <Operation Caption="撤销作废" Key="BatchCancel-R" RefKey="BatchCancel-R"/>
        <Operation Caption="删除" Key="BatchDelete">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
					return true;
				}
			   if(!CheckListSelectStatus(',100,')){	
			        Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
					return true;
			   }
			  Confirm('确定要将选中的记录进行删除吗？','YES_NO',{YES:{BatchDeleteData('LRP_ExchangeItem', 'LRP_UPExchangeItem_H');
			            LoadData();ShowData();
					  },NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <QueryCollection>
        <Query Key="exchangeitem">
            <Statement>
                <![CDATA[select count(*) as num from LRP_UPE_Records_H h where  h.UPEItemId = ?]]>
            </Statement>
            <ParameterCollection>
                <Parameter DataType="Long"/>
            </ParameterCollection>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <GridLayoutPanel Height="100%" Key="main" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="base_split" Orientation="Vertical" X="0" Y="1">
                    <GridLayoutPanel Caption="查询字段" Height="100%" Key="query" Padding="5px">
                        <TextEditor Caption="DataObjectKey" Enable="false" Key="DataObjectKey" Visible="false" X="10" Y="3">
                            <DataBinding DefaultValue="LRP_ExchangeItem"/>
                        </TextEditor>
                        <Label Key="Lab_ItemNo" Caption="项目号" X="0" Y="0"/>
                        <TextEditor Key="ItemNo" Caption="项目号" BuddyKey="Lab_ItemNo" X="1" Y="0" XSpan="3">
                            <Condition ColumnKey="No" CondSign="like" TableKey="LRP_UPExchangeItem_H"/>
                        </TextEditor>
                        <Label Key="Lab_name" Caption="项目名称" X="5" Y="0"/>
                        <TextEditor Key="name" Caption="项目名称" BuddyKey="Lab_name" X="6" Y="0" XSpan="3">
                            <Condition ColumnKey="OwnerNo" CondSign="like" TableKey="LRP_UPExchangeItem_H"/>
                        </TextEditor>
                        <Label Caption="状态" Key="L_Status_C" X="5" Y="1"/>
                        <CheckListBox BuddyKey="L_Status" Caption="状态" Key="Status_C" X="6" XSpan="3" Y="1">
                            <Condition ColumnKey="Status" CondSign="in" TableKey="LRP_UPExchangeItem_H"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                            <Item Caption="处理中" Key="handled" Value="500"/>
                            <Item Caption="已完成" Key="finished" Value="900"/>
                            <Item Caption="已作废" Key="cancelled" Value="20"/>
                        </CheckListBox>
                        <Button Caption="查询" Enable="true" Key="Query" X="10" Y="0">
                            <OnClick>
                                <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                            </OnClick>
                        </Button>
                        <Button Caption="重置" Enable="true" Key="cancel" X="10" Y="1">
                            <OnClick>
                                <![CDATA[
								ResetCondition();	
								]]>
                            </OnClick>
                        </Button>
                        <DatePicker Key="EffectDateTimeFrom" Caption="生效日期" BuddyKey="Lab_EffectDateTimeFrom" X="1" Y="2" XSpan="3">
                            <Condition ColumnKey="EffectDateTime" CondSign="between" TableKey="LRP_UPExchangeItem_H" Group="EffectDateTime" GroupHead="true"/>
                        </DatePicker>
                        <Label Key="Lab_EffectDateTimeFrom" Caption="生效日期" X="0" Y="2"/>
                        <DatePicker Key="EffectDateTimeTo" Caption="至" BuddyKey="Lab_EffectDateTimeTo" X="6" Y="2" XSpan="3">
                            <Condition ColumnKey="EffectDateTime" CondSign="in" TableKey="LRP_UPExchangeItem_H" Group="EffectDateTime" GroupTail="true"/>
                        </DatePicker>
                        <Label Key="Lab_EffectDateTimeTo" Caption="至" X="5" Y="2"/>
                        <DatePicker Key="ExpireDateTimeFrom" Caption="失效日期" BuddyKey="Lab_ExpireDateTimeFrom" X="1" Y="3" XSpan="3">
                            <Condition ColumnKey="ExpireDateTime" CondSign="between" TableKey="LRP_UPExchangeItem_H" Group="ExpireDateTime" GroupHead="true"/>
                        </DatePicker>
                        <Label Key="Lab_ExpireDateTimeFrom" Caption="失效日期" X="0" Y="3"/>
                        <DatePicker Key="ExpireDateTimeTo" Caption="至" BuddyKey="Lab_ExpireDateTimeTo" X="6" Y="3" XSpan="3">
                            <Condition ColumnKey="ExpireDateTime" CondSign="in" TableKey="LRP_UPExchangeItem_H" Group="ExpireDateTime" GroupTail="true"/>
                        </DatePicker>
                        <Label Key="Lab_ExpireDateTimeTo" Caption="至" X="5" Y="3"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Key="ListView0" TableKey="LRP_UPExchangeItem_H" PageLoadType="DB">
                        <ListViewColumnCollection>
                            <ListViewColumn Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" Key="OID" Visible="false" Width="93px"/>
                            <ListViewColumn Caption="选择" ColumnType="CheckBox" Key="Select" IsSelect="true" Width="80px"/>
                            <ListViewColumn Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" Key="Status" SourceType="Status" Width="74px"/>
                            <ListViewColumn Key="ItemNo_LV" Caption="项目号" ColumnType="HyperLink" DataColumnKey="No" Width="160px">
                                <OnClick>
                                    <![CDATA[Open('V_ExchangeItem', OID);]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="name_LV" Caption="项目名称" ColumnType="TextEditor" DataColumnKey="Name"/>
                            <ListViewColumn Key="point_lv" Caption="积分数" ColumnType="NumberEditor" DataColumnKey="Points" Width="80px"/>
                            <ListViewColumn Key="LimitsPerUser_LV" Caption="每用户可参加次数" ColumnType="NumberEditor" DataColumnKey="LimitsPerUser" Width="120px"/>
                            <ListViewColumn Key="SortOrder_LV" Caption="排序" ColumnType="NumberEditor" DataColumnKey="SortOrder" Width="120px"/>
                            <ListViewColumn Key="EffectiveDate_LV" Caption="生效日期" ColumnType="DatePicker" DataColumnKey="EffectDateTime" Width="80px" OnlyDate="true"/>
                            <ListViewColumn Key="ExpireDate_LV" Caption="失效日期" ColumnType="DatePicker" DataColumnKey="ExpireDateTime" OnlyDate="true"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[
							Open('V_ExchangeItem', OID)	
						]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="165px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
