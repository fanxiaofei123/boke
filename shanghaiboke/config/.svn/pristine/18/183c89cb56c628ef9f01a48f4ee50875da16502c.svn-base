<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form AbbrCaption="优惠活动序事簿" Caption="优惠活动序事簿" FormType="View" Key="V_PromotionsView">
    <DataSource>
        <DataObject Caption="优惠活动序事簿" Key="V_PromotionsView" PrimaryTableKey="LRP_Promotions_H">
            <TableCollection>
                <Table Key="LRP_Promotions_H" Persist="false" SourceType="Query" TableMode="Detail">
                    <Column Caption="对象标识" DataType="Long" Key="OID"/>
                    <Column Caption="主对象标识" DataType="Long" Key="SOID"/>
                    <Column Caption="父对象标识" DataType="Long" Key="POID"/>
                    <Column Caption="对象版本" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DataType="Integer" Key="DVERID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建人" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改人" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Caption="单号" DataType="Varchar" Key="No" Length="100"/>
                    <Column Caption="活动名称" DataType="Varchar" Key="Name" Length="80"/>
                    <Column Caption="活动类型" DataType="Integer" Key="ActivityType"/>
                    <Column Caption="每用户可参加次数" DataType="Integer" Key="LimitsPerUser"/>
                    <Column Caption="是否限制可用机构" DataType="Integer" Key="IsLimitOrg"/>
                    <Column Caption="可用机构id" DataType="Varchar" Key="LimitOrgIds" Length="500"/>
                    <Column Caption="可用机构名称" DataType="Varchar" Key="LimitOrgNames" Length="1000"/>
                    <Column Caption="排序" DataType="Integer" Key="SortOrder"/>
                    <Column Caption="生效日期时间" DataType="DateTime" Key="EffectiveDateTime"/>
                    <Column Caption="失效日期时间" DataType="DateTime" Key="ExpireDateTime"/>
                    <Column Caption="图片路径" DataType="Varchar" Key="ImageUrl" Length="200"/>
                    <Column Caption="详细信息路径" DataType="Varchar" Key="InfoUrl" Length="200"/>
                    <Column Caption="备注" DataType="Varchar" Expand="true" Key="Remark" Length="500"/>
                    <TableFilter>
                        <![CDATA[]]>
                    </TableFilter>
                </Table>
            </TableCollection>
            <OIDFilter/>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="新增" Icon="new.png" Key="New">
            <Action>
                <![CDATA[
				New('V_Promotions')	
			]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <ToolBar Height="pref" Key="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="main_split" Orientation="Vertical">
                    <GridLayoutPanel Caption="GridLayoutPanel0" Key="GridLayoutPanel0" Padding="10px">
                        <TextEditor Caption="活动号" Key="No_C" X="1" XSpan="2" Y="0">
                            <Condition CondSign="like">
                                <ConditionTarget TableKey="LRP_Promotions_H" ColumnKey="No"/>
                            </Condition>
                        </TextEditor>
                        <Label Caption="活动号" Key="L_No" X="0" Y="0"/>
                        <TextEditor Caption="活动名称" Key="Name_C" X="5" XSpan="2" Y="0">
                            <Condition CondSign="like">
                                <ConditionTarget TableKey="LRP_Promotions_H" ColumnKey="Name"/>
                            </Condition>
                        </TextEditor>
                        <Label Caption="活动名称" Key="L_Name" X="4" Y="0"/>
                        <CheckListBox Caption="活动类型" Key="ActivityType_C" X="1" XSpan="2" Y="1">
                            <Condition CondSign="in">
                                <ConditionTarget TableKey="LRP_Promotions_H" ColumnKey="ActivityType"/>
                            </Condition>
                            <Item Caption="新手活动" Key="1" Value="1"/>
                            <Item Caption="分享活动" Key="2" Value="2"/>
                            <Item Caption="其它活动" Key="99" Value="99"/>
                        </CheckListBox>
                        <Label Caption="活动类型" Key="L_ActivityType" X="0" Y="1"/>
                        <CheckListBox Caption="状态" Key="Status_C" X="5" XSpan="2" Y="1">
                            <Condition CondSign="in">
                                <ConditionTarget TableKey="LRP_Promotions_H" ColumnKey="Status"/>
                            </Condition>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                        </CheckListBox>
                        <Label Caption="状态" Key="L_Status" X="4" Y="1"/>
                        <Button Caption="查询" Key="Query" X="8" Y="0">
                            <OnClick>
                                <![CDATA[DealCondition();LoadData();ShowData();]]>
                            </OnClick>
                        </Button>
                        <Button Caption="重置" Key="Reset" X="8" Y="1">
                            <OnClick>
                                <![CDATA[ResetCondition();]]>
                            </OnClick>
                        </Button>
                        <DatePicker Caption="生效日期" Key="EffectiveDateTime_C" X="1" XSpan="2" Y="2">
                            <Condition CondSign="between" Group="EffectiveDateTime" GroupHead="true">
                                <ConditionTarget TableKey="LRP_Promotions_H" ColumnKey="EffectiveDateTime"/>
                            </Condition>
                        </DatePicker>
                        <Label Caption="生效日期" Key="L_EffectiveDateTime" X="0" Y="2"/>
                        <DatePicker Caption="至" Key="EffectiveDateTime_C_1" X="5" XSpan="2" Y="2">
                            <Condition CondSign="none" Group="EffectiveDateTime" GroupTail="true">
                                <ConditionTarget TableKey="LRP_Promotions_H" ColumnKey="EffectiveDateTime"/>
                            </Condition>
                        </DatePicker>
                        <Label Caption="至" Key="L_EffectiveDateTime_1" X="4" Y="2"/>
                        <DatePicker Caption="失效日期" Key="ExpireDateTime_C" X="1" XSpan="2" Y="3">
                            <Condition CondSign="between" Group="ExpireDateTime" GroupHead="true">
                                <ConditionTarget TableKey="LRP_Promotions_H" ColumnKey="ExpireDateTime"/>
                            </Condition>
                        </DatePicker>
                        <Label Caption="失效日期" Key="L_ExpireDateTime" X="0" Y="3"/>
                        <DatePicker Caption="至" Key="ExpireDateTime_C_1" X="5" XSpan="2" Y="3">
                            <Condition CondSign="none" Group="ExpireDateTime" GroupTail="true">
                                <ConditionTarget TableKey="LRP_Promotions_H" ColumnKey="ExpireDateTime"/>
                            </Condition>
                        </DatePicker>
                        <Label Caption="至" Key="L_ExpireDateTime_1" X="4" Y="3"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%" MinWidth="50px"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%" MinWidth="50px"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Caption="ListView0" Key="ListView0" TableKey="LRP_Promotions_H" PageLoadType="DB">
                        <ListViewColumnCollection>
                            <ListViewColumn Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" Key="OID" Visible="false"/>
                            <ListViewColumn Caption="选择" ColumnType="CheckBox" Enable="true" IsSelect="true" Key="Select"/>
                            <ListViewColumn Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" Key="Status" SourceType="Status"/>
                            <ListViewColumn Caption="活动号" ColumnType="HyperLink" DataColumnKey="No" Key="No">
                                <OnClick>
                                    <![CDATA[
									
									Open('V_Promotions', OID);
									]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Caption="活动名称" ColumnType="TextEditor" DataColumnKey="Name" Key="Name"/>
                            <ListViewColumn Key="ActivityType" Caption="活动类型" ColumnType="ComboBox" DataColumnKey="ActivityType">
                                <Item Caption="新手活动" Key="1" Value="1"/>
                                <Item Caption="分享活动" Key="2" Value="2"/>
                                <Item Caption="其它活动" Key="99" Value="99"/>
                            </ListViewColumn>
                            <ListViewColumn Caption="限制次数" ColumnType="TextEditor" DataColumnKey="LimitsPerUser" Key="LimitsPerUser"/>
                            <ListViewColumn Caption="排序" ColumnType="TextEditor" DataColumnKey="SortOrder" Key="SortOrder"/>
                            <ListViewColumn Caption="生效日期时间" ColumnType="DatePicker" DataColumnKey="EffectiveDateTime" Key="EffectiveDateTime"/>
                            <ListViewColumn Caption="失效日期时间" ColumnType="DatePicker" DataColumnKey="ExpireDateTime" Key="ExpireDateTime"/>
                            <ListViewColumn Caption="备注" ColumnType="TextEditor" DataColumnKey="Remark" Key="Remark"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[
								Open('V_Promotions', OID);
						]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="165px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[
        
    ]]>
    </OnLoad>
</Form>
