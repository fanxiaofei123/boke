        <Operation Caption="删除" Key="Delete" RefKey="Delete"/>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main" Caption="根面板">
                <ToolBar Key="main_toolbar" Height="pref" Caption="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <TabPanel Caption="TabPanel1" Height="pref" Key="TabPanel1">
                    <GridLayoutPanel Key="first_head" Padding="10px" Caption="基本信息">
                        <TextEditor Key="No" Caption="预约号" BuddyKey="Lab_No" X="1" Y="0" Enable="false" AsQuery="true">
                            <DataBinding ColumnKey="No" TableKey="LRP_LogisticsAppointment_H"/>
                        </TextEditor>
                        <Label Key="Lab_No" Caption="预约号" X="0" Y="0"/>
                        <Dict Key="OwnerUserId" Caption="货主用户" BuddyKey="Lab_OwnerUserId" X="4" Y="0" Enable="Status==100" ItemKey="LRP_OwnerUser" AsQuery="true">
                            <DataBinding ColumnKey="OwnerUserId" TableKey="LRP_LogisticsAppointment_H"/>
                        </Dict>
                        <Label Key="Lab_OwnerUserId" Caption="货主用户" X="3" Y="0"/>
                        <TextEditor Key="Contactor" Caption="联系人" BuddyKey="Lab_Contactor" X="1" Y="1" Enable="Status==100">
                            <DataBinding ColumnKey="Contactor" TableKey="LRP_LogisticsAppointment_H" Required="true"/>
                        </TextEditor>
                        <Label Key="Lab_Contactor" Caption="联系人" X="0" Y="1"/>
                        <TextEditor Key="ContactTel" Caption="联系人电话" BuddyKey="Lab_ContactTel" X="4" Y="1" Enable="Status==100" AsQuery="true">
                            <DataBinding ColumnKey="ContactTel" TableKey="LRP_LogisticsAppointment_H" Required="true"/>
                        </TextEditor>
                        <Label Key="Lab_ContactTel" Caption="联系人电话" X="3" Y="1"/>
                        <ComboBox Key="Status" Caption="状态" BuddyKey="Lab_Status" X="7" Y="1" Enable="false" SourceType="Status" AsQuery="true">
                            <DataBinding ColumnKey="Status" TableKey="LRP_LogisticsAppointment_H" DefaultValue="100"/>
                        </ComboBox>
                        <Label Key="Lab_Status" Caption="状态" X="6" Y="1"/>
                        <TextArea Key="Requirement" Caption="需求描述" BuddyKey="Lab_Requirement" X="1" Y="2" Enable="Status==100" XSpan="7">
                            <DataBinding ColumnKey="Requirement" TableKey="LRP_LogisticsAppointment_H"/>
                        </TextArea>
                        <Label Key="Lab_Requirement" Caption="需求描述" X="0" Y="2"/>
                        <TextArea Key="Treatment" Caption="处理情况" BuddyKey="Lab_Treatment" X="1" Y="3" Enable="Status==100 || Status==200" XSpan="7">
                            <DataBinding ColumnKey="Treatment" TableKey="LRP_LogisticsAppointment_H"/>
                        </TextArea>
                        <Label Key="Lab_Treatment" Caption="处理情况" X="0" Y="3"/>
                        <RowDefCollection RowGap="8" RowHeight="30">
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="55px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <GridLayoutPanel Key="second_head" Height="pref" Padding="10px" Caption="系统信息">
                        <Dict Key="CREATOR" Caption="创建人" BuddyKey="Lab_CREATOR" X="1" Y="0" ItemKey="Operator">
                            <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator();" TableKey="LRP_LogisticsAppointment_H"/>
                        </Dict>
                        <Label Key="Lab_CREATOR" Caption="创建人" X="0" Y="0"/>
                        <DatePicker Key="CREATETIME" Caption="创建时间" BuddyKey="Lab_CREATETIME" X="4" Y="0" AsQuery="true">
                            <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate();" TableKey="LRP_LogisticsAppointment_H"/>
                            <Format/>
                        </DatePicker>
                        <Label Key="Lab_CREATETIME" Caption="创建时间" X="3" Y="0"/>
                        <Dict Key="MODIFIER" Caption="修改人" BuddyKey="Lab_MODIFIER" X="1" Y="1" ItemKey="Operator">
                            <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator();" TableKey="LRP_LogisticsAppointment_H"/>
                        </Dict>
                        <Label Key="Lab_MODIFIER" Caption="修改人" X="0" Y="1"/>
                        <DatePicker Key="MODIFYTIME" Caption="修改时间" BuddyKey="Lab_MODIFYTIME" X="4" Y="1">
                            <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate();" TableKey="LRP_LogisticsAppointment_H"/>
                        </DatePicker>
                        <Label Key="Lab_MODIFYTIME" Caption="修改时间" X="3" Y="1"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="50%"/>
                            <ColumnDef Width="20px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="50%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                </TabPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
