<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_LogisticsAppointment" Caption="业务预约" FormType="Entity" ViewKey="V_LogisticsAppointmentView">
    <DataSource RefObjectKey="LRP_LogisticsAppointment"/>
    <OperationCollection>
        <Operation Caption="编辑" Key="Edit" RefKey="Edit"/>
        <Operation Caption="保存" Key="Save" Visible="!ReadOnly()">
            <Action>
                <![CDATA[ 
				SaveData();UpdateView();		
				]]>
            </Action>
        </Operation>
        <Operation Caption="取消" Key="Cancel" RefKey="Cancel"/>
        <Operation Caption="确认" Key="Confirm" RefKey="Confirm"/>
        <Operation Caption="撤销确认" Key="Confirm-R" RefKey="Confirm-R"/>
        <Operation Caption="完成" Key="Finish" Visible="ReadOnly()&amp;&amp;Status==StatusValue('confirmed')">
            <Action>
                <![CDATA[				Confirm('确定要将当前记录进行完成吗？','YES_NO',{YES:{Status=StatusValue('finished');SaveData();UpdateView();},NO:{}});
				]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[Status=StatusValue('confirmed');]]>
            </ExceptionHandler>
        </Operation>
        <Operation Caption="撤销完成" Key="Finish-R" Visible="ReadOnly()&amp;&amp;Status==StatusValue('finished')">
            <Action>
                <![CDATA[				Confirm('确定要将当前记录进行撤销完成吗？','YES_NO',{YES:{Status=StatusValue('confirmed');SaveData();UpdateView();},NO:{}});
				]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[Status=StatusValue('finished');]]>
            </ExceptionHandler>
        </Operation>
        <Operation Caption="作废" Key="ToCancel" RefKey="ToCancel"/>
        <Operation Caption="撤销作废" Key="ToCancel-R" RefKey="ToCancel-R"/>
