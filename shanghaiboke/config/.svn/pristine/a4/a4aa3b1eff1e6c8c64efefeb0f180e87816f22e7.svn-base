<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_T_IncomeContract_LRP" Caption="运输收入合约" FormType="Entity" ViewKey="V_T_IncomeContract_LRPView">
    <DataSource RefObjectKey="LRP_T_IncomeContract"/>
    <OperationCollection>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[var d1 = GetValue("EffectiveDate");
var d2 = GetValue("ExpireDate");
if (d1 > d2){
    //生效日期不能大于失效日期
    Confirm(LocaleString('CHshow','chkey2'),'OK','OK:{}');
    return 1;
}
SaveData(); UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="New" Caption="新增" Visible="ReadOnly()">
            <Action>
                <![CDATA[New('V_T_IncomeContract_LRP', 'self');]]>
            </Action>
        </Operation>
        <Operation Key="Edit" Caption="编辑" Visible="ReadOnly()" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Key="Delete" Caption="删除" Visible="ReadOnly()" RefKey="Delete"/>
        <Operation Key="Cancel" Caption="取消" Visible="!ReadOnly()" RefKey="Cancel"/>
        <Operation Key="Confirm" Caption="确认" Visible="ReadOnly()" RefKey="Confirm"/>
        <Operation Key="Confirm-R" Caption="撤销确认" Visible="ReadOnly();" RefKey="Confirm-R"/>
        <Operation Key="Close" Caption="关闭" Visible="ReadOnly()" RefKey="Close"/>
        <Operation Key="ToCancel" Caption="作废" Visible="ReadOnly()" RefKey="ToCancel"/>
        <Operation Key="ToCancel-R" Caption="撤销作废" Visible="ReadOnly()" RefKey="ToCancel-R"/>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <QueryCollection>
        <Query Key="TermByIncomId" Description="根据收入名称过滤条款">
            <Statement>
                <![CDATA[select OID, Name from LRP_T_IncomeTerm_H where status = 200 and IncomeId = ?]]>
            </Statement>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="ToolBar1" Height="pref" Caption="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <TabPanel Caption="TabPanel1" Key="TabPanel1">
                        <GridLayoutPanel Key="BasicTab" Padding="10px" Caption="基本信息" BottomPadding="5px">
                            <TextEditor Key="No" Caption="合约号" BuddyKey="Lab_No" X="1" Y="0" Enable="false" AsQuery="true">
                                <DataBinding ColumnKey="No" TableKey="LRP_T_IncomeContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_No" Caption="合约号" X="0" Y="0"/>
                            <TextEditor Key="Name" Caption="合约名称" BuddyKey="Lab_Name" X="4" Y="0" AsQuery="true" TabOrder="10">
                                <DataBinding ColumnKey="Name" TableKey="LRP_T_IncomeContract_H" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_Name" Caption="合约名称" X="3" Y="0"/>
                            <Dict Key="OwnerId" Caption="货主" BuddyKey="Lab_OwnerId" X="1" Y="1" AsQuery="true" ItemKey="LRP_Owner" TabOrder="20">
                                <DataBinding ColumnKey="OwnerId" TableKey="LRP_T_IncomeContract_H" Required="true">
                                    <ValueChanged>
                                        <![CDATA[//选择货主后将结算方赋值到结算方字段中
var ownerOID = GetValue("OwnerId");
if (ownerOID == 0){
    SetValue("SettlementId",0);
}else {
    var sId = GetDictValue("LRP_Owner", ownerOID, "CustomerId");
    SetValue("SettlementId", sId);
}
]]>
                                    </ValueChanged>
                                </DataBinding>
                            </Dict>
                            <Label Key="Lab_OwnerId" Caption="货主" X="0" Y="1"/>
                            <Dict Key="SettlementId" Caption="结算方" BuddyKey="Lab_SettlementId" X="4" Y="1" Enable="false" AsQuery="true" ItemKey="Customer" TabOrder="30">
                                <DataBinding ColumnKey="SettlementId" TableKey="LRP_T_IncomeContract_H"/>
                            </Dict>
                            <Label Key="Lab_SettlementId" Caption="结算方" X="3" Y="1"/>
                            <Dict Key="DispatchOrgId" Caption="调度组织" BuddyKey="Lab_DispatchOrgId" X="7" Y="1" AsQuery="true" ItemKey="LRP_DispatchOrg" TabOrder="40">
                                <DataBinding ColumnKey="DispatchOrgId" TableKey="LRP_T_IncomeContract_H" Required="true"/>
                            </Dict>
                            <Label Key="Lab_DispatchOrgId" Caption="调度组织" X="6" Y="1"/>
                            <ComboBox Key="Status" Caption="状态" BuddyKey="Lab_Status" X="7" Y="2" Enable="false" SourceType="Status">
                                <DataBinding ColumnKey="Status" TableKey="LRP_T_IncomeContract_H" DefaultValue="100"/>
                            </ComboBox>
                            <Label Key="Lab_Status" Caption="状态" X="6" Y="2"/>
                            <DatePicker Key="EffectiveDate" Caption="生效日期" BuddyKey="Lab_EffectiveDate" X="1" Y="2" TabOrder="50">
                                <DataBinding ColumnKey="EffectiveDate" TableKey="LRP_T_IncomeContract_H" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_EffectiveDate" Caption="生效日期" X="0" Y="2"/>
                            <DatePicker Key="ExpireDate" Caption="截止日期" BuddyKey="Lab_ExpireDate" X="4" Y="2" TabOrder="60">
                                <DataBinding ColumnKey="ExpireDate" TableKey="LRP_T_IncomeContract_H" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_ExpireDate" Caption="截止日期" X="3" Y="2"/>
                            <TextEditor Key="Remark" Caption="备注" BuddyKey="Lab_Remark" X="1" Y="3" TabOrder="80" XSpan="7">
                                <DataBinding ColumnKey="Remark" TableKey="LRP_T_IncomeContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_Remark" Caption="备注" X="0" Y="3"/>
                            <TextEditor Key="OwnerNo" Caption="货主合约号" BuddyKey="Lab_OwnerNo" X="7" Y="0" MaxLength="80" TabOrder="15">
                                <DataBinding ColumnKey="OwnerNo" TableKey="LRP_T_IncomeContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_OwnerNo" Caption="货主合约号" X="6" Y="0"/>
                            <RowDefCollection RowGap="5">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="5">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="55px"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Key="SystemInfo" Padding="5px" Caption="系统信息">
                            <Dict Key="CREATOR" Caption="创建人" BuddyKey="Lab_CREATOR" X="1" Y="0" Enable="false" ItemKey="Operator">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_T_IncomeContract_H"/>
                            </Dict>
                            <Label Key="Lab_CREATOR" Caption="创建人" X="0" Y="0"/>
                            <DatePicker Key="CREATETIME" Caption="创建时间" BuddyKey="Lab_CREATETIME" X="4" Y="0" Enable="false">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_T_IncomeContract_H"/>
                            </DatePicker>
                            <Label Key="Lab_CREATETIME" Caption="创建时间" X="3" Y="0"/>
                            <Dict Key="MODIFIER" Caption="修改人" BuddyKey="Lab_MODIFIER" X="1" Y="1" Enable="false" ItemKey="Operator">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_T_IncomeContract_H"/>
                            </Dict>
                            <Label Key="Lab_MODIFIER" Caption="修改人" X="0" Y="1"/>
                            <DatePicker Key="MODIFYTIME" Caption="修改时间" BuddyKey="Lab_MODIFYTIME" X="4" Y="1" Enable="false">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_T_IncomeContract_H"/>
                            </DatePicker>
                            <Label Key="Lab_MODIFYTIME" Caption="修改时间" X="3" Y="1"/>
                            <RowDefCollection RowGap="5">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="5">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <TabPanel Height="100%" Key="DetailTab">
                        <Grid Key="Grid1" Caption="条款">
                            <GridColumnCollection>
                                <GridColumn Key="SEQUENCE" Caption="序号" Width="80px"/>
                                <GridColumn Key="IncomeId" Caption="收入名称" Width="115px"/>
                                <GridColumn Key="TermId" Caption="条款" Width="154px"/>
                            </GridColumnCollection>
                            <GridRowCollection>
                                <GridRow Key="row1" RowHeight="35" TableKey="LRP_T_IncomeContract_L">
                                    <GridCell Key="SEQUENCE" Caption="序号"/>
                                    <GridCell Key="IncomeId" Caption="收入名称" CellType="Dict" ItemKey="LRP_Income">
                                        <DataBinding ColumnKey="IncomeId" Required="true"/>
                                    </GridCell>
                                    <GridCell Key="TermId" Caption="条款" CellType="ComboBox" SourceType="Formula" ItemsDependency="IncomeId">
                                        <DataBinding ColumnKey="TermId" Required="true"/>
                                        <FormulaItems>
                                            <![CDATA[DBNamedQuery("TermByIncomId", IncomeId);]]>
                                        </FormulaItems>
                                    </GridCell>
                                </GridRow>
                            </GridRowCollection>
                        </Grid>
                    </TabPanel>
                    <SplitSize Size="180px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
