<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="CHCS_Transfer_H" Caption="调拨单" FormType="Entity" ViewKey="CHCS_Transfer_HView">
    <DataSource RefObjectKey="CHCS_Transfer_H"/>
    <OperationCollection>
        <Operation Key="WORKITEM" Caption="WORKITEM" Tag="WORKITEM"/>
        <Operation Key="BPM" Caption="BPM" Tag="BPM"/>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[SaveData(); UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="Edit" Caption="修改" Visible="ReadOnly()" RefKey="Edit">
            <Action>
                <![CDATA[Edit();]]>
            </Action>
        </Operation>
        <Operation Key="Cancel" Caption="取消" Visible="!ReadOnly()">
            <Action>
                <![CDATA[Cancel();]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" Visible="ReadOnly()" RefKey="Close">
            <Action>
                <![CDATA[Close()]]>
            </Action>
        </Operation>
        <Operation Key="Export" Caption="导出" Visible="ReadOnly()">
            <Action>
                <![CDATA[UIExportExcel()]]>
            </Action>
        </Operation>
        <Operation Key="Print" Caption="打印调拨单" Visible="ReadOnly()">
            <Action>
                <![CDATA[Print();]]>
            </Action>
        </Operation>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <QueryCollection>
        <Query Key="updateWorkstatus" Description="更改司机工作状态">
            <Statement DBType="Oracle">
                <![CDATA[update LRP_Driver set WorkState=(select  OID from  LRP_Lookup_L  where headcode='DriverWorkStatus' and  name=? ) where oid=?]]>
            </Statement>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="ToolBar1" Height="pref" Caption="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <TabPanel Caption="TabPanel1" Height="pref" Key="TabPanel1">
                        <GridLayoutPanel Key="first_head" Height="pref" Padding="5px" Caption="基本信息">
                            <Label Key="Lab_NO" Caption="系统单号" X="0" Y="0"/>
                            <TextEditor Key="NO" Caption="系统单号" BuddyKey="Lab_NO" X="1" Y="0" Enable="false" AsQuery="true" Trim="true">
                                <DataBinding ColumnKey="NO" TableKey="CHCS_Transfer_H"/>
                            </TextEditor>
                            <Label Key="Lab_BillDate" Caption="单据日期" X="6" Y="1"/>
                            <DatePicker Key="BillDate" Caption="单据日期" BuddyKey="Lab_BillDate" X="7" Y="1" Enable="false" AsQuery="true" OnlyDate="true">
                                <DataBinding ColumnKey="BillDate" TableKey="CHCS_Transfer_H"/>
                                <Format HAlign="Center"/>
                            </DatePicker>
                            <Label Key="Lab_Status" Caption="单据状态" X="0" Y="2"/>
                            <ComboBox Key="Status" Caption="单据状态" BuddyKey="Lab_Status" X="1" Y="2" SourceType="Status" Enable="false" AsQuery="true">
                                <DataBinding ColumnKey="Status" TableKey="CHCS_Transfer_H" DefaultValue="100"/>
                            </ComboBox>
                            <Dict Key="Out_Warehouse" Caption="调出仓库" BuddyKey="Lab_Out_Warehouse" X="4" Y="0" AsQuery="true" ItemKey="Vendor">
                                <DataBinding ColumnKey="Out_Warehouse" TableKey="CHCS_Transfer_H"/>
                            </Dict>
                            <Label Key="Lab_Out_Warehouse" Caption="调出仓库" X="3" Y="0"/>
                            <Dict Key="In_Warehouse" Caption="调入仓库" BuddyKey="Lab_In_Warehouse" X="7" Y="0" AsQuery="true" ItemKey="Vendor">
                                <DataBinding ColumnKey="In_Warehouse" TableKey="CHCS_Transfer_H"/>
                            </Dict>
                            <Label Key="Lab_In_Warehouse" Caption="调入仓库" X="6" Y="0"/>
                            <TextEditor Key="Replenishment_Application_Number" Caption="补货申请单号" BuddyKey="Lab_Replenishment_Application_Number" X="1" Y="1">
                                <DataBinding ColumnKey="Replenishment_Application_Number" TableKey="CHCS_Transfer_H"/>
                            </TextEditor>
                            <Label Key="Lab_Replenishment_Application_Number" Caption="补货申请单号" X="0" Y="1"/>
                            <Dict Key="Applicant" Caption="申请人" BuddyKey="Lab_Applicant" X="4" Y="1" ItemKey="CHCS_Department">
                                <DataBinding ColumnKey="Applicant" TableKey="CHCS_Transfer_H"/>
                            </Dict>
                            <Label Key="Lab_Applicant" Caption="申请人" X="3" Y="1"/>
                            <Dict Key="Flight_Number" Caption="航班号" BuddyKey="Lab_Flight_Number" X="4" Y="2" ItemKey="CHCS_Flight">
                                <DataBinding ColumnKey="Flight_Number" TableKey="CHCS_Transfer_H"/>
                            </Dict>
                            <Label Key="Lab_Flight_Number" Caption="航班号" X="3" Y="2"/>
                            <DatePicker Key="Flight_Date" Caption="航班日期" BuddyKey="Lab_Flight_Date" X="7" Y="2" AsQuery="true" OnlyDate="true">
                                <DataBinding ColumnKey="Flight_Date" TableKey="CHCS_Transfer_H"/>
                                <Format/>
                            </DatePicker>
                            <Label Key="Lab_Flight_Date" Caption="航班日期" X="6" Y="2"/>
                            <Dict Key="Aircraft_Number" Caption="飞机号" BuddyKey="Lab_Aircraft_Number" X="1" Y="3" ItemKey="CHCS_Aircraft">
                                <DataBinding ColumnKey="Aircraft_Number" TableKey="CHCS_Transfer_H"/>
                            </Dict>
                            <Label Key="Lab_Aircraft_Number" Caption="飞机号" X="0" Y="3"/>
                            <DatePicker Key="Out_Date" Caption="出库日期" BuddyKey="Lab_Out_Date" X="7" Y="3" OnlyDate="true">
                                <DataBinding ColumnKey="Out_Date" TableKey="CHCS_Transfer_H"/>
                            </DatePicker>
                            <Label Key="Lab_Out_Date" Caption="出库日期" X="6" Y="3"/>
                            <TextEditor Key="Aircraft_Type_Number" Caption="机型" BuddyKey="Lab_Aircraft_Type_Number" X="4" Y="3" Enable="false">
                                <DataBinding ColumnKey="Aircraft_Type_Number" DefaultFormulaValue="GetDictValue('CHCS_Aircraft',Aircraft_Number, 'Short_Type')" TableKey="CHCS_Transfer_H" ValueDependency="Aircraft_Number"/>
                            </TextEditor>
                            <Label Key="Lab_Aircraft_Type_Number" Caption="机型" X="3" Y="3"/>
                            <RowDefCollection RowGap="6" RowHeight="30">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="20">
                                <ColumnDef Width="75px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="113px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="94px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Caption="系统信息" Height="pref" Key="SystemInfo" Padding="10px">
                            <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                            <Dict BuddyKey="L_CREATOR" Caption="创建人" Enable="false" ItemKey="Operator" Key="CREATOR" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="Creator" DefaultFormulaValue="GetOperator()" TableKey="CHCS_Transfer_H"/>
                            </Dict>
                            <DatePicker Caption="修改时间" Enable="false" Key="MODIFYTIME" X="5" XSpan="2" Y="1">
                                <DataBinding ColumnKey="ModifyTime" DefaultFormulaValue="ServerDate()" TableKey="CHCS_Transfer_H"/>
                                <Format HAlign="Center"/>
                            </DatePicker>
                            <Label Caption="修改时间" Key="L_MODIFYTIME" X="4" Y="1"/>
                            <DatePicker Caption="创建时间" Enable="false" Key="CREATETIME" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="CreateTime" DefaultFormulaValue="ServerDate()" TableKey="CHCS_Transfer_H"/>
                                <Format HAlign="Center"/>
                            </DatePicker>
                            <Label Caption="创建时间" Key="L_CREATETIME" X="4" Y="0"/>
                            <Dict Caption="修改人" Enable="false" ItemKey="Operator" Key="MODIFIER" X="1" XSpan="2" Y="1">
                                <DataBinding ColumnKey="Modifier" DefaultFormulaValue="GetOperator()" TableKey="CHCS_Transfer_H"/>
                            </Dict>
                            <Label Caption="修改人" Key="L_MODIFIER" X="0" Y="1"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <TabPanel Caption="TabPanel2" Key="TabPanel2">
                        <Grid Key="Grid1" Caption="调拨单明细">
                            <GridColumnCollection>
                                <GridColumn Key="Material_Name" Caption="物资名称" Width="126px"/>
                                <GridColumn Key="Specification_Model" Caption="规格型号" Width="125px"/>
                                <GridColumn Key="Quantity" Caption="调拨数量" Width="117px"/>
                                <GridColumn Key="Real_Quantity" Caption="实配数量" Width="111px"/>
                                <GridColumn Key="Unit" Caption="单位" Width="113px"/>
                                <GridColumn Key="Urgency" Caption="紧急程度" Width="115px"/>
                                <GridColumn Key="Remark" Caption="备注" Width="177px"/>
                            </GridColumnCollection>
                            <GridRowCollection>
                                <GridRow Key="row1" TableKey="CHCS_Transfer_L">
                                    <GridCell Key="Material_Name" Caption="物资名称" CellType="Dict" ItemKey="CHCS_Product">
                                        <DataBinding ColumnKey="Material_Name"/>
                                        <ItemFilter>
                                            <Filter Query="select oid from CHCS_Product where Type=(select oid from LRP_Lookup_L where code='CPLX-CJ')" Type="DataSet"/>
                                        </ItemFilter>
                                    </GridCell>
                                    <GridCell Key="Specification_Model" Caption="规格型号" CellType="TextEditor">
                                        <DataBinding ColumnKey="Specification_Model"/>
                                    </GridCell>
                                    <GridCell Key="Quantity" Caption="调拨数量" CellType="NumberEditor" Format="" IntegerValue="true" Scale="0">
                                        <DataBinding ColumnKey="Quantity"/>
                                    </GridCell>
                                    <GridCell Key="Real_Quantity" Caption="实配数量" CellType="NumberEditor" Format="" IntegerValue="true">
                                        <DataBinding ColumnKey="Real_Quantity"/>
                                    </GridCell>
                                    <GridCell Key="Unit" Caption="单位" CellType="Dict" ItemKey="LRP_Lookup_L">
                                        <DataBinding ColumnKey="Unit"/>
                                        <ItemFilter>
                                            <Filter Query="select oid  from LRP_Lookup_L where HeadCode='DW'" Type="DataSet"/>
                                        </ItemFilter>
                                    </GridCell>
                                    <GridCell Key="Urgency" Caption="紧急程度" CellType="ComboBox" IntegerValue="true">
                                        <DataBinding ColumnKey="Urgency"/>
                                        <Item Caption="一般" Key="0" Value="0"/>
                                        <Item Caption="紧急" Key="1" Value="1"/>
                                    </GridCell>
                                    <GridCell Key="Remark" Caption="备注" CellType="TextEditor">
                                        <DataBinding ColumnKey="Remark"/>
                                    </GridCell>
                                </GridRow>
                            </GridRowCollection>
                        </Grid>
                    </TabPanel>
                    <SplitSize Size="40%"/>
                    <SplitSize Size="60%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
