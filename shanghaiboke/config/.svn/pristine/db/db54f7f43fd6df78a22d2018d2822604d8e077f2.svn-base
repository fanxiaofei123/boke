<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Caption="货主用户" FormType="Dict" Key="V_OwnerUser_LRP">
    <DataSource RefObjectKey="LRP_OwnerUser"/>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Description="载入事件" Range="Action" Verb="Load">
            <![CDATA[LoadData()]]>
        </Script>
    </ScriptCollection>
	<UICheckRuleCollection>
        <UICheckRule Description="代码至少包含一个非数字字符" ErrorInfo="代码至少包含一个非数字字符">
            <![CDATA[
					
				!InvokeUnsafeService('LRP_IsNaN', false, false , Code)
		]]>
        </UICheckRule>
    </UICheckRuleCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <TabPanel Caption="TabPanel0" Key="TabPanel0" Height="pref">
                    <GridLayoutPanel Caption="基本信息" Key="BasicTab" Padding="10px">
                        <TextEditor BuddyKey="L_Code" Caption="代码" Enable="!ReadOnly()" Key="Code" Tip="「代码」不可为空" X="1" XSpan="3" Y="0">
                            <DataBinding ColumnKey="Code" TableKey="LRP_OwnerUser" Required="true"/>
                        </TextEditor>
                        <TextEditor BuddyKey="L_Name" Caption="名称" Enable="!ReadOnly()" Key="Name" Tip="「名称」不可为空" X="6" XSpan="3" Y="0">
                            <DataBinding ColumnKey="Name" TableKey="LRP_OwnerUser" Required="true"/>
                        </TextEditor>
                        <Label Caption="代码" Key="L_Code" X="0" Y="0"/>
                        <Label Caption="名称" Key="L_Name" X="5" Y="0"/>
                        <TextEditor BuddyKey="L_RealName" Caption="真实姓名" Enable="!ReadOnly()" Key="RealName" Tip="「真实姓名」不可为空" X="1" XSpan="3" Y="1">
                            <DataBinding ColumnKey="RealName" TableKey="LRP_OwnerUser" Required="true"/>
                        </TextEditor>
                        <Dict BuddyKey="L_OwnerId" Caption="所属货主" Enable="!ReadOnly()" Key="OwnerId" ItemKey="LRP_Owner" Tip="「所属货主」不可为空" X="6" XSpan="3" Y="1">
                            <DataBinding ColumnKey="OwnerId" TableKey="LRP_OwnerUser" Required="true"/>
                        </Dict>
                        <Label Caption="真实姓名" Key="L_RealName" X="0" Y="1"/>
                        <Label Caption="所属货主" Key="L_OwnerId" X="5" Y="1"/>
                        <TextEditor BuddyKey="L_Nickname" Caption="昵称" Enable="!ReadOnly()" Key="Nickname" X="1" XSpan="3" Y="2">
                            <DataBinding ColumnKey="Nickname" TableKey="LRP_OwnerUser"/>
                        </TextEditor>
                        <TextEditor BuddyKey="L_Mobile" Caption="手机" Enable="!ReadOnly()" Key="Mobile" Tip="「手机」不可为空" X="6" XSpan="3" Y="2">
                            <DataBinding ColumnKey="Mobile" TableKey="LRP_OwnerUser" Required="true"/>
                        </TextEditor>
                        <Label Caption="昵称" Key="L_Nickname" X="0" Y="2"/>
                        <Label Caption="手机" Key="L_Mobile" X="5" Y="2"/>
                        <Dict BuddyKey="L_DefaultWarehouseCenterId" Caption="默认仓储中心" Enable="!ReadOnly()" Key="DefaultWarehouseCenterId" ItemKey="LRP_WarehouseCenter" X="1" XSpan="3" Y="3">
                            <DataBinding ColumnKey="DefaultWarehouseCenterId" TableKey="LRP_OwnerUser"/>
                        </Dict>
                        <Label Caption="默认仓储中心" Key="L_DefaultWarehouseCenterId" X="0" Y="3"/>
                        <Dict BuddyKey="L_DefaultDispatchOrgId" Caption="默认调度组织" Enable="!ReadOnly()" Key="DefaultDispatchOrgId" ItemKey="LRP_DispatchOrg" X="1" XSpan="3" Y="4">
                            <DataBinding ColumnKey="DefaultDispatchOrgId" TableKey="LRP_OwnerUser"/>
                        </Dict>
                        <Label Caption="默认调度组织" Key="L_DefaultDispatchOrgId" X="0" Y="4"/>
                        <Image Key="Logo" Caption="头像" BuddyKey="Lab_AvatarUrl" X="6" Y="3" ImageScaleType="Fit_Center" MaxSize="2048" Stretch="true" XSpan="3" YSpan="2">
                            <DataBinding ColumnKey="Logo" TableKey="LRP_OwnerUser"/>
                        </Image>
                        <Label Key="Lab_AvatarUrl" Caption="头像" X="5" Y="3"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <GridLayoutPanel Caption="系统信息" Key="SystemTab" Padding="10px">
                        <Dict Caption="创建人" ItemKey="Operator" Key="CREATOR" X="1" Y="0">
                            <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_OwnerUser"/>
                        </Dict>
                        <DatePicker Caption="创建时间" Key="CREATETIME" X="1" Y="1">
                            <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_OwnerUser"/>
                        </DatePicker>
                        <Dict Caption="修改人" ItemKey="Operator" Key="MODIFIER" X="1" Y="2">
                            <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_OwnerUser"/>
                        </Dict>
                        <DatePicker Caption="修改时间" Key="MODIFYTIME" X="1" Y="3">
                            <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_OwnerUser"/>
                        </DatePicker>
                        <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                        <Label Caption="创建时间" Key="L_CREATETIME" X="0" Y="1"/>
                        <Label Caption="修改人" Key="L_MODIFIER" X="0" Y="2"/>
                        <Label Caption="修改时间" Key="L_MODIFYTIME" X="0" Y="3"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="100%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                </TabPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
