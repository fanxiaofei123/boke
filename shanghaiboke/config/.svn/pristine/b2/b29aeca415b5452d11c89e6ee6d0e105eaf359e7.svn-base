<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form AbbrCaption="车辆安检单序事簿" Caption="车辆安检单序事簿" FormType="View" Key="V_TruckCheckView">
    <DataSource>
        <DataObject Caption="车辆安检单序事簿" Key="V_TruckCheckView" PrimaryTableKey="LRP_TruckCheck_H">
            <TableCollection>
                <Table Key="LRP_TruckCheck_H" Persist="false" SourceType="Query" TableMode="Detail">
                    <Column Caption="对象标识" DBColumnName="OID" DataType="Long" Key="OID"/>
                    <Column Caption="父对象标识" DBColumnName="POID" DataType="Long" Key="POID"/>
                    <Column Caption="主对象标识" DBColumnName="SOID" DataType="Long" Key="SOID"/>
                    <Column Caption="对象版本" DBColumnName="VERID" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DBColumnName="DVERID" DataType="Integer" Key="DVERID"/>
                    <Column Caption="安检单号" DataType="Varchar" Key="No" SortType="Desc"/>
                    <Column Key="FleetId" Caption="车队" DataType="Long"/>
                    <Column Key="TruckId" Caption="车辆id" DataType="Long"/>
                    <Column Key="LicenseNo" Caption="牌照号" DataType="Varchar" Length="40"/>
                    <Column Key="CheckDate" Caption="安检日期" DataType="DateTime"/>
                    <Column Key="Result" Caption="检查结果" DataType="Integer"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="Remark" Caption="备注" DataType="Varchar" Length="1000"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="新增" Icon="new.png" Key="New">
            <Action>
                <![CDATA[
				New('V_TruckCheck');	
			]]>
            </Action>
        </Operation>
        <Operation Caption="删除" Key="BatchDelete">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
					return true;
				}
			   if(!CheckListSelectStatus(',100,')){	
			        Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
					return true;
			   }
			  Confirm('确定要将选中的记录进行删除吗？','YES_NO',{YES:{BatchDeleteData('LRP_TruckCheck', 'LRP_TruckCheck_H');
			            LoadData();ShowData();
					  },NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
        <Operation Key="BatchCancel" Caption="作废" RefKey="BatchCancel"/>
        <Operation Key="BatchCancelR" Caption="撤销作废" RefKey="BatchCancel-R"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Height="100%" Key="main" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="base_split" Orientation="Vertical" X="0" Y="1">
                    <GridLayoutPanel Caption="查询字段" Height="100%" Key="query" Padding="5px">
                        <TextEditor Caption="DataObjectKey" Enable="false" Key="DataObjectKey" Visible="false" X="10" Y="2">
                            <DataBinding DefaultValue="LRP_TruckCheck"/>
                        </TextEditor>
                        <Label Caption="安检单号" Key="L_NoticeNo" X="0" Y="0"/>
                        <TextEditor BuddyKey="L_NoticeNo" Caption="安检单号" Key="NoticeNo" X="1" XSpan="3" Y="0">
                            <Condition ColumnKey="No" TableKey="LRP_TruckCheck_H" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_FleetId" Caption="车队" X="5" Y="0"/>
                        <Dict Key="FleetId" Caption="车队" BuddyKey="Lab_FleetId" X="6" Y="0" AllowMultiSelection="true" ItemKey="LRP_Fleet" XSpan="3">
                            <Condition ColumnKey="FleetId" TableKey="LRP_TruckCheck_H" CondSign="in"/>
                        </Dict>
                        <Label Key="Lab_LicenseNo" Caption="车牌号" X="0" Y="1"/>
                        <TextEditor Key="LicenseNo" Caption="车牌号" BuddyKey="Lab_LicenseNo" X="1" Y="1" XSpan="3">
                            <Condition ColumnKey="LicenseNo" TableKey="LRP_TruckCheck_H" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_CheckDateStart" Caption="安检日期时间" X="0" Y="2"/>
                        <Label Key="Lab_CheckDateEnd" Caption="至" X="5" Y="2"/>
                        <DatePicker Key="CheckDateStart" Caption="安检日期时间" BuddyKey="Lab_CheckDateStart" X="1" Y="2" XSpan="3">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                            <Condition ColumnKey="CheckDate" TableKey="LRP_TruckCheck_H" CondSign="between" Group="CheckDate" GroupHead="true"/>
                        </DatePicker>
                        <Button Caption="查询" Enable="true" Key="Query" X="10" Y="0">
                            <OnClick>
                                <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                            </OnClick>
                        </Button>
                        <DatePicker Key="CheckDateEnd" Caption="至" BuddyKey="Lab_CheckDateEnd" X="6" Y="2" XSpan="3">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                            <Condition ColumnKey="CheckDate" TableKey="LRP_TruckCheck_H" CondSign="in" Group="CheckDate" GroupTail="true"/>
                        </DatePicker>
                        <Button Caption="重置" Enable="true" Key="cancel" X="10" Y="1">
                            <OnClick>
                                <![CDATA[
								ResetCondition();	
								]]>
                            </OnClick>
                        </Button>
                        <ComboBox Key="Result_H" Caption="检查结果" BuddyKey="Lab_Result_H" X="6" Y="1" XSpan="3">
                            <Condition ColumnKey="Result" TableKey="LRP_TruckCheck_H" CondSign="like"/>
                            <Item Caption="未通过" Key="0" Value="0"/>
                            <Item Caption="通过" Key="1" Value="1"/>
                        </ComboBox>
                        <Label Key="Lab_Result_H" Caption="检查结果" X="5" Y="1"/>
                        <CheckListBox Key="Status_C" Caption="状态" BuddyKey="Lab_Status_C" X="1" Y="3" XSpan="3">
                            <Condition ColumnKey="Status" TableKey="LRP_TruckCheck_H" CondSign="in"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已完成" Key="finished" Value="900"/>
                            <Item Caption="已作废" Key="cancelled" Value="20"/>
                        </CheckListBox>
                        <Label Key="Lab_Status_C" Caption="状态" X="0" Y="3"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Key="ListView0" TableKey="LRP_TruckCheck_H" PageLoadType="DB">
                        <ListViewColumnCollection>
                            <ListViewColumn Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" Key="OID" Visible="false" Width="93px"/>
                            <ListViewColumn Caption="选择" ColumnType="CheckBox" Key="Select" IsSelect="true" Width="80px"/>
                            <ListViewColumn Caption="状态" ColumnType="ComboBox" Key="Status" SourceType="Status" Width="74px" DataColumnKey="Status"/>
                            <ListViewColumn Key="No_LV" Caption="安检单号" ColumnType="HyperLink" DataColumnKey="No" Width="130px">
                                <OnClick>
                                    <![CDATA[Open('V_TruckCheck', OID);]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="FleetId_LV" Caption="车队" ColumnType="Dict" DataColumnKey="FleetId" Width="100px" ItemKey="LRP_Fleet"/>
                            <ListViewColumn Key="TruckId" Caption="车辆" ColumnType="Dict" DataColumnKey="TruckId" ItemKey="LRP_Truck"/>
                            <ListViewColumn Key="LicenseNo_LV" Caption="牌照号" ColumnType="TextEditor" DataColumnKey="LicenseNo"/>
                            <ListViewColumn Key="CheckDate_LV" Caption=" 安检日期" ColumnType="DatePicker" DataColumnKey="CheckDate" Width="130px"/>
                            <ListViewColumn Key="Result" Caption=" 检查结果" ColumnType="ComboBox" DataColumnKey="Result" Width="80px">
                                <Item Caption="未通过" Key="0" Value="0"/>
                                <Item Caption="通过" Key="1" Value="1"/>
                            </ListViewColumn>
                            <ListViewColumn Caption="备注" ColumnType="TextEditor" Key="Remark" Width="80px" DataColumnKey="Remark"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[
							Open('V_TruckCheck', OID)	
						]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="155px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
