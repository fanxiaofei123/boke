<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form AbbrCaption="补货策略序事簿" Caption="补货策略序事簿" FormType="View" Key="V_ReplenishStrategyView">
    <DataSource>
        <DataObject Caption="补货策略序事簿" Key="V_ReplenishStrategyView">
            <TableCollection>
                <Table Key="LRP_ReprenishStrategy_H" Persist="false" SourceType="Query" TableMode="Detail">
                    <Column Caption="对象标识" DataType="Long" Key="OID"/>
                    <Column Caption="主对象标识" DataType="Long" Key="SOID"/>
                    <Column Caption="父对象标识" DataType="Long" Key="POID"/>
                    <Column Caption="对象版本" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DataType="Integer" Key="DVERID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建人" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改人" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Caption="策略号" Key="No" DataType="Varchar" Length="100" SortType="Desc"/>
                    <Column Caption="策略名称" Key="Name" DataType="Varchar" Length="100"/>
                    <Column Caption="仓储中心" Key="WarehouseCenterId" DataType="Long"/>
                    <Column Caption="策略类型" Key="StrategyType" DataType="Integer"/>
                    <Column Caption="允许紧急补货" Key="CanUseInstant" DataType="Integer"/>
                    <Column Caption="备注" Key="Remarks" DataType="Varchar" Length="1000"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="新增" Icon="new.png" Key="New">
            <Action>
                <![CDATA[
				New('V_ReplenishStrategy')
			]]>
            </Action>
        </Operation>
        <Operation Caption="确认" Key="BatchConfirm" RefKey="BatchConfirm"/>
        <Operation Caption="撤销确认" Key="BatchConfirm-R">
            <Action>
                <![CDATA[
					if(CheckListNoSelect()){
						Confirm(LocaleString('CommonDef','key20'),'OK','OK:{}');
						return true;
					}
					if(!CheckListSelectStatus(',200,')){
						Confirm(LocaleString('CommonDef','key21'),'OK','OK:{}');
						return true;
					}	
					Confirm(LocaleString('CommonDef','key22'),'YES_NO',{YES:{
						loop "ListView0" (true)
						{			
							if(Select == true)
							{ 
								//查询选中的订单拣货策略是否被物料引用
								var count=DBNamedQueryValue("SMaStrategy",OID);
								if(count==0){
									InvokeService("LRP_BillStatusChange", false, false,GetDataObjectKey('V_ReplenishStrategy'),OID,100,-1);
									LoadData();ShowData();
								}else{
									Confirm(LocaleParaFormat('STshow','stkey13',Name_LV),'OK','OK{}');
									return true;
								}
							}					
						}
					},NO:{}});
			]]>
            </Action>
        </Operation>
        <Operation Caption="作废" Key="BatchCancel" RefKey="BatchCancel"/>
        <Operation Caption="撤销作废" Key="BatchCancel-R" RefKey="BatchCancel-R"/>
        <Operation Caption="删除" Key="Delete">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm(LocaleString('OwnerNull','key100'),'OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',100,')){
					Confirm(LocaleString('CommonDef','key36'),'OK','OK:{}');
					return true;
				}	
				Confirm(LocaleString('OwnerNull','key102'),'YES_NO',{YES:{BatchDeleteData('LRP_ReprenishStrategy', 'LRP_ReprenishStrategy_H');LoadData();ShowData();},NO:{}});
				]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <QueryCollection>
        <Query Key="SMaStrategy" Description="查找物料-仓储策略中策略是本策略的个数">
            <Statement>
                <![CDATA[select count(*) as count from LRP_MaterialStrategy where StrategyId= ?]]>
            </Statement>
            <ParameterCollection>
                <Parameter DataType="Long"/>
            </ParameterCollection>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <GridLayoutPanel Height="100%" Key="main" Padding="0px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="main_split" Orientation="Vertical" X="0" Y="1">
                    <GridLayoutPanel Caption="查询字段" Height="100%" Key="query" Padding="10px">
                        <TextEditor Key="No" Caption="补货策略号" BuddyKey="Lab_No" X="1" Y="0" XSpan="3">
                            <Condition ColumnKey="No" TableKey="LRP_ReprenishStrategy_H" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_No" Caption="补货策略号" X="0" Y="0"/>
                        <TextEditor Key="Name" Caption="策略名称" BuddyKey="Lab_Name" X="6" Y="0" XSpan="3">
                            <Condition ColumnKey="Name" TableKey="LRP_ReprenishStrategy_H" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Name" Caption="策略名称" X="5" Y="0"/>
                        <CheckListBox BuddyKey="Lab_StrategyType" Caption="策略类型" Key="StrategyType" X="1" Y="1" XSpan="3">
                            <Condition ColumnKey="StrategyType" TableKey="LRP_ReprenishStrategy_H" CondSign="in"/>
                            <Item Caption="补至空储位" Key="StrategyType0" Value="0"/>
                            <Item Caption="补至固定储位" Key="StrategyType1" Value="1"/>
                            <Item Caption="补至现有库存" Key="StrategyType2" Value="2"/>
                        </CheckListBox>
                        <Label Key="Lab_StrategyType" Caption="策略类型" X="0" Y="1"/>
                        <CheckListBox BuddyKey="Lab_Status" Caption="状态" Key="Status_H" X="6" XSpan="3" Y="1">
                            <Condition ColumnKey="Status" TableKey="LRP_ReprenishStrategy_H" CondSign="in"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                            <Item Caption="已作废" Key="cancelled" Value="20"/>
                        </CheckListBox>
                        <Label Key="Lab_Status" Caption="状态" X="5" Y="1"/>
                        <Dict Key="WarehouseCenterId" Caption="仓储中心" BuddyKey="Lab_WarehouseCenterId" Visible="false" X="1" Y="2" ItemKey="LRP_WarehouseCenter">
                            <DataBinding DefaultFormulaValue="getCurOrgID()"/>
                            <Condition ColumnKey="WarehouseCenterId" TableKey="LRP_ReprenishStrategy_H" Visible="false" CondSign="="/>
                        </Dict>
                        <Label Key="Lab_WarehouseCenterId" Caption="仓储中心" Visible="false" X="0" Y="2"/>
                        <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                            <OnClick>
                                <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                            </OnClick>
                        </Button>
                        <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                            <OnClick>
                                <![CDATA[
								ResetCondition();	SetValue('WarehouseCenterId',getCurOrgID());
								]]>
                            </OnClick>
                        </Button>
                        <TextEditor Key="DataObjectKey" Caption="数据源key" BuddyKey="Lab_DataObjectKey" X="6" Y="2" Visible="false" XSpan="3">
                            <DataBinding DefaultValue="LRP_ReprenishStrategy"/>
                        </TextEditor>
                        <Label Key="Lab_DataObjectKey" Caption="数据源key" Visible="false" X="5" Y="2"/>
                        <RowDefCollection RowHeight="25" RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" RowAlterable="false" TableKey="LRP_ReprenishStrategy_H">
                        <ListViewColumnCollection>
                            <ListViewColumn Caption="选择" ColumnType="CheckBox" Key="Select" IsSelect="true" Width="80px"/>
                            <ListViewColumn Caption="对象标识" ColumnType="TextEditor" Key="OID" Visible="false" DataColumnKey="OID"/>
                            <ListViewColumn Caption="状态" ColumnType="ComboBox" Enable="false" Key="Status" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="补货策略号" ColumnType="HyperLink" DataColumnKey="No">
                                <OnClick>
                                    <![CDATA[Open('V_ReplenishStrategy', OID)]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="Name_LV" Caption="策略名称" ColumnType="TextEditor" DataColumnKey="Name" Enable="false"/>
                            <ListViewColumn Key="StrategyType_LV" Caption="策略类型" ColumnType="ComboBox" DataColumnKey="StrategyType" Enable="false">
                                <Item Caption="补至空储位" Key="StrategyType0" Value="0"/>
                                <Item Caption="补至固定储位" Key="StrategyType1" Value="1"/>
                                <Item Caption="补至现有库存" Key="StrategyType2" Value="2"/>
                            </ListViewColumn>
                            <ListViewColumn Key="CanUseInstant_LV" Caption="允许紧急补货" ColumnType="CheckBox" DataColumnKey="CanUseInstant" Enable="false" Visible="false" DefaultValue="0"/>
                            <ListViewColumn Key="Remarks_LV" Caption="备注" ColumnType="TextEditor" DataColumnKey="Remarks" Enable="false"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_ReplenishStrategy', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="90px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="30">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
