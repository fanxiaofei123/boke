<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Caption="用户积分规则" FormType="Entity" Key="V_UserPointsRule" ViewKey="V_UserPointsRuleView">
    <DataSource RefObjectKey="LRP_UserPointsRule"/>
    <OperationCollection>
        <Operation Caption="新增" Key="New" Visible="ReadOnly()">
            <Action>
                <![CDATA[
				New('V_UserPointsRule');
			]]>
            </Action>
        </Operation>
        <Operation Caption="复制新增" Key="CopyNew" RefKey="CopyNew" ShortCuts="Ctrl+E"/>
        <Operation Caption="保存" Key="Save" Visible="!ReadOnly()">
            <Action>
                <![CDATA[
			    SaveData(); UpdateView();
				]]>
            </Action>
        </Operation>
        <Operation Caption="编辑" Key="Edit" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Caption="删除" Key="Delete" Visible="ReadOnly()&amp;&amp;Status==StatusValue('prepared')">
            <Action>
                <![CDATA[
			Confirm('是否确定删除当前单据？','YES_NO',{YES:{DeleteData();UpdateView();Close();},NO:{}});
			
			]]>
            </Action>
        </Operation>
        <Operation Caption="取消" Key="Cancel" RefKey="Cancel"/>
        <Operation Caption="确认" Key="Confirm" RefKey="Confirm"/>
        <Operation Caption="撤销确认" Key="Confirm-R">
            <Action>
                <![CDATA[var addrecords  = DBNamedQueryValue("addrecords", GetOID());
if(addrecords>0){
	Confirm('用户积分增加记录中存在该规则，不能撤销确认!','OK','OK:{}');
	return true;
}else{
Status=StatusValue('prepared');SaveData();UpdateView();
}]]>
            </Action>
        </Operation>
        <Operation Caption="作废" Key="ToCancel" RefKey="ToCancel"/>
        <Operation Caption="撤销作废" Key="ToCancel-R" RefKey="ToCancel-R"/>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <QueryCollection>
        <Query Key="addrecords">
            <Statement>
                <![CDATA[select count(*) as num from LRP_AddRecords h where  h.UserPointsRuleId = ?]]>
            </Statement>
            <ParameterCollection>
                <Parameter DataType="Long"/>
            </ParameterCollection>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Caption="根面板" Key="root">
                <ToolBar Caption="ToolBar1" Height="pref" Key="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="main_split" Orientation="Vertical">
                    <TabPanel Caption="TabPanel1" Height="pref" Key="TabPanel1">
                        <GridLayoutPanel Caption="基本信息" Key="first_head" Padding="5px">
                            <TextEditor Key="RuleNo" Caption="规则号" BuddyKey="Lab_RuleNo" X="1" Y="0" Enable="false" AsQuery="true">
                                <DataBinding ColumnKey="No" TableKey="LRP_UserPointsRule_H"/>
                            </TextEditor>
                            <Label Key="Lab_RuleNo" Caption="规则号" X="0" Y="0"/>
                            <TextEditor Key="name" Caption="规则名称" BuddyKey="Lab_name" X="4" Y="0" Enable="!ReadOnly()" AsQuery="true">
                                <DataBinding ColumnKey="Name" TableKey="LRP_UserPointsRule_H" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_name" Caption="规则名称" X="3" Y="0"/>
                            <ComboBox BuddyKey="Lab_Status" Caption="状态" Enable="false" Key="Status" SourceType="Status" X="7" Y="2" AsQuery="true">
                                <DataBinding ColumnKey="Status" TableKey="LRP_UserPointsRule_H" DefaultValue="100"/>
                            </ComboBox>
                            <Label Caption="状态" Key="Lab_Status" X="6" Y="2"/>
                            <TextEditor BuddyKey="Lab_Remark" Caption="备注" Enable="!ReadOnly()" Key="Remark" X="1" XSpan="4" Y="4" AsQuery="true">
                                <DataBinding ColumnKey="Remarks" TableKey="LRP_UserPointsRule_H"/>
                            </TextEditor>
                            <Label Caption="备注" Key="Lab_Remark" X="0" Y="4"/>
                            <ComboBox Key="OpType" Caption="操作类型" BuddyKey="Lab_OpType" X="7" Y="0" AsQuery="true">
                                <DataBinding ColumnKey="OpType" TableKey="LRP_UserPointsRule_H" Required="true"/>
                                <Item Caption="下单" Key="order" Value="order"/>
                                <Item Caption="充值" Key="charge" Value="charge"/>
                            </ComboBox>
                            <Label Key="Lab_OpType" Caption="操作类型" X="6" Y="0"/>
                            <ComboBox Key="PointsType" Caption="积分类型" BuddyKey="Lab_PointsType" X="1" Y="1" AsQuery="true" IntegerValue="true">
                                <DataBinding ColumnKey="PointsType" TableKey="LRP_UserPointsRule_H" DefaultValue="1" Required="true">
                                    <ValueChanged>
                                        <![CDATA[SetValue('FixedValue',0);SetValue('CV',0);]]>
                                    </ValueChanged>
                                </DataBinding>
                                <Item Caption="固定值" Key="1" Value="1"/>
                                <Item Caption="业务量*变动系数" Key="2" Value="2"/>
                            </ComboBox>
                            <Label Key="Lab_PointsType" Caption="积分类型" X="0" Y="1"/>
                            <NumberEditor Key="FixedValue" Caption="固定值" BuddyKey="Lab_FixedValue" X="4" Y="1" Enable="!ReadOnly()&amp;&amp;PointsType==1" AsQuery="true">
                                <DataBinding ColumnKey="FixedValue" CheckRule="IIF(PointsType=='1',FixedValue&gt;0,true)" TableKey="LRP_UserPointsRule_H" ErrorInfo="不可为空"/>
                            </NumberEditor>
                            <Label Key="Lab_FixedValue" Caption="固定值" X="3" Y="1"/>
                            <NumberEditor Key="CV" Caption="变动系数" BuddyKey="Lab_CV" X="7" Y="1" Enable="!ReadOnly()&amp;&amp;PointsType==2" AsQuery="true">
                                <DataBinding ColumnKey="CV" CheckRule="IIF(PointsType=='2',CV&gt;0,true)" TableKey="LRP_UserPointsRule_H" ErrorInfo="不可为空"/>
                            </NumberEditor>
                            <Label Key="Lab_CV" Caption="变动系数" X="6" Y="1"/>
                            <NumberEditor Key="Expire" Caption="效期" BuddyKey="Lab_Expire" X="1" Y="2" AsQuery="true" Scale="0">
                                <DataBinding ColumnKey="Expire" TableKey="LRP_UserPointsRule_H" Required="true"/>
                            </NumberEditor>
                            <Label Key="Lab_Expire" Caption="效期" X="0" Y="2"/>
                            <ComboBox Key="ExpireUnit" Caption="效期单位" BuddyKey="Lab_ExpireUnit" X="4" Y="2" AsQuery="true">
                                <DataBinding ColumnKey="ExpireUnit" TableKey="LRP_UserPointsRule_H" Required="true"/>
                                <Item Caption="日" Key="D" Value="D"/>
                                <Item Caption="月" Key="M" Value="M"/>
                                <Item Caption="年" Key="Y" Value="Y"/>
                            </ComboBox>
                            <Label Key="Lab_ExpireUnit" Caption="效期单位" X="3" Y="2"/>
                            <DatePicker Key="EffectiveDate" Caption="生效日期" BuddyKey="Lab_EffectiveDate" X="1" Y="3" AsQuery="true" OnlyDate="true">
                                <DataBinding ColumnKey="EffectiveDate" TableKey="LRP_UserPointsRule_H"/>
                            </DatePicker>
                            <Label Key="Lab_EffectiveDate" Caption="生效日期" X="0" Y="3"/>
                            <DatePicker Key="ExpireDate" Caption="失效日期" BuddyKey="Lab_ExpireDate" X="4" Y="3" AsQuery="true" OnlyDate="true">
                                <DataBinding ColumnKey="ExpireDate" TableKey="LRP_UserPointsRule_H"/>
                            </DatePicker>
                            <Label Key="Lab_ExpireDate" Caption="失效日期" X="3" Y="3"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="99px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Caption="系统信息" Height="pref" Key="SystemInfo" Padding="10px">
                            <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                            <Dict BuddyKey="L_CREATOR" Caption="创建人" Enable="false" ItemKey="Operator" Key="CREATOR" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_UserPointsRule_H"/>
                            </Dict>
                            <DatePicker Caption="修改时间" Enable="false" Key="MODIFYTIME" X="5" XSpan="2" Y="1">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_UserPointsRule_H"/>
                            </DatePicker>
                            <Label Caption="修改时间" Key="L_MODIFYTIME" X="4" Y="1"/>
                            <DatePicker Caption="创建时间" Enable="false" Key="CREATETIME" X="1" XSpan="2" Y="1">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_UserPointsRule_H"/>
                            </DatePicker>
                            <Label Caption="创建时间" Key="L_CREATETIME" X="0" Y="1"/>
                            <Dict Caption="修改人" Enable="false" ItemKey="Operator" Key="MODIFIER" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_UserPointsRule_H"/>
                            </Dict>
                            <Label Caption="修改人" Key="L_MODIFIER" X="4" Y="0"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef MinWidth="50px" Width="50%"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef MinWidth="50px" Width="50%"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <TabPanel Caption="TabPanel2" Height="pref" Key="TabPanel2">
                        <Grid Caption="用户等级附加系数明细" Key="Grid0" Enable="!ReadOnly()">
                            <GridColumnCollection>
                                <GridColumn Key="UserLevel" Caption="用户等级" Width="80px"/>
                                <GridColumn Key="CV_l" Caption="变动系数" Width="80px"/>
                            </GridColumnCollection>
                            <GridRowCollection>
                                <GridRow Key="row1" RowHeight="35" TableKey="LRP_UPR_UserLevel_L">
                                    <GridCell Key="UserLevel" Caption="用户等级" CellType="NumberEditor" Scale="0">
                                        <DataBinding ColumnKey="UserLevel"/>
                                    </GridCell>
                                    <GridCell Key="CV_l" Caption="变动系数" CellType="NumberEditor" Enable="!ReadOnly()">
                                        <DataBinding ColumnKey="CV"/>
                                    </GridCell>
                                </GridRow>
                            </GridRowCollection>
                        </Grid>
                    </TabPanel>
                    <SplitSize Size="190px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
