<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_T_ExpenseContract_LRPView" Caption="承运商费用合约序事簿" FormType="View" AbbrCaption="承运商费用合约序事簿">
    <DataSource>
        <DataObject Key="V_T_ExpenseContract_LRPView" Caption="承运商费用合约序事簿" PrimaryTableKey="LRP_T_ExpenseContract_H">
            <TableCollection>
                <Table Key="LRP_T_ExpenseContract_H" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="No" Caption="合约号" DataType="Varchar" Length="100" SortType="Desc"/>
                    <Column Key="Name" Caption="合约名称" DataType="Varchar" Length="400"/>
                    <Column Key="CarrierId" Caption="承运商" DataType="Long"/>
                    <Column Key="SettlementId" Caption="结算方" DataType="Long"/>
                    <Column Key="DispatchOrgId" Caption="调度组织" DataType="Long"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="CarrierNo" Caption="承运商合约号" DataType="Varchar" Length="100"/>
                    <Column Key="EffectiveDate" Caption="生效日期" DataType="Date"/>
                    <Column Key="ExpireDate" Caption="截止日期" DataType="Date"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('V_T_ExpenseContract_LRP')]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirm" Caption="确认" RefKey="BatchConfirm"/>
        <Operation Key="BatchConfirm-R" Caption="撤销确认" RefKey="BatchConfirm-R"/>
        <Operation Key="BatchCancel" Caption="作废" RefKey="BatchCancel"/>
        <Operation Key="BatchCancel-R" Caption="撤销作废" RefKey="BatchCancel-R"/>
        <Operation Caption="删除" Key="BatchDelete">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm(LocaleString('CommonDef','key35'),'OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',100,')){
                        Confirm(LocaleString('CommonDef','key36'),'OK','OK:{}');
						return true;	
                }						
				Confirm(LocaleString('CommonDef','key37'),'YES_NO',{
				YES:{BatchDeleteData('LRP_T_ExpenseContract', 'LRP_T_ExpenseContract_H');LoadData();ShowData();
						},
				NO:{}});]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <GridLayoutPanel Key="query" Height="100%" Padding="10px" Caption="查询字段">
                        <Label Key="L_No" Caption="合约号" X="0" Y="0"/>
                        <TextEditor Key="No" Caption="合约号" BuddyKey="L_No" X="1" Y="0" XSpan="3">
                            <Condition ColumnKey="No" TableKey="LRP_T_ExpenseContract_H" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_Name" Caption="合约名称" X="0" Y="1"/>
                        <TextEditor Key="Name" Caption="合约名称" BuddyKey="L_Name" X="1" Y="1" XSpan="3">
                            <Condition ColumnKey="Name" TableKey="LRP_T_ExpenseContract_H" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_CarrierId" Caption="承运商" X="5" Y="0"/>
                        <Dict Key="CarrierId" Caption="承运商" BuddyKey="L_CarrierId" X="6" Y="0" AllowMultiSelection="true" ItemKey="LRP_Carrier" XSpan="3">
                            <Condition ColumnKey="CarrierId" TableKey="LRP_T_ExpenseContract_H" CondSign="in"/>
                        </Dict>
                        <Label Key="L_SettlementId" Caption="结算方" X="5" Y="1"/>
                        <Dict Key="SettlementId" Caption="结算方" BuddyKey="L_SettlementId" X="6" Y="1" AllowMultiSelection="true" ItemKey="Customer" XSpan="3">
                            <Condition ColumnKey="SettlementId" TableKey="LRP_T_ExpenseContract_H" CondSign="in"/>
                        </Dict>
                        <Label Key="L_DispatchOrgId" Caption="调度组织" X="0" Y="2"/>
                        <Dict Key="DispatchOrgId" Caption="调度组织" BuddyKey="L_DispatchOrgId" X="1" Y="2" AllowMultiSelection="true" ItemKey="LRP_DispatchOrg" XSpan="3">
                            <Condition ColumnKey="DispatchOrgId" TableKey="LRP_T_ExpenseContract_H" CondSign="in"/>
                        </Dict>
                        <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                            <OnClick>
                                <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                            </OnClick>
                        </Button>
                        <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                            <OnClick>
                                <![CDATA[
								ResetCondition();	
								]]>
                            </OnClick>
                        </Button>
                        <CheckListBox BuddyKey="Lab_Status_H" Caption="状态" Key="Status_H" X="6" XSpan="3" Y="2">
                            <Condition ColumnKey="Status" TableKey="LRP_T_ExpenseContract_H" CondSign="in"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                            <Item Caption="已作废" Key="cancelled" Value="20"/>
                        </CheckListBox>
                        <Label Key="Lab_Status_H" Caption="状态" X="5" Y="2"/>
                        <TextEditor Key="DataObjectKey" Caption="数据对象key" BuddyKey="Lab_DataObjectKey" X="10" Y="2" Visible="false">
                            <DataBinding DefaultValue="LRP_T_ExpenseContract"/>
                        </TextEditor>
                        <Label Key="Lab_DataObjectKey" Caption="数据对象key" X="9" Y="2"/>
                        <RowDefCollection RowHeight="30" RowGap="8">
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" TableKey="LRP_T_ExpenseContract_H">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" IsSelect="true"/>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_T_ExpenseContract_H" Visible="false" Width="64px"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="合约号" ColumnType="HyperLink" DataColumnKey="No">
                                <OnClick>
                                    <![CDATA[Open('V_T_ExpenseContract_LRP', OID)]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="Name_LV" Caption="合约名称" ColumnType="TextEditor" DataColumnKey="Name"/>
                            <ListViewColumn Key="CarrierId_LV" Caption="承运商" ColumnType="Dict" DataColumnKey="CarrierId" ItemKey="LRP_Carrier"/>
                            <ListViewColumn Key="CarrierNo" Caption="承运商合约号" ColumnType="TextEditor" DataColumnKey="CarrierNo"/>
                            <ListViewColumn Key="SettlementId_LV" Caption="结算方" ColumnType="Dict" DataColumnKey="SettlementId" ItemKey="Customer"/>
                            <ListViewColumn Key="DispatchOrgId_LV" Caption="调度组织" ColumnType="Dict" DataColumnKey="DispatchOrgId" ItemKey="LRP_DispatchOrg"/>
                            <ListViewColumn Key="EffectiveDate" Caption="生效日期" ColumnType="DatePicker" DataColumnKey="EffectiveDate" OnlyDate="true" Format="yyyy-MM-dd"/>
                            <ListViewColumn Key="ExpireDate" Caption="截止日期" ColumnType="DatePicker" DataColumnKey="ExpireDate" OnlyDate="true" Format="yyyy-MM-dd"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_T_ExpenseContract_LRP', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="125px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
