<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="MyModifyLogo" FormType="Entity">
    <DataSource RefObjectKey="LRP_OwnerUser"/>
    <OperationCollection>
        <Operation Key="Task" Caption="拍照" Visible="True">
            <Action>
                <![CDATA[TakePhoto('logo',true,'MyModifyLogo',GetOperator(),true);]]>
            </Action>
        </Operation>
        <Operation Key="Choose" Caption="我的相册" Visible="True">
            <Action>
                <![CDATA[SelectPhoto('logo',true,'MyModifyLogo',GetOperator(),true);]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="root">
                <Image Key="logo" Caption="头像" X="0" Y="0" PromptImage="logo.jpg" MaxSize="200">
                    <DataBinding TableKey="LRP_OwnerUser" ColumnKey="Logo"/>
                </Image>
                <LinearLayoutPanel Key="opt_panel" X="0" Y="1" Orientation="Horizontal" BorderStyle="solid none">
                    <Button Key="order" Caption="确认" Enable="True" Width="pref" Height="auto" Weight="1.0" BorderStyle="none">
                        <Format BackColor="#f14c52" ForeColor="#ffffff"/>
                        <OnClick>
                            <![CDATA[
							SaveData();SendSignal('UserInfoChanged');Close();
							]]>
                        </OnClick>
                    </Button>
                </LinearLayoutPanel>
                <RowDefCollection>
                    <RowDef Height="100%"/>
                    <RowDef Height="50px"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
        <ViewCollection>
            <View Key="All"/>
        </ViewCollection>
    </Body>
    <OnLoad>
        <![CDATA[LoadData()]]>
    </OnLoad>
    <NavigationBar Style="Custom">
        <RightButton>
            <![CDATA[PopMenu('', '', '')]]>
        </RightButton>
    </NavigationBar>
</Form>
