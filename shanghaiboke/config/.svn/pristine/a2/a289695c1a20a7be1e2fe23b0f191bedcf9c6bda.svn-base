<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="FixTruck_Driver" Caption="车辆绑定司机" FormType="Entity" ViewKey="FixTruck_DriverView">
    <DataSource>
        <DataObject Key="FixTruck_Driver" Caption="FixTruck_Driver" PrimaryTableKey="FixTruck_DriverHead" PrimaryType="Entity">
            <TableCollection>
                <Table Key="FixTruck_DriverHead" Caption="头表1">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Key="NO" Caption="单据编号" DataType="Varchar"/>
                    <Column Key="Status" Caption="单据状态" DataType="Integer"/>
                    <Column Key="BillDate" Caption="单据日期" DataType="DateTime"/>
                    <Column Key="Creator" Caption="制单人" DataType="Long" Description="保存人员" ItemKey="Operator"/>
                    <Column Key="CreateTime" Caption="制单日期" DataType="DateTime"/>
                    <Column Key="Modifier" Caption="修改人" DataType="Long"/>
                    <Column Key="ModifyTime" Caption="修改时间" DataType="DateTime"/>
                    <Column Key="InstanceID" Caption="流程实例" DataType="Long"/>
                    <Column Key="DriverId" Caption="司机" DataType="Long"/>
                    <Column Key="TruckId" Caption="车辆" DataType="Long"/>
                    <Column Key="DispatchOrg" Caption="调度组织" DataType="Long"/>
                    <Column Key="TruckTeam" Caption="车队" DataType="Long"/>
                    <Column Key="TruckTypeId" Caption="车型" DataType="Long"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="WORKITEM" Caption="WORKITEM" Tag="WORKITEM"/>
        <Operation Key="BPM" Caption="BPM" Tag="BPM"/>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[SaveData(); UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="New" Caption="新增" Visible="ReadOnly()">
            <Action>
                <![CDATA[New('FixTruck_Driver', 'self');]]>
            </Action>
        </Operation>
        <Operation Key="Delete" Caption="删除" Visible="ReadOnly()">
            <Action>
                <![CDATA[DeleteData();UpdateView();Close();]]>
            </Action>
        </Operation>
        <Operation Key="Edit" Caption="编辑" Visible="ReadOnly()">
            <Action>
                <![CDATA[Edit();]]>
            </Action>
        </Operation>
        <Operation Key="Cancel" Caption="取消" Visible="!ReadOnly()">
            <Action>
                <![CDATA[Cancel();]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭" Visible="ReadOnly()">
            <Action>
                <![CDATA[Close()]]>
            </Action>
        </Operation>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <QueryCollection>
        <Query Key="QueryDriver" Description="查询司机">
            <Statement>
                <![CDATA[select count(1) from FixTruck_DriverHead fth where fth.DriverId = ? and oid != ?
]]>
            </Statement>
            <ParameterCollection>
                <Parameter DataType="Long"/>
                <Parameter DataType="Long"/>
            </ParameterCollection>
        </Query>
        <Query Key="QueryCar" Description="查询车辆">
            <Statement>
                <![CDATA[]]>
            </Statement>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="ToolBar1" Height="pref" Caption="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <GridLayoutPanel Key="first_head" Height="pref" Padding="5px" Caption="基本信息">
                        <Label Key="Lab_NO" Caption="单据编号" X="0" Y="0"/>
                        <TextEditor Key="NO" Caption="单据编号" BuddyKey="Lab_NO" X="1" Y="0" Enable="false">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="NO"/>
                        </TextEditor>
                        <Label Key="Lab_BillDate" Caption="单据日期" X="2" Y="0"/>
                        <DatePicker Key="BillDate" Caption="单据日期" BuddyKey="Lab_BillDate" X="3" Y="0" Enable="false">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="BillDate"/>
                        </DatePicker>
                        <Label Key="Lab_Status" Caption="单据状态" X="4" Y="0"/>
                        <ComboBox Key="Status" Caption="单据状态" BuddyKey="Lab_Status" X="5" Y="0" SourceType="Status" Enable="false">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="Status" DefaultValue="200"/>
                        </ComboBox>
                        <Dict Key="DriverId" Caption="司机" BuddyKey="Lab_DriverId" X="1" Y="1" ItemKey="LRP_Driver" AsQuery="true">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="DriverId" CheckRule="if(DBNamedQueryValue(&quot;QueryDriver&quot;, DriverId,GetOID())&gt;0) {     false; }else{     true; }" ErrorInfo="请检查表单，不能重复设置司机"/>
                            <ItemFilter ItemKey="LRP_Driver">
                                <Filter Type="DataSet" Query="select ld.oid from LRP_Driver ld left join LRP_Driver_Org ldo on ld.oid = ldo.soid where ldo.DispatchOrgId = ?">
                                    <FilterValue Type="Field" DataType="Long" ParaValue="DispatchOrg"/>
                                </Filter>
                            </ItemFilter>
                        </Dict>
                        <Label Key="Lab_DriverId" Caption="司机" X="0" Y="1"/>
                        <Dict Key="TruckId" Caption="车辆" BuddyKey="Lab_TruckId" X="5" Y="1" ItemKey="LRP_Truck" AsQuery="true">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="TruckId"/>
                            <ItemFilter ItemKey="LRP_Truck">
                                <Filter Type="DataSet" Query="select t.oid from LRP_Truck t join LRP_TruckDispatchOrg tdo on t.oid=tdo.soid where t.TruckTypeId = ? and t.TruckStatus = 1 and tdo.DispatchOrgId in (select DispatchOrgId from LRP_Driver_Org where soid=?)  and t.oid not in(select TruckId from FixTruck_DriverHead) ">
                                    <FilterValue Type="Field" DataType="Long" ParaValue="TruckTypeId" FieldKey="TruckTypeId" RefValue="TruckTypeId"/>
                                    <FilterValue Type="Field" DataType="Long" ParaValue="DriverId"/>
                                </Filter>
                                <Filter Type="DataSet"/>
                            </ItemFilter>
                        </Dict>
                        <Label Key="Lab_TruckId" Caption="车辆" X="4" Y="1"/>
                        <Dict Key="DispatchOrg" Caption="调度组织" BuddyKey="Lab_DispatchOrg" X="1" Y="2" ItemKey="LRP_DispatchOrg">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="DispatchOrg" DefaultFormulaValue="getCurDispatchOrgID()"/>
                        </Dict>
                        <Label Key="Lab_DispatchOrg" Caption="调度组织" X="0" Y="2"/>
                        <Dict Key="TruckTeam" Caption="车队" BuddyKey="Lab_TruckTeam" X="3" Y="2" Visible="false" ItemKey="LRP_Fleet">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="TruckTeam"/>
                        </Dict>
                        <Label Key="Lab_TruckTeam" Caption="车队" X="2" Y="2"/>
                        <Dict Key="TruckTypeId" Caption="车型" BuddyKey="Lab_TruckTypeId" X="3" Y="1" ItemKey="LRP_TruckType">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="TruckTypeId"/>
                        </Dict>
                        <Label Key="Lab_TruckTypeId" Caption="车型" X="2" Y="1"/>
                        <RowDefCollection RowHeight="30" RowGap="6">
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="20">
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="34%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <GridLayoutPanel Key="second_head" Height="pref" Padding="5px" Caption="审批信息">
                        <Dict Key="Creator" Caption="制单人" BuddyKey="Lab_Creator" X="1" Y="0" Enable="false" ItemKey="Operator">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="Creator"/>
                        </Dict>
                        <Label Key="Lab_Creator" Caption="制单人" X="0" Y="0"/>
                        <DatePicker Key="CreateTime" Caption="制单时间" BuddyKey="Lab_CreateTime" X="3" Y="0" Enable="false">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="CreateTime"/>
                        </DatePicker>
                        <Label Key="Lab_CreateTime" Caption="制单时间" X="2" Y="0"/>
                        <Dict Key="Modifier" Caption="修改人" BuddyKey="Lab_Modifier" X="1" Y="1" Enable="false" ItemKey="Operator">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="Modifier"/>
                        </Dict>
                        <Label Key="Lab_Modifier" Caption="修改人" X="0" Y="1"/>
                        <DatePicker Key="ModifyTime" Caption="修改时间" BuddyKey="Lab_ModifyTime" X="3" Y="1" Enable="false">
                            <DataBinding TableKey="FixTruck_DriverHead" ColumnKey="ModifyTime"/>
                        </DatePicker>
                        <Label Key="Lab_ModifyTime" Caption="修改时间" X="2" Y="1"/>
                        <RowDefCollection RowHeight="30" RowGap="6">
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="20">
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="50%"/>
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="50%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <SplitSize Size="100%"/>
                    <SplitSize Size="85px"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
