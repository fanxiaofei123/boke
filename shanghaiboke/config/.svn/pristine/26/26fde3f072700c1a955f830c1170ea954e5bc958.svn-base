<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_AccidentView" Caption="事故登记单序事簿" FormType="View" AbbrCaption="事故登记单序事簿">
    <DataSource>
        <DataObject Key="LRP_AccidenView" Caption="事故登记单-序事簿" PrimaryTableKey="LRP_AccidentRegistra">
            <TableCollection>
                <Table Key="LRP_AccidentRegistra" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Caption="对象标识" DataType="Long" Key="OID"/>
                    <Column Caption="主对象标识" DataType="Long" Key="SOID"/>
                    <Column Caption="父对象标识" DataType="Long" Key="POID"/>
                    <Column Caption="对象版本" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DataType="Integer" Key="DVERID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建人" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改人" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Key="No" Caption="事故登记号" DataType="Varchar" Length="100" SortType="Desc"/>
                    <Column Key="TruckId" Caption="车辆" DataType="Long"/>
                    <Column Key="FleetId" Caption="车队" DataType="Long"/>
                    <Column Key="LicenseNo" Caption="牌照号" DataType="Varchar"/>
                    <Column Key="InsuranceCompanyId" Caption="保险公司" DataType="Long"/>
                    <Column Key="AccidentSite" Caption="事故地点" DataType="Varchar"/>
                    <Column Key="Reporter" Caption="报案人" DataType="Varchar"/>
                    <Column Key="ReportDatetime" Caption="报案日期时间" DataType="DateTime"/>
                    <Column Key="Driver" Caption="驾驶员" DataType="Varchar" Length="1000"/>
                    <Column Key="Mobile" Caption="联系电话" DataType="Varchar" Length="100"/>
                    <Column Key="AccidentType" Caption="事故类型" DataType="Varchar"/>
                    <Column Key="ResponsibleParty" Caption="责任方" DataType="Varchar" Length="100"/>
                    <Column Key="FinishDate" Caption="完成日期" DataType="Date"/>
                    <Column Key="AccidentDatetime" Caption="事故日期时间" DataType="DateTime"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="new" Caption="新增">
            <Action>
                <![CDATA[New('V_Accident');]]>
            </Action>
        </Operation>
        <Operation Key="Confirm" Caption="确认" RefKey="BatchConfirm"/>
        <Operation Key="ConfirmR" Caption="撤销确认" RefKey="BatchConfirm-R"/>
        <Operation Key="Finish" Caption="完成" RefKey="BatchFinish"/>
        <Operation Key="FinishR" Caption="撤销完成" RefKey="BatchFinish-R"/>
        <Operation Key="BatchCancel" Caption="作废" RefKey="BatchCancel"/>
        <Operation Key="ToCancelR" Caption="撤销作废" RefKey="BatchCancel-R"/>
        <Operation Key="Delete" Caption="删除">
            <Action>
                <![CDATA[if(CheckListNoSelect()){
	Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
	return true;
}
if(!CheckListSelectStatus(',100,')){
       Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
	return true;	
}						
Confirm('确定要将选中的记录进行删除吗？','YES_NO',{
	YES:{BatchDeleteData('LRP_AccidentRegistra', 'LRP_AccidentRegistra');LoadData();ShowData();},
	NO:{}});]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <GridLayoutPanel Key="query" Height="100%" Padding="10px" Caption="查询字段">
                        <TextEditor Caption="DataObjectKey" Enable="false" Key="DataObjectKey" Visible="false" X="10" Y="3">
                            <DataBinding DefaultValue="LRP_AccidentRegistra"/>
                        </TextEditor>
                        <Label Key="Lab_registerNo" Caption="事故登记号" X="0" Y="0"/>
                        <TextEditor Key="registerNo" Caption="事故登记号" BuddyKey="Lab_registerNo" X="1" Y="0" XSpan="3">
                            <Condition ColumnKey="No" TableKey="LRP_AccidentRegistra" CondSign="like"/>
                        </TextEditor>
                        <Label Key="L_OwnerId" Caption="车队" X="5" Y="0"/>
                        <Dict Key="OwnerId" Caption="车队" BuddyKey="L_OwnerId" X="6" Y="0" AllowMultiSelection="true" ItemKey="LRP_Fleet" XSpan="3">
                            <Condition ColumnKey="FleetId" TableKey="LRP_AccidentRegistra" CondSign="in"/>
                        </Dict>
                        <Label Key="Lab_LicenseNo" Caption="车牌号" X="0" Y="1"/>
                        <TextEditor Key="LicenseNo" Caption="车牌号" BuddyKey="Lab_LicenseNo" X="1" Y="1" XSpan="3">
                            <Condition ColumnKey="LicenseNo" TableKey="LRP_AccidentRegistra" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Status_h" Caption="状态" X="5" Y="3"/>
                        <CheckListBox BuddyKey="Lab_Status_h" Caption="状态" Key="Status_h" X="6" XSpan="3" Y="3">
                            <Condition ColumnKey="Status" TableKey="LRP_AccidentRegistra" CondSign="in"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                            <Item Caption="处理中" Key="handled" Value="500"/>
                            <Item Caption="已完成" Key="finished" Value="900"/>
                        </CheckListBox>
                        <Label Key="Lab_Driver" Caption="驾驶员" X="0" Y="3"/>
                        <TextEditor Key="Driver" Caption="驾驶员" BuddyKey="Lab_Driver" X="1" Y="3" XSpan="3">
                            <Condition ColumnKey="Driver" TableKey="LRP_AccidentRegistra" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_AccidentDatetime" Caption="事故日期时间" X="0" Y="2"/>
                        <DatePicker Key="AccidentDatetime" Caption="事故日期时间" BuddyKey="Lab_AccidentDatetime" X="1" Y="2" XSpan="3">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                            <Condition ColumnKey="AccidentDatetime" TableKey="LRP_AccidentRegistra" CondSign="between" Group="OrderDateTime" GroupHead="true"/>
                        </DatePicker>
                        <Label Key="Lab_AccidentDatetime@2" Caption="至" X="5" Y="2"/>
                        <DatePicker Key="AccidentDatetime@2" Caption="至" BuddyKey="Lab_AccidentDatetime@2" X="6" Y="2" XSpan="3">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                            <Condition ColumnKey="AccidentDatetime" TableKey="LRP_AccidentRegistra" CondSign="in" Group="OrderDateTime" GroupTail="true"/>
                        </DatePicker>
                        <Label Key="Lab_AccidentType" Caption="事故类型" X="5" Y="1"/>
                        <TextEditor Key="AccidentType" Caption="事故类型" BuddyKey="Lab_AccidentType" X="6" Y="1" XSpan="3">
                            <Condition ColumnKey="AccidentType" TableKey="LRP_AccidentRegistra" CondSign="like"/>
                        </TextEditor>
                        <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                            <OnClick>
                                <![CDATA[	DealCondition();LoadData();ShowData();	
								]]>
                            </OnClick>
                        </Button>
                        <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                            <OnClick>
                                <![CDATA[ResetCondition();
								]]>
                            </OnClick>
                        </Button>
                        <RowDefCollection RowHeight="25" RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="99px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Key="ListView0" TableKey="LRP_AccidentRegistra" PageLoadType="DB" CanDelete="false" CanInsert="false" CanShift="false">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" Width="80px" IsSelect="true"/>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_TransportJob_H" Visible="false" Width="91px"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="registerNo_L" Caption="事故登记号" ColumnType="HyperLink" DataColumnKey="No" Width="175px">
                                <OnClick>
                                    <![CDATA[Open('V_Accident', OID)]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="FleetId" Caption="车队" ColumnType="Dict" DataColumnKey="FleetId" Width="125px" ItemKey="LRP_Fleet"/>
                            <ListViewColumn Key="TruckId" Caption="车辆" ColumnType="Dict" DataColumnKey="TruckId" Width="125px" ItemKey="LRP_Truck"/>
                            <ListViewColumn Key="LicenseNo_L" Caption="牌照号" ColumnType="TextEditor" DataColumnKey="LicenseNo" Width="100px"/>
                            <ListViewColumn Key="InsuranceCompanyId" Caption="保险公司" ColumnType="Dict" DataColumnKey="InsuranceCompanyId" ItemKey="LRP_InsuranceCompany"/>
                            <ListViewColumn Key="AccidentSite" Caption="事故地点" ColumnType="TextEditor" DataColumnKey="AccidentSite"/>
                            <ListViewColumn Key="Reporter" Caption="报案人" ColumnType="TextEditor" DataColumnKey="Reporter"/>
                            <ListViewColumn Key="ReportDatetime" Caption="报案日期时间" ColumnType="DatePicker" DataColumnKey="ReportDatetime" Width="150px"/>
                            <ListViewColumn Key="Driver_L" Caption="驾驶员" ColumnType="TextEditor" DataColumnKey="Driver"/>
                            <ListViewColumn Key="Mobile" Caption="联系电话" ColumnType="TextEditor" DataColumnKey="Mobile" Width="150px"/>
                            <ListViewColumn Key="AccidentType_L" Caption="事故类型" ColumnType="TextEditor" DataColumnKey="AccidentType"/>
                            <ListViewColumn Key="ResponsibleParty" Caption="责任方" ColumnType="TextEditor" DataColumnKey="ResponsibleParty"/>
                            <ListViewColumn Key="FinishDate" Caption="完成日期" ColumnType="DatePicker" DataColumnKey="FinishDate" Width="150px"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_Accident', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="160px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
