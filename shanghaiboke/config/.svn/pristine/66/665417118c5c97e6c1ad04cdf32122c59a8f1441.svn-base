<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_UpdateOrderTypeView" Caption="修改订单类型" FormType="View" AbbrCaption="修改订单类型">
    <DataSource>
        <DataObject Key="V_UpdateOrderTypeView" Caption="修改订单类型">
            <TableCollection>
                <Table Key="LRP_TransportOrder_H" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Caption="对象标识" DataType="Long" Key="OID"/>
                    <Column Caption="主对象标识" DataType="Long" Key="SOID"/>
                    <Column Caption="父对象标识" DataType="Long" Key="POID"/>
                    <Column Caption="对象版本" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DataType="Integer" Key="DVERID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建人" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改人" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Key="OrderType" Caption="订单类型" DataType="Varchar"/>
                    <Column Key="NoList" Caption="订单号" DataType="Varchar"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <Body PopHeight="60%" PopWidth="60%">
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="L_OrderType" Caption="订单类型" X="0" Y="0"/>
                            <ComboBox Key="OrderType" Caption="订单类型" BuddyKey="L_OrderType" X="1" Y="0" XSpan="5">
                                <DataBinding TableKey="LRP_TransportOrder_H" ColumnKey="OrderType"/>
                                <Item Caption="零担" Key="LTL" Value="LTL"/>
                                <Item Caption="整车" Key="FTL" Value="FTL"/>
                                <Item Caption="仓配" Key="WD" Value="WD"/>
                                <Item Caption="多式联运" Key="MT" Value="MT"/>
                            </ComboBox>
                            <TextEditor Key="NoList" Caption="订单号" BuddyKey="L_NoList" Visible="false" X="6" Y="0" XSpan="2">
                                <DataBinding TableKey="LRP_TransportOrder_H" ColumnKey="NoList"/>
                            </TextEditor>
                            <Button Key="OK" Caption="确定" X="1" Y="1" Enable="true" XSpan="2">
                                <OnClick>
                                    <![CDATA[							
                                       if(OrderType == ''){
									       Confirm('请先选择订单类型。', 'OK',{OK:{}});
										   return true;
									   }
									   var orderType = GetCaption("OrderType");
                                 Confirm('是否将选中的运输订单改成' + orderType + '？','YES_NO',        
								 {YES: {             
								           InvokeService("LRP_UpdateOrderType", true, false);
                                        },										 
								   NO: {}});    									   
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="取消" X="4" Y="1" Enable="true" XSpan="2">
                                <OnClick>
                                    <![CDATA[Close();]]>
                                </OnClick>
                            </Button>
                            <RowDefCollection RowHeight="25" RowGap="5">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="5">
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="25%" MinWidth="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%" MinWidth="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%" MinWidth="55px"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <SplitSize Size="35%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
    <OnPostShow>
        <![CDATA[
		SetValue("NoList",GetPara('noList_para'));
		]]>
    </OnPostShow>
</Form>
