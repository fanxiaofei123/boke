<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_OwnerAccountBalance" Caption="货主账户余额查询" FormType="View" AbbrCaption="货主账户余额查询" Platform="">
    <DataSource>
        <DataObject Key="V_OwnerAccountBalance" Caption="货主账户余额查询" PrimaryTableKey="LRP_OwnerAccountBalance">
            <TableCollection>
                <Table Key="LRP_OwnerAccountBalance" Caption="货主账户余额查询" TableMode="Detail" SourceType="Query">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Caption="创建人" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改人" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Caption="货主id" DataType="Long" Key="OwnerId"/>
                    <Column Caption="币种" DataType="Varchar" Key="Currency" Length="10" DefaultValue="CNY"/>
                    <Column Key="Balance" Caption="余额" DataType="Numeric" Precision="18" Scale="6"/>
                    <Column Key="FreezeAmount" Caption="冻结余额" DataType="Numeric" Precision="18" Scale="6"/>
                    <TableFilter>
                        <![CDATA[Balance > 0]]>
                    </TableFilter>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="Close" Caption="关闭" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="Lab_MODIFYTIME" Caption="修改时间" X="0" Y="1"/>
                            <DatePicker Key="MODIFYTIME" Caption="修改时间" BuddyKey="Lab_MODIFYTIME" X="1" Y="1" XSpan="2">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                                <Format/>
                                <Condition ColumnKey="MODIFYTIME" TableKey="LRP_OwnerAccountBalance" CondSign="between" Group="MODIFYTIME" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="Lab_MODIFYTIME_Comp2" Caption="到" X="4" Y="1"/>
                            <DatePicker Key="MODIFYTIME_Comp2" Caption="到" BuddyKey="Lab_MODIFYTIME_Comp2" X="5" Y="1" XSpan="2">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                                <Format/>
                                <Condition ColumnKey="MODIFYTIME" TableKey="LRP_OwnerAccountBalance" CondSign="between" Group="MODIFYTIME" GroupTail="true"/>
                            </DatePicker>
                            <Label Key="Lab_OwnerId1" Caption="货主" X="0" Y="0"/>
                            <Dict Key="OwnerId1" Caption="货主" BuddyKey="Lab_OwnerId1" X="1" Y="0" AllowMultiSelection="true" ItemKey="LRP_Owner" XSpan="2">
                                <Condition ColumnKey="OwnerId" TableKey="LRP_OwnerAccountBalance" CondSign="in"/>
                            </Dict>
                            <Button Key="Query" Caption="查询" X="8" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="8" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <RowDefCollection RowHeight="30" RowGap="6">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="20">
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="80px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="list" PageLoadType="DB" TableKey="LRP_OwnerAccountBalance">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" TableKey="LRP_OwnerAccountBalance" Visible="false" Width="79px" DataColumnKey="OID"/>
                            <ListViewColumn Key="OwnerId" Caption="货主" ColumnType="Dict" DataColumnKey="OwnerId" ItemKey="LRP_Owner"/>
                            <ListViewColumn Key="Currency" Caption="币种" ColumnType="TextEditor" DataColumnKey="Currency"/>
                            <ListViewColumn Key="Balance" Caption="余额" ColumnType="NumberEditor" DataColumnKey="Balance" Precision="18" Scale="6"/>
                            <ListViewColumn Key="FreezeAmount" Caption="余额" ColumnType="NumberEditor" DataColumnKey="FreezeAmount" Precision="18" Scale="6"/>
                        </ListViewColumnCollection>
                    </ListView>
                    <SplitSize Size="85px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
