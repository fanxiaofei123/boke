<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_AbsenceRequestView" Caption="请假单序时簿" FormType="View" AbbrCaption="司机消息序事簿">
    <DataSource>
        <DataObject Key="V_AbsenceRequestView" Caption="请假单序时簿" PrimaryTableKey="LRP_AbsenceRequest">
            <TableCollection>
                <Table Key="LRP_AbsenceRequest" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建用户ID" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改用户ID" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Key="No" Caption="请假单号" DataType="Varchar" Length="100"/>
                    <Column Key="DriverID" Caption="请假人" DataType="Long"/>
                    <Column Key="StartDate" Caption="起始日期" DataType="DateTime"/>
                    <Column Key="EndDate" Caption="结束日期" DataType="DateTime"/>
                    <Column Key="Days" Caption="天数" DataType="Integer"/>
                    <Column Key="AbsenceType" Caption="请假类型" DataType="Integer"/>
                    <Column Key="AbsenceReason" Caption="请假理由" DataType="Varchar"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[
				New('V_AbsenceRequest')	
			]]>
            </Action>
        </Operation>
        <Operation Key="BatchDelete" Caption="删除">
            <Action>
                <![CDATA[if(CheckListNoSelect()){
	Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
	return true;
}
if(!CheckListSelectStatus(',100,')){
	Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
	return true;
}	
Confirm('确定要将选中的记录进行删除吗？','YES_NO',{YES:{BatchDeleteData('LRP_AbsenceRequest', 'LRP_AbsenceRequest');LoadData();ShowData();},NO:{}});]]>
            </Action>
        </Operation>
        <Operation Key="BatchConfirm" Caption="审批" Visible="false">
            <Action>
                <![CDATA[                            if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再确认。','OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',100,')){
					Confirm('只有状态是已输入的单据才能进行审批。','OK','OK:{}');
					return true;
				}
				Confirm('确定要将选中的记录进行审批吗？','YES_NO',{YES:{
					loop "ListView0" (true)
					{			
						if(Select == true)
						{ 
							InvokeService("LRP_BatchUpdateField", false, false,OID,"LRP_AbsenceRequest","Status",200);
							
						}					
					}
					LoadData();ShowData();
				},NO:{}});
				]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <ToolBar Key="main_toolbar" Height="pref">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%">
                    <GridLayoutPanel Key="GridLayoutPanel0" Padding="10px" Caption="GridLayoutPanel0">
                        <TextEditor Key="DataObjectKey" Caption="DataObjectKey" X="1" Y="3" Visible="false" Enable="false">
                            <DataBinding DefaultValue="LRP_AbsenceRequest"/>
                        </TextEditor>
                        <TextEditor Key="No_C" Caption="请假单号" X="1" Y="0" XSpan="2">
                            <Condition CondSign="like" ColumnKey="No" TableKey="LRP_AbsenceRequest">
                                <ConditionTarget ColumnKey="No" TableKey="LRP_AbsenceRequest"/>
                            </Condition>
                        </TextEditor>
                        <Label Key="L_No" Caption="请假单号" X="0" Y="0"/>
                        <Dict Key="DriverId_C" Caption="请假人" X="5" Y="0" AllowMultiSelection="true" ItemKey="LRP_Driver" XSpan="2">
                            <Condition CondSign="in" ColumnKey="DriverID" TableKey="LRP_AbsenceRequest"/>
                        </Dict>
                        <Label Key="L_DriverId" Caption="请假人" X="4" Y="0"/>
                        <CheckListBox Caption="请假类型" Key="AbsenceType_C" X="1" XSpan="2" Y="1" Width="pref">
                            <Condition CondSign="in" ColumnKey="AbsenceType" TableKey="LRP_AbsenceRequest"/>
                            <Item Caption="事假" Key="0" Value="0"/>
                            <Item Caption="病假" Key="1" Value="1"/>
                            <Item Caption="年假" Key="2" Value="2"/>
                            <Item Caption="婚假" Key="3" Value="3"/>
                            <Item Caption="产假" Key="4" Value="4"/>
                            <Item Caption="护理假" Key="5" Value="5"/>
                            <Item Caption="丧假" Key="6" Value="6"/>
                            <Item Caption="补假" Key="7" Value="7"/>
                            <Item Caption="其它" Key="8" Value="8"/>
                        </CheckListBox>
                        <Label Key="L_AbsenceType" Caption="请假类型" X="0" Y="1"/>
                        <Button Key="Query" Caption="查询" X="8" Y="0">
                            <OnClick>
                                <![CDATA[DealCondition();LoadData();ShowData();]]>
                            </OnClick>
                        </Button>
                        <Button Key="Reset" Caption="重置" X="8" Y="1">
                            <OnClick>
                                <![CDATA[ResetCondition();]]>
                            </OnClick>
                        </Button>
                        <DatePicker Key="StartDate_C" Caption="开始时间" X="1" Y="2" XSpan="2">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                            <Condition CondSign="between" ColumnKey="StartDate" TableKey="LRP_AbsenceRequest" Group="StartDate" GroupHead="true"/>
                        </DatePicker>
                        <Label Key="L_StartDate" Caption="请假时间从" X="0" Y="2"/>
                        <DatePicker Key="EndDate_C_1" Caption="至" X="5" Y="2" XSpan="2">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                            <Condition CondSign="in" ColumnKey="StartDate" TableKey="LRP_AbsenceRequest" Group="StartDate" GroupTail="true"/>
                        </DatePicker>
                        <Label Key="L_EndDate_1" Caption="至" X="4" Y="2"/>
                        <ComboBox Key="Status_c" Caption="状态" BuddyKey="Lab_Status_c" X="5" Y="1" XSpan="2">
                            <Condition CondSign="=" ColumnKey="Status" TableKey="LRP_AbsenceRequest"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                        </ComboBox>
                        <Label Key="Lab_Status_c" Caption="状态" X="4" Y="1"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%" MinWidth="50px"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%" MinWidth="50px"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Caption="ListView0" Key="ListView0" PageLoadType="DB" PageRowCount="10" TableKey="LRP_AbsenceRequest">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" Visible="false"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" Enable="true" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="No" Caption="请假单号" ColumnType="HyperLink" DataColumnKey="No">
                                <OnClick>
                                    <![CDATA[
									
									Open('V_AbsenceRequest', OID);
									]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="DriverId" Caption="请假人" ColumnType="Dict" DataColumnKey="DriverID" ItemKey="LRP_Driver"/>
                            <ListViewColumn Key="StartDate" Caption="开始时间" ColumnType="DatePicker" DataColumnKey="StartDate"/>
                            <ListViewColumn Key="EndDate" Caption="结束时间" ColumnType="DatePicker" DataColumnKey="EndDate"/>
                            <ListViewColumn Key="Days" Caption="请假天数" ColumnType="NumberEditor" DataColumnKey="Days" IntegerValue="true"/>
                            <ListViewColumn Key="AbsenceType" Caption="请假类型" ColumnType="ComboBox" DataColumnKey="AbsenceType">
                                <Item Caption="事假" Key="0" Value="0"/>
                                <Item Caption="病假" Key="1" Value="1"/>
                                <Item Caption="年假" Key="2" Value="2"/>
                                <Item Caption="婚假" Key="3" Value="3"/>
                                <Item Caption="产假" Key="4" Value="4"/>
                                <Item Caption="护理假" Key="5" Value="5"/>
                                <Item Caption="丧假" Key="6" Value="6"/>
                                <Item Caption="补假" Key="7" Value="7"/>
                                <Item Caption="其它" Key="8" Value="8"/>
                            </ListViewColumn>
                            <ListViewColumn Key="AbsenceReason" Caption="请假理由" ColumnType="TextEditor" DataColumnKey="AbsenceReason"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[
								Open('V_DriverMessage', OID);
						]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="135px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[]]>
    </OnLoad>
</Form>
