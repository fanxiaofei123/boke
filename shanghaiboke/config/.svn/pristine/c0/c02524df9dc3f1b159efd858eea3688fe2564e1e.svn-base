<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_O_ExpenseContract_LRP" Caption="其它费用合约" FormType="Entity" ViewKey="V_O_ExpenseContract_View">
    <DataSource RefObjectKey="LRP_O_ExpenseContract"/>
    <OperationCollection>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()">
            <Action>
                <![CDATA[
						if(WarehouseCenterId==0&&DispatchOrgId==0){
							Confirm(LocaleString('CHshow','chkey27'), "OK","OK:{}");
							return true;
						}
						if(CarrierId==0&&SettlementId==0){
							Confirm(LocaleString('CHshow','chkey32'), "OK","OK:{}");
							return true;
						}
						if(GetRowCount("Grid1")==0){
							Confirm(LocaleString('CHshow','chkey29'), "OK","OK:{}");
							return true;
						}
						if(EffectiveDate>ExpireDate){
							Confirm(LocaleString('CHshow','chkey30'), "OK","OK:{}");
							return true;
						}
						SaveData();
						UpdateView();
					]]>
            </Action>
        </Operation>
        <Operation Key="New" Caption="新增" Visible="ReadOnly()">
            <Action>
                <![CDATA[New('V_O_ExpenseContract_LRP', 'self');]]>
            </Action>
        </Operation>
        <Operation Key="Edit" Caption="编辑" Visible="ReadOnly()" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Key="Delete" Caption="删除" Visible="ReadOnly()" RefKey="Delete"/>
        <Operation Key="Cancel" Caption="取消" Visible="!ReadOnly()" RefKey="Cancel"/>
        <Operation Key="Confirm" Caption="确认" Visible="ReadOnly()" RefKey="Confirm"/>
        <Operation Key="Confirm-R" Caption="撤销确认" Visible="ReadOnly();" RefKey="Confirm-R"/>
        <Operation Key="Close" Caption="关闭" Visible="ReadOnly()" RefKey="Close"/>
        <Operation Key="ToCancel" Caption="作废" Visible="ReadOnly()" RefKey="ToCancel"/>
        <Operation Key="ToCancel-R" Caption="撤销作废" Visible="ReadOnly()" RefKey="ToCancel-R"/>
    </OperationCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <QueryCollection>
        <Query Key="TermByIncomId" Description="根据收入名称过滤条款">
            <Statement>
                <![CDATA[select OID, Name from LRP_O_ExpenseTerm_H where status = 200 and ExpenseId= ?]]>
            </Statement>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="root" Caption="根面板">
                <ToolBar Key="ToolBar1" Height="pref" Caption="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main" Orientation="Vertical" Height="100%" Caption="主面板">
                    <TabPanel Caption="TabPanel1" Key="TabPanel1">
                        <GridLayoutPanel Key="BasicTab" Padding="10px" BottomPadding="5px" Caption="基本信息">
                            <TextEditor Key="No" Caption="合约号" BuddyKey="Lab_No" X="1" Y="0" Enable="false">
                                <DataBinding ColumnKey="No" TableKey="LRP_O_ExpenseContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_No" Caption="合约号" X="0" Y="0"/>
                            <TextEditor Key="Name" Caption="合约名称" BuddyKey="Lab_Name" X="4" Y="0">
                                <DataBinding ColumnKey="Name" TableKey="LRP_O_ExpenseContract_H" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_Name" Caption="合约名称" X="3" Y="0"/>
                            <TextEditor Key="RefNo" Caption="承运商合约号" BuddyKey="Lab_RefNo" X="7" Y="0" MaxLength="80">
                                <DataBinding ColumnKey="RefNo" TableKey="LRP_O_ExpenseContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_RefNo" Caption="承运商合约号" X="6" Y="0"/>
                            <Dict Key="CarrierId" Caption="承运商" BuddyKey="Lab_CarrierId" X="1" Y="1" ItemKey="LRP_Carrier">
                                <DataBinding ColumnKey="CarrierId" TableKey="LRP_O_ExpenseContract_H" Required="true">
                                    <ValueChanged>
                                        <![CDATA[//选择承运商后将结算方赋值到结算方字段中
													var CarrierId = GetValue("CarrierId");
													if (CarrierId == 0){
														SetValue("SettlementId",0);
													}else {
														var sId = GetDictValue("LRP_Carrier", CarrierId, "VendorId");
														SetValue("SettlementId", sId);
													}
													]]>
                                    </ValueChanged>
                                </DataBinding>
                            </Dict>
                            <Label Key="Lab_CarrierId" Caption="承运商" X="0" Y="1"/>
                            <Dict Key="SettlementId" Caption="结算方" BuddyKey="Lab_SettlementId" X="4" Y="1" Enable="false" ItemKey="Vendor">
                                <DataBinding ColumnKey="SettlementId" TableKey="LRP_O_ExpenseContract_H"/>
                            </Dict>
                            <Label Key="Lab_SettlementId" Caption="结算方" X="3" Y="1"/>
                            <Dict Key="WarehouseCenterId" Caption="仓储中心" BuddyKey="Lab_WarehouseCenterId" X="7" Y="1" ItemKey="LRP_WarehouseCenter">
                                <DataBinding ColumnKey="WarehouseCenterId" TableKey="LRP_O_ExpenseContract_H"/>
                            </Dict>
                            <Label Key="Lab_WarehouseCenterId" Caption="仓储中心" X="6" Y="1"/>
                            <ComboBox Key="Status" Caption="状态" BuddyKey="Lab_Status" X="7" Y="3" Enable="false" SourceType="Status">
                                <DataBinding ColumnKey="Status" TableKey="LRP_O_ExpenseContract_H" DefaultValue="100"/>
                            </ComboBox>
                            <Label Key="Lab_Status" Caption="状态" X="6" Y="3"/>
                            <DatePicker Key="EffectiveDate" Caption="生效日期" BuddyKey="Lab_EffectiveDate" X="1" Y="2" OnlyDate="true">
                                <DataBinding ColumnKey="EffectiveDate" TableKey="LRP_O_ExpenseContract_H" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_EffectiveDate" Caption="生效日期" X="0" Y="2"/>
                            <DatePicker Key="ExpireDate" Caption="截止日期" BuddyKey="Lab_ExpireDate" X="4" Y="2" OnlyDate="true">
                                <DataBinding ColumnKey="ExpireDate" TableKey="LRP_O_ExpenseContract_H" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_ExpireDate" Caption="截止日期" X="3" Y="2"/>
                            <TextEditor Key="Remark" Caption="备注" BuddyKey="Lab_Remark" X="1" Y="3" XSpan="4">
                                <DataBinding ColumnKey="Remark" TableKey="LRP_O_ExpenseContract_H"/>
                            </TextEditor>
                            <Label Key="Lab_Remark" Caption="备注" X="0" Y="3"/>
                            <Dict Key="DispatchOrgId" Caption="调度组织" BuddyKey="Lab_DispatchOrgId" X="7" Y="2" ItemKey="LRP_DispatchOrg">
                                <DataBinding ColumnKey="DispatchOrgId" TableKey="LRP_O_ExpenseContract_H"/>
                            </Dict>
                            <Label Key="Lab_DispatchOrgId" Caption="调度组织" X="6" Y="2"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="54px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Key="SystemInfo" Padding="10px" Caption="系统信息">
                            <Dict Key="CREATOR" Caption="创建人" BuddyKey="Lab_CREATOR" X="1" Y="0" Enable="false" ItemKey="Operator">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_O_ExpenseContract_H"/>
                            </Dict>
                            <Label Key="Lab_CREATOR" Caption="创建人" X="0" Y="0"/>
                            <DatePicker Key="CREATETIME" Caption="创建时间" BuddyKey="Lab_CREATETIME" X="4" Y="0" Enable="false">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_O_ExpenseContract_H"/>
                            </DatePicker>
                            <Label Key="Lab_CREATETIME" Caption="创建时间" X="3" Y="0"/>
                            <Dict Key="MODIFIER" Caption="修改人" BuddyKey="Lab_MODIFIER" X="1" Y="1" Enable="false" ItemKey="Operator">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_O_ExpenseContract_H"/>
                            </Dict>
                            <Label Key="Lab_MODIFIER" Caption="修改人" X="0" Y="1"/>
                            <DatePicker Key="MODIFYTIME" Caption="修改时间" BuddyKey="Lab_MODIFYTIME" X="4" Y="1" Enable="false">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_O_ExpenseContract_H"/>
                            </DatePicker>
                            <Label Key="Lab_MODIFYTIME" Caption="修改时间" X="3" Y="1"/>
                            <RowDefCollection RowGap="8" RowHeight="30">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <TabPanel Height="100%" Key="DetailTab">
                        <Grid Key="Grid1" Caption="条款">
                            <GridColumnCollection>
                                <GridColumn Key="ExpenseId" Caption="费用名称" Width="115px"/>
                                <GridColumn Key="TermId" Caption="条款" Width="130px"/>
                            </GridColumnCollection>
                            <GridRowCollection>
                                <GridRow Key="row1" RowHeight="35" TableKey="LRP_O_ExpenseContract_L">
                                    <GridCell Key="ExpenseId" Caption="费用名称" CellType="Dict" ItemKey="LRP_Expense">
                                        <DataBinding ColumnKey="ExpenseId" Required="true"/>
                                    </GridCell>
                                    <GridCell Key="TermId" Caption="条款" CellType="ComboBox" ItemsDependency="ExpenseId" SourceType="Formula">
                                        <DataBinding ColumnKey="TermId" Required="true"/>
                                        <FormulaItems>
                                            <![CDATA[DBNamedQuery("TermByIncomId", ExpenseId);]]>
                                        </FormulaItems>
                                    </GridCell>
                                </GridRow>
                            </GridRowCollection>
                        </Grid>
                    </TabPanel>
                    <SplitSize Size="200px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
