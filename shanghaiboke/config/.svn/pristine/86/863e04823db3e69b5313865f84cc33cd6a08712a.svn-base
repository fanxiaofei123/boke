<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="CHCS_Contract_Amount" Caption="合同金额监控" FormType="View">
    <DataSource RefObjectKey="CHCS_Contract_Amount"/>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main" Caption="根面板">
                <ToolBar Key="main_toolbar" Height="pref" Caption="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="SplitPanel1" Orientation="Vertical" Height="100%" Caption="SplitPanel1">
                    <GridLayoutPanel Key="first_head" Padding="5px" Height="pref" Caption="基本信息">
                        <TextEditor Key="Contract_Code" Caption="合同编号" BuddyKey="Lab_Contract_Code" X="1" Y="0">
                            <Condition ColumnKey="Contract_Code" TableKey="CHCS_Contract_Amount_Monitor" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Contract_Code" Caption="合同编号" X="0" Y="0"/>
                        <TextEditor Key="Contract_Name" Caption="合同名称" BuddyKey="Lab_Contract_Name" X="4" Y="0">
                            <Condition ColumnKey="Contract_Name" TableKey="CHCS_Contract_Amount_Monitor" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Contract_Name" Caption="合同名称" X="3" Y="0"/>
                        <TextEditor Key="Supplier_NO" Caption="供应商编号" BuddyKey="Lab_Supplier_NO" X="7" Y="0">
                            <Condition ColumnKey="Supplier_NO" TableKey="CHCS_Contract_Amount_Monitor" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Supplier_NO" Caption="供应商编号" X="6" Y="0"/>
                        <TextEditor Key="Supplier_Name" Caption="供应商名称" BuddyKey="Lab_Supplier_Name" X="1" Y="1">
                            <Condition ColumnKey="Supplier_Name" TableKey="CHCS_Contract_Amount_Monitor" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Supplier_Name" Caption="供应商名称" X="0" Y="1"/>
                        <TextEditor Key="Supplier_Abbr" Caption="供应商简称" BuddyKey="Lab_Supplier_Abbr" X="4" Y="1">
                            <Condition ColumnKey="Supplier_Abbr" TableKey="CHCS_Contract_Amount_Monitor" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Supplier_Abbr" Caption="供应商简称" X="3" Y="1"/>
                        <TextEditor Key="Contract_Type" Caption="合同类型" BuddyKey="Lab_Contract_Type" X="7" Y="1">
                            <Condition ColumnKey="Contract_Type" TableKey="CHCS_Contract_Amount_Monitor" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Contract_Type" Caption="合同类型" X="6" Y="1"/>
                        <DatePicker Key="Valid_Time_Start" Caption="合同生效日期起" BuddyKey="Lab_Valid_Time_Start" X="1" Y="2">
                            <Condition ColumnKey="Valid_Time_Start" TableKey="CHCS_Contract_Amount_Monitor" CondSign="between" Group="Valid_Time_Start" GroupHead="true"/>
                        </DatePicker>
                        <Label Key="Lab_Valid_Time_Start" Caption="合同生效日期起" X="0" Y="2"/>
                        <DatePicker Key="Valid_Time_End" Caption="至" BuddyKey="Lab_Valid_Time_End" X="4" Y="2">
                            <Condition ColumnKey="Valid_Time_End" TableKey="CHCS_Contract_Amount_Monitor" CondSign="between" Group="Valid_Time_Start" GroupTail="true"/>
                        </DatePicker>
                        <Label Key="Lab_Valid_Time_End" Caption="至" X="3" Y="2"/>
                        <TextEditor Key="Contract_Classify" Caption="合同分类" BuddyKey="Lab_Contract_Classify" X="7" Y="2" EmbedTextColor="">
                            <Condition ColumnKey="Contract_Classify" TableKey="CHCS_Contract_Amount_Monitor" CondSign="like"/>
                        </TextEditor>
                        <Label Key="Lab_Contract_Classify" Caption="合同分类" X="6" Y="2"/>
                        <Dict Key="Currency" Caption="币种" BuddyKey="Lab_Currency" X="1" Y="3" ItemKey="Currency">
                            <Condition ColumnKey="Currency" TableKey="CHCS_Contract_Amount_Monitor" CondSign="="/>
                        </Dict>
                        <Label Key="Lab_Currency" Caption="币种" X="0" Y="3"/>
                        <Button Key="query" Caption="查询" X="4" Y="3">
                            <OnClick>
                                <![CDATA[DealCondition();LoadData();ShowData();]]>
                            </OnClick>
                        </Button>
                        <Button Key="cancel" Caption="重置" X="7" Y="3">
                            <OnClick>
                                <![CDATA[ResetCondition();]]>
                            </OnClick>
                        </Button>
                        <RowDefCollection RowHeight="30" RowGap="6">
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                            <RowDef/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="20">
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="33%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="60px"/>
                            <ColumnDef Width="33%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Caption="ListView1" Height="pref" Key="ListView1" PageLoadType="DB" TableKey="CHCS_Contract_Amount_Monitor">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="Contract_Code_LV" Caption="合同编号" ColumnType="TextEditor" DataColumnKey="Contract_Code" Width="100px"/>
                            <ListViewColumn Key="Contract_Name_LV" Caption="合同名称" ColumnType="TextEditor" DataColumnKey="Contract_Name" Width="100px"/>
                            <ListViewColumn Key="Supplier_NO_LV" Caption="供应商编号" ColumnType="TextEditor" DataColumnKey="Supplier_NO" Width="100px"/>
                            <ListViewColumn Key="Supplier_Name_LV" Caption="供应商名称" ColumnType="TextEditor" DataColumnKey="Supplier_Name" Width="100px"/>
                            <ListViewColumn Key="Supplier_Abbr_LV" Caption="供应商简称" ColumnType="TextEditor" DataColumnKey="Supplier_Abbr" Width="100px"/>
                            <ListViewColumn Key="Valid_Time_Start_LD" Caption="合同生效日期" ColumnType="DatePicker" DataColumnKey="Valid_Time_Start" OnlyDate="true" Width="100px"/>
                            <ListViewColumn Key="Valid_Time_End_LD" Caption="合同到期日期" ColumnType="DatePicker" DataColumnKey="Valid_Time_End" OnlyDate="true" Width="100px"/>
                            <ListViewColumn Key="Contract_Type_LV" Caption="合同类型" ColumnType="TextEditor" DataColumnKey="Contract_Type" Width="100px"/>
                            <ListViewColumn Key="Contract_Classify_LV" Caption="合同分类" ColumnType="TextEditor" DataColumnKey="Contract_Classify" Width="100px"/>
                            <ListViewColumn Key="Currency_LV" Caption="币种" ColumnType="Dict" DataColumnKey="Currency" ItemKey="Currency" Width="100px"/>
                        </ListViewColumnCollection>
                    </ListView>
                    <SplitSize Size="40%"/>
                    <SplitSize Size="60%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
