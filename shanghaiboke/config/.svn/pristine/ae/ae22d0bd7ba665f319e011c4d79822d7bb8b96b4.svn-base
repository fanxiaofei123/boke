<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Caption="会计期" FormType="Dict" Key="V_FinicialPeriod_LRP">
    <DataSource RefObjectKey="LRP_FinicialPeriod"/>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Description="载入事件" Range="Action" Verb="Load">
            <![CDATA[LoadData()]]>
        </Script>
    </ScriptCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <TabPanel Caption="TabPanel0" Key="TabPanel0" Height="150px">
                    <GridLayoutPanel Caption="基本信息" Key="BasicTab" Padding="10px">
                        <TextEditor BuddyKey="L_Code" Caption="代码" Enable="!ReadOnly()" Key="Code" Tip="「代码」不可为空" X="1" XSpan="3" Y="0">
                            <DataBinding ColumnKey="Code" TableKey="LRP_FinicialPeriod" Required="true"/>
                        </TextEditor>
                        <TextEditor BuddyKey="L_Name" Caption="名称" Enable="!ReadOnly()" Key="Name" Tip="「名称」不可为空" X="6" XSpan="3" Y="0">
                            <DataBinding ColumnKey="Name" TableKey="LRP_FinicialPeriod" Required="true"/>
                        </TextEditor>
                        <Label Caption="代码" Key="L_Code" X="0" Y="0"/>
                        <Label Caption="名称" Key="L_Name" X="5" Y="0"/>
                        <TextEditor Key="Remark" Caption="说明" BuddyKey="Lab_Remark" X="1" Y="3" XSpan="8">
                            <DataBinding ColumnKey="Remark" TableKey="LRP_FinicialPeriod"/>
                        </TextEditor>
                        <Label Key="Lab_Remark" Caption="说明" X="0" Y="3"/>
                        <Dict Key="PeriodType" Caption="会计期方案" BuddyKey="Lab_PeriodType" X="1" Y="1" ItemKey="PeriodType" XSpan="3">
                            <DataBinding ColumnKey="PeriodType" TableKey="LRP_FinicialPeriod" Required="true"/>
                        </Dict>
                        <Label Key="Lab_PeriodType" Caption="会计期方案" X="0" Y="1"/>
                        <NumberEditor Key="Year" Caption="会计期年度" BuddyKey="Lab_Year" X="6" Y="1" IntegerValue="true" XSpan="3" UseGroupingSeparator="false">
                            <DataBinding ColumnKey="Year" TableKey="LRP_FinicialPeriod" Required="true"/>
                        </NumberEditor>
                        <Label Key="Lab_Year" Caption="会计期年度" X="5" Y="1"/>
                        <NumberEditor Key="PeriodCount" Caption="期间数" BuddyKey="Lab_PeriodCount" X="1" Y="2" IntegerValue="true" XSpan="3" UseGroupingSeparator="false">
                            <DataBinding ColumnKey="PeriodCount" TableKey="LRP_FinicialPeriod" Required="true"/>
                        </NumberEditor>
                        <Label Key="Lab_PeriodCount" Caption="期间数" X="0" Y="2"/>
                        <NumberEditor Key="SpecialPeriodCount" Caption="调整期间数" BuddyKey="Lab_SpecialPeriodCount" X="6" Y="2" IntegerValue="true" XSpan="3" UseGroupingSeparator="false">
                            <DataBinding ColumnKey="SpecialPeriodCount" TableKey="LRP_FinicialPeriod"/>
                        </NumberEditor>
                        <Label Key="Lab_SpecialPeriodCount" Caption="调整期间数" X="5" Y="2"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <GridLayoutPanel Caption="系统信息" Key="SystemTab" Padding="10px">
                        <Dict Caption="创建人" ItemKey="Operator" Key="CREATOR" X="1" Y="0">
                            <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_FinicialPeriod"/>
                        </Dict>
                        <DatePicker Caption="创建时间" Key="CREATETIME" X="1" Y="1">
                            <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_FinicialPeriod"/>
                        </DatePicker>
                        <Dict Caption="修改人" ItemKey="Operator" Key="MODIFIER" X="1" Y="2">
                            <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_FinicialPeriod"/>
                        </Dict>
                        <DatePicker Caption="修改时间" Key="MODIFYTIME" X="1" Y="3">
                            <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_FinicialPeriod"/>
                        </DatePicker>
                        <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                        <Label Caption="创建时间" Key="L_CREATETIME" X="0" Y="1"/>
                        <Label Caption="修改人" Key="L_MODIFIER" X="0" Y="2"/>
                        <Label Caption="修改时间" Key="L_MODIFYTIME" X="0" Y="3"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="100%"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                </TabPanel>
                <TabPanel Caption="TabPanel1" Height="100%" Key="TabPanel1">
                    <Grid Key="Grid1" Caption="会计期间">
                        <GridColumnCollection>
                            <GridColumn Key="column1" Caption="选择" Width="80px"/>
                            <GridColumn Key="Period" Caption="会计期" Width="80px"/>
                            <GridColumn Key="StartDate" Caption="开始日期" Width="120px"/>
                            <GridColumn Key="EndDate" Caption="结束日期" Width="120px"/>
                            <GridColumn Key="Quarter" Caption="季度" Width="80px"/>
                            <GridColumn Key="Kind" Caption="性质" Width="80px"/>
                            <GridColumn Key="UseStatus" Caption="启用状态" Width="80px"/>
                        </GridColumnCollection>
                        <GridRowCollection>
                            <GridRow Key="row1" RowHeight="35" TableKey="LRP_FinicialPeriod_L">
                                <GridCell Key="select" Caption="选择" CellType="CheckBox" IsSelect="true"/>
                                <GridCell Key="Period" Caption="会计期" CellType="NumberEditor" IntegerValue="true" UseGroupingSeparator="false">
                                    <DataBinding ColumnKey="Period"/>
                                </GridCell>
                                <GridCell Key="StartDate" Caption="开始日期" CellType="DatePicker">
                                    <DataBinding ColumnKey="StartDate"/>
                                </GridCell>
                                <GridCell Key="EndDate" Caption="结束日期" CellType="DatePicker">
                                    <DataBinding ColumnKey="EndDate"/>
                                </GridCell>
                                <GridCell Key="Quarter" Caption="季度" CellType="NumberEditor" IntegerValue="true" UseGroupingSeparator="false">
                                    <DataBinding ColumnKey="Quarter"/>
                                </GridCell>
                                <GridCell Key="Kind" Caption="性质" CellType="ComboBox">
                                    <DataBinding ColumnKey="Kind" DefaultValue="1"/>
                                    <Item Caption="调整" Key="0" Value="0"/>
                                    <Item Caption="正常" Key="1" Value="1"/>
                                </GridCell>
                                <GridCell Key="UseStatus" Caption="启用状态" CellType="ComboBox">
                                    <DataBinding ColumnKey="UseStatus" DefaultValue="0"/>
                                    <Item Caption="未启用" Key="0" Value="0"/>
                                    <Item Caption="启用" Key="1" Value="1"/>
                                </GridCell>
                            </GridRow>
                        </GridRowCollection>
                    </Grid>
                </TabPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
