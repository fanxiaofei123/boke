<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="MyPersonalInfo">
    <DataSource>
        <DataObject Caption="货主用户" Key="LRP_OwnerUserView" PrimaryTableKey="LRP_OwnerUser">
            <TableCollection>
                <Table Caption="货主用户" DBTableName="USER_Operator" Key="LRP_OwnerUser" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Key="Code" Caption="代码" DataType="Varchar" Length="100" Cache="true"/>
                    <Column Key="Name" Caption="名称" DataType="Varchar" Length="200" Cache="true"/>
                    <Column Key="RealName" Caption="真实姓名" DataType="Varchar" Length="40"/>
                    <Column Key="OwnerId" Caption="货主" DataType="Long" Cache="true"/>
                    <Column Key="Nickname" Caption="昵称" DataType="Varchar" Length="40"/>
                    <Column Key="Mobile" Caption="手机" DataType="Varchar" Length="100"/>
                    <Column Key="Logo" Caption="头像路径" DataType="Varchar" Length="512"/>
                    <Column Key="OperatorID" DataType="Long"/>
                    <Column Key="Password" Caption="密码" DataType="Varchar" Length="1000"/>
                    <Column Key="DefaultWarehouseCenterId" Caption="默认仓储中心" DataType="Long" Cache="true"/>
                    <Column Key="DefaultDispatchOrgId" Caption="默认调度组织" DataType="Long" Cache="true"/>
                    <TableFilter>
                        <![CDATA[USER_Operator.OID=?]]>
                    </TableFilter>
                    <ParameterCollection>
                        <Parameter Formula="GetUserOperator()"/>
                    </ParameterCollection>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <Body>
        <Block>
            <TableView Key="main" TopMargin="20px">
                <Format BackColor="#f1f3f8"/>
                <TableRowCollection>
                    <TableRow Key="r1">
                        <LinearLayoutPanel Key="my_logo_panel" Height="60px" Orientation="Horizontal" LeftPadding="10px">
                            <Label Key="lbl_my_logo" Caption="头像" Width="100px" Height="auto">
                                <Format BackColor="#ffffff" ForeColor="#969696">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                            <Label Key="OID" Width="100px" Height="auto" Visible="false">
                                <DataBinding TableKey="LRP_OwnerUser" ColumnKey="OID"/>
                            </Label>
                            <Label Key="lbl_1" Width="100px" Weight="1.0" Height="auto"/>
                            <Image Key="my_logo" Caption="头像" Stretch="true" ImageScaleType="Fit_XY" Width="100px" Height="auto">
                                <DataBinding TableKey="LRP_OwnerUser" ColumnKey="Logo"/>
                            </Image>
                            <Button Key="my_logo_more" Icon="more_arrow.png" Width="20px" Height="auto" BorderStyle="none">
                                <Format BackColor="transparent"/>
                            </Button>
                        </LinearLayoutPanel>
                        <RowClick>
                            <![CDATA[Open('MyModifyLogo',OID)]]>
                        </RowClick>
                    </TableRow>
                    <TableRow Key="r2" TopMargin="20px">
                        <LinearLayoutPanel Key="Nickname_panel" Orientation="Horizontal" Height="60px" LeftPadding="10px">
                            <Label Key="lbl_Nickname" Caption="用户名" Width="100px" Height="auto">
                                <Format BackColor="#ffffff" ForeColor="#969696">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                            <Label Key="Nickname" RightPadding="10px" Width="auto" Weight="1.0" Height="auto">
                                <DataBinding TableKey="LRP_OwnerUser" ColumnKey="Code"/>
                                <Format HAlign="Right" BackColor="#ffffff">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                        </LinearLayoutPanel>
                    </TableRow>
                    <TableRow Key="r3" TopMargin="20px">
                        <LinearLayoutPanel Key="RealName_panel" Orientation="Horizontal" Height="60px" LeftPadding="10px">
                            <Label Key="lbl_RealName" Caption="真实姓名" Width="100px" Height="auto">
                                <Format BackColor="#ffffff" ForeColor="#969696">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                            <Label Key="RealName" RightPadding="10px" Width="auto" Weight="1.0" Height="auto">
                                <DataBinding TableKey="LRP_OwnerUser" ColumnKey="RealName"/>
                                <Format HAlign="Right" BackColor="#ffffff">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                        </LinearLayoutPanel>
                    </TableRow>
                    <TableRow Key="rOrg" TopMargin="20px">
                        <LinearLayoutPanel Key="rOrg_panel" Orientation="Horizontal" Height="60px" LeftPadding="10px">
                            <Label Key="lbl_DefaultDispatchOrgId" Caption="默认调度组织" Height="auto" Width="100px">
                                <Format BackColor="#ffffff" ForeColor="#969696">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                            <Dict Key="DefaultDispatchOrgId" Caption="默认调度组织" ItemKey="LRP_DispatchOrg" Width="auto" Weight="1.0" Height="auto" Enable="false">
                                <DataBinding TableKey="LRP_OwnerUser" ColumnKey="DefaultDispatchOrgId"/>
                                <Format HAlign="Right" BackColor="#ffffff">
                                    <Font Size="16"/>
                                </Format>
                            </Dict>
                        </LinearLayoutPanel>
                    </TableRow>
                    <TableRow Key="r4" TopMargin="20px">
                        <LinearLayoutPanel Key="Mobile_panel" Orientation="Horizontal" Height="60px" LeftPadding="10px">
                            <Label Key="lbl_Mobile" Caption="手机" Width="100px" Height="auto">
                                <Format BackColor="#ffffff" ForeColor="#969696">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                            <Label Key="Mobile" RightPadding="10px" Width="auto" Weight="1.0" Height="auto">
                                <DataBinding TableKey="LRP_OwnerUser" ColumnKey="Mobile"/>
                                <Format HAlign="Right" BackColor="#ffffff">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                        </LinearLayoutPanel>
                    </TableRow>
                    <TableRow Key="r5" TopMargin="20px">
                        <LinearLayoutPanel Key="password_panel" Orientation="Horizontal" Height="60px" LeftPadding="10px">
                            <Label Key="lbl_password" Caption="修改密码" Width="100px" Height="auto">
                                <Format BackColor="#ffffff" ForeColor="#969696">
                                    <Font Size="16"/>
                                </Format>
                            </Label>
                            <Label Key="lbl_2" Width="auto" Weight="1.0" Height="auto"/>
                            <Button Key="password" Icon="more_arrow.png" RightPadding="10px" Width="20px" Height="auto">
                                <Format HAlign="Right" BackColor="transparent"/>
                            </Button>
                        </LinearLayoutPanel>
                        <RowClick>
                            <![CDATA[Show('MyModifyPassword')]]>
                        </RowClick>
                    </TableRow>
                </TableRowCollection>
            </TableView>
        </Block>
        <ViewCollection>
            <View Key="All"/>
        </ViewCollection>
    </Body>
    <OnLoad>
        <![CDATA[LoadData()]]>
    </OnLoad>
    <EventHandlerCollection>
        <EventHandler Key="UserInfoChanged" Trigger="Show" MergeEvent="true">
            <![CDATA[LoadData()]]>
        </EventHandler>
    </EventHandlerCollection>
    <NavigationBar BackColor="#f14c52" Style="Custom">
        <BarItem Key="TitleCenter_bar" Caption="个人资料" Location="Center">
            <Label Key="TitleCenter" Caption="个人资料" Width="100%">
                <Format HAlign="Center" ForeColor="#ffffff">
                    <Font Size="20"/>
                </Format>
            </Label>
        </BarItem>
    </NavigationBar>
</Form>
