                    </TableFilter>
                    <ParameterCollection>
                        <Parameter Formula="Para('CurrentOrderOID');" DataType="Long"/>
                    </ParameterCollection>
                    <Statement>
                        <![CDATA[select 
    OID,
    SOID,
    AddressName,
    ProvinceId,
    CityId,
    DistrictId,
