                                <Item Caption="固定储位" Key="StrategyType1" Value="1"/>
                                <Item Caption="附加于现有库存" Key="StrategyType2" Value="2"/>
                                <Item Caption="空储位（按储位类型）" Key="StrategyType3" Value="3"/>
                                <Item Caption="空储位（按托盘）" Key="StrategyType4" Value="4"/>
