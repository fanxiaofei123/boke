                        </GridLayoutPanel>
                        <SplitSize Size="100%"/>
                    </SplitPanel>
                    <ListView Key="ListView0" TableKey="LRP_PutawayStrategy_H" PageLoadType="DB">
                        <ListViewColumnCollection>
                            <ListViewColumn Caption="选择" ColumnType="CheckBox" Key="Select" IsSelect="true" Width="80px"/>
