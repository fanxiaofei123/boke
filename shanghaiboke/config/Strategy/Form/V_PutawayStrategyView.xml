<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form AbbrCaption="上架策略序事簿" Caption="上架策略序事簿" FormType="View" Key="V_PutawayStrategyView">
    <DataSource>
        <DataObject Caption="上架策略序事簿" Key="V_PutawayStrategyView" PrimaryTableKey="LRP_PutawayStrategy_H">
            <TableCollection>
                <Table Key="LRP_PutawayStrategy_H" Persist="false" SourceType="Query" TableMode="Detail">
                    <Column Key="OID" Caption="对象标识" DataType="Long"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建用户ID" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改用户ID" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Key="No" Caption="策略号" DataType="Varchar" Length="100" SortType="Desc"/>
                    <Column Key="Name" Caption="策略名称" DataType="Varchar" Length="100"/>
                    <Column Key="WarehouseCenterId" Caption="仓储中心" DataType="Long"/>
                    <Column Key="StrategyType" Caption="策略类型" DataType="Integer" DefaultValue="0"/>
                    <Column Key="Remarks" Caption="备注" DataType="Varchar" Length="1000"/>
                </Table>
            </TableCollection>
            <OIDFilter/>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="新增" Icon="new.png" Key="New">
            <Action>
                <![CDATA[
				New('V_PutawayStrategy')
			]]>
            </Action>
        </Operation>
        <Operation Caption="确认" Key="BatchConfirm" RefKey="BatchConfirm"/>
        <Operation Key="BatchConfirm-R" Caption="撤销确认">
            <Action>
                <![CDATA[if(CheckListNoSelect()){
	Confirm(LocaleString('CommonDef','key20'),'OK','OK:{}');
	return true;
}
if(!CheckListSelectStatus(',200,')){
	Confirm(LocaleString('CommonDef','key21'),'OK','OK:{}');
	return true;		
}
Confirm(LocaleString('CommonDef','key22'),'YES_NO',{YES:{
	loop "ListView0" (true)
	{			
		if(Select == true)
		{ 
			//查询选中的上架策略是否被物料引用
			var count=DBNamedQueryValue("SPutStrategy",OID);
			if(count==0){
				InvokeService("LRP_BillStatusChange", false, false,GetDataObjectKey('V_PutawayStrategy'),OID,100,-1);
				LoadData();ShowData();
			}else{
				Confirm(LocaleParaFormat('STshow','stkey9',GetValue("Name")),'OK','OK{}');
				break;
			}
		}					
	}
},NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="作废" Key="BatchCancel" RefKey="BatchCancel"/>
        <Operation Caption="撤销作废" Key="BatchCancel-R" RefKey="BatchCancel-R"/>
        <Operation Caption="删除" Key="BatchDelete">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm(LocaleString('OwnerNull','key100'),'OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',100,')){
                        Confirm(LocaleString('CommonDef','key36'),'OK','OK:{}');
						return true;	
                }						
				Confirm(LocaleString('OwnerNull','key102'),'YES_NO',{
				YES:{BatchDeleteData('LRP_PutawayStrategy', 'LRP_PutawayStrategy_H');LoadData();ShowData();
						},
				NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <QueryCollection>
        <Query Key="SPutStrategy">
            <Statement>
                <![CDATA[select count(*) as count from LRP_MaterialStrategy where StrategyId= ?]]>
            </Statement>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <GridLayoutPanel Height="100%" Key="main" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="main_split" Orientation="Vertical" X="0" Y="1">
                    <SplitPanel Height="100%" Key="base_split" Orientation="Vertical">
                        <GridLayoutPanel Caption="查询字段" Height="100%" Key="query" Padding="5px">
                            <TextEditor Caption="DataObjectKey" Enable="false" Key="DataObjectKey" Visible="false" X="6" Y="2">
                                <DataBinding DefaultValue="LRP_PutawayStrategy"/>
                            </TextEditor>
                            <TextEditor Key="No" Caption="上架策略号" BuddyKey="Lab_No" X="1" Y="0" XSpan="3">
                                <Condition ColumnKey="No" TableKey="LRP_PutawayStrategy_H" CondSign="like"/>
                            </TextEditor>
