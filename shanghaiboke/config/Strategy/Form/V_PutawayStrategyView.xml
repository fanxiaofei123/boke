                            <Label Key="Lab_StrategyType" Caption="策略类型" X="0" Y="1"/>
                            <CheckListBox BuddyKey="Lab_Status" Caption="状态" Key="Status_1" X="6" XSpan="3" Y="1">
                                <Condition ColumnKey="Status" TableKey="LRP_PutawayStrategy_H" CondSign="in"/>
