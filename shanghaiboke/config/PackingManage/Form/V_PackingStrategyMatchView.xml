<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_PackingStrategyMatchView" Caption="包装方案匹配单序事簿" FormType="View" AbbrCaption="包装方案匹配单视图">
    <DataSource>
        <DataObject Key="V_PackingStrategyMatchView" Caption="包装方案匹配单视图" PrimaryTableKey="LRP_PackingStrategyMatch_H">
            <TableCollection>
                <Table Key="LRP_PackingStrategyMatch_H" DBTableName="LRP_PackingStrategyMatch_H" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="No" Caption="匹配单号" DataType="Varchar" Length="100"/>
                    <Column Key="Name" Caption="匹配单名称" DataType="Varchar" Length="100"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="Remark" Caption="备注" DataType="Varchar" Length="200"/>
                    <Column Key="MaterialTypeID" Caption="对应的物料类型" DataType="Long"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[
New('V_PackingStrategyMatch');]]>
            </Action>
        </Operation>
        <Operation Key="Close" Caption="关闭界面" RefKey="Close"/>
    </OperationCollection>
    <QueryCollection>
        <Query Key="Strategy" Description="查询是否已有匹配方案">
            <Statement>
                <![CDATA[select count(*) as count from LRP_PackingStrategyMatch_H]]>
            </Statement>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="L_No" Caption="匹配单号" X="0" Y="0"/>
                            <TextEditor Key="No" Caption="匹配单号" BuddyKey="L_No" X="1" Y="0">
                                <Condition ColumnKey="No" TableKey="LRP_PackingStrategyMatch_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_Name" Caption="匹配名称" X="3" Y="0"/>
                            <TextEditor Key="Name" Caption="匹配名称" BuddyKey="L_Name" X="4" Y="0">
                                <Condition ColumnKey="Name" TableKey="LRP_PackingStrategyMatch_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_Status" Caption="状态" X="0" Y="1"/>
                            <ComboBox Key="Status" Caption="状态" BuddyKey="L_Status" X="1" Y="1" SourceType="Status">
                                <Condition ColumnKey="Status" TableKey="LRP_PackingStrategyMatch_H" CondSign="="/>
                            </ComboBox>
                            <Button Key="Query" Caption="查询" X="6" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="6" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <RowDefCollection RowHeight="30" RowGap="6">
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="20">
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="20px"/>
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="20px"/>
                                <ColumnDef Width="100px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="list" PageLoadType="DB" TableKey="LRP_PackingStrategyMatch_H">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_PackingStrategyMatch_H" Visible="false" Width="30px"/>
                            <ListViewColumn Key="No_LV" Caption="匹配单号" ColumnType="HyperLink" DataColumnKey="No" Width="189px">
                                <OnClick>
                                    <![CDATA[Open('V_PackingStrategyMatch', OID);]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="MaterialType_LV" Caption="物料类型" ItemKey="MaterialType" ColumnType="Dict" DataColumnKey="MaterialTypeID" Width="148px"/>
                            <ListViewColumn Key="Name_LV" Caption="匹配名称" ColumnType="TextEditor" DataColumnKey="Name" Width="148px"/>
                            <ListViewColumn Key="Status_LV" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" Width="133px" SourceType="Status"/>
                            <ListViewColumn Key="Remarks_LV" Caption="备注" ColumnType="TextEditor" DataColumnKey="Remark"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_PackingStrategyMatch', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="80px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData();]]>
    </OnLoad>
</Form>
