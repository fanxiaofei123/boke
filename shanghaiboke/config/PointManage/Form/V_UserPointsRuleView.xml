<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form AbbrCaption="用户积分规则序事簿" Caption="用户积分规则序事簿" FormType="View" Key="V_UserPointsRuleView">
    <DataSource>
        <DataObject Caption="用户积分规则序事簿" Key="V_UserPointsRuleView" PrimaryTableKey="LRP_UserPointsRule_H">
            <TableCollection>
                <Table Key="LRP_UserPointsRule_H" Persist="false" SourceType="Query" TableMode="Detail">
                    <Column Caption="对象标识" DBColumnName="OID" DataType="Long" Key="OID"/>
                    <Column Caption="父对象标识" DBColumnName="POID" DataType="Long" Key="POID"/>
                    <Column Caption="主对象标识" DBColumnName="SOID" DataType="Long" Key="SOID"/>
                    <Column Caption="对象版本" DBColumnName="VERID" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DBColumnName="DVERID" DataType="Integer" Key="DVERID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="规则号" DataType="Varchar" Key="No" SortType="Desc"/>
                    <Column Key="Name" Caption="规则名称" DataType="Varchar" Length="40"/>
                    <Column Key="OpType" Caption="操作类型" DataType="Varchar" Length="40"/>
                    <Column Key="PointsType" Caption="积分类型" DataType="Integer" DefaultValue="1"/>
                    <Column Key="FixedValue" Caption="固定值" DataType="Numeric" Precision="18" Scale="0"/>
                    <Column Key="CV" Caption="变动系数" DataType="Numeric" Precision="18" Scale="2"/>
                    <Column Key="Expire" Caption="效期" DataType="Numeric" Precision="6" Scale="0"/>
                    <Column Key="ExpireUnit" Caption="效期单位" DataType="Varchar" Length="1" DefaultValue="D"/>
                    <Column Key="Remarks" Caption="备注" DataType="Varchar" Length="500"/>
                    <Column Key="EffectiveDate" Caption="生效日期" DataType="Date"/>
                    <Column Key="ExpireDate" Caption="失效日期" DataType="Date"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="新增" Icon="new.png" Key="New">
            <Action>
                <![CDATA[
				New('V_UserPointsRule')	
			]]>
            </Action>
        </Operation>
        <Operation Caption="确认" Key="BatchConfirm" RefKey="BatchConfirm"/>
        <Operation Caption="撤销确认" Key="BatchConfirm-R">
            <Action>
                <![CDATA[				if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再撤销确认。','OK','OK:{}');
					return true;
				}
				if(!CheckListSelectStatus(',200,')){
					Confirm('只有状态是已确认的单据才能进行撤销确认。','OK','OK:{}');
					return true;
				}
				loop "ListView0" (true)
					{			
						if(Select == true)
						{ 
							var usednum=DBNamedQueryValue("addrecords", OID);
							if(usednum>0){
							         	Confirm('用户积分增加记录中存在已选规则，不能撤销确认!','OK','OK:{}');
							         	return true;
							}
						}					
					}
				Confirm('确定要将选中的记录进行撤销确认吗？','YES_NO',{YES:{
					loop "ListView0" (true)
					{			
						if(Select == true)
						{ 
							InvokeService("LRP_BillStatusChange", false, false,DataObjectKey,OID,100,-1);	
						}					
					}
					LoadData();ShowData();
				},NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="作废" Key="BatchCancel" RefKey="BatchCancel"/>
        <Operation Caption="撤销作废" Key="BatchCancel-R" RefKey="BatchCancel-R"/>
        <Operation Caption="删除" Key="BatchDelete">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
					return true;
				}
			   if(!CheckListSelectStatus(',100,')){	
			        Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
					return true;
			   }
			  Confirm('确定要将选中的记录进行删除吗？','YES_NO',{YES:{BatchDeleteData('LRP_UserPointsRule', 'LRP_UserPointsRule_H');
			            LoadData();ShowData();
					  },NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <QueryCollection>
        <Query Key="addrecords">
            <Statement>
                <![CDATA[select count(*) as num from LRP_AddRecords h where  h.UserPointsRuleId = ?]]>
            </Statement>
            <ParameterCollection>
                <Parameter DataType="Long"/>
            </ParameterCollection>
        </Query>
    </QueryCollection>
    <Body>
        <Block>
            <GridLayoutPanel Height="100%" Key="main" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="base_split" Orientation="Vertical" X="0" Y="1">
                    <GridLayoutPanel Caption="查询字段" Height="100%" Key="query" Padding="5px">
                        <TextEditor Caption="DataObjectKey" Enable="false" Key="DataObjectKey" Visible="false" X="6" Y="3">
                            <DataBinding DefaultValue="LRP_UserPointsRule"/>
                        </TextEditor>
                        <Label Key="Lab_RuleNo" Caption="规则号" X="0" Y="0"/>
                        <TextEditor Key="RuleNo" Caption="规则号" BuddyKey="Lab_RuleNo" X="1" Y="0" XSpan="3">
                            <Condition ColumnKey="No" CondSign="like" TableKey="LRP_UserPointsRule_H"/>
                        </TextEditor>
                        <Label Key="Lab_name" Caption="规则名称" X="5" Y="0"/>
                        <TextEditor Key="name" Caption="规则名称" BuddyKey="Lab_name" X="6" Y="0" XSpan="3">
                            <Condition ColumnKey="Name" CondSign="like" TableKey="LRP_UserPointsRule_H"/>
                        </TextEditor>
                        <Label Caption="状态" Key="L_Status_C" X="5" Y="1"/>
                        <CheckListBox BuddyKey="L_Status" Caption="状态" Key="Status_C" X="6" XSpan="3" Y="1">
                            <Condition ColumnKey="Status" CondSign="in" TableKey="LRP_UserPointsRule_H"/>
                            <Item Caption="已输入" Key="prepared" Value="100"/>
                            <Item Caption="已确认" Key="confirmed" Value="200"/>
                            <Item Caption="已作废" Key="cancelled" Value="20"/>
                        </CheckListBox>
                        <Button Caption="查询" Enable="true" Key="Query" X="10" Y="0">
                            <OnClick>
                                <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                            </OnClick>
                        </Button>
                        <Button Caption="重置" Enable="true" Key="cancel" X="10" Y="1">
                            <OnClick>
                                <![CDATA[
								ResetCondition();	
								]]>
                            </OnClick>
                        </Button>
                        <ComboBox Key="optype" Caption="操作类型" BuddyKey="Lab_optype" X="1" Y="1" XSpan="3">
                            <Condition ColumnKey="OpType" CondSign="=" TableKey="LRP_UserPointsRule_H"/>
                            <Item Caption="下单" Key="order" Value="order"/>
                            <Item Caption="充值" Key="charge" Value="charge"/>
                        </ComboBox>
                        <Label Key="Lab_optype" Caption="操作类型" X="0" Y="1"/>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="25%"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Key="ListView0" TableKey="LRP_UserPointsRule_H" PageLoadType="DB">
                        <ListViewColumnCollection>
                            <ListViewColumn Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" Key="OID" Visible="false" Width="93px"/>
                            <ListViewColumn Caption="选择" ColumnType="CheckBox" Key="Select" IsSelect="true" Width="80px"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" Width="74px" SourceType="Status"/>
                            <ListViewColumn Key="RuleNo_LV" Caption="规则号" ColumnType="HyperLink" DataColumnKey="No" Width="160px">
                                <OnClick>
                                    <![CDATA[Open('V_UserPointsRule', OID);]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="name_LV" Caption="规则名称" ColumnType="TextEditor" DataColumnKey="Name"/>
                            <ListViewColumn Key="optype_lv" Caption="操作类型" ColumnType="ComboBox" DataColumnKey="OpType" Width="80px">
                                <Item Caption="下单" Key="order" Value="order"/>
                                <Item Caption="充值" Key="charge" Value="charge"/>
                            </ListViewColumn>
                            <ListViewColumn Key="PointsType_LV" Caption="积分类型" ColumnType="ComboBox" DataColumnKey="PointsType" Width="120px">
                                <Item Caption="固定值" Key="1" Value="1"/>
                                <Item Caption="业务量*变动系数" Key="2" Value="2"/>
                            </ListViewColumn>
                            <ListViewColumn Key="FixedValue_LV" Caption="固定值" ColumnType="NumberEditor" DataColumnKey="FixedValue" Width="120px"/>
                            <ListViewColumn Key="CV_LV" Caption="变动系数" ColumnType="NumberEditor" DataColumnKey="CV" Width="80px"/>
                            <ListViewColumn Key="Expire_LV" Caption="效期" ColumnType="NumberEditor" DataColumnKey="Expire" Width="80px"/>
                            <ListViewColumn Key="ExpireUnit_LV" Caption="效期单位" ColumnType="ComboBox" DataColumnKey="ExpireUnit">
                                <Item Caption="日" Key="D" Value="D"/>
                                <Item Caption="月" Key="M" Value="M"/>
                                <Item Caption="年" Key="Y" Value="Y"/>
                            </ListViewColumn>
                            <ListViewColumn Key="EffectiveDate_LV" Caption="生效日期" ColumnType="DatePicker" DataColumnKey="EffectiveDate" Width="80px" OnlyDate="true"/>
                            <ListViewColumn Key="ExpireDate_LV" Caption="失效日期" ColumnType="DatePicker" DataColumnKey="ExpireDate" OnlyDate="true"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[
							Open('V_UserPointsRule', OID)	
						]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="85px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
</Form>
