<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_CouponRecordsView" Caption="劵使用记录叙事簿" FormType="View" AbbrCaption="劵使用记录叙事簿" Platform="">
    <DataSource>
        <DataObject Key="V_CouponRecordsView" Caption="劵使用记录叙事簿" PrimaryTableKey="LRP_CouponRecords">
            <TableCollection>
                <Table Key="LRP_CouponRecords" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="No" Caption="编号" DataType="Varchar" Length="100"/>
                    <Column Key="DistributeDatetime" Caption="劵发放时间" DataType="DateTime"/>
                    <Column Key="UseDatetime" Caption="劵使用时间" DataType="DateTime"/>
                    <Column Key="Status" Caption="状态" DataType="Integer"/>
                    <Column Key="CouponName" Caption="劵名称" DataType="Varchar" Length="100"/>
                    <Column Key="OwnerUserId" Caption="货主用户id" DataType="Long"/>
                    <Column Key="UseNo" Caption="劵使用单号" DataType="Varchar" Length="40"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="作废" Key="BatchCancel" RefKey="BatchCancel"/>
        <Operation Caption="撤销作废" Key="BatchCancel-R" RefKey="BatchCancel-R"/>
        <Operation Caption="删除" Key="BatchDelete">
            <Action>
                <![CDATA[
				if(CheckListNoSelect()){
					Confirm('没有选中任何记录，请选择后再删除。','OK','OK:{}');
					return true;
				}
			   if(!CheckListSelectStatus(',100,')){	
			        Confirm('只有状态是已输入的单据才能进行删除。','OK','OK:{}');
					return true;
			   }
			  Confirm('确定要将选中的记录进行删除吗？','YES_NO',{YES:{BatchDeleteData('LRP_CouponRecords', 'LRP_CouponRecords');
			            LoadData();ShowData();
					  },NO:{}});]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="L_No" Caption="编号" X="0" Y="0"/>
                            <TextEditor Key="No" Caption="编号" BuddyKey="L_No" X="1" Y="0" XSpan="2">
                                <Condition ColumnKey="No" TableKey="LRP_CouponRecords" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_DistributeDatetime" Caption="劵发放时间" X="0" Y="2"/>
                            <DatePicker Key="DistributeDatetime" Caption="劵发放时间" BuddyKey="L_DistributeDatetime" X="1" Y="2" XSpan="2">
                                <Format/>
                                <Condition ColumnKey="DistributeDatetime" TableKey="LRP_CouponRecords" CondSign="between" Group="DistributeDatetime" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="L_DistributeDatetime_Comp2" Caption="到" X="4" Y="2"/>
                            <DatePicker Key="DistributeDatetime_Comp2" Caption="到" BuddyKey="L_DistributeDatetime_Comp2" X="5" Y="2" XSpan="2">
                                <Format/>
                                <Condition ColumnKey="DistributeDatetime" TableKey="LRP_CouponRecords" CondSign="between" Group="DistributeDatetime" GroupTail="true"/>
                            </DatePicker>
                            <Label Key="L_UseDatetime" Caption="劵使用时间" X="0" Y="3"/>
                            <DatePicker Key="UseDatetime" Caption="劵使用时间" BuddyKey="L_UseDatetime" X="1" Y="3" XSpan="2">
                                <Format/>
                                <Condition ColumnKey="UseDatetime" TableKey="LRP_CouponRecords" CondSign="between" Group="UseDatetime" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="L_UseDatetime_Comp2" Caption="到" X="4" Y="3"/>
                            <DatePicker Key="UseDatetime_Comp2" Caption="到" BuddyKey="L_UseDatetime_Comp2" X="5" Y="3" XSpan="2">
                                <Format/>
                                <Condition ColumnKey="UseDatetime" TableKey="LRP_CouponRecords" CondSign="between" Group="UseDatetime" GroupTail="true"/>
                            </DatePicker>
                            <Label Key="L_Status" Caption="状态" X="4" Y="1"/>
                            <ComboBox Key="Status_cond" Caption="状态" BuddyKey="L_Status" X="5" Y="1" SourceType="Status" XSpan="2">
                                <Condition ColumnKey="Status" TableKey="LRP_CouponRecords" CondSign="="/>
                            </ComboBox>
                            <Label Key="L_CouponName" Caption="劵名称" X="0" Y="1"/>
                            <TextEditor Key="CouponName" Caption="劵名称" BuddyKey="L_CouponName" X="1" Y="1" XSpan="2">
                                <Condition ColumnKey="CouponName" TableKey="LRP_CouponRecords" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_OwnerUserId" Caption="货主用户" X="4" Y="0"/>
                            <Dict Key="OwnerUserId" Caption="货主用户" BuddyKey="L_OwnerUserId" X="5" Y="0" AllowMultiSelection="true" ItemKey="LRP_OwnerUser" XSpan="2">
                                <Condition ColumnKey="OwnerUserId" TableKey="LRP_CouponRecords" CondSign="in"/>
                            </Dict>
                            <Button Key="Query" Caption="查询" X="8" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="8" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <TextEditor Key="DataObjectKey" Caption="DataObjectKey" X="8" Y="3" Visible="false" Enable="false">
                                <DataBinding DefaultValue="LRP_CouponRecords"/>
                            </TextEditor>
                            <RowDefCollection RowHeight="30" RowGap="6">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="77px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="80px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" TableKey="LRP_CouponRecords">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_CouponRecords" Visible="false" Width="30px"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" Width="80px" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="编号" ColumnType="TextEditor" DataColumnKey="No"/>
                            <ListViewColumn Key="CouponName_LV" Caption="劵名称" ColumnType="TextEditor" DataColumnKey="CouponName"/>
                            <ListViewColumn Key="OwnerUserId_LV" Caption="货主用户" ColumnType="Dict" DataColumnKey="OwnerUserId" ItemKey="LRP_OwnerUser"/>
                            <ListViewColumn Key="DistributeDatetime_LV" Caption="劵发放时间" ColumnType="DatePicker" DataColumnKey="DistributeDatetime"/>
                            <ListViewColumn Key="UseDatetime_LV" Caption="劵使用时间" ColumnType="DatePicker" DataColumnKey="UseDatetime"/>
                            <ListViewColumn Key="UseNo_LV" Caption="劵使用单号" ColumnType="TextEditor" DataColumnKey="UseNo"/>
                        </ListViewColumnCollection>
                    </ListView>
                    <SplitSize Size="150px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData();]]>
    </OnLoad>
    <MacroCollection>
        <Macro Key="CheckListNoSelect" Description="检查叙事簿是否没有选中记录">
            <![CDATA[
				var noselect = true;
				loop "ListView0" (true)
				{			
					if(Select == true)
					{ 
						noselect = false;			
					}					
				}
				noselect;
			]]>
        </Macro>
        <Macro Key="CheckListSelectStatus" Description="检查叙事簿的选中记录是否都是指定的状态" Args="CheckStatus">
            <![CDATA[
				var returnvalue = true;
				var noselect = true;
				loop "ListView0" (true)
				{			
					if(Select == true)
					{ 
						noselect = false;	
						var s = ","&Status&",";
						if(IndexOf(CheckStatus, s)<0)
							{returnvalue = false;}
					}					
				}
				if(noselect) {returnvalue = false;}
				returnvalue;
			]]>
        </Macro>
    </MacroCollection>
</Form>
