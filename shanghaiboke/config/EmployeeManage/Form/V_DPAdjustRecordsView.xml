<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form AbbrCaption="司机积分调整记录查询" Caption="司机积分调整记录查询" FormType="View" Key="V_DPAdjustRecordsView">
    <DataSource>
        <DataObject Caption="司机积分调整记录查询" Key="V_DPAdjustRecordsView" PrimaryTableKey="LRP_DPAdjustRecords">
            <TableCollection>
                <Table Caption="司机积分规则头" Key="LRP_DPAdjustRecords" Persist="false" SourceType="Query" TableMode="Detail">
                    <Column Caption="对象标识" DataType="Long" Key="OID"/>
                    <Column Caption="主对象标识" DataType="Long" Key="SOID"/>
                    <Column Caption="父对象标识" DataType="Long" Key="POID"/>
                    <Column Caption="对象版本" DataType="Integer" Key="VERID"/>
                    <Column Caption="对象明细版本" DataType="Integer" Key="DVERID"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                    <Column Caption="创建人" DataType="Long" Key="CREATOR"/>
                    <Column Caption="创建时间" DataType="DateTime" Key="CREATETIME"/>
                    <Column Caption="修改人" DataType="Long" Key="MODIFIER"/>
                    <Column Caption="修改时间" DataType="DateTime" Key="MODIFYTIME"/>
                    <Column Caption="司机id" DataType="Long" Key="DriverId"/>
                    <Column Caption="司机积分规则id" DataType="Long" Key="DPRuleId"/>
                    <Column Caption="规则号" DataType="Varchar" Key="No" Length="40"/>
                    <Column Caption="规则名称" DataType="Varchar" Key="Name" Length="40"/>
                    <Column Caption="增加/减少" DataType="Integer" Key="AddOrReduce" DefaultValue="1"/>
                    <Column Caption="相关单号" DataType="Varchar" Key="RefNo" Length="40"/>
                    <Column Caption="积分" Key="Points" DataType="Numeric" Precision="18" Scale="0"/>
                    <Column Caption="已用积分" Key="UsedPoints" DataType="Numeric" Precision="18" Scale="0"/>
                    <Column Caption="失效日期" DataType="DateTime" Key="ExpireDate"/>
                    <Statement>
                        <![CDATA[select * from (select h.*,dr.No,dr.Name from LRP_DPAdjustRecords h join LRP_DriverPointsRule_H dr on dr.oid = h.DPRuleId) a]]>
                    </Statement>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <ToolBar Height="pref" Key="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="main_split" Orientation="Vertical">
                    <GridLayoutPanel Caption="GridLayoutPanel0" Key="GridLayoutPanel0" Padding="10px">
                        <Label Caption="货主司机" Key="L_DriverId" X="0" Y="0"/>
                        <Dict AllowMultiSelection="true" BuddyKey="L_DriverId" Caption="货主司机" ItemKey="LRP_Driver" Key="DriverId_C" X="1" XSpan="2" Y="0">
                            <Condition CondSign="in" ColumnKey="DriverId" TableKey="LRP_DPAdjustRecords"/>
                        </Dict>
                        <TextEditor Caption="规则名称" Key="Name_C" X="5" XSpan="2" Y="0">
                            <Condition CondSign="like">
                                <ConditionTarget TableKey="LRP_DPAdjustRecords" ColumnKey="Name"/>
                            </Condition>
                        </TextEditor>
                        <Label Caption="规则名称" Key="L_Name" X="4" Y="0"/>
                        <TextEditor Caption="相关单号" Key="RefNo_C" X="1" XSpan="2" Y="1">
                            <Condition CondSign="like">
                                <ConditionTarget TableKey="LRP_DPAdjustRecords" ColumnKey="RefNo"/>
                            </Condition>
                        </TextEditor>
                        <Label Caption="相关单号" Key="L_RefNo" X="0" Y="1"/>
                        <CheckListBox Caption="增加/减少" Key="AddOrReduce_C" X="5" XSpan="2" Y="1">
                            <Condition CondSign="in">
                                <ConditionTarget TableKey="LRP_DPAdjustRecords" ColumnKey="AddOrReduce"/>
                            </Condition>
                            <Item Caption="减少" Key="1" Value="1"/>
                            <Item Caption="增加" Key="-1" Value="-1"/>
                        </CheckListBox>
                        <Label Caption="增加/减少" Key="L_AddOrReduce" X="4" Y="1"/>
                        <DatePicker Caption="创建日期时间" Key="CREATETIME_C" X="1" XSpan="2" Y="2">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                            <Condition CondSign="between" Group="CREATETIME" GroupHead="true">
                                <ConditionTarget TableKey="LRP_DPAdjustRecords" ColumnKey="CREATETIME"/>
                            </Condition>
                        </DatePicker>
                        <Label Caption="创建日期时间" Key="L_CREATETIME" X="0" Y="2"/>
                        <DatePicker Caption="至" Key="CREATETIME_C_1" X="5" XSpan="2" Y="2">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                            <Condition CondSign="none" Group="CREATETIME" GroupTail="true">
                                <ConditionTarget TableKey="LRP_DPAdjustRecords" ColumnKey="CREATETIME"/>
                            </Condition>
                        </DatePicker>
                        <Label Caption="至" Key="L_CREATETIME_1" X="4" Y="2"/>
                        <DatePicker Caption="失效日期" Key="ExpireDate_C" X="1" XSpan="2" Y="3">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                            <Condition CondSign="between" Group="ExpireDate" GroupHead="true">
                                <ConditionTarget TableKey="LRP_DPAdjustRecords" ColumnKey="ExpireDate"/>
                            </Condition>
                        </DatePicker>
                        <Label Caption="失效日期" Key="L_ExpireDate" X="0" Y="3"/>
                        <DatePicker Caption="至" Key="ExpireDate_C_1" X="5" XSpan="2" Y="3">
                            <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                            <Condition CondSign="none" Group="ExpireDate" GroupTail="true">
                                <ConditionTarget TableKey="LRP_DPAdjustRecords" ColumnKey="ExpireDate"/>
                            </Condition>
                        </DatePicker>
                        <Label Caption="至" Key="L_ExpireDate_1" X="4" Y="3"/>
                        <Button Caption="查询" Key="Query" X="8" Y="0">
                            <OnClick>
                                <![CDATA[DealCondition();LoadData();ShowData();]]>
                            </OnClick>
                        </Button>
                        <Button Caption="重置" Key="Reset" X="8" Y="1">
                            <OnClick>
                                <![CDATA[ResetCondition();]]>
                            </OnClick>
                        </Button>
                        <RowDefCollection RowGap="8">
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                            <RowDef Height="30px"/>
                        </RowDefCollection>
                        <ColumnDefCollection ColumnGap="8">
                            <ColumnDef Width="77px"/>
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%" MinWidth="50px"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="55px"/>
                            <ColumnDef Width="100px"/>
                            <ColumnDef Width="50%" MinWidth="50px"/>
                            <ColumnDef Width="30px"/>
                            <ColumnDef Width="80px"/>
                        </ColumnDefCollection>
                    </GridLayoutPanel>
                    <ListView Caption="ListView0" Key="ListView0" TableKey="LRP_DPAdjustRecords" PageLoadType="DB">
                        <ListViewColumnCollection>
                            <ListViewColumn Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" Key="OID" Visible="false"/>
                            <ListViewColumn Caption="司机" ColumnType="Dict" ItemKey="LRP_Driver" Key="DriverId" DataColumnKey="DriverId"/>
                            <ListViewColumn Caption="规则号" ColumnType="TextEditor" DataColumnKey="No" Key="No"/>
                            <ListViewColumn Caption="规则名称" ColumnType="TextEditor" DataColumnKey="Name" Key="Name"/>
                            <ListViewColumn Caption="相关单号" ColumnType="TextEditor" DataColumnKey="RefNo" Key="RefNo"/>
                            <ListViewColumn Caption="增加/减少" ColumnType="ComboBox" Key="AddOrReduce" DataColumnKey="AddOrReduce">
                                <Item Caption="减少" Key="1" Value="1"/>
                                <Item Caption="增加" Key="-1" Value="-1"/>
                            </ListViewColumn>
                            <ListViewColumn Caption="积分" ColumnType="NumberEditor" DataColumnKey="Points" Key="Points"/>
                            <ListViewColumn Caption="已用积分" ColumnType="NumberEditor" DataColumnKey="UsedPoints" Key="UsedPoints"/>
                            <ListViewColumn Caption="失效日期" ColumnType="DatePicker" DataColumnKey="ExpireDate" Format="yyyy-MM-dd" Key="ExpireDate" OnlyDate="true"/>
                        </ListViewColumnCollection>
                    </ListView>
                    <SplitSize Size="170px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[]]>
    </OnLoad>
</Form>
