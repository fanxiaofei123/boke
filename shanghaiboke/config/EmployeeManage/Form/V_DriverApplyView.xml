<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_DriverApplyView" Caption="加盟司机申请审核序时簿" FormType="View" AbbrCaption="加盟司机申请审核序时簿">
    <DataSource>
        <DataObject Key="V_DriverApplyView" Caption="加盟司机申请审核叙事簿" PrimaryTableKey="LRP_DriverApply_H">
            <TableCollection>
                <Table Key="LRP_DriverApply_H" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="POID" Caption="父对象标识" DataType="Long" DBColumnName="POID"/>
                    <Column Key="SOID" Caption="主对象标识" DataType="Long" DBColumnName="SOID"/>
                    <Column Key="VERID" Caption="对象版本" DataType="Integer" DBColumnName="VERID"/>
                    <Column Key="DVERID" Caption="对象明细版本" DataType="Integer" DBColumnName="DVERID"/>
                    <Column Key="No" Caption="申请号" DataType="Varchar" Length="80"/>
                    <Column Key="DriverId" Caption="司机Id" DataType="Long"/>
                    <Column Key="DriverName" Caption="司机姓名" DataType="Varchar" Length="40"/>
                    <Column Key="Mobile" Caption="手机" DataType="Varchar" Length="20"/>
                    <Column Key="IDCardNo" Caption="身份证" DataType="Varchar" Length="40"/>
                    <Column Key="ContactAddress" Caption="联系地址" DataType="Varchar" Length="225"/>
                    <Column Key="LicenseNo" Caption="驾照号" DataType="Varchar" Length="40"/>
                    <Column Key="IsSelfCar" Caption="是否有自车" DataType="Integer"/>
                    <Column Key="TruckLicenseNo" Caption="车牌号" DataType="Varchar" Length="40"/>
                    <Column Key="TruckTypeId" Caption="车辆类型1d" DataType="Long"/>
                    <Column Key="BrandModel" Caption="品牌型号" DataType="Varchar" Length="100"/>
                    <Column Key="EngineNo" Caption="发动机号" DataType="Varchar" Length="100"/>
                    <Column Key="ChassisNo" Caption="底盘号" DataType="Varchar" Length="100"/>
                    <Column Key="VINNo" Caption="车架号" DataType="Varchar" Length="100"/>
                    <Column Key="LoadWeight" Caption="载重" DataType="Numeric" Precision="18" Scale="3"/>
                    <Column Key="LoadCubage" Caption="容积" DataType="Numeric" Precision="18" Scale="3"/>
                    <Column Key="DrivingLicenseType" Caption="驾照类型" DataType="Varchar" Length="2"/>
                    <Column Key="ApplyDateTime" Caption="申请日期时间" DataType="DateTime"/>
                    <Column Key="ApprovalDateTime" Caption="审批日期时间" DataType="DateTime"/>
                    <Column Key="SelfIntroduction" Caption="自我介绍" DataType="Varchar" Length="2000"/>
                    <Column Key="ApprovalOpinion" Caption="审批意见" DataType="Varchar" Length="2000"/>
                    <Column Caption="状态" DataType="Integer" Key="Status"/>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Caption="关闭界面" Key="Close">
            <Action>
                <![CDATA[Close();]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="L_No" Caption="预约号" X="0" Y="0"/>
                            <TextEditor Key="No" Caption="预约号" BuddyKey="L_No" X="1" Y="0" XSpan="3">
                                <Condition ColumnKey="No" TableKey="LRP_DriverApply_H" CondSign="like"/>
                            </TextEditor>
                            <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <TextEditor Key="DataObjectKey" Caption="ObjectKey" BuddyKey="Lab_DataObjectKey" X="6" Y="4" Visible="false" XSpan="3">
                                <DataBinding DefaultValue="LRP_DriverApply"/>
                            </TextEditor>
                            <Label Key="Lab_DataObjectKey" Caption="ObjectKey" X="5" Y="4"/>
                            <TextEditor Key="DriverName" Caption="司机姓名" BuddyKey="Lab_DriverName" X="6" Y="0" XSpan="3">
                                <Condition ColumnKey="DriverName" TableKey="LRP_DriverApply_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_DriverName" Caption="司机姓名" X="5" Y="0"/>
                            <TextEditor Key="Mobile" Caption="手机号" BuddyKey="Lab_Mobile" X="1" Y="1" XSpan="3">
                                <Condition ColumnKey="Mobile" TableKey="LRP_DriverApply_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_Mobile" Caption="手机号" X="0" Y="1"/>
                            <DatePicker Key="ApplyDateTimeFrom" Caption="申请日期时间" BuddyKey="Lab_ApplyDateTimeFrom" X="1" Y="2" XSpan="3">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                                <Condition ColumnKey="ApplyDateTime" TableKey="LRP_DriverApply_H" CondSign="between" Group="ApplyDateTime" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="Lab_ApplyDateTimeFrom" Caption="申请日期时间" X="0" Y="2"/>
                            <DatePicker Key="ApplyDateTimeTo" Caption="至" BuddyKey="Lab_ApplyDateTimeTo" X="6" Y="2" XSpan="3">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                                <Condition ColumnKey="ApplyDateTime" TableKey="LRP_DriverApply_H" CondSign="in" Group="ApplyDateTime" GroupTail="true"/>
                            </DatePicker>
                            <Label Key="Lab_ApplyDateTimeTo" Caption="至" X="5" Y="2"/>
                            <CheckListBox BuddyKey="Lab_Status_C" Caption="状态" Key="Status_C" X="6" XSpan="3" Y="1">
                                <Condition ColumnKey="Status" TableKey="LRP_DriverApply_H" CondSign="in"/>
                                <Item Caption="已提交" Key="1010" Value="1010"/>
                                <Item Caption="审核中" Key="1020" Value="1020"/>
                                <Item Caption="已通过" Key="1050" Value="1050"/>
                                <Item Caption="未通过" Key="1090" Value="1090"/>
                            </CheckListBox>
                            <Label Key="Lab_Status_C" Caption="状态" X="5" Y="1"/>
                            <RowDefCollection RowHeight="30" RowGap="8">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="25%"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="80px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="ListView0" PageLoadType="DB" TableKey="LRP_DriverApply_H">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="LRP_DriverApply_H" Visible="false" Width="76px"/>
                            <ListViewColumn Key="Select" Caption="选择" ColumnType="CheckBox" IsSelect="true"/>
                            <ListViewColumn Key="Status" Caption="状态" ColumnType="ComboBox" DataColumnKey="Status" SourceType="Status"/>
                            <ListViewColumn Key="No_LV" Caption="申请号" ColumnType="HyperLink" DataColumnKey="No" Width="160px">
                                <OnClick>
                                    <![CDATA[Open('V_DriverApply', OID)]]>
                                </OnClick>
                            </ListViewColumn>
                            <ListViewColumn Key="DriverName_LV" Caption="司机姓名" ColumnType="TextEditor" DataColumnKey="DriverName" Width="150px"/>
                            <ListViewColumn Key="Mobile_LV" Caption="手机号" ColumnType="TextEditor" DataColumnKey="Mobile" Width="150px"/>
                            <ListViewColumn Key="IDCardNo_LV" Caption="身份证" ColumnType="TextEditor" DataColumnKey="IDCardNo"/>
                            <ListViewColumn Key="ContactAddress_LV" Caption="联系地址" ColumnType="TextEditor" DataColumnKey="ContactAddress"/>
                            <ListViewColumn Key="LicenseNo_LV" Caption="驾照号" ColumnType="TextEditor" DataColumnKey="LicenseNo"/>
                            <ListViewColumn Key="IsSelfCar_LV" Caption="自有车" ColumnType="CheckBox" DataColumnKey="IsSelfCar"/>
                            <ListViewColumn Key="TruckLicenseNo_LV" Caption="车牌号" ColumnType="TextEditor" DataColumnKey="TruckLicenseNo"/>
                            <ListViewColumn Key="ApplyDateTime_LV" Caption="申请日期时间" ColumnType="DatePicker" Width="100px" DataColumnKey="ApplyDateTime"/>
                            <ListViewColumn Key="ApprovalDateTime_LV" Caption="审批日期时间" ColumnType="DatePicker" Width="95px" DataColumnKey="ApprovalDateTime"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_DriverApply', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="125px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData();]]>
    </OnLoad>
</Form>
