<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_DriverSign" Caption="签到单" FormType="Entity" Platform="" ViewKey="V_DriverSignView">
    <DataSource RefObjectKey="LRP_DriverSign"/>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[
				New('V_DriverSign')	
			]]>
            </Action>
        </Operation>
        <Operation Caption="保存" Key="Save" ShortCuts="Ctrl+S" Visible="!ReadOnly()">
            <Action>
                <![CDATA[
				SaveData();
				UpdateView();
			]]>
            </Action>
        </Operation>
        <Operation Caption="编辑" Key="Edit" Visible="ReadOnly()&amp;&amp;Status==100" ShortCuts="Ctrl+E">
            <Action>
                <![CDATA[Edit();]]>
            </Action>
        </Operation>
        <Operation Key="Confirm" Caption="确认" Visible="false" RefKey="Confirm"/>
        <Operation Key="Confirm-R" Caption="撤销确认" Visible="false" RefKey="Confirm-R"/>
		<Operation Caption="删除" Key="Delete" RefKey="Delete"/>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close">
            <Action>
                <![CDATA[Close();]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <ToolBar Height="pref" Key="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="main_split" Orientation="Vertical">
                    <TabPanel Caption="TabPanel0" Key="TabPanel0">
                        <GridLayoutPanel Caption="基本信息" Key="BasicTab" Padding="10px">
                            <TextEditor Caption="签到单号" Enable="false" Key="No" X="1" XSpan="2" Y="0" AsQuery="true">
                                <DataBinding ColumnKey="No" TableKey="LRP_DriverSign"/>
                            </TextEditor>
                            <Label Caption="签到单号" Key="L_No" X="0" Y="0"/>
                            <Dict Caption="司机" ItemKey="LRP_Driver" Key="DriverId" X="5" XSpan="2" Y="0" Enable="!ReadOnly()&amp;&amp;Status==100" AsQuery="true">
                                <DataBinding ColumnKey="DriverId" TableKey="LRP_DriverSign" Required="true"/>
                            </Dict>
                            <Label Caption="司机" Key="L_DriverId" X="4" Y="0"/>
                            <DatePicker Key="SignOnTime" Caption="签到时间" BuddyKey="Lab_SignOnTime" X="1" Y="2" Enable="!ReadOnly()&amp;&amp;Status==100" XSpan="2" AsQuery="true">
                                <DataBinding ColumnKey="SignOnTime" TableKey="LRP_DriverSign" Required="true"/>
                                <Format/>
                            </DatePicker>
                            <Label Key="Lab_SignOnTime" Caption="签到时间" X="0" Y="2"/>
                            <DatePicker Key="SignOffTime" Caption="签退时间" BuddyKey="Lab_SignOffTime" X="5" Y="2" Enable="!ReadOnly()&amp;&amp;Status==100" XSpan="2" AsQuery="true">
                                <DataBinding ColumnKey="SignOffTime" TableKey="LRP_DriverSign">
                                    <ValueChanged>
                                        <![CDATA[
										if(!IsControlNull('SignOffTime')){SetValue('SignStatus',0);}
										]]>
                                    </ValueChanged>
                                </DataBinding>
                            </DatePicker>
                            <Label Key="Lab_SignOffTime" Caption="签退时间" X="4" Y="2"/>
                            <Dict Key="TruckTypeId" Caption="车辆类型" BuddyKey="Lab_TruckTypeId" X="1" Y="1" Enable="!ReadOnly()&amp;&amp;Status==100" ItemKey="LRP_TruckType" XSpan="2" AsQuery="true">
                                <DataBinding ColumnKey="TruckTypeId" TableKey="LRP_DriverSign" Required="true"/>
                                <ItemFilter ItemKey="LRP_TruckType">
                                    <Filter FilterDependency="DriverId" Query="select distinct tt.OID  from LRP_TruckType tt join LRP_Truck t on tt.oid=t.TruckTypeId join LRP_TruckDispatchOrg tdo on t.oid=tdo.soid where tdo.DispatchOrgId in (select DispatchOrgId from LRP_Driver_Org where soid=?)" Type="DataSet">
                                        <FilterValue DataType="Long" ParaValue="DriverId" Type="Field"/>
                                    </Filter>
                                </ItemFilter>
                            </Dict>
                            <Label Key="Lab_TruckTypeId" Caption="车辆类型" X="0" Y="1"/>
                            <ComboBox Key="SignStatus" Caption="签到状态" BuddyKey="Lab_SignStatus" X="9" Y="1" Enable="!ReadOnly()&amp;&amp;Status==100" XSpan="2">
                                <DataBinding ColumnKey="SignStatus" TableKey="LRP_DriverSign" DefaultValue="1" Required="true"/>
                                <Item Caption="离线" Key="SignOff" Value="0"/>
                                <Item Caption="在线" Key="SignOn" Value="1"/>
                            </ComboBox>
                            <Label Key="Lab_SignStatus" Caption="签到状态" X="8" Y="1"/>
                            <ComboBox Key="LicenseNo" Caption="车牌号" BuddyKey="Lab_LicenseNo" X="5" Y="1" SourceType="Query" Enable="!ReadOnly()&amp;&amp;Status==100" XSpan="2" DynamicItems="true" ItemsDependency="TruckTypeId,DriverId">
                                <DataBinding ColumnKey="LicenseNo" TableKey="LRP_DriverSign" Required="true"/>
                                <QueryDef>
                                    <Statement>
                                        <![CDATA[select t.LicenseNo as k,t.LicenseNo as n from LRP_Truck t join LRP_TruckDispatchOrg tdo on t.oid=tdo.soid where t.TruckTypeId = ? and t.TruckStatus = 1 and tdo.DispatchOrgId in (select DispatchOrgId from LRP_Driver_Org where soid=?)]]>
                                    </Statement>
                                    <ParameterCollection>
                                        <Parameter DataType="Long" FieldKey="TruckTypeId" SourceType="Field"/>
                                        <Parameter DataType="Long" FieldKey="DriverId" SourceType="Field"/>
                                    </ParameterCollection>
                                </QueryDef>
                            </ComboBox>
                            <Label Key="Lab_LicenseNo" Caption="车牌号" X="4" Y="1"/>
                            <ComboBox Key="Status" Caption="状态" BuddyKey="Lab_Status" X="9" Y="0" SourceType="Formula" Enable="false" XSpan="2">
                                <DataBinding ColumnKey="Status" TableKey="LRP_DriverSign" DefaultValue="100"/>
                                <FormulaItems>
                                    <![CDATA[GetStatusItems()]]>
                                </FormulaItems>
                            </ComboBox>
                            <Label Key="Lab_Status" Caption="状态" X="8" Y="0"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="50px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="50px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Caption="系统信息" Height="pref" Key="SystemInfo" Padding="10px">
                            <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                            <Dict BuddyKey="L_CREATOR" Caption="创建人" Enable="false" ItemKey="Operator" Key="CREATOR" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_DriverSign"/>
                            </Dict>
                            <DatePicker Caption="修改时间" Enable="false" Key="MODIFYTIME" X="5" XSpan="2" Y="1">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_DriverSign"/>
                            </DatePicker>
                            <Label Caption="修改时间" Key="L_MODIFYTIME" X="4" Y="1"/>
                            <DatePicker Caption="创建时间" Enable="false" Key="CREATETIME" X="1" XSpan="2" Y="1">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_DriverSign"/>
                            </DatePicker>
                            <Label Caption="创建时间" Key="L_CREATETIME" X="0" Y="1"/>
                            <Dict Caption="修改人" Enable="false" ItemKey="Operator" Key="MODIFIER" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_DriverSign"/>
                            </Dict>
                            <Label Caption="修改人" Key="L_MODIFIER" X="4" Y="0"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <SplitSize Size="260px"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
