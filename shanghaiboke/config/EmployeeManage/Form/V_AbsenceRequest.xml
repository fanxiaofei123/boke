<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="V_AbsenceRequest" Caption="请假单">
    <DataSource RefObjectKey="LRP_AbsenceRequest"/>
    <OperationCollection>
        <Operation Caption="新增" Key="New" Visible="ReadOnly()">
            <Action>
                <![CDATA[
				New('V_AbsenceRequest');
			]]>
            </Action>
        </Operation>
        <Operation Caption="复制新增" Key="CopyNew" RefKey="CopyNew" ShortCuts="Ctrl+E"/>
        <Operation Caption="保存" Key="Save" ShortCuts="Ctrl+S" Visible="!ReadOnly()&amp;&amp;Status==100">
            <Action>
                <![CDATA[
				SaveData();
				UpdateView();
			]]>
            </Action>
        </Operation>
        <Operation Caption="编辑" Key="Edit" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Key="Confirm" Caption="审批" Visible="false" RefKey="Confirm"/>
        <Operation Key="ConfirmR" Caption="撤销审批" Visible="false" RefKey="Confirm-R"/>
        <Operation Caption="删除" Key="Delete" RefKey="Delete" ShortCuts="Ctrl+D"/>
        <Operation Caption="取消" Key="Cancel" RefKey="Cancel"/>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <ToolBar Height="pref" Key="main_toolbar">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Height="100%" Key="main_split" Orientation="Vertical">
                    <TabPanel Caption="TabPanel0" Key="TabPanel0">
                        <GridLayoutPanel Caption="基本信息" Key="BasicTab" Padding="10px">
                            <TextEditor Caption="请假单号" Enable="false" Key="No" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="No" TableKey="LRP_AbsenceRequest"/>
                            </TextEditor>
                            <Label Caption="请假单号" Key="L_No" X="0" Y="0"/>
                            <Dict Caption="请假人" ItemKey="LRP_Driver" Key="DriverId" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="DriverID" TableKey="LRP_AbsenceRequest" Required="true"/>
                            </Dict>
                            <Label Caption="请假人" Key="L_DriverId" X="4" Y="0"/>
                            <ComboBox Key="AbsenceType" Caption="请假类型" X="1" Y="2" Enable="!ReadOnly()" XSpan="2">
                                <DataBinding ColumnKey="AbsenceType" TableKey="LRP_AbsenceRequest" DefaultValue="0" Required="true"/>
                                <Item Caption="事假" Key="0" Value="0"/>
                                <Item Caption="病假" Key="1" Value="1"/>
                                <Item Caption="年假" Key="2" Value="2"/>
                                <Item Caption="婚假" Key="3" Value="3"/>
                                <Item Caption="产假" Key="4" Value="4"/>
                                <Item Caption="护理假" Key="5" Value="5"/>
                                <Item Caption="丧假" Key="6" Value="6"/>
                                <Item Caption="补假" Key="7" Value="7"/>
                                <Item Caption="其它" Key="8" Value="8"/>
                            </ComboBox>
                            <Label Caption="请假类型" Key="L_IsRead" X="0" Y="2"/>
                            <ComboBox Caption="状态" Enable="false" Key="Status" SourceType="Status" X="9" XSpan="2" Y="0">
                                <DataBinding ColumnKey="Status" TableKey="LRP_AbsenceRequest" DefaultValue="100"/>
                            </ComboBox>
                            <Label Caption="状态" Key="L_Status" X="8" Y="0"/>
                            <TextEditor Key="AbsenceReason" Caption="请假理由" BuddyKey="Lab_AbsenceReason" X="5" Y="2" Enable="!ReadOnly()" XSpan="6">
                                <DataBinding ColumnKey="AbsenceReason" TableKey="LRP_AbsenceRequest" Required="true"/>
                            </TextEditor>
                            <Label Key="Lab_AbsenceReason" Caption="请假理由" X="4" Y="2"/>
                            <DatePicker Key="StartDate" Caption="开始时间" BuddyKey="Lab_StartDate" X="1" Y="1" XSpan="2">
                                <DataBinding ColumnKey="StartDate" DefaultFormulaValue="ServerDBDate();" TableKey="LRP_AbsenceRequest" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_StartDate" Caption="开始时间" X="0" Y="1"/>
                            <DatePicker Key="EndDate" Caption="结束时间" BuddyKey="Lab_EndDate" X="5" Y="1" XSpan="2">
                                <DataBinding ColumnKey="EndDate" TableKey="LRP_AbsenceRequest" Required="true"/>
                            </DatePicker>
                            <Label Key="Lab_EndDate" Caption="结束时间" X="4" Y="1"/>
                            <NumberEditor Key="Days" Caption="请假天数" BuddyKey="Lab_Days" X="9" Y="1" XSpan="2" IntegerValue="true" Scale="0">
                                <DataBinding ColumnKey="Days" TableKey="LRP_AbsenceRequest" Required="true"/>
                            </NumberEditor>
                            <Label Key="Lab_Days" Caption="请假天数" X="8" Y="1"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="50px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="50px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="33%" MinWidth="50px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Caption="系统信息" Height="pref" Key="SystemInfo" Padding="10px">
                            <Label Caption="创建人" Key="L_CREATOR" X="0" Y="0"/>
                            <Dict BuddyKey="L_CREATOR" Caption="创建人" Enable="false" ItemKey="Operator" Key="CREATOR" X="1" XSpan="2" Y="0">
                                <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_AbsenceRequest"/>
                            </Dict>
                            <DatePicker Caption="修改时间" Enable="false" Key="MODIFYTIME" X="5" XSpan="2" Y="1">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_AbsenceRequest"/>
                            </DatePicker>
                            <Label Caption="修改时间" Key="L_MODIFYTIME" X="4" Y="1"/>
                            <DatePicker Caption="创建时间" Enable="false" Key="CREATETIME" X="1" XSpan="2" Y="1">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_AbsenceRequest"/>
                            </DatePicker>
                            <Label Caption="创建时间" Key="L_CREATETIME" X="0" Y="1"/>
                            <Dict Caption="修改人" Enable="false" ItemKey="Operator" Key="MODIFIER" X="5" XSpan="2" Y="0">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_AbsenceRequest"/>
                            </Dict>
                            <Label Caption="修改人" Key="L_MODIFIER" X="4" Y="0"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                                <ColumnDef Width="30px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="50%" MinWidth="50px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </TabPanel>
                    <SplitSize Size="260px"/>
                </SplitPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
