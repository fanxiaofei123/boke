    <DataSource RefObjectKey="LRP_WMTx"/>
    <OperationCollection>
        <Operation Caption="保存" Key="Save" Visible="!ReadOnly()">
            <Action>
                <![CDATA[                
				var flag=false;		    
				if(GetRowCount('Grid0', false)<=0){    
     				Confirm(LocaleString('OwnerNull', 'key103'), 'OK','OK:{}');
					return true;
				}                      
				var rs=DBNamedQuery("SelectMaSta", TxTypeCode);
                var index = 0;                
				loop 'Grid0' (true){ 
                 index = index + 1;
				  var mtlStatusId = GetCellValue('Grid0', -1, 'DestMaterialStatusId');
				rs.beforefirst(); 
                 //遍历本单据设置的物料状态	
                 while(rs.next()){
						  //一条明细，如果物料状态等于此单据本单据设置的物料状态中的一个则跳出循环，比较下一条明细的物料状态
					if( mtlStatusId > 0 && mtlStatusId == rs.MaterialStatusId){
					flag=true;
					break;
					}
                    flag=false;					
				}
				 //如果没有这一条明细中的物料状态不等于任何一个本单据设置的物料状态，则弹出警告
						  if(flag==false){
								Confirm(LocaleParaFormat("CommonDef","key58",index) &GetDictValue('LRP_MaterialStatus', mtlStatusId, 'Name'), 'OK','OK:{}');
								break;
						  }
				if(GetCellValue('Grid0', -1, 'WMTx_Status')!=GetCellValue('Grid0', 0, 'WMTx_Status')){
						Status=StatusValue('handled');
				  }
				  WMTx_Status = 10;
				}
				 
				if(flag==true){	
					if(Status<>500){
						Status=StatusValue('confirmed');
					}
					SaveData();UpdateView();
				}		
             ]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[				
				Status=StatusValue('prepared');
			]]>
            </ExceptionHandler>
        </Operation>
        <Operation Caption="行复制新增" Enable="!ReadOnly()" Key="CopyGridRow">
            <Action>
                <![CDATA[            
             CopyGridRow("Grid0",-1,"Qty","0");
             ]]>
            </Action>
        </Operation>
        <Operation Caption="引入库存" Enable="!ReadOnly()&amp;&amp;Status==100" Key="QuoteQuant">
            <Action>
                <![CDATA[                    
			            if(OwnerId>0&&NoticeNo!=''){
						      ShowModal('V_QuoteQuantView',
										{WarehouseCenterId_para:{WarehouseCenterId},
										OwnerId_para:{OwnerId},
										pFormKey:{GetFormKey()},
										RefOrderNo_para:{NoticeNo},
										IsKittingArea_para:{1},
										});
						}else{
                            Confirm(LocaleString('OwnerNull', 'key137'), 'OK',{OK:{}});
                        }]]>
            </Action>
        </Operation>
        <Operation Caption="编辑" Key="Edit" RefKey="Edit" ShortCuts="Ctrl+E"/>
        <Operation Caption="删除" Key="Delete" RefKey="Delete" ShortCuts="Ctrl+D"/>
        <Operation Caption="取消" Key="Cancel" RefKey="Cancel"/>
        <Operation Caption="确认" Key="Confirm" Visible="ReadOnly()&amp;&amp;Status==StatusValue('prepared')">
            <Action>
                <![CDATA[
				Confirm(LocaleString('OwnerNull', 'key134'),'YES_NO',{YES:{
					Status=StatusValue('confirmed');
					 SaveData();
					 UpdateView();},NO:{}});
				]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[				
				Status=StatusValue('prepared');
			]]>
            </ExceptionHandler>
        </Operation>
        <Operation Caption="撤销确认" Key="Confirm-R" Visible="ReadOnly()&amp;&amp;Status==StatusValue('confirmed')">
            <Action>
                <![CDATA[
				Confirm(LocaleString('OwnerNull', 'key135'),'YES_NO',{YES:{
					Status=StatusValue('prepared');
					 SaveData();
					 UpdateView();},NO:{}});
				]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[				
				Status=StatusValue('confirmed');
			]]>
            </ExceptionHandler>
        </Operation>
        <Operation Caption="完成" Key="Finish" Visible="ReadOnly()&amp;&amp;(Status==StatusValue('confirmed')||Status==StatusValue('handled'))">
            <Action>
                <![CDATA[				
				    Confirm(LocaleString('CommonDef', 'key3'),'YES_NO',{YES:{
					Status=StatusValue('finished');
					FinishDateTime = ServerDate();
				  loop"Grid0"(true)
				{			
					WMTx_Status = 90;
				}; 
					 SaveData();
					 UpdateView();},NO:{}});
				]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[	
				loop"Grid0"(true)
				{			
					WMTx_Status = 10;
				}			
				Status=StatusValue('confirmed');
			]]>
            </ExceptionHandler>
        </Operation>
        <Operation Caption="撤销完成" Key="Finish-R" Visible="ReadOnly()&amp;&amp;Status==StatusValue('finished')">
            <Action>
                <![CDATA[	
                				
				Confirm(LocaleString('CommonDef', 'key4'),'YES_NO',{YES:{
				Status=StatusValue('confirmed');
				 loop"Grid0"(true)
				{			
					WMTx_Status = 10;
				}; 			
				 SaveData();UpdateView();},NO:{}});
				]]>
            </Action>
            <ExceptionHandler>
                <![CDATA[	
				loop"Grid0"(true)
				{			
					WMTx_Status = 90;
				}			
				Status=StatusValue('finished');
			]]>
            </ExceptionHandler>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
