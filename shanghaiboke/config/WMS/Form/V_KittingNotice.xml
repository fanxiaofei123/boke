                                            <Filter FilterDependency="PickStoreroomId" Type="FieldValue">
                                                <FilterValue Type="Field" DataType="Long" FieldKey="StoreroomId" RefValue="PickStoreroomId"/>
                                                <FilterValue Type="Const" DataType="Integer" FieldKey="IsRecvArea" RefValue="0"/>
                                                <FilterValue Type="Const" DataType="Integer" FieldKey="IsShipArea" RefValue="0"/>
                                                <FilterValue Type="Const" DataType="Integer" FieldKey="IsSampleTestArea" RefValue="0"/>
                                                <FilterValue Type="Const" DataType="Integer" FieldKey="IsKittingArea" RefValue="0"/>
                                            </Filter>
                                        </ItemFilter>
                                    </GridCell>
                                    <GridCell Caption="指定储位" CellType="Dict" Enable="!ReadOnly() &amp;&amp; PickStoreareaId&gt;0" ItemKey="LRP_Location" Key="PickLocationId">
