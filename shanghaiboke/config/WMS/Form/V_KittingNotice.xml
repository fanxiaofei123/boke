                                <GridColumn Caption="字典型3" Key="DictUserDef3" Width="80px" Visible="ToBool(GetSessionPara('DictUserDef3_IsShow'))" Sortable="true"/>
                                <GridColumn Caption="字典型4" Key="DictUserDef4" Width="80px" Visible="ToBool(GetSessionPara('DictUserDef4_IsShow'))" Sortable="true"/>
                                <GridColumn Caption="字典型5" Key="DictUserDef5" Width="80px" Visible="ToBool(GetSessionPara('DictUserDef5_IsShow'))" Sortable="true"/>
                                <GridColumn Caption="日期型1" Key="DateUserDef1" Width="80px" Visible="ToBool(GetSessionPara('DateUserDef1_IsShow'))" Sortable="true"/>
                                <GridColumn Caption="日期型2" Key="DateUserDef2" Width="80px" Visible="ToBool(GetSessionPara('DateUserDef2_IsShow'))" Sortable="true"/>
                                <GridColumn Caption="数值型1" Key="NumUserDef1" Width="80px" Visible="ToBool(GetSessionPara('NumUserDef1_IsShow'))" Sortable="true"/>
                                <GridColumn Caption="数值型2" Key="NumUserDef2" Width="80px" Visible="ToBool(GetSessionPara('NumUserDef2_IsShow'))" Sortable="true"/>
                                <GridColumn Caption="数值型3" Key="NumUserDef3" Width="80px" Visible="ToBool(GetSessionPara('NumUserDef3_IsShow'))" Sortable="true"/>
