<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Caption="加工通知单" FormType="Entity" Key="V_KittingNotice">
    <DataSource RefObjectKey="LRP_KittingNotice"/>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Visible="ReadOnly()">
            <Action>
                <![CDATA[New('V_KittingNotice')]]>
            </Action>
        </Operation>
        <Operation Caption="复制新增" Key="CopyNew" RefKey="CopyNew" ShortCuts="Ctrl+E"/>
        <Operation Caption="编辑" Key="Edit" RefKey="Edit"/>
        <Operation Caption="保存" Key="Save" Visible="!ReadOnly()">
            <Action>
                <![CDATA[
			if(GetRowCount('KittingNoticeRaw_L', false)==0){
				Confirm(LocaleString("OwnerNull", "key113"), 'OK','OK:{}');
				return true;
			}
			if(GetRowCount('KittingNoticeProduct_L', false)==0){
				Confirm(LocaleString("OwnerNull", "key114"), 'OK','OK:{}');
				return true;
			}
			SaveData(); UpdateView();
			 
				]]>
            </Action>
        </Operation>
        <Operation Caption="取消" Key="Cancel" RefKey="Cancel"/>
        <Operation Caption="确认" Key="Confirm" RefKey="Confirm"/>
        <Operation Caption="撤销确认" Key="Confirm-R" RefKey="Confirm-R"/>
        <Operation Caption="拣货" Enable="(Status==200 || Status==500 || Status==600)&amp;&amp;ReadOnly()" Key="Pick">
            <Action>
                <![CDATA[        //下推拣货单
        Map('KittingNotice-Tx204','V_Tx204') ;]]>
            </Action>
        </Operation>
        <Operation Caption="作废" Key="ToCancel" RefKey="ToCancel"/>
        <Operation Caption="撤销作废" Key="ToCancel-R" RefKey="ToCancel-R"/>
        <Operation Caption="删除" Key="Delete" RefKey="Delete"/>
        <Operation Key="QuoteQuant" Caption="引入库存" Enable="!ReadOnly()&amp;&amp;Status==100">
            <Action>
                <![CDATA[
			            if(OwnerId>0){
                            //SetPara('OwnerId_para',OwnerId);
							//SetPara('WarehouseCenterId_para',getCurOrgID());
							//SetPara('pFormKey',GetFormKey());
							//SetPara('IsRecvArea_para',0);
							//SetPara('IsShipArea_para',0);
							//SetPara('IsSampleTestArea_para',0);
							//SetPara('IsKittingArea_para',0);
							ShowModal('V_QuoteQuantView',{OwnerId_para:{OwnerId},
							WarehouseCenterId_para:{getCurOrgID()},
							pFormKey:{GetFormKey()},
							IsRecvArea_para:{0},
							IsShipArea_para:{0},
							IsSampleTestArea_para:{0},
							IsKittingArea_para:{0}});
						}else{
                            Confirm(LocaleString("OwnerNull", "key146"), 'OK',{OK:{}});
                        }]]>
            </Action>
        </Operation>
        <Operation Caption="关闭界面" Key="Close" RefKey="Close"/>
    </OperationCollection>
    <ScriptCollection>
        <Script Caption="载入" Key="Load" Range="Action" Verb="Load">
            <![CDATA[LoadData();]]>
        </Script>
    </ScriptCollection>
    <Body>
        <Block>
            <FlexFlowLayoutPanel Caption="根面板" Key="root">
                <ToolBar Caption="ToolBar1" Height="pref" Key="ToolBar1">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Caption="主面板" Height="100%" Key="main" Orientation="Vertical">
                    <TabPanel Caption="TabPanel2" Key="TabPanel2">
                        <GridLayoutPanel Caption="基本信息" Height="pref" Key="first_head" Padding="10px">
                            <Label Caption="加工通知单号" Key="L_NoticeNo" X="0" Y="0"/>
