                                <DataBinding ColumnKey="Status" TableKey="LRP_KittingNotice_H" DefaultValue="100"/>
                            </ComboBox>
                            <DatePicker BuddyKey="L_ExpectDateTimeTo" Caption="预计加工日期时间至" Enable="!ReadOnly()" Key="ExpectDateTimeTo" X="4" Y="1">
                                <DataBinding ColumnKey="ExpectDateTimeTo" TableKey="LRP_KittingNotice_H"/>
                            </DatePicker>
                            <Label Caption="至" Key="L_ExpectDateTimeTo" X="3" Y="1"/>
                            <Dict BuddyKey="Lab_OwnerId" Caption="货主" Enable="!ReadOnly()" ItemKey="LRP_Owner" Key="OwnerId" X="4" Y="0">
                                <DataBinding ColumnKey="OwnerId" TableKey="LRP_KittingNotice_H" Required="true">
                                    <ValueChanging>
                                        <![CDATA[
											Confirm(LocaleString("OwnerNull", "key147"),'YES_NO',
												{YES:{
													CommitValue('OwnerId');
													ClearAllRows('KittingNoticeRaw_L');
													ClearAllRows('KittingNoticeProduct_L');
													},
												NO:{RollbackValue('OwnerId');}});
									  ]]>
                                    </ValueChanging>
                                    <ValueValidation>
                                        <![CDATA[GetRowCount('KittingNoticeRaw_L',false)<1 && GetRowCount('KittingNoticeProduct_L',false)<1]]>
                                    </ValueValidation>
                                </DataBinding>
                            </Dict>
                            <Label Caption="货主" Key="Lab_OwnerId" X="3" Y="0"/>
                            <TextEditor BuddyKey="L_OwnerNo" Caption="货主单号" Enable="!ReadOnly()" Key="OwnerNo" X="7" Y="0">
                                <DataBinding ColumnKey="OwnerNo" TableKey="LRP_KittingNotice_H"/>
                            </TextEditor>
                            <Label Caption="货主单号" Key="L_OwnerNo" X="6" Y="0"/>
                            <TextEditor BuddyKey="L_Remark" Caption="备注" Enable="!ReadOnly()" Key="Remark" X="1" XSpan="4" Y="2">
                                <DataBinding ColumnKey="Remark" TableKey="LRP_KittingNotice_H"/>
                            </TextEditor>
                            <Label Caption="备注" Key="L_Remark" X="0" Y="2"/>
                            <Dict BuddyKey="Lab_WarehouseCenterId" Caption="仓储中心" ItemKey="LRP_WarehouseCenter" Key="WarehouseCenterId" Visible="false" X="1" Y="3">
                                <DataBinding ColumnKey="WarehouseCenterId" DefaultFormulaValue="getCurOrgID()" TableKey="LRP_KittingNotice_H"/>
                            </Dict>
                            <Label Caption="仓储中心" Key="Lab_WarehouseCenterId" Visible="false" X="0" Y="3"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
                                <ColumnDef Width="99px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="55px"/>
                                <ColumnDef Width="33%" MinWidth="40px"/>
                                <ColumnDef Width="55px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                        <GridLayoutPanel Key="SystemInfo" Padding="10px" Caption="系统信息">
                            <Dict BuddyKey="Lab_CREATOR" Caption="创建人" ItemKey="Operator" Key="CREATOR" X="1" Y="0" Enable="false">
                                <DataBinding ColumnKey="CREATOR" DefaultFormulaValue="GetOperator()" TableKey="LRP_KittingNotice_H"/>
                            </Dict>
                            <Label Key="Lab_CREATOR" Caption="创建人" X="0" Y="0"/>
                            <DatePicker BuddyKey="Lab_CREATETIME" Caption="创建时间" Key="CREATETIME" X="4" Y="0" Enable="false">
                                <DataBinding ColumnKey="CREATETIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_KittingNotice_H"/>
                            </DatePicker>
                            <Label Key="Lab_CREATETIME" Caption="创建时间" X="3" Y="0"/>
                            <Dict BuddyKey="Lab_MODIFIER" Caption="修改人" ItemKey="Operator" Key="MODIFIER" X="1" Y="1" Enable="false">
                                <DataBinding ColumnKey="MODIFIER" DefaultFormulaValue="GetOperator()" TableKey="LRP_KittingNotice_H"/>
                            </Dict>
                            <Label Key="Lab_MODIFIER" Caption="修改人" X="0" Y="1"/>
                            <DatePicker BuddyKey="Lab_MODIFYTIME" Caption="修改时间" Key="MODIFYTIME" X="4" Y="1" Enable="false">
                                <DataBinding ColumnKey="MODIFYTIME" DefaultFormulaValue="ServerDate()" TableKey="LRP_KittingNotice_H"/>
                            </DatePicker>
                            <Label Key="Lab_MODIFYTIME" Caption="修改时间" X="3" Y="1"/>
                            <RowDefCollection RowGap="8">
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                                <RowDef Height="30px"/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="8">
