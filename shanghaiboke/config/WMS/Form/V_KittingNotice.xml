                                <GridColumn Caption="指定库区" Key="PickStoreareaId" Width="80px" Sortable="true"/>
                                <GridColumn Caption="指定储位" Key="PickLocationId" Width="80px" Sortable="true"/>
                                <GridColumn Caption="拣货量" Key="PickQty" Width="80px" Sortable="true"/>
                            </GridColumnCollection>
                            <GridRowCollection>
                                <GridRow Key="R_0" RowHeight="30" TableKey="LRP_KittingNoticeRaw_L">
                                    <GridCell Caption="选择" CellType="CheckBox" Enable="true" IsSelect="true" Key="Select">
                                        <DataBinding DefaultValue="1"/>
                                    </GridCell>
                                    <GridCell Caption="物料" CellType="Dict" Enable="!ReadOnly()&amp;&amp; OwnerId&gt;0" ItemKey="LRP_Material" Key="MaterialId">
                                        <DataBinding ColumnKey="MaterialId" Required="true"/>
                                        <ItemFilter ItemKey="LRP_Material">
                                            <Filter FilterDependency="OwnerId" Query="select m.OID from LRP_Material m join LRP_OwnerMaterial om on m.OID=om.SOID where om.OwnerId=?" Type="DataSet">
                                                <FilterValue ParaValue="OwnerId" Type="Field"/>
                                            </Filter>
                                        </ItemFilter>
                                    </GridCell>
                                    <GridCell Caption="批号" CellType="TextEditor" Enable="!ReadOnly()" Key="BatchNo">
                                        <DataBinding ColumnKey="BatchNo"/>
                                    </GridCell>
                                    <GridCell Caption="生产日期" CellType="DatePicker" Enable="!ReadOnly()" Key="ManufDate" OnlyDate="true" Format="yyyy-MM-dd">
                                        <DataBinding ColumnKey="ManufDate"/>
                                    </GridCell>
                                    <GridCell Caption="失效日期" CellType="DatePicker" Enable="!ReadOnly()" Key="ExpireDate" OnlyDate="true" Format="yyyy-MM-dd">
                                        <DataBinding ColumnKey="ExpireDate"/>
                                    </GridCell>
                                    <GridCell Caption="项目" CellType="Dict" Enable="!ReadOnly()" Key="ProjectId" ItemKey="LRP_Project">
                                        <DataBinding ColumnKey="ProjectId"/>
                                    </GridCell>
                                    <GridCell Caption="字符型1" CellType="TextEditor" Enable="!ReadOnly()" Key="StrUserDef1">
                                        <DataBinding ColumnKey="StrUserDef1"/>
                                    </GridCell>
                                    <GridCell Caption="字符型2" CellType="TextEditor" Enable="!ReadOnly()" Key="StrUserDef2">
                                        <DataBinding ColumnKey="StrUserDef2"/>
                                    </GridCell>
                                    <GridCell Caption="字符型3" CellType="TextEditor" Enable="!ReadOnly()" Key="StrUserDef3">
                                        <DataBinding ColumnKey="StrUserDef3"/>
                                    </GridCell>
                                    <GridCell Caption="字符型4" CellType="TextEditor" Enable="!ReadOnly()" Key="StrUserDef4">
                                        <DataBinding ColumnKey="StrUserDef4"/>
                                    </GridCell>
                                    <GridCell Caption="字符型5" CellType="TextEditor" Enable="!ReadOnly()" Key="StrUserDef5">
                                        <DataBinding ColumnKey="StrUserDef5"/>
                                    </GridCell>
                                    <GridCell Caption="字典型1" CellType="Dict" Key="DictUserDef1" ItemKeySourceType="Para" ItemKeySource="DictUserItemKey.DictUser1ItemKey" Enable="false">
                                        <DataBinding ColumnKey="DictUserDef1"/>
                                    </GridCell>
                                    <GridCell Caption="字典型2" CellType="Dict" Key="DictUserDef2" ItemKeySourceType="Para" ItemKeySource="DictUserItemKey.DictUser2ItemKey" Enable="false">
                                        <DataBinding ColumnKey="DictUserDef2"/>
                                    </GridCell>
                                    <GridCell Caption="字典型3" CellType="Dict" Key="DictUserDef3" ItemKeySourceType="Para" ItemKeySource="DictUserItemKey.DictUser3ItemKey" Enable="false">
                                        <DataBinding ColumnKey="DictUserDef3"/>
                                    </GridCell>
                                    <GridCell Caption="字典型4" CellType="Dict" Key="DictUserDef4" ItemKeySourceType="Para" ItemKeySource="DictUserItemKey.DictUser4ItemKey" Enable="false">
                                        <DataBinding ColumnKey="DictUserDef4"/>
                                    </GridCell>
                                    <GridCell Caption="字典型5" CellType="Dict" Key="DictUserDef5" ItemKeySourceType="Para" ItemKeySource="DictUserItemKey.DictUser5ItemKey" Enable="false">
                                        <DataBinding ColumnKey="DictUserDef5"/>
                                    </GridCell>
                                    <GridCell Caption="日期型1" CellType="DatePicker" Enable="!ReadOnly()" Key="DateUserDef1" OnlyDate="true" Format="yyyy-MM-dd">
                                        <DataBinding ColumnKey="DateUserDef1"/>
                                    </GridCell>
                                    <GridCell Caption="日期型2" CellType="DatePicker" Enable="!ReadOnly()" Key="DateUserDef2" OnlyDate="true" Format="yyyy-MM-dd">
                                        <DataBinding ColumnKey="DateUserDef2"/>
                                    </GridCell>
                                    <GridCell Caption="数值型1" CellType="NumberEditor" Enable="!ReadOnly()" Key="NumUserDef1" Precision="15" Scale="3">
