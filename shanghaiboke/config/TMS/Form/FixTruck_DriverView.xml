<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Key="FixTruck_DriverView" Caption="车辆绑定司机序时簿" FormType="View" AbbrCaption="车辆绑定司机序时簿">
    <DataSource>
        <DataObject Key="FixTruck_DriverView" Caption="车辆绑定司机序时簿" PrimaryTableKey="FixTruck_DriverHead" RelateObjectKey="FixTruck_Driver">
            <TableCollection>
                <Table Key="FixTruck_DriverHead" TableMode="Detail" SourceType="Query" Persist="false">
                    <Column Key="OID" Caption="对象标识" DataType="Long" DBColumnName="OID"/>
                    <Column Key="DriverId" Caption="司机" DataType="Long"/>
                    <Column Key="TruckId" Caption="车辆" DataType="Long"/>
                    <Column Key="Mobile" Caption="手机" DataType="Varchar"/>
                    <Statement>
                        <![CDATA[select fh.oid, fh.driverid, fh.truckid, fh.DispatchOrg,ld.mobile
  from FixTruck_DriverHead fh
  left join lrp_driver ld on fh.driverid = ld.oid 
]]>
                    </Statement>
                </Table>
            </TableCollection>
        </DataObject>
    </DataSource>
    <OperationCollection>
        <Operation Key="New" Caption="新增" Icon="new.png">
            <Action>
                <![CDATA[New('FixTruck_Driver')]]>
            </Action>
        </Operation>
        <Operation Key="close" Caption="关闭">
            <Action>
                <![CDATA[Close()]]>
            </Action>
        </Operation>
    </OperationCollection>
    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <Label Key="L_DriverId" Caption="司机" X="0" Y="0"/>
                            <Dict Key="DriverId" Caption="司机" BuddyKey="L_DriverId" X="1" Y="0" ItemKey="LRP_Driver">
                                <Condition ColumnKey="DriverId" TableKey="FixTruck_DriverHead" CondSign="="/>
                            </Dict>
                            <Label Key="L_TruckId" Caption="车辆" X="0" Y="1"/>
                            <Dict Key="TruckId" Caption="车辆" BuddyKey="L_TruckId" X="1" Y="1" ItemKey="LRP_Truck">
                                <Condition ColumnKey="TruckId" TableKey="FixTruck_DriverHead" CondSign="="/>
                            </Dict>
                            <Button Key="Query" Caption="查询" X="4" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[
								DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="4" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();	
								]]>
                                </OnClick>
                            </Button>
                            <RowDefCollection RowHeight="30" RowGap="6">
                                <RowDef/>
                                <RowDef/>
                                <RowDef/>
                            </RowDefCollection>
                            <ColumnDefCollection ColumnGap="20">
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="60px"/>
                                <ColumnDef Width="50%"/>
                                <ColumnDef Width="100px"/>
                                <ColumnDef Width="100px"/>
                            </ColumnDefCollection>
                        </GridLayoutPanel>
                    </FlexFlowLayoutPanel>
                    <ListView Key="list" PageLoadType="DB" TableKey="FixTruck_DriverHead">
                        <ListViewColumnCollection>
                            <ListViewColumn Key="OID" Caption="对象标识" ColumnType="TextEditor" DataColumnKey="OID" TableKey="FixTruck_DriverHead" Visible="false" Width="30px"/>
                            <ListViewColumn Key="DriverId_LV" Caption="司机" ColumnType="Dict" DataColumnKey="DriverId" Width="162px" ItemKey="LRP_Driver"/>
                            <ListViewColumn Key="TruckId_LV" Caption="车辆" ColumnType="Dict" DataColumnKey="TruckId" Width="148px" ItemKey="LRP_Truck"/>
                            <ListViewColumn Key="Mobile" Caption="手机" ColumnType="TextEditor" DataColumnKey="Mobile" Width="191px"/>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('FixTruck_Driver', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="80px"/>
                    <SplitSize Size="100%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
    </Body>
    <OnLoad>
        <![CDATA[LoadData();]]>
    </OnLoad>
</Form>
