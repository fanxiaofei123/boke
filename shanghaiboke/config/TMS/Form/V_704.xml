        <Operation Key="Edit" Caption="编辑" Visible="ReadOnly() &amp;&amp; (Status==200 || Status==730)">
            <Action>
                <![CDATA[Edit();]]>
            </Action>
        </Operation>
        <Operation Key="Save" Caption="保存" Visible="!ReadOnly()&amp;&amp;(Status==200 || Status==730)">
            <Action>
                <![CDATA[ 
	
					 SaveData(); UpdateView();]]>
            </Action>
        </Operation>
        <Operation Key="Cancel" Caption="取消" RefKey="Cancel"/>
        <Operation Key="Load" Caption="装货" Enable="ReadOnly()&amp;&amp;Status==710" RefKey="Load"/>
        <Operation Key="Load-R" Caption="撤销装货" Enable="ReadOnly()&amp;&amp;Status==730" RefKey="Load-R"/>
        <Operation Key="Finish" Caption="完成" Enable="ReadOnly()&amp;&amp;Status==730" RefKey="FinishTrans"/>
        <Operation Key="Finish-R" Caption="撤销完成" Enable="ReadOnly()&amp;&amp;Status==900" RefKey="FinishTrans-R"/>
