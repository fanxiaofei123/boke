                            <ListViewColumn Key="OrderDateTime_LV" Caption="下单日期时间" ColumnType="DatePicker" DataColumnKey="OrderDateTime" Width="99px"/>
                            <ListViewColumn Key="LogisticsOrderNo_LV" Caption="物流订单号" ColumnType="TextEditor" DataColumnKey="LogisticsOrderNo"/>
                            <ListViewColumn Key="SendOrg" Caption="发站" ColumnType="Dict" DataColumnKey="SendOrgId" ItemKey="LRP_WarehouseCenter"/>
							 <ListViewColumn Key="ExpectPickupTime_LV" Caption="预计提货时间" ColumnType="DatePicker" DataColumnKey="ExpectPickupTime" Width="99px"/>
                            <ListViewColumn Key="DestOrg" Caption="到站" ColumnType="Dict" DataColumnKey="DestOrgId" ItemKey="LRP_WarehouseCenter"/>
							 <ListViewColumn Key="ExpectArriveTime_LV" Caption="预计送达时间" ColumnType="DatePicker" DataColumnKey="ExpectArriveTime" Width="99px"/>
                            <ListViewColumn Key="Requirement" Caption="运输要求" ColumnType="TextEditor" DataColumnKey="Requirement"/>
                            <ListViewColumn Key="SendPartyName_LV" Caption="发货方" ColumnType="TextEditor" DataColumnKey="SendPartyName"/>
                            <ListViewColumn Key="RecvPartyName_LV" Caption="收货方" ColumnType="TextEditor" DataColumnKey="RecvPartyName"/>
                            <ListViewColumn Key="TransferOrg" Caption="中转仓库" ColumnType="Dict" DataColumnKey="TransferOrg" ItemKey="LRP_WarehouseCenter"/>
                            <ListViewColumn Key="Amount" Caption="金额" ColumnType="TextEditor" DataColumnKey="Amount"/>
                            <ListViewColumn Key="PayMethod_LV" Caption="付款方式" ColumnType="ComboBox" DataColumnKey="PayMethod">
							    <Item Caption="现付" Key="0" Value="0"/>
