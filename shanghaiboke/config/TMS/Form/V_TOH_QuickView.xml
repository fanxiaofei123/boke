                                <Item Caption="系统自动生成" Key="3" Value="3"/>
							</ListViewColumn>
                        </ListViewColumnCollection>
                        <RowDblClick>
                            <![CDATA[Open('V_TOH_Quick', OID)]]>
                        </RowDblClick>
                    </ListView>
                    <SplitSize Size="35%"/>
                    <SplitSize Size="65%"/>
                </SplitPanel>
                <RowDefCollection RowHeight="25">
                    <RowDef Height="40px"/>
                    <RowDef Height="100%"/>
                </RowDefCollection>
                <ColumnDefCollection>
                    <ColumnDef Width="100%"/>
                </ColumnDefCollection>
            </GridLayoutPanel>
        </Block>
