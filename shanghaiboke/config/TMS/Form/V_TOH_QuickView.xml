    <Body>
        <Block>
            <GridLayoutPanel Key="main" Height="100%" Padding="5px">
                <ToolBar Key="main_toolbar" X="0" Y="0">
                    <ToolBarItemCollection/>
                </ToolBar>
                <SplitPanel Key="main_split" Orientation="Vertical" Height="100%" X="0" Y="1">
                    <FlexFlowLayoutPanel Key="base_split" Caption="FlexFlowLayoutPanel">
                        <GridLayoutPanel Key="query" Height="100%" Padding="5px" Caption="查询字段">
                            <TextEditor Caption="DataObjectKey" Enable="false" Key="DataObjectKey" Visible="false" X="10" Y="4">
                                <DataBinding DefaultValue="LRP_TransportOrder"/>
                            </TextEditor>
                            <Label Key="L_No" Caption="订单号" X="0" Y="0"/>
                            <TextEditor Key="No" Caption="订单号" BuddyKey="L_No" X="1" Y="0" XSpan="3">
                                <Condition ColumnKey="No" TableKey="LRP_TransportOrder_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_OwnerId" Caption="货主" X="5" Y="0"/>
                            <Dict Key="OwnerId" Caption="货主" BuddyKey="L_OwnerId" X="6" Y="0" AllowMultiSelection="true" ItemKey="LRP_Owner" XSpan="3">
                                <Condition ColumnKey="OwnerId" TableKey="LRP_TransportOrder_H" CondSign="in"/>
                            </Dict>
                            <Label Key="L_OwnerNo" Caption="货主单号" X="0" Y="1"/>
                            <TextEditor Key="OwnerNo" Caption="货主单号" BuddyKey="L_OwnerNo" X="1" Y="1" XSpan="3">
                                <Condition ColumnKey="OwnerNo" TableKey="LRP_TransportOrder_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_Status" Caption="状态" X="5" Y="1"/>
                            <CheckListBox Key="Status_1" Caption="状态" BuddyKey="L_Status" X="6" Y="1" XSpan="3">
                                <Condition ColumnKey="Status" TableKey="LRP_TransportOrder_H" CondSign="in"/>
                                <Item Caption="已输入" Key="prepared" Value="100"/>
                                <Item Caption="已确认" Key="confirmed" Value="200"/>
                                <Item Caption="在途" Key="ontheway" Value="750"/>
                                <Item Caption="已签收" Key="signed" Value="920"/>
                                <Item Caption="拒收" Key="rejected" Value="930"/>
                                <Item Caption="已回单" Key="returnbill" Value="940"/>
                                <Item Caption="已作废" Key="cancelled" Value="20"/>
                            </CheckListBox>
                            <Label Key="L_SendPartyName" Caption="发货方" X="0" Y="2"/>
                            <TextEditor Key="SendPartyName" Caption="发货方" BuddyKey="L_SendPartyName" X="1" Y="2" XSpan="3">
                                <Condition ColumnKey="SendPartyName" TableKey="LRP_TransportOrder_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_RecvPartyName" Caption="收货方" X="5" Y="2"/>
                            <TextEditor Key="RecvPartyName" Caption="收货方" BuddyKey="L_RecvPartyName" X="6" Y="2" XSpan="3">
                                <Condition ColumnKey="RecvPartyName" TableKey="LRP_TransportOrder_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="L_OrderDateTime" Caption="下单日期时间" X="0" Y="3"/>
                            <DatePicker Key="OrderDateTime" Caption="下单日期时间" BuddyKey="L_OrderDateTime" X="1" Y="3" XSpan="3">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 00:00:00'"/>
                                <Condition ColumnKey="OrderDateTime" TableKey="LRP_TransportOrder_H" CondSign="between" Group="OrderDateTime" GroupHead="true"/>
                            </DatePicker>
                            <Label Key="L_OrderDateTime@2" Caption="至" X="5" Y="3"/>
                            <DatePicker Key="OrderDateTime@2" Caption="至" BuddyKey="L_OrderDateTime@2" X="6" Y="3" XSpan="3">
                                <DataBinding DefaultFormulaValue="Format(ServerDate(),'yyyy-MM-dd')&amp;' 23:59:59'"/>
                                <Condition ColumnKey="OrderDateTime" TableKey="LRP_TransportOrder_H" CondSign="in" Group="OrderDateTime" GroupTail="true"/>
                            </DatePicker>
                            <Button Key="Query" Caption="查询" X="10" Y="0" Enable="true">
                                <OnClick>
                                    <![CDATA[							
                                       DealCondition();LoadData();ShowData();	
								]]>
                                </OnClick>
                            </Button>
                            <Button Key="cancel" Caption="重置" X="10" Y="1" Enable="true">
                                <OnClick>
                                    <![CDATA[
								ResetCondition();SetValue('DispatchOrgId',getCurDispatchOrgID());	
								]]>
                                </OnClick>
                            </Button>
                            <Dict Key="DispatchOrgId" Caption="调度组织" BuddyKey="Lab_DispatchOrgId" X="1" Y="5" XSpan="3" Visible="false" ItemKey="LRP_DispatchOrg">
                                <DataBinding DefaultFormulaValue="getCurDispatchOrgID()"/>
                                <Condition ColumnKey="DispatchOrgId" TableKey="LRP_TransportOrder_H" CondSign="="/>
                            </Dict>
                            <Label Key="Lab_DispatchOrgId" Caption="调度组织" X="0" Y="5"/>
                            <ComboBox Key="OperateType" Caption="运作类型" BuddyKey="Lab_OperateType" Visible="false" X="6" Y="5" XSpan="3">
                                <DataBinding DefaultValue="0"/>
                                <Condition ColumnKey="OperateType" TableKey="LRP_TransportOrder_H" CondSign="="/>
                                <Item Caption="快捷" Key="0" Value="0"/>
                                <Item Caption="直发" Key="1" Value="1"/>
                                <Item Caption="多段运输" Key="2" Value="2"/>
                            </ComboBox>
                            <Label Key="Lab_OperateType" Caption="运作类型" X="5" Y="5"/>
                            <TextEditor Key="LogisticsOrderNo" Caption="物流订单号" BuddyKey="Lab_LogisticsOrderNo" X="1" Y="4" XSpan="3">
                                <Condition ColumnKey="LogisticsOrderNo" TableKey="LRP_TransportOrder_H" CondSign="like"/>
                            </TextEditor>
                            <Label Key="Lab_LogisticsOrderNo" Caption="物流订单号" X="0" Y="4"/>
